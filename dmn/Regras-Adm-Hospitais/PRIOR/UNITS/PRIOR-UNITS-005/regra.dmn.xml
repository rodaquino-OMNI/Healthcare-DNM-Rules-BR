<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  PRIOR-UNITS-005 - Frequencia Semanal vs Autorizada
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: PRIOR-UNITS
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Frequencia dentro do autorizado
  - Protocolo terapeutico respeitado
  - Espacamento adequado entre sessoes

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Frequencia excede autorizada
  - Violacao de protocolo clinico
  - Espacamento inadequado

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - RN 465/2021 (Procedimentos Regulados)
  - TISS 4.01.00 (Guia SP/SADT)
  - Lei 9.656/1998 Art. 12 (Cobertura Obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_PRIOR_UNITS_005"
             name="Frequencia Semanal vs Autorizada"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_PRIOR_UNITS_005" name="Verificar Frequencia Semanal vs Autorizada">
    <decisionTable id="DecisionTable_PRIOR_UNITS_005" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Frequencia Semanal">
        <inputExpression id="InputExpression_1" typeRef="integer">
          <text>frequenciaSemanal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Frequencia Autorizada">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>frequenciaAutorizada</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tipo Terapia">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>tipoTerapia</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Frequencia excede autorizada -->
      <rule id="Rule_Bloqueio_1">
        <description>Frequencia semanal excede a autorizada</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt; frequenciaAutorizada</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Frequencia semanal de sessoes excede o autorizado pela operadora. Faturamento bloqueado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar autorizacao para frequencia maior ou ajustar agendamento ao autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"FREQ"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Frequencia invalida -->
      <rule id="Rule_Bloqueio_2">
        <description>Frequencia semanal invalida</description>
        <inputEntry id="InputEntry_B2_1"><text>&lt;= 0</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Frequencia semanal invalida (zero ou negativa)."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Corrigir frequencia semanal de sessoes."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Frequencia no limite -->
      <rule id="Rule_Alerta_1">
        <description>Frequencia semanal igual ao limite autorizado</description>
        <inputEntry id="InputEntry_A1_1"><text>= frequenciaAutorizada</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Frequencia semanal no limite autorizado. Monitorar para nao exceder."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Monitorar agendamento para garantir que nao ultrapasse limite semanal."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"FREQ"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Frequencia dentro do autorizado -->
      <rule id="Rule_Aprovado_1">
        <description>Frequencia semanal dentro do autorizado</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt; frequenciaAutorizada</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&gt; 0</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Frequencia semanal de sessoes dentro do limite autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme frequencia autorizada."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_PRIOR_UNITS_005">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de frequencia semanal requer analise manual."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria verificar frequencia de sessoes."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_PRIOR_UNITS_005">
      <dmndi:DMNShape id="DMNShape_Decision_PRIOR_UNITS_005" dmnElementRef="Decision_PRIOR_UNITS_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
