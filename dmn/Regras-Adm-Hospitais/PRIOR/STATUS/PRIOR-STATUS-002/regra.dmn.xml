<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  PRIOR-STATUS-002 - Autorizacao Pendente de Resposta Operadora
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: PRIOR-STATUS
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Autorizacao pendente dentro do SLA
  - Operadora dentro do prazo de resposta
  - Documentacao completa enviada

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - SLA da operadora excedido
  - Pendencia ha mais de 30 dias
  - Falta documentacao complementar

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa - SLA 5 dias uteis)
  - RN 465/2021 (Procedimentos Regulados)
  - TISS 4.01.00 (Guia SADT)
  - Lei 9.656/1998 Art. 12 (Cobertura Obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_PRIOR_STATUS_002"
             name="Autorizacao Pendente de Resposta Operadora"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_PRIOR_STATUS_002" name="Verificar Autorizacao Pendente de Resposta">
    <decisionTable id="DecisionTable_PRIOR_STATUS_002" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Status Autorizacao">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>statusAutorizacao</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"VIGENTE", "EXPIRADA", "CANCELADA", "PENDENTE", "NEGADA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Dias Pendencia">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>diasPendencia</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="SLA Operadora (dias)">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>slaOperadora</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - SLA critico excedido -->
      <rule id="Rule_Bloqueio_1">
        <description>Pendencia excede SLA critico (30+ dias)</description>
        <inputEntry id="InputEntry_B1_1"><text>"PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>&gt; 30</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Autorizacao pendente ha mais de 30 dias. SLA critico excedido. Faturamento bloqueado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Acionar jur√≠dico para notificacao extrajudicial. Considerar autorizacao tacita (RN 259/2011)."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Status nao pendente -->
      <rule id="Rule_Bloqueio_2">
        <description>Status diferente de PENDENTE</description>
        <inputEntry id="InputEntry_B2_1"><text>"VIGENTE", "EXPIRADA", "CANCELADA", "NEGADA"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Status da autorizacao nao e PENDENTE. Regra nao se aplica."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Verificar status correto da autorizacao e aplicar regra correspondente."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - SLA excedido -->
      <rule id="Rule_Alerta_1">
        <description>Pendencia excede SLA da operadora</description>
        <inputEntry id="InputEntry_A1_1"><text>"PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>&gt; slaOperadora</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Autorizacao pendente excede SLA da operadora. Risco de atraso no atendimento."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Contatar operadora para obter posicionamento. Documentar atraso para eventual recurso."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Proximo do SLA -->
      <rule id="Rule_Alerta_2">
        <description>Pendencia proxima do SLA da operadora</description>
        <inputEntry id="InputEntry_A2_1"><text>"PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>[slaOperadora * 0.8..slaOperadora]</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Autorizacao pendente proxima de exceder SLA da operadora (80% ou mais)."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Contatar operadora preventivamente para agilizar resposta."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Pendencia dentro do SLA -->
      <rule id="Rule_Aprovado_1">
        <description>Autorizacao pendente dentro do SLA</description>
        <inputEntry id="InputEntry_P1_1"><text>"PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt; slaOperadora * 0.8</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Autorizacao pendente dentro do SLA da operadora. Aguardar resposta."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Aguardar resposta da operadora. Monitorar prazo de SLA."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_PRIOR_STATUS_002">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de autorizacao pendente requer analise manual."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria verificar pendencia com operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_PRIOR_STATUS_002">
      <dmndi:DMNShape id="DMNShape_Decision_PRIOR_STATUS_002" dmnElementRef="Decision_PRIOR_STATUS_002">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
