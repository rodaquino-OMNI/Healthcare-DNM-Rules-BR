<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  PRIOR-STATUS-004 - Autorizacao com Condicoes (Requer Complemento)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: PRIOR-STATUS
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Condicoes da autorizacao atendidas
  - Documentacao complementar enviada
  - Prazos cumpridos

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Condicoes nao atendidas
  - Falta documentacao complementar
  - Prazo para cumprir condicoes expirado

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - RN 465/2021 (Procedimentos Regulados)
  - TISS 4.01.00 (Guia SADT)
  - Lei 9.656/1998 Art. 12 (Cobertura Obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_PRIOR_STATUS_004"
             name="Autorizacao com Condicoes (Requer Complemento)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_PRIOR_STATUS_004" name="Verificar Autorizacao com Condicoes">
    <decisionTable id="DecisionTable_PRIOR_STATUS_004" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Condicoes">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temCondicoes</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Condicoes Atendidas">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>condicoesAtendidas</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Dias Para Cumprir">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>diasParaCumprir</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Condicoes nao atendidas e prazo expirado -->
      <rule id="Rule_Bloqueio_1">
        <description>Condicoes da autorizacao nao atendidas e prazo expirado</description>
        <inputEntry id="InputEntry_B1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>&lt;= 0</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Condicoes da autorizacao nao atendidas e prazo expirado. Faturamento bloqueado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar nova autorizacao com documentacao atualizada ou cumprir condicoes pendentes."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Autorizacao sem condicoes mas marcada como pendente -->
      <rule id="Rule_Bloqueio_2">
        <description>Sem condicoes mas marcada como condicional</description>
        <inputEntry id="InputEntry_B2_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Autorizacao nao possui condicoes registradas. Inconsistencia de dados."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Verificar com operadora se ha condicoes ou se autorizacao deve ser liberada."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Condicoes nao atendidas mas prazo disponivel -->
      <rule id="Rule_Alerta_1">
        <description>Condicoes pendentes mas prazo ainda disponivel</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt; 0</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Condicoes da autorizacao ainda nao atendidas. Prazo disponivel para cumprimento."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Providenciar documentacao ou procedimentos complementares antes do vencimento do prazo."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Prazo proximo do vencimento -->
      <rule id="Rule_Alerta_2">
        <description>Condicoes pendentes e prazo proximo do vencimento</description>
        <inputEntry id="InputEntry_A2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>[1..3]</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Condicoes pendentes e prazo proximo do vencimento (3 dias ou menos)."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"URGENTE: Providenciar documentacao complementar imediatamente para evitar perda da autorizacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Condicoes atendidas -->
      <rule id="Rule_Aprovado_1">
        <description>Condicoes da autorizacao totalmente atendidas</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Condicoes da autorizacao totalmente atendidas. Liberado para faturamento."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento. Documentacao de cumprimento anexa."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Sem condicoes -->
      <rule id="Rule_Aprovado_2">
        <description>Autorizacao sem condicoes especiais</description>
        <inputEntry id="InputEntry_P2_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Autorizacao sem condicoes especiais. Liberado para faturamento."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento conforme autorizacao incondicional."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_PRIOR_STATUS_004">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de autorizacao condicional requer analise manual."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria verificar condicoes da autorizacao."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_PRIOR_STATUS_004">
      <dmndi:DMNShape id="DMNShape_Decision_PRIOR_STATUS_004" dmnElementRef="Decision_PRIOR_STATUS_004">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
