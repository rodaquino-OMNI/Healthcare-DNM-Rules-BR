<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  PRIOR-STATUS-003 - Autorizacao Negada - Encaminhar Recurso
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: PRIOR-STATUS
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Documentacao completa para recurso
  - Justificativa clinica robusta
  - Evidencias tecnicas disponiveis

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Autorizacao negada sem documentacao
  - Falta justificativa clinica
  - Negacao por exclusao contratual

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - RN 465/2021 (Procedimentos Regulados)
  - RN 389/2015 (Direito ao Recurso)
  - Lei 9.656/1998 Art. 12 (Cobertura Obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_PRIOR_STATUS_003"
             name="Autorizacao Negada - Encaminhar Recurso"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_PRIOR_STATUS_003" name="Verificar Autorizacao Negada - Encaminhar Recurso">
    <decisionTable id="DecisionTable_PRIOR_STATUS_003" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Status Autorizacao">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>statusAutorizacao</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"VIGENTE", "EXPIRADA", "CANCELADA", "PENDENTE", "NEGADA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Motivo Negacao">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>motivoNegacao</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tem Documentacao">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>temDocumentacao</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Negada sem documentacao -->
      <rule id="Rule_Bloqueio_1">
        <description>Autorizacao negada sem documentacao para recurso</description>
        <inputEntry id="InputEntry_B1_1"><text>"NEGADA"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Autorizacao negada e falta documentacao para recurso. Faturamento bloqueado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Providenciar documentacao clinica completa antes de interpor recurso administrativo."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Status nao negado -->
      <rule id="Rule_Bloqueio_2">
        <description>Status diferente de NEGADA</description>
        <inputEntry id="InputEntry_B2_1"><text>"VIGENTE", "EXPIRADA", "CANCELADA", "PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Status da autorizacao nao e NEGADA. Regra nao se aplica."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Verificar status correto da autorizacao e aplicar regra correspondente."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Negacao por falta documentacao -->
      <rule id="Rule_Alerta_1">
        <description>Negacao por falta de documentacao complementar</description>
        <inputEntry id="InputEntry_A1_1"><text>"NEGADA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>contains(motivoNegacao, "FALTA") or contains(motivoNegacao, "DOCUMENTACAO") or contains(motivoNegacao, "INCOMPLETO")</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Autorizacao negada por falta de documentacao. Documentacao agora disponivel."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Reenviar solicitacao com documentacao completa. Alta chance de reversao."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Negacao por indicacao clinica -->
      <rule id="Rule_Alerta_2">
        <description>Negacao por divergencia de indicacao clinica</description>
        <inputEntry id="InputEntry_A2_1"><text>"NEGADA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>contains(motivoNegacao, "INDICACAO") or contains(motivoNegacao, "CLINICA") or contains(motivoNegacao, "PROTOCOLO")</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Autorizacao negada por divergencia de indicacao clinica. Recurso possivel."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Preparar recurso com pareceres tecnicos, diretrizes e justificativa do medico assistente."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Negacao com documentacao para recurso -->
      <rule id="Rule_Aprovado_1">
        <description>Autorizacao negada mas com documentacao para recurso</description>
        <inputEntry id="InputEntry_P1_1"><text>"NEGADA"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Autorizacao negada. Documentacao disponivel para interpor recurso administrativo."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Encaminhar para juridico/auditoria preparar recurso de 1a instancia junto a operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_PRIOR_STATUS_003">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de autorizacao negada requer analise manual para recurso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria avaliar viabilidade de recurso administrativo."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_PRIOR_STATUS_003">
      <dmndi:DMNShape id="DMNShape_Decision_PRIOR_STATUS_003" dmnElementRef="Decision_PRIOR_STATUS_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
