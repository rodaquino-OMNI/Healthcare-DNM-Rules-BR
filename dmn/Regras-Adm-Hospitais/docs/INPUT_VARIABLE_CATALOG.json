{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hospital-revenue-cycle.com/schemas/hospital-admin-rules/input-catalog/v1.0.0",
  "title": "Hospital Administrative Rules - Input Variable Catalog",
  "description": "Complete catalog of input variables for all hospital administrative rule categories",
  "version": "1.0.0",
  "createdAt": "2026-02-06",

  "namingConvention": {
    "style": "camelCase",
    "language": "Portuguese",
    "prefixRules": {
      "tem*": "boolean flags (e.g., temAutorizacaoPrevia)",
      "data*": "date values (e.g., dataValidade)",
      "valor*": "monetary values in BRL (e.g., valorGlosa)",
      "dias*": "day counts (e.g., diasEmAberto)",
      "codigo*": "code values (e.g., codigoTUSS)",
      "quantidade*": "quantity values (e.g., quantidadeSolicitada)"
    }
  },

  "categories": {
    "BILL": {
      "description": "Billing Optimization inputs",
      "variables": {
        "codigoTUSSprincipal": {
          "type": "string",
          "pattern": "^[0-9]{8}$",
          "description": "8-digit TUSS code for main procedure",
          "example": "30602149",
          "subcategories": ["BUNDLE", "UPCODE"]
        },
        "codigoTUSSsecundario": {
          "type": "string",
          "pattern": "^[0-9]{8}$",
          "description": "8-digit TUSS code for secondary procedure",
          "example": "30602130",
          "subcategories": ["BUNDLE"]
        },
        "codigoTUSS": {
          "type": "string",
          "pattern": "^[0-9]{8}$",
          "description": "Generic TUSS procedure code",
          "subcategories": ["UPCODE", "MODIFIER", "QUANTITY", "TIME", "MATERIAL"]
        },
        "procedimentoPrincipal": {
          "type": "boolean",
          "description": "Is this the main procedure",
          "subcategories": ["BUNDLE", "MODIFIER"]
        },
        "procedimentoSecundario": {
          "type": "boolean",
          "description": "Is this a secondary procedure",
          "subcategories": ["BUNDLE", "MODIFIER"]
        },
        "procedimentoMultiplo": {
          "type": "boolean",
          "description": "Multiple procedures in same session",
          "subcategories": ["MODIFIER"]
        },
        "mesmaViaAcesso": {
          "type": "boolean",
          "description": "Same surgical access path",
          "subcategories": ["BUNDLE"]
        },
        "mesmoAtoAnestesico": {
          "type": "boolean",
          "description": "Same anesthetic act",
          "subcategories": ["BUNDLE"]
        },
        "temModificador": {
          "type": "boolean",
          "description": "Has billing modifier applied",
          "subcategories": ["MODIFIER"]
        },
        "codigoModificador": {
          "type": "string",
          "allowedValues": ["25", "50", "51", "52", "59", "76", "77", "78", "79"],
          "description": "Modifier code",
          "subcategories": ["MODIFIER"]
        },
        "ladoProcedimento": {
          "type": "string",
          "allowedValues": ["D", "E", "B"],
          "description": "Anatomical side: D=Direito, E=Esquerdo, B=Bilateral",
          "subcategories": ["MODIFIER"]
        },
        "quantidadeSolicitada": {
          "type": "number",
          "minimum": 1,
          "description": "Quantity requested",
          "subcategories": ["QUANTITY"]
        },
        "quantidadeMaximaContrato": {
          "type": "number",
          "description": "Maximum quantity per contract",
          "subcategories": ["QUANTITY"]
        },
        "justificativaQuantidade": {
          "type": "boolean",
          "description": "Quantity justification attached",
          "subcategories": ["QUANTITY"]
        },
        "valorUnitario": {
          "type": "number",
          "minimum": 0,
          "description": "Unit price in BRL",
          "subcategories": ["QUANTITY", "MATERIAL"]
        },
        "valorTotal": {
          "type": "number",
          "minimum": 0,
          "description": "Total value in BRL",
          "subcategories": ["QUANTITY"]
        },
        "contratoPermiteSeparar": {
          "type": "boolean",
          "description": "Contract allows separate billing for bundled procedures",
          "subcategories": ["BUNDLE"]
        },
        "inclusoNoProcedimento": {
          "type": "boolean",
          "description": "Item included in procedure value",
          "subcategories": ["MATERIAL"]
        },
        "tempoInicio": {
          "type": "string",
          "format": "date-time",
          "description": "Procedure start time",
          "subcategories": ["TIME"]
        },
        "tempoFim": {
          "type": "string",
          "format": "date-time",
          "description": "Procedure end time",
          "subcategories": ["TIME"]
        },
        "tempoExecucao": {
          "type": "number",
          "minimum": 0,
          "description": "Execution time in minutes",
          "subcategories": ["UPCODE", "TIME"]
        },
        "horarioAtendimento": {
          "type": "string",
          "allowedValues": ["NORMAL", "NOTURNO", "PLANTAO"],
          "description": "Service time classification",
          "subcategories": ["TIME"]
        },
        "fimDeSemana": {
          "type": "boolean",
          "description": "Weekend or holiday service",
          "subcategories": ["TIME"]
        },
        "codigoMaterial": {
          "type": "string",
          "description": "Material code",
          "subcategories": ["MATERIAL"]
        },
        "quantidadeUtilizada": {
          "type": "number",
          "minimum": 0,
          "description": "Quantity of material used",
          "subcategories": ["MATERIAL"]
        },
        "complexidadeProcedimento": {
          "type": "string",
          "allowedValues": ["SIMPLES", "MEDIO", "COMPLEXO", "ALTA_COMPLEXIDADE"],
          "description": "Procedure complexity level",
          "subcategories": ["UPCODE"]
        },
        "quantidadeMateriais": {
          "type": "number",
          "description": "Number of materials used",
          "subcategories": ["UPCODE"]
        }
      }
    },

    "AUTH": {
      "description": "Authorization Recovery inputs",
      "variables": {
        "temAutorizacaoPrevia": {
          "type": "boolean",
          "description": "Has prior authorization",
          "subcategories": ["PREAUTH"]
        },
        "dataAutorizacao": {
          "type": "string",
          "format": "date",
          "description": "Authorization date",
          "subcategories": ["PREAUTH", "TIMING"]
        },
        "dataValidade": {
          "type": "string",
          "format": "date",
          "description": "Authorization expiration date",
          "subcategories": ["PREAUTH", "TIMING"]
        },
        "numeroGuia": {
          "type": "string",
          "description": "TISS guide number",
          "subcategories": ["PREAUTH"]
        },
        "tipoGuia": {
          "type": "string",
          "allowedValues": ["SP_SADT", "INTERNACAO", "CONSULTA", "HONORARIO", "RESUMO_INTERNACAO"],
          "description": "Guide type",
          "subcategories": ["PREAUTH", "DOCUMENTATION"]
        },
        "diasDesdeAutorizacao": {
          "type": "number",
          "minimum": 0,
          "description": "Days since authorization issued",
          "subcategories": ["TIMING"]
        },
        "diasAteVencimento": {
          "type": "number",
          "description": "Days until authorization expires (can be negative)",
          "subcategories": ["TIMING"]
        },
        "prazoProrrogacao": {
          "type": "number",
          "description": "Extension period in days",
          "subcategories": ["TIMING"]
        },
        "solicitouProrrogacao": {
          "type": "boolean",
          "description": "Extension requested",
          "subcategories": ["TIMING"]
        },
        "temLaudoMedico": {
          "type": "boolean",
          "description": "Has medical report attached",
          "subcategories": ["DOCUMENTATION"]
        },
        "temExamePreRequisito": {
          "type": "boolean",
          "description": "Has prerequisite exam",
          "subcategories": ["DOCUMENTATION"]
        },
        "temHistoricoClinico": {
          "type": "boolean",
          "description": "Has clinical history",
          "subcategories": ["DOCUMENTATION"]
        },
        "temConsentimento": {
          "type": "boolean",
          "description": "Has informed consent",
          "subcategories": ["DOCUMENTATION"]
        },
        "diagnosticoCID10": {
          "type": "string",
          "pattern": "^[A-Z][0-9]{2}(\\.[0-9]{1,2})?$",
          "description": "ICD-10 diagnosis code",
          "example": "C50.9",
          "subcategories": ["CODING"]
        },
        "cidCompativelProcedimento": {
          "type": "boolean",
          "description": "CID compatible with procedure indication",
          "subcategories": ["CODING"]
        },
        "especialidade": {
          "type": "string",
          "description": "Medical specialty",
          "subcategories": ["CODING"]
        },
        "negativaRecebida": {
          "type": "boolean",
          "description": "Denial received",
          "subcategories": ["APPEAL"]
        },
        "diasDesdeNegativa": {
          "type": "number",
          "minimum": 0,
          "description": "Days since denial",
          "subcategories": ["APPEAL"]
        },
        "motivoNegativa": {
          "type": "string",
          "description": "Denial reason code",
          "subcategories": ["APPEAL"]
        },
        "temDocumentacaoAdicional": {
          "type": "boolean",
          "description": "Has additional documentation for appeal",
          "subcategories": ["APPEAL"]
        },
        "caraterAtendimento": {
          "type": "string",
          "allowedValues": ["ELETIVO", "URGENCIA", "EMERGENCIA"],
          "description": "Service character per RN 424/2017",
          "subcategories": ["URGENCY", "PREAUTH"]
        },
        "riscoVida": {
          "type": "boolean",
          "description": "Life-threatening situation",
          "subcategories": ["URGENCY"]
        },
        "classificacaoUrgencia": {
          "type": "string",
          "allowedValues": ["VERDE", "AMARELO", "LARANJA", "VERMELHO"],
          "description": "Manchester triage classification",
          "subcategories": ["URGENCY"]
        },
        "temDocumentacaoEmergencia": {
          "type": "boolean",
          "description": "Emergency documentation present",
          "subcategories": ["URGENCY"]
        }
      }
    },

    "DENY": {
      "description": "Denial Prevention inputs",
      "variables": {
        "scoreDenialRisco": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Denial risk score (0-100)",
          "subcategories": ["PREDICT"]
        },
        "triggersConhecidos": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of known denial triggers from payer rules",
          "subcategories": ["PREDICT"]
        },
        "historicoOperadora": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Historical denial rate with payer (%)",
          "subcategories": ["PREDICT"]
        },
        "temImagemAnexada": {
          "type": "boolean",
          "description": "Has attached imaging (RM, CT, etc.)",
          "subcategories": ["MISSING"]
        },
        "temLaudoHistopatologico": {
          "type": "boolean",
          "description": "Has histopathology report",
          "subcategories": ["MISSING"]
        },
        "temTratamentoConservador": {
          "type": "boolean",
          "description": "Has conservative treatment history documented",
          "subcategories": ["MISSING"]
        },
        "idadePaciente": {
          "type": "number",
          "minimum": 0,
          "maximum": 150,
          "description": "Patient age in years",
          "subcategories": ["MISSING", "PREDICT"]
        },
        "expectativaVidaSuperior1Ano": {
          "type": "boolean",
          "description": "Life expectancy > 1 year (critical for cardiologia)",
          "subcategories": ["MISSING"]
        },
        "dataUltimoProcedimento": {
          "type": "string",
          "format": "date",
          "description": "Date of last similar procedure",
          "subcategories": ["DUPLICATE"]
        },
        "diasDesdeUltimo": {
          "type": "number",
          "minimum": 0,
          "description": "Days since last similar procedure",
          "subcategories": ["DUPLICATE"]
        },
        "mesmoLado": {
          "type": "boolean",
          "description": "Same anatomical side as previous procedure",
          "subcategories": ["DUPLICATE"]
        },
        "mesmaRegiao": {
          "type": "boolean",
          "description": "Same anatomical region",
          "subcategories": ["DUPLICATE"]
        },
        "dataAtendimento": {
          "type": "string",
          "format": "date",
          "description": "Service date",
          "subcategories": ["TIMING"]
        },
        "dataSolicitacao": {
          "type": "string",
          "format": "date",
          "description": "Request submission date",
          "subcategories": ["TIMING"]
        },
        "diasParaEnvio": {
          "type": "number",
          "description": "Days to submission from service date",
          "subcategories": ["TIMING"]
        },
        "prazoMaximoEnvio": {
          "type": "number",
          "default": 180,
          "description": "Maximum filing deadline in days (default 180)",
          "subcategories": ["TIMING"]
        },
        "prazoReapresentacao": {
          "type": "number",
          "default": 30,
          "description": "Resubmission deadline in days (default 30)",
          "subcategories": ["TIMING"]
        },
        "justificativaMedica": {
          "type": "string",
          "description": "Medical justification text",
          "subcategories": ["MEDICAL"]
        },
        "necessidadeMedicaDocumentada": {
          "type": "boolean",
          "description": "Medical necessity documented",
          "subcategories": ["MEDICAL"]
        },
        "indicacaoClinica": {
          "type": "string",
          "description": "Clinical indication",
          "subcategories": ["MEDICAL"]
        },
        "contraindicacaoPresente": {
          "type": "boolean",
          "description": "Contraindication present",
          "subcategories": ["MEDICAL", "PREDICT"]
        }
      }
    },

    "COMP": {
      "description": "Compliance Validation inputs",
      "variables": {
        "codigoTUSS": {
          "type": "string",
          "pattern": "^[0-9]{8}$",
          "description": "TUSS procedure code",
          "subcategories": ["ANS"]
        },
        "dentroDoRolANS": {
          "type": "boolean",
          "description": "Procedure within ANS coverage list",
          "subcategories": ["ANS"]
        },
        "versaoRolANS": {
          "type": "string",
          "description": "ANS list version (e.g., 2024)",
          "subcategories": ["ANS"]
        },
        "coberturaMinimaObrigatoria": {
          "type": "boolean",
          "description": "Minimum mandatory coverage per law",
          "subcategories": ["ANS"]
        },
        "tipoGuia": {
          "type": "string",
          "allowedValues": ["SP_SADT", "INTERNACAO", "CONSULTA", "HONORARIO", "RESUMO_INTERNACAO"],
          "description": "Guide type",
          "subcategories": ["TISS"]
        },
        "camposObrigatorios": {
          "type": "boolean",
          "description": "All mandatory TISS fields filled",
          "subcategories": ["TISS"]
        },
        "formatoTISS": {
          "type": "string",
          "description": "TISS format identifier",
          "subcategories": ["TISS"]
        },
        "versaoTISS": {
          "type": "string",
          "example": "4.01.00",
          "description": "TISS version",
          "subcategories": ["TISS"]
        },
        "validacaoXSD": {
          "type": "boolean",
          "description": "XSD schema validation passed",
          "subcategories": ["TISS"]
        },
        "tipoSolicitacao": {
          "type": "string",
          "allowedValues": ["INTERNACAO", "SP_SADT", "QUIMIO", "RADIO", "HOME_CARE", "PRORROGACAO"],
          "description": "Request type for deadline calculation",
          "subcategories": ["DEADLINE"]
        },
        "dataEvento": {
          "type": "string",
          "format": "date",
          "description": "Event date for deadline calculation",
          "subcategories": ["DEADLINE"]
        },
        "prazoRegulamentar": {
          "type": "number",
          "description": "Regulatory deadline in days",
          "subcategories": ["DEADLINE"]
        },
        "diasRestantes": {
          "type": "number",
          "description": "Days remaining until deadline",
          "subcategories": ["DEADLINE"]
        },
        "feriados": {
          "type": "number",
          "minimum": 0,
          "description": "Number of holidays in the period",
          "subcategories": ["DEADLINE"]
        },
        "trilhaAuditoria": {
          "type": "boolean",
          "description": "Audit trail complete",
          "subcategories": ["AUDIT"]
        },
        "registroCompleto": {
          "type": "boolean",
          "description": "Complete record maintained",
          "subcategories": ["AUDIT"]
        },
        "assinaturaDigital": {
          "type": "boolean",
          "description": "Digital signature present",
          "subcategories": ["AUDIT"]
        },
        "timestampRegistro": {
          "type": "string",
          "format": "date-time",
          "description": "Record timestamp for audit",
          "subcategories": ["AUDIT"]
        }
      }
    },

    "RECV": {
      "description": "Revenue Recovery inputs",
      "variables": {
        "valorGlosa": {
          "type": "number",
          "minimum": 0,
          "description": "Disallowance amount in BRL",
          "subcategories": ["GLOSA", "PROVISION"]
        },
        "motivoGlosa": {
          "type": "string",
          "description": "Disallowance reason code",
          "subcategories": ["GLOSA", "REWORK"]
        },
        "categoriaGlosa": {
          "type": "string",
          "allowedValues": ["ADMINISTRATIVA", "TECNICA", "MEDICA"],
          "description": "Disallowance category",
          "subcategories": ["GLOSA", "PROVISION"]
        },
        "diasDesdeGlosa": {
          "type": "number",
          "minimum": 0,
          "description": "Days since disallowance notification",
          "subcategories": ["GLOSA"]
        },
        "historicoRecursosOperadora": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Historical appeal success rate with payer (%)",
          "subcategories": ["GLOSA"]
        },
        "motivoRetorno": {
          "type": "string",
          "description": "Return reason for rework",
          "subcategories": ["REWORK"]
        },
        "tipoErro": {
          "type": "string",
          "allowedValues": ["CADASTRAL", "DOCUMENTACAO", "CODIFICACAO", "VALOR"],
          "description": "Error type classification",
          "subcategories": ["REWORK"]
        },
        "complexidadeCorrecao": {
          "type": "string",
          "allowedValues": ["SIMPLES", "MEDIA", "COMPLEXA"],
          "description": "Correction complexity",
          "subcategories": ["REWORK"]
        },
        "valorConta": {
          "type": "number",
          "minimum": 0,
          "description": "Account value in BRL",
          "subcategories": ["REWORK", "PROVISION"]
        },
        "valorProvisionado": {
          "type": "number",
          "minimum": 0,
          "description": "Provisioned amount in BRL per CPC 25",
          "subcategories": ["PROVISION"]
        },
        "probabilidadeRecuperacao": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Recovery probability percentage",
          "subcategories": ["PROVISION", "GLOSA"]
        },
        "diasEmAberto": {
          "type": "number",
          "minimum": 0,
          "description": "Days receivable is outstanding",
          "subcategories": ["PROVISION", "AGED"]
        },
        "valorTotalAberto": {
          "type": "number",
          "minimum": 0,
          "description": "Total outstanding amount in BRL",
          "subcategories": ["AGED"]
        },
        "tentativasCobranca": {
          "type": "number",
          "minimum": 0,
          "description": "Number of collection attempts",
          "subcategories": ["AGED"]
        },
        "statusNegociacao": {
          "type": "string",
          "allowedValues": ["NAO_INICIADA", "EM_ANDAMENTO", "ACORDO", "JUDICIAL"],
          "description": "Negotiation status",
          "subcategories": ["AGED"]
        }
      }
    }
  },

  "crossCategoryVariables": {
    "codigoTUSS": ["BILL", "DENY", "COMP"],
    "diagnosticoCID10": ["AUTH", "DENY"],
    "diasEmAberto": ["RECV"],
    "caraterAtendimento": ["AUTH"],
    "tipoGuia": ["AUTH", "COMP"]
  }
}
