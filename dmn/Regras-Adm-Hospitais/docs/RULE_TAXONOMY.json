{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hospital-revenue-cycle.com/schemas/hospital-admin-rules/v1.0.0",
  "title": "Hospital Administrative Rules Taxonomy",
  "description": "Complete taxonomy for hospital administrative DMN rules from HOSPITAL perspective",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "perspective": "HOSPITAL",
  "primaryObjective": "Maximize legitimate revenue capture",

  "outputValues": {
    "resultado": {
      "Prosseguir": "Action approved, continue with billing/authorization",
      "Bloquear": "Action blocked, requires correction before proceeding",
      "Alertar": "Action flagged, human review recommended but can proceed",
      "Revisar": "Insufficient data, requires manual review"
    }
  },

  "contrastWithPayerRules": {
    "payerOutputs": ["Aprovado", "Reprovado", "Pendente"],
    "hospitalOutputs": ["Prosseguir", "Bloquear", "Alertar", "Revisar"],
    "payerGoal": "Control costs, prevent fraud",
    "hospitalGoal": "Maximize legitimate revenue",
    "payerLogic": "Block when criteria not met",
    "hospitalLogic": "Block when revenue at risk"
  },

  "categories": {
    "BILL": {
      "name": "Billing Optimization",
      "priority": "CRITICAL",
      "ruleCount": 25,
      "subcategories": {
        "BUNDLE": {
          "name": "Bundle vs Separate Billing Decisions",
          "ruleCount": 6,
          "description": "Maximize revenue through correct bundling decisions"
        },
        "UPCODE": {
          "name": "Appropriate Coding Level Selection",
          "ruleCount": 4,
          "description": "Select appropriate coding level based on complexity"
        },
        "MODIFIER": {
          "name": "Modifier Application Rules",
          "ruleCount": 5,
          "description": "Apply billing modifiers correctly"
        },
        "QUANTITY": {
          "name": "Quantity Validation Rules",
          "ruleCount": 4,
          "description": "Validate quantity billing against contract limits"
        },
        "TIME": {
          "name": "Time-Based Billing Rules",
          "ruleCount": 3,
          "description": "Time-based billing optimization (night, weekend)"
        },
        "MATERIAL": {
          "name": "Material and Supply Billing",
          "ruleCount": 3,
          "description": "Material and supply billing validation"
        }
      }
    },

    "AUTH": {
      "name": "Authorization Recovery",
      "priority": "CRITICAL",
      "ruleCount": 30,
      "subcategories": {
        "PREAUTH": {
          "name": "Pre-Authorization Completeness",
          "ruleCount": 8,
          "description": "Ensure pre-authorization is complete and valid"
        },
        "TIMING": {
          "name": "Authorization Timing Compliance",
          "ruleCount": 5,
          "description": "Monitor authorization expiration and renewal"
        },
        "DOCUMENTATION": {
          "name": "Documentation Completeness",
          "ruleCount": 7,
          "description": "Ensure all required documentation is attached"
        },
        "CODING": {
          "name": "Diagnosis-Procedure Match",
          "ruleCount": 4,
          "description": "Validate CID-10 matches procedure indication"
        },
        "APPEAL": {
          "name": "Appeal Eligibility Detection",
          "ruleCount": 3,
          "description": "Identify appealable denials within deadline"
        },
        "URGENCY": {
          "name": "Emergency Bypass Rules",
          "ruleCount": 3,
          "description": "Handle emergency cases per RN 424/2017"
        }
      }
    },

    "DENY": {
      "name": "Denial Prevention",
      "priority": "HIGH",
      "ruleCount": 35,
      "subcategories": {
        "PREDICT": {
          "name": "Denial Risk Prediction",
          "ruleCount": 10,
          "description": "Predict and prevent denials before submission"
        },
        "MISSING": {
          "name": "Missing Information Detection",
          "ruleCount": 8,
          "description": "Detect missing required documentation"
        },
        "DUPLICATE": {
          "name": "Duplicate Claim Prevention",
          "ruleCount": 6,
          "description": "Prevent duplicate claim submissions"
        },
        "TIMING": {
          "name": "Timely Filing Compliance",
          "ruleCount": 6,
          "description": "Ensure timely filing within deadlines"
        },
        "MEDICAL": {
          "name": "Medical Necessity Documentation",
          "ruleCount": 5,
          "description": "Ensure medical necessity is documented"
        }
      }
    },

    "COMP": {
      "name": "Compliance Validation",
      "priority": "HIGH",
      "ruleCount": 20,
      "subcategories": {
        "ANS": {
          "name": "ANS Regulation Compliance",
          "ruleCount": 6,
          "description": "Validate ANS coverage and regulations"
        },
        "TISS": {
          "name": "TISS Format Validation",
          "ruleCount": 5,
          "description": "Validate TISS format and structure"
        },
        "DEADLINE": {
          "name": "Deadline Compliance",
          "ruleCount": 6,
          "description": "Monitor and enforce regulatory deadlines"
        },
        "AUDIT": {
          "name": "Audit Trail Requirements",
          "ruleCount": 3,
          "description": "Ensure audit trail completeness"
        }
      }
    },

    "RECV": {
      "name": "Revenue Recovery",
      "priority": "MEDIUM",
      "ruleCount": 15,
      "subcategories": {
        "GLOSA": {
          "name": "Glosa Recovery Eligibility",
          "ruleCount": 5,
          "description": "Evaluate disallowance recovery potential"
        },
        "REWORK": {
          "name": "Claim Rework Routing",
          "ruleCount": 4,
          "description": "Route claims for correction"
        },
        "PROVISION": {
          "name": "Provision vs Write-off",
          "ruleCount": 3,
          "description": "Determine accounting treatment per CPC 25"
        },
        "AGED": {
          "name": "Aged Receivables Actions",
          "ruleCount": 3,
          "description": "Handle aged receivables"
        }
      }
    }
  },

  "totalRules": 125,

  "executionOrder": {
    "phase1_preSubmission": ["COMP-TISS", "COMP-ANS", "BILL-*", "AUTH-*"],
    "phase2_validation": ["DENY-PREDICT", "DENY-MISSING", "DENY-DUPLICATE", "DENY-TIMING"],
    "phase3_postSubmission": ["COMP-DEADLINE"],
    "phase4_postResponse": ["RECV-GLOSA", "RECV-REWORK", "RECV-PROVISION", "RECV-AGED"]
  },

  "interdependencies": [
    {
      "source": "AUTH-PREAUTH",
      "target": "DENY-PREDICT",
      "trigger": "Missing authorization triggers high denial risk"
    },
    {
      "source": "AUTH-DOCUMENTATION",
      "target": "DENY-MISSING",
      "trigger": "Incomplete documentation triggers missing info detection"
    },
    {
      "source": "DENY-PREDICT",
      "target": "RECV-GLOSA",
      "trigger": "High risk claims submitted anyway increase glosa probability"
    },
    {
      "source": "DENY-TIMING",
      "target": "RECV-REWORK",
      "trigger": "Timing violations require claim rework"
    },
    {
      "source": "BILL-BUNDLE",
      "target": "COMP-ANS",
      "trigger": "Bundle decisions must pass ANS validation"
    },
    {
      "source": "BILL-QUANTITY",
      "target": "COMP-TISS",
      "trigger": "Quantity must not exceed TISS field limits"
    }
  ]
}
