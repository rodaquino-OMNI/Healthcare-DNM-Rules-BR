  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_PARTIAL_001" name="Parcelamento Paciente Particular" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_PARTIAL_001" name="Avaliacao Parcelamento Paciente Particular">
    <decisionTable id="DecisionTable_RECV_PARTIAL_001" hitPolicy="FIRST">

      
      <input id="Input_1" label="Valor Total">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>valorTotal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Numero de Parcelas">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>numeroParcelas</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Taxa de Juros Mensal (%)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>taxaJuros</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Capacidade de Pagamento Mensal">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>capacidadePagamento</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Historico Inadimplencia">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>historicoInadimplencia</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Numero de parcelas superior ao limite maximo (24x) - CDC</description>
        <inputEntry id="InputEntry_C1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>&gt; 24</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Parcelamento em mais de 24x nao permitido. Risco elevado de inadimplencia e descumprimento do CDC."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"AJUSTAR_CONDICOES"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_C1_4"><text>"CRITICO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Taxa de juros superior ao teto legal (1% a.m.)</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Taxa de juros acima do teto legal (1% a.m.). Ajustar para evitar caracterizacao de pratica abusiva."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"AJUSTAR_CONDICOES"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_C2_4"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_3">
        <description>Paciente com historico de inadimplencia no hospital</description>
        <inputEntry id="InputEntry_C3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_C3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_C3_2"><text>"Paciente com historico de inadimplencia. Exigir garantias adicionais ou entrada maior."</text></outputEntry>
<outputEntry id="OutputEntry_C3_3"><text>"EXIGIR_GARANTIA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_3_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_C3_4"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Parcelamento longo (13-24x) - Monitoramento recomendado</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[13..24]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&lt;= 1</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Parcelamento em mais de 12x requer monitoramento ativo. Risco moderado de inadimplencia."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"APROVAR"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_A1_4"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Parcelamento curto com capacidade adequada</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>&lt;= 1</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Parcelamento aprovado. Condicoes dentro dos parametros de seguranca e conformidade legal."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"APROVAR"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P1_4"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_PARTIAL_001">
        <description>Caso nao atenda criterios automaticos - Revisar comite de credito</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Parcelamento requer analise do comite de credito. Verificar capacidade de pagamento e historico completo."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"REVISAR_COMITE"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_PARTIAL_001_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_F_4"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_PARTIAL_001">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_PARTIAL_001" dmnElementRef="Decision_RECV_PARTIAL_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>