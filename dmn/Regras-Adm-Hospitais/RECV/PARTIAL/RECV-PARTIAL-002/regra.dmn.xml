<!--
  ============================================================================
  RECV-PARTIAL-002 - Acordo Pagamento Glosa
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-PARTIAL
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_PARTIAL_002" name="Acordo Pagamento Glosa" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_PARTIAL_002" name="Avaliacao Acordo Pagamento Glosa">
    <decisionTable id="DecisionTable_RECV_PARTIAL_002" hitPolicy="FIRST">

      
      <input id="Input_1" label="Valor Glosa Original">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>valorGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Percentual Acordo Proposto (%)">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>percentualAcordo</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Prazo Quitacao (dias)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>prazoQuitacao</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Probabilidade Reversao Total">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>probabilidadeReversao</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Urgencia Fluxo de Caixa">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>urgenciaFluxoCaixa</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Acordo abaixo de 50% com prazo superior a 180 dias - Perda excessiva</description>
        <inputEntry id="InputEntry_C1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>&lt; 50</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Acordo inferior a 50% com prazo superior a 180 dias representa perda excessiva. Rejeitar e insistir em recurso."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"REJEITAR_PROPOSTA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Prazo de quitacao superior a 180 dias</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Prazo de quitacao superior a 180 dias compromete valor presente do acordo. Exigir prazo menor."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"CONTRAPROPOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Acordo entre 50% e 70% - Avaliar necessidade</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[50..70)</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&lt;= 180</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Acordo abaixo de 70% requer avaliacao cuidadosa. Considerar probabilidade de reversao e urgencia de caixa."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"REVISAR_COMITE"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Alta probabilidade de reversao total - Manter recurso</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt; 90</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>&gt;= 0.80</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Alta probabilidade de reversao total (80%+). Recomendado insistir no recurso ao inves de aceitar acordo."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"INSISTIR_RECURSO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Acordo &gt;= 70% com urgencia de fluxo de caixa</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>&gt;= 70</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>&lt;= 90</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Acordo favoravel (70%+) com prazo curto e necessidade de caixa. Aceitar para garantir liquidez."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"ACEITAR_ACORDO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Acordo &gt;= 85% com prazo curto</description>
        <inputEntry id="InputEntry_P3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>&gt;= 85</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>&lt;= 60</text></inputEntry>
        <inputEntry id="InputEntry_P3_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P3_2"><text>"Acordo excelente (85%+) com prazo curto. Aceitar para encerrar processo e garantir recebimento."</text></outputEntry>
<outputEntry id="OutputEntry_P3_3"><text>"ACEITAR_ACORDO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_3_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_3_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_PARTIAL_002">
        <description>Caso nao atenda criterios automaticos - Revisar comite</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Acordo requer analise do comite financeiro. Avaliar custo de oportunidade e risco de nao recebimento."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"REVISAR_COMITE"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_PARTIAL_002_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_PARTIAL_002_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_PARTIAL_002">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_PARTIAL_002" dmnElementRef="Decision_RECV_PARTIAL_002">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>