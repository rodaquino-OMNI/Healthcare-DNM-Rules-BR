<?xml version='1.0' encoding='UTF-8'?>
<!--
  ============================================================================
  RECV-AGED-003 - Recebiveis 180+ Dias - Legal/Write-Off
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-AGED
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_AGED_003" name="Recebiveis 180+ Dias - Legal/Write-Off" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_AGED_003" name="Acao para Recebiveis 180+ Dias">
    <decisionTable id="DecisionTable_RECV_AGED_003" hitPolicy="FIRST">

      
      <input id="Input_1" label="Dias em Aberto">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>diasEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Valor Recebivel">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>valorRecebivel</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Status Cobranca">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>statusCobranca</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"PENDENTE", "ESCALADO", "JURIDICO", "NEGOCIACAO", "IRRECUPERAVEL"</text>
        </inputValues>
      </input>

      <input id="Input_4" label="Tentativas de Cobranca">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>tentativasCobranca</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Aging abaixo do range desta regra</description>
        <inputEntry id="InputEntry_C1_1"><text>&lt;= 180</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Aging &lt;= 180 dias. Usar regras RECV-AGED-001 ou RECV-AGED-002."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Aging 181-365 dias - Avaliar acao judicial</description>
        <inputEntry id="InputEntry_A1_1"><text>[181..365]</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>&gt;= 5000</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>not("JURIDICO")</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>&gt;= 3</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Aging 181-365 dias com valor significativo. Encaminhar para departamento juridico avaliar viabilidade de cobranca judicial."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Aging 365+ dias - Avaliar write-off</description>
        <inputEntry id="InputEntry_A2_1"><text>&gt; 365</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>"PENDENTE", "ESCALADO"</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>&gt;= 5</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Aging &gt; 365 dias com tentativas esgotadas. Candidato a write-off. Verificar elegibilidade fiscal (Lei 9.430)."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Em processo juridico - monitorar</description>
        <inputEntry id="InputEntry_A3_1"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>"JURIDICO"</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"Em processo juridico. Monitorar andamento. Manter provisao enquanto aguarda resolucao."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_4">
        <description>Classificado como irrecuperavel</description>
        <inputEntry id="InputEntry_A4_1"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_A4_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A4_3"><text>"IRRECUPERAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_A4_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A4_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A4_2"><text>"Classificado como irrecuperavel. Proceder com write-off. Documentar para fins fiscais."</text></outputEntry>
<outputEntry id="OutputEntry_A4_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_5">
        <description>Valor baixo com aging alto - write-off recomendado</description>
        <inputEntry id="InputEntry_A5_1"><text>&gt; 365</text></inputEntry>
        <inputEntry id="InputEntry_A5_2"><text>&lt; 1000</text></inputEntry>
        <inputEntry id="InputEntry_A5_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A5_4"><text>&gt;= 3</text></inputEntry>
<outputEntry id="OutputEntry_A5_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A5_2"><text>"Valor baixo (&lt; R$ 1.000) com aging &gt; 365 dias. Custo de recuperacao maior que valor. Recomendado write-off."</text></outputEntry>
<outputEntry id="OutputEntry_A5_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_5_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_5_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_6">
        <description>Alto valor - manter esforco de recuperacao</description>
        <inputEntry id="InputEntry_A6_1"><text>[181..365]</text></inputEntry>
        <inputEntry id="InputEntry_A6_2"><text>&gt;= 100000</text></inputEntry>
        <inputEntry id="InputEntry_A6_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A6_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A6_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A6_2"><text>"Recebivel de muito alto valor (&gt;= R$ 100.000). Esgotar todas as vias: negociacao direta, judicial, ANS. Provisionar mas nao baixar."</text></outputEntry>
<outputEntry id="OutputEntry_A6_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_6_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_6_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_7">
        <description>Em processo de negociacao</description>
        <inputEntry id="InputEntry_A7_1"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_A7_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A7_3"><text>"NEGOCIACAO"</text></inputEntry>
        <inputEntry id="InputEntry_A7_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A7_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A7_2"><text>"Em negociacao ativa. Monitorar evolucao. Prazo maximo para conclusao: 30 dias."</text></outputEntry>
<outputEntry id="OutputEntry_A7_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_7_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_7_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_AGED_003">
        <description>Caso padrao - Avaliar legal e write-off</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Recebivel com aging critico (&gt;180 dias). Avaliar viabilidade juridica vs write-off. Provisao total obrigatoria."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_AGED_003_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_AGED_003_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_AGED_003">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_AGED_003" dmnElementRef="Decision_RECV_AGED_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>