<!--
  ============================================================================
  RECV-NEGO-002 - Plano Pagamento Negociado
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-NEGO
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_NEGO_002" name="Plano Pagamento Negociado" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_NEGO_002" name="Avaliacao Plano de Pagamento">
    <decisionTable id="DecisionTable_RECV_NEGO_002" hitPolicy="FIRST">

      
      <input id="Input_1" label="Valor Divida">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>valorDivida</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Numero Parcelas">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>numeroParcelas</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Garantia Oferecida">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>garantiaOferecida</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"NENHUMA", "CARTA_FIANCA", "GARANTIA_BANCARIA", "IMOVEL", "SEGURO_GARANTIA"</text>
        </inputValues>
      </input>

      <input id="Input_4" label="Percentual Entrada">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>percentualEntrada</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Historico Acordos">
        <inputExpression id="InputExpression_5" typeRef="string">
          <text>historicoAcordos</text>
        </inputExpression>
        <inputValues id="InputValues_5">
          <text>"SEM_HISTORICO", "CUMPRIDOS", "DESCUMPRIDOS"</text>
        </inputValues>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Mais de 36 parcelas sem garantia real</description>
        <inputEntry id="InputEntry_C1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>&gt; 36</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>"NENHUMA"</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Parcelamento acima de 36 vezes sem garantia nao permitido. CPC Art. 916 limita parcelamento sem garantia."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"EXIGIR_GARANTIA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Operadora com historico de acordos descumpridos</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>&gt; 12</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>"NENHUMA", "CARTA_FIANCA"</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>"DESCUMPRIDOS"</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Operadora com historico de acordos descumpridos. Exigir garantia real ou limitar a 12 parcelas."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"EXIGIR_GARANTIA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Parcelamento entre 24 e 36 vezes requer atencao</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[24..36]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Parcelamento entre 24 e 36 vezes requer aprovacao especial. Verificar garantias e historico."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"EXIGIR_GARANTIA"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Ate 12 parcelas sem garantia para dividas ate R$ 50.000</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt;= 50000</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>&gt;= 10</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>"SEM_HISTORICO", "CUMPRIDOS"</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Parcelamento em ate 12 vezes aprovado para dividas ate R$ 50.000 com entrada minima de 10%."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"APROVAR_PLANO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Ate 24 parcelas com garantia bancaria</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>&lt;= 24</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>"GARANTIA_BANCARIA", "IMOVEL", "SEGURO_GARANTIA"</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>&gt;= 20</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>"SEM_HISTORICO", "CUMPRIDOS"</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Parcelamento em ate 24 vezes aprovado com garantia real e entrada de 20%."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"APROVAR_PLANO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_NEGO_002">
        <description>Caso nao atenda criterios automaticos - Revisar</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Proposta de parcelamento requer analise manual. Avaliar valor, prazo, garantias e historico."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"REDUZIR_PARCELAS"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_NEGO_002_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_NEGO_002_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_NEGO_002">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_NEGO_002" dmnElementRef="Decision_RECV_NEGO_002">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>