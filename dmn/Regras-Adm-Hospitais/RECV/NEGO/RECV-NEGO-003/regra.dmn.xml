<!--
  ============================================================================
  RECV-NEGO-003 - Refinanciamento Divida
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-NEGO
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_NEGO_003" name="Refinanciamento Divida" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_NEGO_003" name="Avaliacao Refinanciamento de Divida">
    <decisionTable id="DecisionTable_RECV_NEGO_003" hitPolicy="FIRST">

      
      <input id="Input_1" label="Historico Inadimplencia">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>historicoInadimplencia</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"PRIMEIRA_VEZ", "RECORRENTE", "SISTEMATICO"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Valor Acumulado">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>valorAcumulado</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Condicoes Novas">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>condicoesNovas</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"MELHORES", "IGUAIS", "PIORES"</text>
        </inputValues>
      </input>

      <input id="Input_4" label="Numero Renegociacoes">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>numeroRenegociacoes</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Garantia Adicional">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>garantiaAdicional</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Inadimplencia recorrente sem melhoria nas condicoes</description>
        <inputEntry id="InputEntry_C1_1"><text>"RECORRENTE", "SISTEMATICO"</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>"IGUAIS", "PIORES"</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Inadimplencia recorrente sem melhoria nas condicoes. Refinanciamento nao recomendado - considerar execucao."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"EXECUTAR_DIVIDA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_C1_4"><text>"CRITICO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Terceira ou mais tentativa de renegociacao</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Limite de renegociacoes atingido (maximo 2). Iniciar processo de cobranca judicial."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"EXECUTAR_DIVIDA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_C2_4"><text>"CRITICO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Segunda negociacao requer atencao especial</description>
        <inputEntry id="InputEntry_A1_1"><text>"RECORRENTE"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>2</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Segunda renegociacao requer aprovacao especial e garantias adicionais obrigatorias."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"EXIGIR_GARANTIA"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="OutputEntry_A1_4"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Primeira renegociacao com condicoes melhores</description>
        <inputEntry id="InputEntry_P1_1"><text>"PRIMEIRA_VEZ"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>"MELHORES"</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>1</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Primeira renegociacao com condicoes melhores aprovada. Monitorar cumprimento."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"APROVAR_REFINANCIAMENTO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P1_4"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Renegociacao com garantia adicional oferecida</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>"MELHORES"</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>&lt;= 2</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Renegociacao aprovada com garantia adicional. Formalizar garantia antes da liberacao."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"APROVAR_REFINANCIAMENTO"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P2_4"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_NEGO_003">
        <description>Caso nao atenda criterios automaticos - Revisar</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Solicitacao de refinanciamento requer analise manual. Avaliar historico completo e garantias."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"EXIGIR_GARANTIA"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_NEGO_003_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_F_4"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_NEGO_003">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_NEGO_003" dmnElementRef="Decision_RECV_NEGO_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>