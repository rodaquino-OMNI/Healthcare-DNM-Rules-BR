{
  "ruleCode": "RECV-NEGO-003",
  "ruleName": "Refinanciamento Divida",
  "category": "RECV",
  "subcategory": "NEGO",
  "specialty": "Financeiro",
  "version": "1.0.0",
  "status": "active",
  "hitPolicy": "FIRST",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06T00:00:00Z",
  "updatedAt": "2026-02-06T00:00:00Z",
  "inputs": [
    {
      "name": "historicoInadimplencia",
      "type": "string",
      "label": "Historico de Inadimplencia",
      "required": true,
      "allowedValues": ["PRIMEIRA_VEZ", "RECORRENTE", "SISTEMATICO"],
      "description": "Classificacao do padrao de inadimplencia"
    },
    {
      "name": "valorAcumulado",
      "type": "number",
      "label": "Valor Acumulado (R$)",
      "required": true,
      "description": "Valor total acumulado da divida incluindo encargos",
      "validation": {"min": 0}
    },
    {
      "name": "condicoesNovas",
      "type": "string",
      "label": "Condicoes Novas Oferecidas",
      "required": true,
      "allowedValues": ["MELHORES", "IGUAIS", "PIORES"],
      "description": "Comparacao das novas condicoes com acordo anterior"
    },
    {
      "name": "numeroRenegociacoes",
      "type": "number",
      "label": "Numero de Renegociacoes",
      "required": true,
      "description": "Quantidade de vezes que a divida foi renegociada",
      "validation": {"min": 0}
    },
    {
      "name": "garantiaAdicional",
      "type": "boolean",
      "label": "Garantia Adicional Oferecida",
      "required": true,
      "description": "Indica se ha oferta de garantia adicional"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "label": "Resultado",
      "allowedValues": ["Prosseguir", "Bloquear", "Alertar", "Revisar"],
      "description": "Decisao sobre aprovacao do refinanciamento"
    },
    {
      "name": "observacao",
      "type": "string",
      "label": "Observacao",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "acaoRecomendada",
      "type": "string",
      "label": "Acao Recomendada",
      "allowedValues": ["APROVAR_REFINANCIAMENTO", "REJEITAR", "EXIGIR_GARANTIA", "EXECUTAR_DIVIDA"],
      "description": "Acao recomendada para tratamento"
    },
    {
      "name": "riscoOperacao",
      "type": "string",
      "label": "Risco da Operacao",
      "allowedValues": ["BAIXO", "MEDIO", "ALTO", "CRITICO"],
      "description": "Nivel de risco da operacao de refinanciamento"
    }
  ],
  "indications": [
    "Primeira renegociacao com justificativa valida",
    "Melhoria significativa nas condicoes oferecidas",
    "Operadora com capacidade de pagamento demonstrada",
    "Garantias adicionais oferecidas"
  ],
  "contraindications": [
    "Inadimplencia recorrente sem melhoria nas condicoes",
    "Terceira ou mais tentativa de renegociacao",
    "Sem garantias adicionais para divida crescente"
  ],
  "references": [
    "CDC Art. 52 - Renegociacao de dividas",
