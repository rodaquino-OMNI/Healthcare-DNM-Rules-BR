  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_NEGO_006" name="Juros Compostos Negociados" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_NEGO_006" name="Avaliacao Juros Negociados">
    <decisionTable id="DecisionTable_RECV_NEGO_006" hitPolicy="FIRST">

      
      <input id="Input_1" label="Taxa Original (% a.m.)">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>taxaOriginal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Taxa Negociada (% a.m.)">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>taxaNegociada</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Periodo Aplicacao (meses)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>periodoAplicacao</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Tipo Capitalizacao">
        <inputExpression id="InputExpression_4" typeRef="string">
          <text>tipoCapitalizacao</text>
        </inputExpression>
        <inputValues id="InputValues_4">
          <text>"SIMPLES", "MENSAL", "DIARIA"</text>
        </inputValues>
      </input>

      <input id="Input_5" label="Contrato Permite Capitalizacao">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>contratoPermiteCapitalizacao</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Taxa negociada superior a taxa legal maxima (1% a.m.)</description>
        <inputEntry id="InputEntry_C1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Taxa negociada superior ao limite legal de 1% a.m. (CC Art. 406). Ajustar para taxa legal."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"AJUSTAR_TAXA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Capitalizacao composta sem previsao contratual</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>"MENSAL", "DIARIA"</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Capitalizacao composta nao permitida sem previsao contratual expressa (STJ Sumula 541). Usar juros simples."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"AJUSTAR_TAXA"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Contraindicacao_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Taxa negociada abaixo de 80% da original</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Taxa negociada significativamente reduzida. Verificar impacto financeiro e aprovar com diretoria."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"CONSULTAR_JURIDICO"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Taxa dentro do limite legal com capitalizacao permitida</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt;= 1</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>"SIMPLES", "MENSAL"</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Taxa negociada dentro do limite legal e capitalizacao permitida em contrato. Aprovado."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"ACEITAR_TAXA"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Juros simples sempre permitido</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>&lt;= 1</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>"SIMPLES"</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Juros simples dentro do limite legal. Aprovado independente de previsao contratual."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"ACEITAR_TAXA"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Aprovado_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_NEGO_006">
        <description>Caso nao atenda criterios automaticos - Consultar juridico</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Proposta de juros requer analise juridica. Verificar contrato, legislacao e jurisprudencia aplicavel."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"CONSULTAR_JURIDICO"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_NEGO_006_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_RECV_NEGO_006_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_NEGO_006">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_NEGO_006" dmnElementRef="Decision_RECV_NEGO_006">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>