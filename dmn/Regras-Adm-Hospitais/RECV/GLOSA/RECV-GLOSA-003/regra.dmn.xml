  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_GLOSA_003" name="Avaliacao de Glosa Medica" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_GLOSA_003" name="Avaliacao Recurso Glosa Medica">
    <decisionTable id="DecisionTable_RECV_GLOSA_003" hitPolicy="FIRST">

      
      <input id="Input_1" label="Categoria Glosa">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>categoriaGlosa</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ADMINISTRATIVA", "TECNICA", "MEDICA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Motivo Glosa">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>motivoGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Valor Glosa">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>valorGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Tem Documentacao Adicional">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>temDocumentacaoAdicional</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Historico Recursos Operadora">
        <inputExpression id="InputExpression_5" typeRef="number">
          <text>historicoRecursosOperadora</text>
        </inputExpression>
      </input>

      <input id="Input_6" label="Dias Desde Glosa">
        <inputExpression id="InputExpression_6" typeRef="number">
          <text>diasDesdeGlosa</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Regra so aplica a glosas medicas</description>
        <inputEntry id="InputEntry_C1_1"><text>not("MEDICA")</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_6"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Esta regra so processa glosas medicas. Encaminhar para regra apropriada."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Prazo de recurso expirado</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_6"><text>&gt; 60</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Prazo de recurso expirado. Provisionar glosa."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_3">
        <description>Procedimento fora de cobertura sem documentacao de excecao</description>
        <inputEntry id="InputEntry_C3_1"><text>"MEDICA"</text></inputEntry>
        <inputEntry id="InputEntry_C3_2"><text>"SEM_COBERTURA_CONTRATUAL"</text></inputEntry>
        <inputEntry id="InputEntry_C3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_C3_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_6"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C3_2"><text>"Procedimento sem cobertura contratual e sem documentacao de excecao. Baixa probabilidade de reversao."</text></outputEntry>
<outputEntry id="OutputEntry_C3_3"><text>"ACEITAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Glosa medica em urgencia/emergencia com parecer especializado</description>
        <inputEntry id="InputEntry_A1_1"><text>"MEDICA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"PROCEDIMENTO_NAO_INDICADO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt;= 1000</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>&gt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_A1_6"><text>&lt;= 30</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Glosa medica com valor significativo e parecer especializado. Recorrer com documentacao clinica robusta."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Sem cobertura mas com indicacao clinica documentada</description>
        <inputEntry id="InputEntry_A2_1"><text>"MEDICA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"SEM_COBERTURA_CONTRATUAL"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&gt;= 2000</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_6"><text>&lt;= 45</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Procedimento sem cobertura padrao mas com indicacao clinica. Avaliar via judicial ou ANS."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Glosa medica com documentacao e valor relevante</description>
        <inputEntry id="InputEntry_A3_1"><text>"MEDICA"</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>&gt;= 500</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A3_5"><text>&gt;= 25</text></inputEntry>
        <inputEntry id="InputEntry_A3_6"><text>&lt;= 45</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"Glosa medica com documentacao. Solicitar parecer medico detalhado antes de recurso."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_GLOSA_003">
        <description>Caso padrao - Revisar com especialista</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_6"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Glosa medica requer parecer de auditor medico. Encaminhar para analise especializada."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_GLOSA_003_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_GLOSA_003_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_GLOSA_003">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_GLOSA_003" dmnElementRef="Decision_RECV_GLOSA_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>