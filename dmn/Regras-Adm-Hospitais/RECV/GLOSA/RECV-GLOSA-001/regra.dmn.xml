<?xml version='1.0' encoding='UTF-8'?>
<!--
  ============================================================================
  RECV-GLOSA-001 - Recuperacao de Glosa Administrativa
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-GLOSA
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_GLOSA_001" name="Recuperacao de Glosa Administrativa" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_GLOSA_001" name="Avaliacao Recurso Glosa Administrativa">
    <decisionTable id="DecisionTable_RECV_GLOSA_001" hitPolicy="FIRST">

      
      <input id="Input_1" label="Categoria Glosa">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>categoriaGlosa</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ADMINISTRATIVA", "TECNICA", "MEDICA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Motivo Glosa">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>motivoGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Dias Desde Glosa">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>diasDesdeGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Valor Glosa">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>valorGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Tem Documentacao Adicional">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>temDocumentacaoAdicional</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Prazo de recurso expirado (&gt; 60 dias)</description>
        <inputEntry id="InputEntry_C1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>&gt; 60</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Prazo de recurso expirado. Glosa com mais de 60 dias nao elegivel para recurso administrativo."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Valor abaixo do custo administrativo de recurso</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>&lt; 50</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Valor de glosa inferior ao custo administrativo de recurso (R$ 50). ROI negativo."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"ACEITAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Glosa administrativa com documentacao adicional disponivel</description>
        <inputEntry id="InputEntry_A1_1"><text>"ADMINISTRATIVA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&lt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>&gt;= 100</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Glosa administrativa elegivel para recurso. Documentacao complementar disponivel. Alta probabilidade de reversao."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Glosa administrativa corrigivel mesmo sem documentacao adicional</description>
        <inputEntry id="InputEntry_A2_1"><text>"ADMINISTRATIVA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"GUIA_INCOMPLETA", "DIVERGENCIA_CADASTRAL", "ERRO_DIGITACAO"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&lt;= 45</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>&gt;= 100</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Glosa administrativa por erro corrigivel. Preparar documentacao corretiva e apresentar recurso."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Glosa administrativa dentro do prazo medio</description>
        <inputEntry id="InputEntry_A3_1"><text>"ADMINISTRATIVA"</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>[31..60]</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>&gt;= 200</text></inputEntry>
        <inputEntry id="InputEntry_A3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"Glosa administrativa dentro do prazo limite. Priorizar recurso imediato para evitar perda de prazo."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_GLOSA_001">
        <description>Caso nao atenda criterios automaticos - Revisar manualmente</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Glosa requer analise manual. Verificar: categoria, motivo, prazo e documentacao disponivel."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_GLOSA_001_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_GLOSA_001_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_GLOSA_001">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_GLOSA_001" dmnElementRef="Decision_RECV_GLOSA_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>