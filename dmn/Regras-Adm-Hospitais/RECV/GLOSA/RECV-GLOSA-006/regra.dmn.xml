<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  RECV-GLOSA-006 - Classificacao Glosa por Tipo (Administrativa vs Tecnica)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-GLOSA
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 9.656/1998 (planos de saude)
  - RN ANS 395/2016 (recursos de glosa)
  - CPC 25 (provisoes)
  - IFRS 15 (reconhecimento de receita)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_RECV_GLOSA_006"
             name="Classificacao Glosa por Tipo (Administrativa vs Tecnica)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_GLOSA_006" name="Classificacao Glosa por Tipo (Administrativa vs Tecnica)">
    <decisionTable id="DecisionTable_RECV_GLOSA_006" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tipo Glosa">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>tipoGlosa</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ADMINISTRATIVA", "TECNICA", "MISTA"</text>
        </inputValues>
      </input>


      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA P11: Prosseguir -->
      <rule id="Rule_P1_1">
        <description>Glosa administrativa identificada.</description>
        <inputEntry id="InputEntry_P11_1"><text>tipoGlosa == "ADMINISTRATIVA"</text></inputEntry>
        <outputEntry id="OutputEntry_P11_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P11_2"><text>"Glosa administrativa identificada."</text></outputEntry>
        <outputEntry id="OutputEntry_P11_3"><text>"Priorizar recurso - alta taxa de reversao."</text></outputEntry>
        <outputEntry id="OutputEntry_P11_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P11_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA A12: Alertar -->
      <rule id="Rule_A1_2">
        <description>Glosa tecnica - requer parecer medico.</description>
        <inputEntry id="InputEntry_A12_1"><text>tipoGlosa == "TECNICA"</text></inputEntry>
        <outputEntry id="OutputEntry_A12_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A12_2"><text>"Glosa tecnica - requer parecer medico."</text></outputEntry>
        <outputEntry id="OutputEntry_A12_3"><text>"Obter parecer auditoria medica antes de recorrer."</text></outputEntry>
        <outputEntry id="OutputEntry_A12_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A12_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A23: Alertar -->
      <rule id="Rule_A2_3">
        <description>Glosa mista - componentes administrativos e tecnicos.</description>
        <inputEntry id="InputEntry_A23_1"><text>tipoGlosa == "MISTA"</text></inputEntry>
        <outputEntry id="OutputEntry_A23_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A23_2"><text>"Glosa mista - componentes administrativos e tecnicos."</text></outputEntry>
        <outputEntry id="OutputEntry_A23_3"><text>"Separar argumentacao por componente."</text></outputEntry>
        <outputEntry id="OutputEntry_A23_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A23_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_RECV_GLOSA_006">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_GLOSA_006">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_GLOSA_006" dmnElementRef="Decision_RECV_GLOSA_006">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
