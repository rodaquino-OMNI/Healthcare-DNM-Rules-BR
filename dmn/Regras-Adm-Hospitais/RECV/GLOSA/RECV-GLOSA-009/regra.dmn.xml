<!--
  ============================================================================
  RECV-GLOSA-009 - Glosa por Prazo Vencido (Mirror COMP/DEADLINE)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-GLOSA
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 9.656/1998 (planos de saude)
  - RN ANS 395/2016 (recursos de glosa)
  - CPC 25 (provisoes)
  - IFRS 15 (reconhecimento de receita)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_RECV_GLOSA_009"
             name="Glosa por Prazo Vencido (Mirror COMP/DEADLINE)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_GLOSA_009" name="Glosa por Prazo Vencido (Mirror COMP/DEADLINE)">
    <decisionTable id="DecisionTable_RECV_GLOSA_009" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Motivo Glosa">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>motivoGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Dias Atraso">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>diasAtraso</text>
        </inputExpression>
      </input>


      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B11: Bloquear -->
      <rule id="Rule_B1_1">
        <description>Glosa por prazo excessivamente vencido.</description>
        <inputEntry id="InputEntry_B11_1"><text>motivoGlosa == "PRAZO" and diasAtraso &gt; 60</text></inputEntry>
        <inputEntry id="InputEntry_B11_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B11_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B11_2"><text>"Glosa por prazo excessivamente vencido."</text></outputEntry>
        <outputEntry id="OutputEntry_B11_3"><text>"Aceitar glosa - baixa chance de reversao."</text></outputEntry>
        <outputEntry id="OutputEntry_B11_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B11_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A12: Alertar -->
      <rule id="Rule_A1_2">
        <description>Glosa por prazo com atraso moderado.</description>
        <inputEntry id="InputEntry_A12_1"><text>motivoGlosa == "PRAZO" and diasAtraso &lt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_A12_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A12_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A12_2"><text>"Glosa por prazo com atraso moderado."</text></outputEntry>
        <outputEntry id="OutputEntry_A12_3"><text>"Justificar motivo do atraso no recurso."</text></outputEntry>
        <outputEntry id="OutputEntry_A12_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A12_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_RECV_GLOSA_009">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_GLOSA_009">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_GLOSA_009" dmnElementRef="Decision_RECV_GLOSA_009">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
