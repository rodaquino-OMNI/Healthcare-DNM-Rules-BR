<?xml version='1.0' encoding='UTF-8'?>
<!--
  ============================================================================
  RECV-GLOSA-004 - Limiar Custo-Beneficio para Recurso
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-GLOSA
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_GLOSA_004" name="Limiar Custo-Beneficio para Recurso" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_GLOSA_004" name="Avaliacao ROI Recurso de Glosa">
    <decisionTable id="DecisionTable_RECV_GLOSA_004" hitPolicy="FIRST">

      
      <input id="Input_1" label="Valor Glosa">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>valorGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Categoria Glosa">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>categoriaGlosa</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"ADMINISTRATIVA", "TECNICA", "MEDICA"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Historico Recursos Operadora">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>historicoRecursosOperadora</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Dias Desde Glosa">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>diasDesdeGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Tem Documentacao Adicional">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>temDocumentacaoAdicional</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Valor abaixo do minimo para recurso (R$ 100)</description>
        <inputEntry id="InputEntry_C1_1"><text>&lt; 100</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Valor de glosa abaixo do limiar minimo de R$ 100. ROI insuficiente para justificar recurso."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"ACEITAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Prazo de recurso expirado</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>&gt; 60</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Prazo de recurso expirado. ROI = 0."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Glosa administrativa alto valor, bom historico = ROI excelente</description>
        <inputEntry id="InputEntry_A1_1"><text>&gt;= 500</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"ADMINISTRATIVA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt;= 70</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>&lt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ROI estimado &gt; 200%. Recurso altamente recomendado. Valor esperado: R$ " + string(valorGlosa * 0.85 - 30)</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Glosa administrativa valor medio = ROI bom</description>
        <inputEntry id="InputEntry_A2_1"><text>[200..500[</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"ADMINISTRATIVA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&gt;= 60</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>&lt;= 45</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"ROI estimado &gt; 100%. Recurso recomendado."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Glosa tecnica com documentacao = ROI moderado</description>
        <inputEntry id="InputEntry_A3_1"><text>&gt;= 300</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>"TECNICA"</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>&gt;= 50</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>&lt;= 45</text></inputEntry>
        <inputEntry id="InputEntry_A3_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"ROI estimado &gt; 70%. Recurso viavel mas requer analise da documentacao."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_4">
        <description>Glosa medica alto valor pode ter ROI marginal</description>
        <inputEntry id="InputEntry_A4_1"><text>&gt;= 1000</text></inputEntry>
        <inputEntry id="InputEntry_A4_2"><text>"MEDICA"</text></inputEntry>
        <inputEntry id="InputEntry_A4_3"><text>&gt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_A4_4"><text>&lt;= 45</text></inputEntry>
        <inputEntry id="InputEntry_A4_5"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A4_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A4_2"><text>"ROI estimado entre 50-70%. Avaliar custo de parecer medico adicional."</text></outputEntry>
<outputEntry id="OutputEntry_A4_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_3">
        <description>Glosa medica valor baixo = ROI negativo</description>
        <inputEntry id="InputEntry_C3_1"><text>[100..500[</text></inputEntry>
        <inputEntry id="InputEntry_C3_2"><text>"MEDICA"</text></inputEntry>
        <inputEntry id="InputEntry_C3_3"><text>&lt; 40</text></inputEntry>
        <inputEntry id="InputEntry_C3_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C3_2"><text>"ROI estimado negativo. Valor x probabilidade nao justifica custo de recurso medico."</text></outputEntry>
<outputEntry id="OutputEntry_C3_3"><text>"ACEITAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_GLOSA_004">
        <description>Caso padrao - Calcular ROI manualmente</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Calcular ROI manualmente. Formula: (valor * prob - 30) / 30. Minimo 70% para prosseguir."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_GLOSA_004_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_GLOSA_004_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_GLOSA_004">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_GLOSA_004" dmnElementRef="Decision_RECV_GLOSA_004">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>