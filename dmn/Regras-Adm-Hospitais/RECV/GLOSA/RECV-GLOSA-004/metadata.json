{
  "ruleCode": "RECV-GLOSA-004",
  "ruleName": "Limiar Custo-Beneficio para Recurso",
  "category": "RECV",
  "subcategory": "GLOSA",
  "specialty": "Gestao Financeira",
  "version": "1.0.0",
  "status": "active",
  "hitPolicy": "FIRST",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06T00:00:00Z",
  "updatedAt": "2026-02-06T00:00:00Z",
  "inputs": [
    {
      "name": "valorGlosa",
      "type": "number",
      "label": "Valor da Glosa (R$)",
      "required": true,
      "validation": {"min": 0}
    },
    {
      "name": "categoriaGlosa",
      "type": "string",
      "label": "Categoria da Glosa",
      "required": true,
      "allowedValues": ["ADMINISTRATIVA", "TECNICA", "MEDICA"]
    },
    {
      "name": "historicoRecursosOperadora",
      "type": "number",
      "label": "Historico de Recursos com Operadora (%)",
      "required": false,
      "validation": {"min": 0, "max": 100}
    },
    {
      "name": "diasDesdeGlosa",
      "type": "number",
      "label": "Dias Desde a Glosa",
      "required": true,
      "validation": {"min": 0}
    },
    {
      "name": "temDocumentacaoAdicional",
      "type": "boolean",
      "label": "Tem Documentacao Adicional",
      "required": false,
      "defaultValue": false
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "allowedValues": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string"
    },
    {
      "name": "acaoRecomendada",
      "type": "string",
      "allowedValues": ["RECORRER", "ACEITAR", "SOLICITAR_PARECER", "PROVISIONAR", "BAIXAR"]
    },
    {
      "name": "probabilidadeRecuperacao",
      "type": "number",
      "validation": {"min": 0, "max": 1}
    }
  ],
  "businessRules": {
    "roiFormula": "(valorGlosa * probabilidadeRecuperacao - custoAdministrativo) / custoAdministrativo",
    "custoAdministrativo": 30,
    "roiMinimo": 0.70,
    "valorMinimo": 100
  },
  "references": [
    "Gestao financeira hospitalar",
    "Analise de custo-beneficio em saude"
  ],
  "tags": ["roi", "custo-beneficio", "recurso", "analise-financeira"],
  "compliance": {
    "regulations": ["Governanca Corporativa"],
    "auditRequired": true,
    "retentionPeriodDays": 1825
  },
  "changelog": [
    {
      "version": "1.0.0",
      "date": "2026-02-06",
      "changes": "Versao inicial - Regra de analise ROI para recursos de glosa",
      "author": "Sistema"
    }
  ]
}
