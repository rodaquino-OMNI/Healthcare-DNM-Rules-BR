<?xml version='1.0' encoding='UTF-8'?>
<!--
  ============================================================================
  RECV-PROVISION-001 - Alta Probabilidade Recuperacao - Sem Provisao
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-PROVISION
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_PROVISION_001" name="Alta Probabilidade Recuperacao - Sem Provisao" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_PROVISION_001" name="Avaliacao Provisao - Alta Probabilidade">
    <decisionTable id="DecisionTable_RECV_PROVISION_001" hitPolicy="FIRST">

      
      <input id="Input_1" label="Probabilidade Recuperacao">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>probabilidadeRecuperacao</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Valor em Aberto">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>valorEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Dias em Aberto">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>diasEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Recurso Esgotado">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>recursoEsgotado</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Provisao Atual">
        <inputExpression id="InputExpression_5" typeRef="number">
          <text>provisaoAtual</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Probabilidade abaixo de 70% - nao e alta</description>
        <inputEntry id="InputEntry_C1_1"><text>&lt; 0.70</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Probabilidade de recuperacao abaixo de 70% conforme CPC 25. Encaminhar para RECV-PROVISION-002 (provisao parcial) ou RECV-PROVISION-003 (provisao total)."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Recursos administrativos esgotados</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Recursos administrativos esgotados. Reavaliar probabilidade real de recuperacao."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Alta probabilidade, recebivel recente</description>
        <inputEntry id="InputEntry_A1_1"><text>&gt;= 0.85</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&lt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>0</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Recebivel com probabilidade muito alta (85%+) e recente. Manter integralmente em contas a receber. Sem provisao."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Alta probabilidade mas com provisao indevida</description>
        <inputEntry id="InputEntry_A2_1"><text>&gt;= 0.80</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&lt;= 60</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>&gt; 0</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Recebivel com alta probabilidade possui provisao contabilizada. Avaliar reversao da provisao conforme CPC 25."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Alta probabilidade com aging medio</description>
        <inputEntry id="InputEntry_A3_1"><text>[0.70..0.85[</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>[31..90]</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"Recebivel com probabilidade alta (70-85%). Manter em contas a receber. Monitorar evolucao."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_4">
        <description>Alta probabilidade mas aging preocupante</description>
        <inputEntry id="InputEntry_A4_1"><text>&gt;= 0.70</text></inputEntry>
        <inputEntry id="InputEntry_A4_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A4_3"><text>&gt; 90</text></inputEntry>
        <inputEntry id="InputEntry_A4_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A4_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A4_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A4_2"><text>"Recebivel com alta probabilidade mas aging &gt; 90 dias. Reavaliar probabilidade. Se mantiver &gt;70%, nao provisionar."</text></outputEntry>
<outputEntry id="OutputEntry_A4_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_PROVISION_001">
        <description>Caso padrao - Revisar classificacao</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Reavaliar probabilidade de recuperacao e classificacao de provisao conforme CPC 25."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_PROVISION_001_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_PROVISION_001_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_PROVISION_001">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_PROVISION_001" dmnElementRef="Decision_RECV_PROVISION_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>