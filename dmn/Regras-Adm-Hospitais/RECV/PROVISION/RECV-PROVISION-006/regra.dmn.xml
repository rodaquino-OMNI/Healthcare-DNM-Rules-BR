<!--
  ============================================================================
  RECV-PROVISION-006 - Provisao por Operadora (Risco Credito)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-PROVISION
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 9.656/1998 (planos de saude)
  - RN ANS 395/2016 (recursos de glosa)
  - CPC 25 (provisoes)
  - IFRS 15 (reconhecimento de receita)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_RECV_PROVISION_006"
             name="Provisao por Operadora (Risco Credito)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_PROVISION_006" name="Provisao por Operadora (Risco Credito)">
    <decisionTable id="DecisionTable_RECV_PROVISION_006" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Risco Credito">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>riscoCredito</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text>
        </inputValues>
      </input>


      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B11: Bloquear -->
      <rule id="Rule_B1_1">
        <description>Operadora com risco critico.</description>
        <inputEntry id="InputEntry_B11_1"><text>riscoCredito == "CRITICO"</text></inputEntry>
        <outputEntry id="OutputEntry_B11_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B11_2"><text>"Operadora com risco critico."</text></outputEntry>
        <outputEntry id="OutputEntry_B11_3"><text>"Provisionar 100% do valor a receber."</text></outputEntry>
        <outputEntry id="OutputEntry_B11_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B11_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A12: Alertar -->
      <rule id="Rule_A1_2">
        <description>Operadora com risco alto.</description>
        <inputEntry id="InputEntry_A12_1"><text>riscoCredito == "ALTO"</text></inputEntry>
        <outputEntry id="OutputEntry_A12_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A12_2"><text>"Operadora com risco alto."</text></outputEntry>
        <outputEntry id="OutputEntry_A12_3"><text>"Provisionar 70-90% do valor a receber."</text></outputEntry>
        <outputEntry id="OutputEntry_A12_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_A12_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA P13: Prosseguir -->
      <rule id="Rule_P1_3">
        <description>Operadora com risco baixo.</description>
        <inputEntry id="InputEntry_P13_1"><text>riscoCredito == "BAIXO"</text></inputEntry>
        <outputEntry id="OutputEntry_P13_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P13_2"><text>"Operadora com risco baixo."</text></outputEntry>
        <outputEntry id="OutputEntry_P13_3"><text>"Provisao minima ou dispensada."</text></outputEntry>
        <outputEntry id="OutputEntry_P13_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P13_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_RECV_PROVISION_006">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_PROVISION_006">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_PROVISION_006" dmnElementRef="Decision_RECV_PROVISION_006">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
