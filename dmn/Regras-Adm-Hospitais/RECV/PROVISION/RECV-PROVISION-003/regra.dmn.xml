<!--
  ============================================================================
  RECV-PROVISION-003 - Baixa Probabilidade - Provisao Total
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-PROVISION
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_PROVISION_003" name="Baixa Probabilidade - Provisao Total" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_PROVISION_003" name="Avaliacao Provisao - Baixa Probabilidade">
    <decisionTable id="DecisionTable_RECV_PROVISION_003" hitPolicy="FIRST">

      
      <input id="Input_1" label="Probabilidade Recuperacao">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>probabilidadeRecuperacao</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Valor em Aberto">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>valorEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Dias em Aberto">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>diasEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Recurso Esgotado">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>recursoEsgotado</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Provisao Atual">
        <inputExpression id="InputExpression_5" typeRef="number">
          <text>provisaoAtual</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Probabilidade acima de 30% - nao e baixa</description>
        <inputEntry id="InputEntry_C1_1"><text>&gt;= 0.30</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Probabilidade &gt;= 30%. Usar regra apropriada (PROVISION-001 ou PROVISION-002)."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Baixa probabilidade, constituir provisao de 100%</description>
        <inputEntry id="InputEntry_A1_1"><text>[0.10..0.30[</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&lt;= 180</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Probabilidade baixa (10-30%). Constituir provisao de 100% do valor. Manter registro para eventual recuperacao."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Probabilidade muito baixa, candidato a write-off</description>
        <inputEntry id="InputEntry_A2_1"><text>&lt; 0.10</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&lt;= 365</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Probabilidade muito baixa (&lt;10%). Provisionar 100%. Avaliar criterios para write-off."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Baixa probabilidade e recursos esgotados</description>
        <inputEntry id="InputEntry_A3_1"><text>&lt; 0.30</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"Recursos esgotados com baixa probabilidade. Provisionar 100%. Encaminhar para avaliacao de write-off."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_4">
        <description>Baixa probabilidade com aging &gt; 180 dias</description>
        <inputEntry id="InputEntry_A4_1"><text>&lt; 0.30</text></inputEntry>
        <inputEntry id="InputEntry_A4_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A4_3"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_A4_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A4_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A4_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A4_2"><text>"Aging &gt; 180 dias com baixa probabilidade. Provisao 100% obrigatoria. Priorizar analise de write-off."</text></outputEntry>
<outputEntry id="OutputEntry_A4_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_4_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_PROVISION_003">
        <description>Caso padrao - Provisionar e revisar</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Revisar classificacao. Constituir provisao de 100% como medida conservadora."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_PROVISION_003_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_PROVISION_003_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_PROVISION_003">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_PROVISION_003" dmnElementRef="Decision_RECV_PROVISION_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>