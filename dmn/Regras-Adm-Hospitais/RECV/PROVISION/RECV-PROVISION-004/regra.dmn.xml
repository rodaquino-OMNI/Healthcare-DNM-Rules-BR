<!--
  ============================================================================
  RECV-PROVISION-004 - Elegibilidade para Write-Off
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: RECV-PROVISION
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_RECV_PROVISION_004" name="Elegibilidade para Write-Off" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_RECV_PROVISION_004" name="Avaliacao Elegibilidade Write-Off">
    <decisionTable id="DecisionTable_RECV_PROVISION_004" hitPolicy="FIRST">

      
      <input id="Input_1" label="Probabilidade Recuperacao">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>probabilidadeRecuperacao</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Valor em Aberto">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>valorEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Dias em Aberto">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>diasEmAberto</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Recurso Esgotado">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>recursoEsgotado</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Provisao Atual">
        <inputExpression id="InputExpression_5" typeRef="number">
          <text>provisaoAtual</text>
        </inputExpression>
      </input>

      
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Contraindicacao_1">
        <description>Probabilidade &gt;= 10% - nao elegivel para write-off</description>
        <inputEntry id="InputEntry_C1_1"><text>&gt;= 0.10</text></inputEntry>
        <inputEntry id="InputEntry_C1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C1_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C1_2"><text>"Probabilidade &gt;= 10%. Nao elegivel para write-off. Manter provisao e monitorar."</text></outputEntry>
<outputEntry id="OutputEntry_C1_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_2">
        <description>Recursos nao esgotados - nao elegivel para write-off</description>
        <inputEntry id="InputEntry_C2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C2_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_C2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C2_2"><text>"Recursos nao esgotados. Esgotar todas as vias antes de write-off."</text></outputEntry>
<outputEntry id="OutputEntry_C2_3"><text>"RECORRER"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Contraindicacao_3">
        <description>Aging &lt; 365 dias - nao elegivel para write-off fiscal</description>
        <inputEntry id="InputEntry_C3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_3"><text>&lt; 365</text></inputEntry>
        <inputEntry id="InputEntry_C3_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_C3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_C3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_C3_2"><text>"Aging &lt; 365 dias. Nao elegivel para deducao fiscal de write-off. Manter provisao."</text></outputEntry>
<outputEntry id="OutputEntry_C3_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Contraindicacao_3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Todos criterios atendidos - elegivel para write-off</description>
        <inputEntry id="InputEntry_A1_1"><text>&lt; 0.10</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt;= 365</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>&gt; 0</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Elegivel para write-off. Criterios: prob &lt;10%, aging &gt;365 dias, recursos esgotados, provisao constituida. Preparar documentacao fiscal."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Elegivel mas precisa constituir provisao primeiro</description>
        <inputEntry id="InputEntry_A2_1"><text>&lt; 0.10</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&gt;= 365</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>0</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Elegivel para write-off mas provisao nao constituida. Constituir provisao 100% antes de efetuar baixa."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"PROVISIONAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Aging &gt; 720 dias - urgente avaliar write-off</description>
        <inputEntry id="InputEntry_A3_1"><text>&lt; 0.10</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>&gt; 720</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"URGENTE: Recebivel com aging &gt; 2 anos. Priorizar processo de write-off para limpeza de carteira."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"BAIXAR"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Aprovado_3_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_RECV_PROVISION_004">
        <description>Caso padrao - Avaliar criterios detalhadamente</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Revisar criterios de elegibilidade para write-off: probabilidade, aging, recursos, provisao."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_PARECER"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_PROVISION_004_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_RECV_PROVISION_004_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_RECV_PROVISION_004">
      <dmndi:DMNShape id="DMNShape_Decision_RECV_PROVISION_004" dmnElementRef="Decision_RECV_PROVISION_004">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>