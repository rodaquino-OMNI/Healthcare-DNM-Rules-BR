<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CASH-ESTIMATE-002 - Orcamento Exames Imagem
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CASH-ESTIMATE
  Perspectiva: HOSPITAL (Financeiro/Diagnostico)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Orcamento de exames de imagem emitido conforme tabela vigente
  - Valor compativel com complexidade do exame
  - Paciente ciente do prazo de validade do orcamento (30 dias)

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Cobranca de valores superiores ao orcamento sem justificativa
  - Orcamento vencido (>30 dias)
  - Exame realizado sem orcamento previo para PARTICULAR

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 13.003/2014 (orcamento hospitalar obrigatorio)
  - Lei 8.078/1990 CDC Art. 6 (informacao clara)
  - ANS RN 465/2021 (transparencia de valores)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CASH_ESTIMATE_002"
             name="Orcamento Exames Imagem"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CASH_ESTIMATE_002" name="Orcamento Exames Imagem">
    <decisionTable id="DecisionTable_CASH_ESTIMATE_002" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Orcamento Emitido">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>orcamentoEmitido</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Dias Desde Orcamento">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>diasDesdeOrcamento</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tipo Atendimento">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>tipoAtendimento</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"PARTICULAR", "CONVENIO", "SUS"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - PARTICULAR sem orcamento -->
      <rule id="Rule_Bloqueio_1">
        <description>Exame PARTICULAR sem orcamento previo</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>"PARTICULAR"</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Exame PARTICULAR requer orcamento previo conforme Lei 13.003/2014."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Emitir orcamento detalhado antes de realizar exame. Obter ciencia do paciente."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Orcamento vencido -->
      <rule id="Rule_Bloqueio_2">
        <description>Orcamento vencido - Validade de 30 dias expirada</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 30</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>"PARTICULAR"</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Orcamento vencido (>30 dias). Necessario emitir novo orcamento com valores atualizados."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Emitir novo orcamento com tabela vigente. Confirmar valores com paciente antes de realizar exame."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Orcamento proximo do vencimento -->
      <rule id="Rule_Alerta_1">
        <description>Orcamento entre 20-30 dias - Proximo do vencimento</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[20..30]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>"PARTICULAR"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Orcamento proximo do vencimento (20-30 dias). Alertar paciente sobre prazo de validade."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Confirmar com paciente se deseja prosseguir com orcamento atual ou solicitar atualizacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Orcamento vigente PARTICULAR -->
      <rule id="Rule_Aprovado_1">
        <description>Orcamento vigente (ate 20 dias) para exame PARTICULAR</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>[0..20]</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>"PARTICULAR"</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Orcamento vigente e dentro do prazo de validade. Prosseguir com realizacao do exame."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Autorizar realizacao do exame conforme orcamento. Registrar no sistema financeiro."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - CONVENIO/SUS -->
      <rule id="Rule_Aprovado_2">
        <description>Exame CONVENIO ou SUS nao requer orcamento previo ao paciente</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>"CONVENIO", "SUS"</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Exame CONVENIO/SUS. Orcamento ao paciente dispensado. Validar apenas autorizacao da operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com exame. Validar autorizacao da operadora ou tabela SUS."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_CASH_ESTIMATE_002">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CASH_ESTIMATE_002">
      <dmndi:DMNShape id="DMNShape_Decision_CASH_ESTIMATE_002" dmnElementRef="Decision_CASH_ESTIMATE_002">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
