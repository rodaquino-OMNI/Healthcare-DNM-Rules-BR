<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CASH-DISCOUNT-002 - Desconto Colaborador
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CASH-DISCOUNT
  Perspectiva: HOSPITAL (RH/Financeiro)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Colaborador ativo com vinculo empregaticio valido
  - Desconto de 30-50% conforme politica de RH
  - Documentacao de vinculo anexada

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Colaborador desligado ou com vinculo suspenso
  - Ausencia de comprovacao de vinculo empregaticio
  - Desconto superior ao teto estabelecido por RH

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - CLT Art. 462 (descontos em folha)
  - Lei 8.078/1990 CDC Art. 6 (direitos do consumidor)
  - Politica interna de beneficios para colaboradores
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CASH_DISCOUNT_002"
             name="Desconto Colaborador"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CASH_DISCOUNT_002" name="Desconto Colaborador">
    <decisionTable id="DecisionTable_CASH_DISCOUNT_002" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Vinculo Colaborador">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>vinculoColaborador</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ATIVO", "DESLIGADO", "SUSPENSO", "NAO_IDENTIFICADO"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Percentual Desconto (%)">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>percentualDesconto</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Documentacao Vinculo">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>documentacaoVinculo</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Colaborador desligado/suspenso -->
      <rule id="Rule_Bloqueio_1">
        <description>Colaborador nao possui vinculo ativo</description>
        <inputEntry id="InputEntry_B1_1"><text>"DESLIGADO", "SUSPENSO"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Colaborador desligado ou com vinculo suspenso. Desconto corporativo nao aplicavel."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Bloquear aplicacao de desconto. Cobrar como paciente PARTICULAR tabela cheia."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Ausencia de documentacao -->
      <rule id="Rule_Bloqueio_2">
        <description>Ausencia de comprovacao de vinculo empregaticio</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Documentacao de vinculo empregaticio nao apresentada. Impossivel validar elegibilidade."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Solicitar comprovante de vinculo ao RH antes de aplicar desconto."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Desconto acima do teto -->
      <rule id="Rule_Bloqueio_3">
        <description>Desconto superior a 50% requer aprovacao diretoria RH</description>
        <inputEntry id="InputEntry_B3_1"><text>"ATIVO"</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>&gt; 50</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"Desconto superior ao teto de 50% estabelecido pela politica de beneficios."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Solicitar aprovacao excepcional da diretoria de RH antes de prosseguir."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Desconto entre 30-50% -->
      <rule id="Rule_Alerta_1">
        <description>Desconto entre 30% e 50% - Documentar autorizacao RH</description>
        <inputEntry id="InputEntry_A1_1"><text>"ATIVO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[30..50]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Desconto elevado (30-50%). Confirmar autorizacao com RH."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Anexar comprovante de autorizacao de RH ao prontuario financeiro antes de faturar."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Desconto padrao colaborador -->
      <rule id="Rule_Aprovado_1">
        <description>Desconto padrao ate 30% para colaborador ativo com documentacao</description>
        <inputEntry id="InputEntry_P1_1"><text>"ATIVO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>[0..30]</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Desconto corporativo aplicado conforme politica de beneficios para colaboradores."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento aplicando desconto corporativo. Registrar no sistema de beneficios."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_CASH_DISCOUNT_002">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CASH_DISCOUNT_002">
      <dmndi:DMNShape id="DMNShape_Decision_CASH_DISCOUNT_002" dmnElementRef="Decision_CASH_DISCOUNT_002">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
