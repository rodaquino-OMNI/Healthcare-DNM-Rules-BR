<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CASH-DISCOUNT-003 - Desconto Pagamento Antecipado
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CASH-DISCOUNT
  Perspectiva: HOSPITAL (Financeiro)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Pagamento antecipado confirmado antes da prestacao do servico
  - Desconto de 5-15% conforme politica de gestao de caixa
  - Meio de pagamento confirmado (PIX, transferencia, dinheiro)

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Pagamento nao confirmado ou promessa de pagamento
  - Desconto solicitado apos prestacao do servico
  - Meio de pagamento nao aceito ou fraudulento

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 8.078/1990 CDC Art. 49 (direito de arrependimento)
  - CPC Art. 47 (politica financeira)
  - ANS RN 465/2021 (transparencia de precos)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CASH_DISCOUNT_003"
             name="Desconto Pagamento Antecipado"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CASH_DISCOUNT_003" name="Desconto Pagamento Antecipado">
    <decisionTable id="DecisionTable_CASH_DISCOUNT_003" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Status Pagamento">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>statusPagamento</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"CONFIRMADO", "PENDENTE", "PROMESSA", "NAO_REALIZADO"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Momento Pagamento">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>momentoPagamento</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"ANTECIPADO", "POSTERIOR", "CONCOMITANTE"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Percentual Desconto (%)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>percentualDesconto</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Pagamento nao confirmado -->
      <rule id="Rule_Bloqueio_1">
        <description>Pagamento nao confirmado ou apenas promessa</description>
        <inputEntry id="InputEntry_B1_1"><text>"PENDENTE", "PROMESSA", "NAO_REALIZADO"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Pagamento nao confirmado. Desconto de pagamento antecipado somente com confirmacao bancaria."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Bloquear desconto ate confirmacao de pagamento efetivo. Cobrar tabela cheia se nao houver pagamento."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Pagamento posterior -->
      <rule id="Rule_Bloqueio_2">
        <description>Desconto solicitado apos prestacao do servico</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"POSTERIOR"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Desconto de pagamento antecipado nao aplicavel a pagamentos posteriores ao servico."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Bloquear desconto. Cobrar tabela cheia para pagamentos posteriores."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Desconto acima do teto -->
      <rule id="Rule_Bloqueio_3">
        <description>Desconto superior a 15% requer aprovacao diretoria financeira</description>
        <inputEntry id="InputEntry_B3_1"><text>"CONFIRMADO"</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>"ANTECIPADO"</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>&gt; 15</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"Desconto superior a 15% requer aprovacao da diretoria financeira."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Solicitar aprovacao excepcional antes de aplicar desconto superior a 15%."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Desconto entre 10-15% -->
      <rule id="Rule_Alerta_1">
        <description>Desconto entre 10% e 15% - Documentar comprovante de pagamento</description>
        <inputEntry id="InputEntry_A1_1"><text>"CONFIRMADO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"ANTECIPADO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>[10..15]</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Desconto elevado (10-15%). Anexar comprovante de pagamento antecipado."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Anexar comprovante bancario de pagamento antes de faturar com desconto."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Desconto ate 10% -->
      <rule id="Rule_Aprovado_1">
        <description>Desconto ate 10% para pagamento antecipado confirmado</description>
        <inputEntry id="InputEntry_P1_1"><text>"CONFIRMADO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"ANTECIPADO", "CONCOMITANTE"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>[0..10]</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Desconto de pagamento antecipado aplicado conforme politica de gestao de caixa."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento aplicando desconto. Registrar comprovante de pagamento no sistema."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_CASH_DISCOUNT_003">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CASH_DISCOUNT_003">
      <dmndi:DMNShape id="DMNShape_Decision_CASH_DISCOUNT_003" dmnElementRef="Decision_CASH_DISCOUNT_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
