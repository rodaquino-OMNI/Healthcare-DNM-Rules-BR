{
  "ruleId": "COMP-ACCRED-010",
  "ruleName": "Certificacao Ambiental (Licenciamento)",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "ACCRED",
  "perspective": "HOSPITAL",
  "description": "Valida status da licenca ambiental, condicionantes e relatorios periodicos",
  "inputs": [
    {
      "name": "statusLicencaAmbiental",
      "type": "string",
      "values": ["VIGENTE", "VENCIDA", "SUSPENSA", "CASSADA", "EM_RENOVACAO"],
      "description": "Status atual da licenca ambiental (LO)"
    },
    {
      "name": "condicionantesPendentes",
      "type": "number",
      "description": "Quantidade de condicionantes ambientais pendentes"
    },
    {
      "name": "relatoriosAtrasados",
      "type": "number",
      "description": "Quantidade de relatorios periodicos atrasados"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "LEI-6938-1981",
      "name": "Politica Nacional do Meio Ambiente",
      "source": "Federal"
    },
    {
      "code": "CONAMA-237-1997",
      "name": "Licenciamento Ambiental",
      "source": "CONAMA"
    },
    {
      "code": "RDC-306-2004",
      "name": "Residuos de Servicos de Saude",
      "source": "ANVISA"
    },
    {
      "code": "CONAMA-358-2005",
      "name": "Tratamento e Disposicao de RSS",
      "source": "CONAMA"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
