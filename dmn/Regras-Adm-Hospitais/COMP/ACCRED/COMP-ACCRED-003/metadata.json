{
  "ruleId": "COMP-ACCRED-003",
  "ruleName": "Licenca Vigilancia Sanitaria (VISA)",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "ACCRED",
  "perspective": "HOSPITAL",
  "description": "Valida status do alvara sanitario, data de renovacao e pendencias junto a Vigilancia Sanitaria",
  "inputs": [
    {
      "name": "statusAlvaraSanitario",
      "type": "string",
      "values": ["VIGENTE", "VENCIDO", "SUSPENSO", "CASSADO", "EM_RENOVACAO"],
      "description": "Status atual do alvara sanitario"
    },
    {
      "name": "diasAteRenovacao",
      "type": "number",
      "description": "Dias restantes ate vencimento do alvara"
    },
    {
      "name": "pendenciasVISA",
      "type": "number",
      "description": "Quantidade de pendencias documentais ou de adequacao"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "LEI-6437-1977",
      "name": "Infracoes a Legislacao Sanitaria",
      "source": "Federal"
    },
    {
      "code": "RDC-50-2002",
      "name": "Projetos Fisicos de EAS",
      "source": "ANVISA"
    },
    {
      "code": "RDC-63-2011",
      "name": "Boas Praticas de Funcionamento",
      "source": "ANVISA"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
