{
  "ruleId": "COMP-ACCRED-002",
  "ruleName": "Acreditacao JCI (Joint Commission International)",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "ACCRED",
  "perspective": "HOSPITAL",
  "description": "Valida status da acreditacao JCI, ultima auditoria e planos de acao pendentes",
  "inputs": [
    {
      "name": "statusJCI",
      "type": "string",
      "values": ["ACREDITADO", "CONDICIONAL", "SUSPENSO", "REVOGADO", "NAO_ACREDITADO"],
      "description": "Status atual da acreditacao JCI"
    },
    {
      "name": "mesesDesdeUltimaAuditoria",
      "type": "number",
      "description": "Meses transcorridos desde ultima auditoria JCI"
    },
    {
      "name": "planosAcaoPendentes",
      "type": "number",
      "description": "Quantidade de planos de acao ainda nao fechados"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "JCI-STANDARDS-7TH",
      "name": "JCI Hospital Standards 7th Edition",
      "source": "JCI"
    },
    {
      "code": "IPSG",
      "name": "International Patient Safety Goals",
      "source": "JCI"
    },
    {
      "code": "PORTARIA-MS-529-2013",
      "name": "Seguranca do Paciente",
      "source": "MS"
    },
    {
      "code": "RDC-36-2013",
      "name": "Acoes para Seguranca do Paciente",
      "source": "ANVISA"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
