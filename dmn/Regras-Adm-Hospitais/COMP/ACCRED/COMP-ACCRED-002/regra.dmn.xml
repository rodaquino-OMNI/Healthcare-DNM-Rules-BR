<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_COMP_ACCRED_002" name="Acreditacao JCI" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_COMP_ACCRED_002" name="Validacao Acreditacao JCI">
    <decisionTable id="DecisionTable_COMP_ACCRED_002" hitPolicy="FIRST">

      <input id="Input_1" label="Status JCI">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>statusJCI</text>
        </inputExpression>
        <inputValues><text>"ACREDITADO", "CONDICIONAL", "SUSPENSO", "REVOGADO", "NAO_ACREDITADO"</text></inputValues>
      </input>

      <input id="Input_2" label="Meses desde Ultima Auditoria">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>mesesDesdeUltimaAuditoria</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Planos Acao Pendentes">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>planosAcaoPendentes</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloquear_1">
        <description>Acreditacao JCI revogada - Bloqueio obrigatorio</description>
        <inputEntry id="InputEntry_B1_1"><text>"REVOGADO"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"Acreditacao JCI revogada. Hospital perdeu selo internacional. Necessario novo processo de acreditacao completo."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"PRAZO_EXCEDIDO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Bloquear_2">
        <description>Acreditacao JCI suspensa - Bloqueio</description>
        <inputEntry id="InputEntry_B2_1"><text>"SUSPENSO"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"Acreditacao JCI suspensa. Verificar causa da suspensao e implementar acoes corretivas urgentes."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"PRAZO_EXCEDIDO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Bloquear_3">
        <description>Auditoria JCI atrasada mais de 3 anos</description>
        <inputEntry id="InputEntry_B3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>&gt; 36</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B3_2"><text>"Ultima auditoria JCI ha mais de 3 anos. Acreditacao considerada vencida. Agendar auditoria de recertificacao."</text></outputEntry>
<outputEntry id="OutputEntry_B3_3"><text>"PRAZO_EXCEDIDO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_1">
        <description>Auditoria JCI vencendo em 12 meses - Alerta</description>
        <inputEntry id="InputEntry_A1_1"><text>"ACREDITADO", "CONDICIONAL"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[24..36]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Auditoria JCI vence em menos de 12 meses. Iniciar preparacao para recertificacao. Verificar IPSGs e tracer methodology."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"ALERTA_PROXIMIDADE"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_2">
        <description>Planos de acao pendentes - Monitoramento</description>
        <inputEntry id="InputEntry_A2_1"><text>"ACREDITADO", "CONDICIONAL"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>&lt; 24</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&gt; 0</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Existem planos de acao JCI pendentes. Acompanhar implementacao e evidencias de fechamento dos achados."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_3">
        <description>Acreditacao condicional - Atencao</description>
        <inputEntry id="InputEntry_A3_1"><text>"CONDICIONAL"</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>&lt; 24</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>0</text></inputEntry>
<outputEntry id="OutputEntry_A3_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A3_2"><text>"Acreditacao JCI condicional. Hospital deve cumprir requisitos adicionais para manutencao do selo."</text></outputEntry>
<outputEntry id="OutputEntry_A3_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_3_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Acreditacao JCI plena vigente</description>
        <inputEntry id="InputEntry_P1_1"><text>"ACREDITADO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt; 24</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>0</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Acreditacao JCI plena e vigente. Padrao internacional de qualidade. Faturamento autorizado sem restricoes."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_COMP_ACCRED_002">
        <description>Caso padrao - Revisao manual necessaria</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Status de acreditacao JCI requer verificacao manual. Conferir certificado, ultima auditoria e planos de acao."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_COMP_ACCRED_002_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_COMP_ACCRED_002_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_COMP_ACCRED_002">
      <dmndi:DMNShape id="DMNShape_Decision_COMP_ACCRED_002" dmnElementRef="Decision_COMP_ACCRED_002">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>