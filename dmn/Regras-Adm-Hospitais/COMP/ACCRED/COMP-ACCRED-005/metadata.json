{
  "ruleId": "COMP-ACCRED-005",
  "ruleName": "Certificacao ISO (International Organization for Standardization)",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "ACCRED",
  "perspective": "HOSPITAL",
  "description": "Valida status da certificacao ISO, tipo de norma, organismo certificador e auditorias de manutencao",
  "inputs": [
    {
      "name": "tipoISO",
      "type": "string",
      "values": ["ISO_9001", "ISO_14001", "ISO_45001", "ISO_15189", "MULTIPLAS"],
      "description": "Tipo de certificacao ISO"
    },
    {
      "name": "statusCertificacao",
      "type": "string",
      "values": ["VIGENTE", "SUSPENSA", "CANCELADA", "EXPIRADA", "EM_AUDITORIA"],
      "description": "Status atual da certificacao"
    },
    {
      "name": "mesesAteAuditoriaManutencao",
      "type": "number",
      "description": "Meses restantes ate proxima auditoria de manutencao"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "NBR-ISO-9001-2015",
      "name": "Sistema de Gestao da Qualidade",
      "source": "ABNT"
    },
    {
      "code": "NBR-ISO-14001-2015",
      "name": "Sistema de Gestao Ambiental",
      "source": "ABNT"
    },
    {
      "code": "NBR-ISO-45001-2018",
      "name": "Gestao de Saude e Seguranca Ocupacional",
      "source": "ABNT"
    },
    {
      "code": "PORTARIA-INMETRO-377-2017",
      "name": "Acreditacao de Organismos de Certificacao",
      "source": "INMETRO"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
