<!--
  ============================================================================
  COMP-INTL-003 - Acordo Reciprocidade
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: COMP-INTL
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_COMP_INTL_003" name="Acordo Reciprocidade" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_COMP_INTL_003" name="Validar Acordo Reciprocidade">
    <decisionTable id="DecisionTable_COMP_INTL_003" hitPolicy="FIRST">

      <input id="Input_1" label="Pais Convenio">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>paisConvenio</text>
        </inputExpression>
        <inputValues><text>"argentina", "paraguai", "uruguai", "portugal", "italia", "espanha", "japao", "outros"</text></inputValues>
      </input>

      <input id="Input_2" label="Tipo Acordo">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoAcordo</text>
        </inputExpression>
        <inputValues><text>"mercosul", "bilateral", "multilateral", "previdenciario"</text></inputValues>
      </input>

      <input id="Input_3" label="Acordo Vigente">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>acordoVigente</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Tipo Atendimento Coberto">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>tipoAtendimentoCoberto</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Limite Cobertura Disponivel">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>limiteCoberturaDisponivel</text>
        </inputExpression>
      </input>

      <input id="Input_6" label="Documentacao Acordo Apresentada">
        <inputExpression id="InputExpression_6" typeRef="boolean">
          <text>documentacaoAcordoApresentada</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Block_1">
        <description>Bloquear acordo nao vigente</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_6"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"Acordo de reciprocidade nao esta mais vigente ou foi suspenso. Cobranca via acordo impossivel."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"Verificar status atual do acordo ou cobrar como particular."</text></outputEntry>
<outputEntry id="Rule_Block_1_outputEntry_alertasConformidade"><text>"DOC"</text></outputEntry>
<outputEntry id="Rule_Block_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Block_2">
        <description>Bloquear tipo de atendimento nao coberto</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_6"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"Tipo de atendimento nao coberto pelo acordo de reciprocidade. Maioria cobre apenas emergencias."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"Verificar escopo do acordo ou cobrar procedimento eletivo como particular."</text></outputEntry>
<outputEntry id="Rule_Block_2_outputEntry_alertasConformidade"><text>"DOC"</text></outputEntry>
<outputEntry id="Rule_Block_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Block_3">
        <description>Bloquear sem documentacao do acordo</description>
        <inputEntry id="InputEntry_B3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_6"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B3_2"><text>"Documentacao comprobatoria do acordo nao apresentada. CDAM ou equivalente necessario."</text></outputEntry>
<outputEntry id="OutputEntry_B3_3"><text>"Solicitar CDAM (Certificado de Direito a Assistencia Medica) ou documento equivalente."</text></outputEntry>
<outputEntry id="Rule_Block_3_outputEntry_alertasConformidade"><text>"DOC"</text></outputEntry>
<outputEntry id="Rule_Block_3_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alert_1">
        <description>Alertar cobertura parcial do acordo</description>
        <inputEntry id="InputEntry_A1_1"><text>"portugal", "italia", "espanha"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"bilateral"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_6"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Acordos bilaterais europeus geralmente cobrem apenas urgencia/emergencia com limites de valor."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"Confirmar escopo de cobertura e informar paciente sobre possivel co-participacao."</text></outputEntry>
<outputEntry id="Rule_Alert_1_outputEntry_alertasConformidade"><text>"DOC"</text></outputEntry>
<outputEntry id="Rule_Alert_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alert_2">
        <description>Alertar limite de cobertura proximo</description>
        <inputEntry id="InputEntry_A2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_5"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A2_6"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Limite de cobertura do acordo ja utilizado ou proximo do maximo. Verificar saldo disponivel."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"Consultar saldo de cobertura e informar paciente sobre excedente."</text></outputEntry>
<outputEntry id="Rule_Alert_2_outputEntry_alertasConformidade"><text>"DOC"</text></outputEntry>
<outputEntry id="Rule_Alert_2_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Proceed_1">
        <description>Prosseguir cobertura Mercosul completa</description>
        <inputEntry id="InputEntry_P1_1"><text>"argentina", "paraguai", "uruguai"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"mercosul"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_6"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Acordo Mercosul vigente com cobertura completa para o tipo de atendimento."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"Faturar via acordo de reciprocidade Mercosul. Utilizar formulario padrao."</text></outputEntry>
<outputEntry id="Rule_Proceed_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Proceed_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Proceed_2">
        <description>Prosseguir acordo bilateral valido</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>"bilateral", "previdenciario"</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_6"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Acordo bilateral/previdenciario valido. Atendimento coberto conforme tratado."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"Faturar conforme procedimento do acordo bilateral especifico."</text></outputEntry>
<outputEntry id="Rule_Proceed_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Proceed_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback">
        <description>Caso padrao - revisar manualmente</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_6"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Dados insuficientes para validar acordo de reciprocidade."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"Verificar pais, tipo de acordo, vigencia e documentacao CDAM."</text></outputEntry>
<outputEntry id="Rule_Fallback_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_COMP_INTL_003">
      <dmndi:DMNShape id="DMNShape_Decision" dmnElementRef="Decision_COMP_INTL_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>