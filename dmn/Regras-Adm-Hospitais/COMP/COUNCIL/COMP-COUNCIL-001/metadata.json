{
  "ruleId": "COMP-COUNCIL-001",
  "ruleName": "Registro CRM Medico",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "COUNCIL",
  "perspective": "HOSPITAL",
  "description": "Valida status do registro CRM do medico, RQE (especialidade) e anuidade",
  "inputs": [
    {
      "name": "situacaoCRM",
      "type": "string",
      "values": ["ATIVO", "SUSPENSO", "CASSADO", "INTERDITADO", "CANCELADO"],
      "description": "Situacao do registro no CRM"
    },
    {
      "name": "rqeValido",
      "type": "boolean",
      "description": "Indica se possui RQE registrado para a especialidade"
    },
    {
      "name": "anuidadeEmDia",
      "type": "boolean",
      "description": "Indica se anuidade esta quitada"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "LEI-3268-1957",
      "name": "Conselhos de Medicina",
      "source": "Federal"
    },
    {
      "code": "RES-CFM-2162-2017",
      "name": "Registro de Qualificacao de Especialista",
      "source": "CFM"
    },
    {
      "code": "RES-CFM-2217-2018",
      "name": "Codigo de Etica Medica",
      "source": "CFM"
    },
    {
      "code": "RES-CFM-2148-2016",
      "name": "Anuidade e Inscricao",
      "source": "CFM"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
