    },
    {
      "code": "PORTARIA-SVS-344-1998",
      "name": "Substancias e Medicamentos Controlados",
      "source": "ANVISA"
    },
    {
      "code": "RES-CFF-596-2014",
      "name": "Atribuicoes do Farmaceutico",
      "source": "CFF"
    }
  ],
