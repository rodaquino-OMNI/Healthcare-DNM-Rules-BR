{
  "ruleId": "COMP-COUNCIL-003",
  "ruleName": "Registro CRF Farmacia",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "COUNCIL",
  "perspective": "HOSPITAL",
  "description": "Valida status do registro CRF, responsavel tecnico e licenca especial para controlados",
  "inputs": [
    {
      "name": "situacaoCRF",
      "type": "string",
      "values": ["ATIVO", "SUSPENSO", "CASSADO", "CANCELADO", "PENDENTE"],
      "description": "Situacao do registro no CRF"
    },
    {
      "name": "rtFarmaciaRegular",
      "type": "boolean",
      "description": "Indica se RT de farmacia esta regular"
    },
    {
      "name": "statusLicencaEspecial",
      "type": "string",
      "values": ["VIGENTE", "VENCIDA", "NAO_APLICAVEL", "EM_RENOVACAO"],
      "description": "Status da licenca especial ANVISA para controlados"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "LEI-3820-1960",
