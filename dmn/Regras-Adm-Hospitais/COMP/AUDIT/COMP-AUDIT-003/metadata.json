{
  "ruleId": "COMP-AUDIT-003",
  "ruleName": "Logging de Acoes do Usuario",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "AUDIT",
  "perspective": "HOSPITAL",
  "description": "Valida registro de acoes de usuarios no sistema para auditoria e seguranca",
  "inputs": [
    {
      "name": "usuarioRegistrado",
      "type": "boolean",
      "description": "Indica se usuario esta registrado na acao"
    },
    {
      "name": "acaoLogada",
      "type": "boolean",
      "description": "Indica se acao foi registrada no log"
    },
    {
      "name": "ipRegistrado",
      "type": "boolean",
      "description": "Indica se IP de origem esta registrado"
    },
    {
      "name": "tipoAcao",
      "type": "string",
      "values": ["LOGIN", "LOGOUT", "CRIACAO", "ALTERACAO", "EXCLUSAO", "CONSULTA", "ACESSO_NEGADO"],
      "description": "Tipo de acao realizada"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para acao"
    }
  ],
  "regulations": [
    {
      "code": "LGPD-13709-2018",
      "name": "Lei Geral de Protecao de Dados - Logging",
      "source": "Federal"
    },
    {
      "code": "ISO-27001",
      "name": "Seguranca da Informacao",
      "source": "ISO"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
