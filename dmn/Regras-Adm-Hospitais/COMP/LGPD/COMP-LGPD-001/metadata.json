{
  "ruleId": "COMP-LGPD-001",
  "ruleName": "Validacao Consentimento Paciente",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "LGPD",
  "perspective": "HOSPITAL",
  "description": "Valida se paciente possui consentimento valido e vigente para tratamento de dados sensiveis de saude conforme LGPD",
  "inputs": [
    {
      "name": "temConsentimento",
      "type": "boolean",
      "description": "Indica se paciente possui TCLE registrado"
    },
    {
      "name": "consentimentoExpirado",
      "type": "boolean",
      "description": "Indica se consentimento esta expirado"
    },
    {
      "name": "tipoTratamento",
      "type": "string",
      "description": "Tipo de tratamento: ASSISTENCIAL, PESQUISA, COMERCIAL",
      "values": ["ASSISTENCIAL", "PESQUISA", "COMERCIAL", "ESTATISTICO"]
    },
    {
      "name": "categoriaExame",
      "type": "string",
      "description": "Categoria do exame: LABORATORIAL, IMAGEM, GENETICO, etc",
      "values": ["LABORATORIAL", "IMAGEM", "GENETICO", "CLINICO", "OUTROS"]
    },
    {
      "name": "diasAteVencimento",
      "type": "number",
      "description": "Dias restantes ate vencimento do consentimento"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para validade do consentimento"
    }
  ],
  "regulations": [
    {
      "code": "LGPD-13709-2018-ART7",
      "name": "Bases Legais para Tratamento de Dados",
      "source": "Federal"
    },
    {
      "code": "LGPD-13709-2018-ART8",
      "name": "Requisitos do Consentimento",
      "source": "Federal"
    },
    {
      "code": "LGPD-13709-2018-ART11",
      "name": "Tratamento de Dados Sensiveis",
      "source": "Federal"
    },
    {
      "code": "CFM-2217-2018",
      "name": "Codigo de Etica Medica",
      "source": "CFM"
    },
    {
      "code": "CFM-1821-2007",
      "name": "Prontuario Eletronico",
      "source": "CFM"
    }
  ],
