<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  COMP-LGPD-008 - Direito Portabilidade Paciente
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: COMP-LGPD
  Perspectiva: HOSPITAL (Compliance & Privacy)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Paciente exerceu direito de portabilidade conforme LGPD Art. 18
  - Solicitacao documentada com identificacao adequada
  - Dados disponiveis em formato estruturado

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Solicitacao sem identificacao valida do paciente
  - Dados indisponiveis ou em formato nao estruturado
  - Prazo legal excedido sem resposta

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 13.709/2018 LGPD Art. 18 V (Direito a Portabilidade)
  - Lei 13.709/2018 LGPD Art. 19 (Prazo 15 dias)
  - CFM Resolucao 1.821/2007 (Acesso ao Prontuario)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_COMP_LGPD_008"
             name="Direito Portabilidade Paciente"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_COMP_LGPD_008" name="Direito Portabilidade Paciente">
    <decisionTable id="DecisionTable_COMP_LGPD_008" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Consentimento">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temConsentimento</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Tipo Consentimento">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoConsentimento</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"PRESENCIAL", "TELEMEDICINA", "EMERGENCIA"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Dados Compartilhados">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>dadosCompartilhados</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"CLINICO", "ADMINISTRATIVO", "COMPLETO"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sem identificacao valida -->
      <rule id="Rule_Bloqueio_1">
        <description>Solicitacao de portabilidade sem identificacao adequada</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Solicitacao de portabilidade de dados requer identificacao valida do paciente (documento com foto + CPF) conforme LGPD Art. 18 V."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar documentacao de identificacao ao paciente. Verificar poderes de representante legal se aplicavel."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Dados completos solicitados -->
      <rule id="Rule_Alerta_1">
        <description>Solicitacao de dados completos requer preparacao especial</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>"COMPLETO"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Solicitacao de prontuario completo requer compilacao de multiplas fontes (PEP, PACS, LIS). Prazo: 15 dias uteis conforme LGPD Art. 19."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Iniciar processo de compilacao. Gerar arquivo estruturado (HL7 FHIR ou PDF/A). Notificar paciente sobre prazo de entrega."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Prazo proximo de vencimento -->
      <rule id="Rule_Alerta_2">
        <description>Solicitacao com prazo legal proximo do limite</description>
        <inputEntry id="InputEntry_A2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"PRESENCIAL", "TELEMEDICINA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>"CLINICO", "ADMINISTRATIVO"</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Solicitacao de portabilidade pendente ha mais de 10 dias. Prazo legal (15 dias uteis) aproximando-se do limite."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Priorizar atendimento da solicitacao. Preparar relatorio de dados disponiveis em formato estruturado (CSV, JSON ou XML)."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Dados administrativos -->
      <rule id="Rule_Aprovado_1">
        <description>Portabilidade de dados administrativos simples</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>"ADMINISTRATIVO"</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Portabilidade de dados administrativos autorizada. Gerar relatorio com historico de atendimentos, guias e status de autorizacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Exportar dados de cadastro, atendimentos e faturamento em formato estruturado (CSV ou JSON). Entregar via canal seguro."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Dados clinicos -->
      <rule id="Rule_Aprovado_2">
        <description>Portabilidade de dados clinicos com consentimento</description>
        <inputEntry id="InputEntry_P2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>"PRESENCIAL", "TELEMEDICINA"</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>"CLINICO"</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Portabilidade de dados clinicos autorizada. Gerar extrato de prontuario em formato interoperavel (HL7 FHIR preferencialmente)."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Exportar sumario clinico, diagnosticos, prescricoes e resultados de exames. Entregar via portal seguro ou midia fisica."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_COMP_LGPD_008">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Solicitacao de portabilidade requer analise manual. Verificar identificacao, escopo dos dados e viabilidade tecnica."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para DPO para avaliacao. Responder paciente informando prazo de atendimento conforme LGPD Art. 19."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_COMP_LGPD_008">
      <dmndi:DMNShape id="DMNShape_Decision_COMP_LGPD_008" dmnElementRef="Decision_COMP_LGPD_008">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
