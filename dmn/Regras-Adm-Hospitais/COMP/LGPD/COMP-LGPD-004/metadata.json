{
  "ruleId": "COMP-LGPD-004",
  "ruleName": "Portabilidade Dados Paciente",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "LGPD",
  "perspective": "HOSPITAL",
  "description": "Valida conformidade do processo de portabilidade de dados do paciente conforme direito garantido pela LGPD",
  "inputs": [
    {
      "name": "solicitacaoPortabilidade",
      "type": "boolean",
      "description": "Indica se existe solicitacao ativa de portabilidade"
    },
    {
      "name": "identidadeVerificada",
      "type": "boolean",
      "description": "Indica se identidade do titular foi verificada"
    },
    {
      "name": "formatoPadraoDisponivel",
      "type": "boolean",
      "description": "Indica se dados estao disponiveis em formato estruturado"
    },
    {
      "name": "diasDesdeSolicitacao",
      "type": "number",
      "description": "Dias decorridos desde a solicitacao de portabilidade"
    },
    {
      "name": "destinoPortabilidade",
      "type": "string",
      "description": "Destino dos dados: TITULAR, OPERADORA, OUTRO_PRESTADOR",
      "values": ["TITULAR", "OPERADORA", "OUTRO_PRESTADOR", "OUTRO"]
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para atender solicitacao"
    }
  ],
  "regulations": [
    {
      "code": "LGPD-13709-2018-ART18-V",
      "name": "Direito a Portabilidade",
      "source": "Federal"
    },
    {
      "code": "LGPD-13709-2018-ART18-PAR3",
      "name": "Prazo 15 dias para Atendimento",
      "source": "Federal"
    },
    {
      "code": "LGPD-13709-2018-ART40",
      "name": "Interoperabilidade de Dados",
      "source": "Federal"
    },
    {
      "code": "ANS-RN-389-2015",
      "name": "Portabilidade de Carencias",
      "source": "ANS"
    },
    {
      "code": "CFM-1821-2007",
      "name": "Acesso ao Prontuario",
      "source": "CFM"
    }
  ],
