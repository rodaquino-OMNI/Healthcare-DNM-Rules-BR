{
  "ruleId": "COMP-LGPD-005",
  "ruleName": "Notificacao Incidente Seguranca",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "LGPD",
  "perspective": "HOSPITAL",
  "description": "Valida conformidade do processo de notificacao de incidentes de seguranca conforme LGPD Art. 48",
  "inputs": [
    {
      "name": "tipoIncidente",
      "type": "string",
      "description": "Tipo de incidente de seguranca",
      "values": ["VAZAMENTO", "RANSOMWARE", "ACESSO_INDEVIDO", "PERDA_DADOS", "OUTRO"]
    },
    {
      "name": "gravidade",
      "type": "string",
      "description": "Gravidade do incidente",
      "values": ["CRITICA", "ALTA", "MEDIA", "BAIXA"]
    },
    {
      "name": "horasDesdeDeteccao",
      "type": "number",
      "description": "Horas decorridas desde a deteccao do incidente"
    },
    {
      "name": "anpdNotificada",
      "type": "boolean",
      "description": "Indica se ANPD foi notificada"
    },
    {
      "name": "titularesNotificados",
      "type": "boolean",
      "description": "Indica se titulares afetados foram notificados"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias/horas restantes para notificacao"
    }
  ],
  "regulations": [
    {
      "code": "LGPD-13709-2018-ART48",
      "name": "Comunicacao de Incidentes de Seguranca",
      "source": "Federal"
    },
    {
      "code": "LGPD-13709-2018-ART48-PAR1",
      "name": "Prazo Razoavel para Notificacao",
      "source": "Federal"
    },
    {
      "code": "ANPD-RES-CD-15-2024",
      "name": "Comunicacao de Incidentes - ANPD",
      "source": "ANPD"
    },
    {
      "code": "ISO-27001",
      "name": "Gestao de Incidentes de Seguranca",
      "source": "ISO"
    },
    {
      "code": "NIST-CSF",
      "name": "Cybersecurity Framework - Incident Response",
      "source": "NIST"
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
