<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  COMP-LGPD-006 - Consentimento Telemedicina
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: COMP-LGPD
  Perspectiva: HOSPITAL (Compliance & Privacy)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Paciente forneceu consentimento valido para telemedicina
  - Tipo de consentimento compativel com modalidade de atendimento
  - Dados compartilhados conforme autorizacao

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Ausencia de consentimento para telemedicina
  - Tipo de consentimento incompativel (presencial para teleconferencia)
  - Compartilhamento de dados sem autorizacao expressa

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 13.709/2018 LGPD Art. 7 (Bases Legais) e Art. 11 (Dados Sensiveis)
  - CFM Resolucao 2.314/2022 (Telemedicina)
  - Portaria MS 467/2020 (Telemedicina SUS)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_COMP_LGPD_006"
             name="Consentimento Telemedicina"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_COMP_LGPD_006" name="Consentimento Telemedicina">
    <decisionTable id="DecisionTable_COMP_LGPD_006" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Consentimento">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temConsentimento</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Tipo Consentimento">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoConsentimento</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"PRESENCIAL", "TELEMEDICINA", "EMERGENCIA"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Dados Compartilhados">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>dadosCompartilhados</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"CLINICO", "ADMINISTRATIVO", "COMPLETO"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sem consentimento -->
      <rule id="Rule_Bloqueio_1">
        <description>Atendimento telemedicina sem consentimento valido</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Atendimento de telemedicina requer consentimento expresso do paciente conforme LGPD Art. 7 e Res. CFM 2.314/2022."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Obter consentimento informado do paciente antes de prosseguir com atendimento remoto. Registrar no prontuario."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Tipo consentimento incompativel -->
      <rule id="Rule_Bloqueio_2">
        <description>Consentimento presencial usado para telemedicina</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"PRESENCIAL"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>"COMPLETO"</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Consentimento presencial nao autoriza telemedicina. Modalidade remota requer consentimento especifico conforme CFM 2.314/2022 Art. 5."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Obter novo consentimento especifico para telemedicina com esclarecimento das diferencas da modalidade."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Dados completos compartilhados -->
      <rule id="Rule_Alerta_1">
        <description>Compartilhamento amplo de dados requer revisao</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"TELEMEDICINA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>"COMPLETO"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Compartilhamento de dados completos requer justificativa. Verificar se minimizacao de dados (LGPD Art. 6 III) foi aplicada."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Documentar justificativa para compartilhamento amplo. Avaliar se dados clinicos essenciais seriam suficientes."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Consentimento telemedicina valido -->
      <rule id="Rule_Aprovado_1">
        <description>Consentimento telemedicina ou emergencia com dados apropriados</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"TELEMEDICINA", "EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>"CLINICO", "ADMINISTRATIVO"</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Consentimento valido para telemedicina. Compartilhamento de dados conforme principio da minimizacao. Atendimento autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com atendimento de telemedicina. Registrar consentimento e modalidade no prontuario eletronico."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_COMP_LGPD_006">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de consentimento telemedicina requer analise manual. Verificar tipo, abrangencia e validade do consentimento."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para DPO (Data Protection Officer) para avaliacao de conformidade LGPD antes de prosseguir."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_COMP_LGPD_006">
      <dmndi:DMNShape id="DMNShape_Decision_COMP_LGPD_006" dmnElementRef="Decision_COMP_LGPD_006">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
