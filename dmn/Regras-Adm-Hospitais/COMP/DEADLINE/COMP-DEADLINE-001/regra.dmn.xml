<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_COMP_DEADLINE_001" name="Prazo Submissao Cobranca" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_COMP_DEADLINE_001" name="Validacao Prazo Submissao Cobranca">
    <decisionTable id="DecisionTable_COMP_DEADLINE_001" hitPolicy="FIRST">

      <input id="Input_1" label="Dias Desde Atendimento">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>diasDesdeAtendimento</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Tipo Solicitacao">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoSolicitacao</text>
        </inputExpression>
        <inputValues><text>"COBRANCA_INICIAL", "REAPRESENTACAO", "RECURSO"</text></inputValues>
      </input>

      <input id="Input_3" label="Prazo Regulamentar">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>prazoRegulamentar</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloquear_1">
        <description>Prazo de 180 dias excedido - Cobranca prescrita</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt; 180</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>"COBRANCA_INICIAL"</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"Prazo de 180 dias para submissao de cobranca EXCEDIDO. Conta prescrita. Registrar como perda ou contestar judicialmente."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"PRAZO_EXCEDIDO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_1_4"><text>"PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_1">
        <description>Alerta critico - Menos de 7 dias para vencimento</description>
        <inputEntry id="InputEntry_A1_1"><text>[174..180]</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"COBRANCA_INICIAL"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"URGENTE: Menos de 7 dias para vencimento do prazo de 180 dias. Submeter cobranca IMEDIATAMENTE."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"ALERTA_PROXIMIDADE"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_1_4"><text>"PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_2">
        <description>Alerta proximidade - Menos de 30 dias para vencimento</description>
        <inputEntry id="InputEntry_A2_1"><text>[151..173]</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"COBRANCA_INICIAL"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Atencao: Menos de 30 dias para vencimento do prazo de 180 dias. Priorizar submissao da cobranca."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"ALERTA_PROXIMIDADE"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_2_4"><text>"PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Dentro do prazo - Mais de 30 dias restantes</description>
        <inputEntry id="InputEntry_P1_1"><text>[0..150]</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"COBRANCA_INICIAL"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Cobranca dentro do prazo de 180 dias. Prosseguir com faturamento normalmente."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_2">
        <description>Reapresentacao dentro do prazo de 30 dias</description>
        <inputEntry id="InputEntry_P2_1"><text>[0..30]</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>"REAPRESENTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>30</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Reapresentacao dentro do prazo de 30 dias. Prosseguir com correcoes."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_2_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Bloquear_2">
        <description>Reapresentacao com prazo de 30 dias excedido</description>
        <inputEntry id="InputEntry_B2_1"><text>&gt; 30</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"REAPRESENTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>30</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"Prazo de 30 dias para reapresentacao EXCEDIDO. Iniciar processo de recurso ou registrar perda."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"PRAZO_EXCEDIDO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_2_4"><text>"PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_COMP_DEADLINE_001">
        <description>Caso padrao - Revisar prazos</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Verificar data do atendimento, tipo de solicitacao e prazo regulamentar aplicavel."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"DENTRO_PRAZO"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_COMP_DEADLINE_001_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_COMP_DEADLINE_001_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_COMP_DEADLINE_001">
      <dmndi:DMNShape id="DMNShape_Decision_COMP_DEADLINE_001" dmnElementRef="Decision_COMP_DEADLINE_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>