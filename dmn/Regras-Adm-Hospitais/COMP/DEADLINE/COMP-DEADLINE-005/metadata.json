{
  "ruleId": "COMP-DEADLINE-005",
  "ruleName": "Prazo Recebimento Resposta",
  "version": "1.0.0",
  "category": "COMP",
  "subcategory": "DEADLINE",
  "perspective": "HOSPITAL",
  "description": "Valida prazo de resposta do convenio e aplica aceite tacito quando excedido",
  "inputs": [
    {
      "name": "tipoSolicitacao",
      "type": "string",
      "values": ["COBRANCA", "REAPRESENTACAO", "RECURSO_R1", "RECURSO_R2"],
      "description": "Tipo de solicitacao enviada ao convenio"
    },
    {
      "name": "diasDesdeEnvio",
      "type": "number",
      "description": "Quantidade de dias desde o envio da solicitacao"
    },
    {
      "name": "respostaRecebida",
      "type": "boolean",
      "description": "Indica se resposta do convenio foi recebida"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string",
      "description": "Mensagem explicativa da decisao"
    },
    {
      "name": "prazoStatus",
      "type": "string",
      "values": ["DENTRO_PRAZO", "ALERTA_PROXIMIDADE", "PRAZO_EXCEDIDO"]
    },
    {
      "name": "diasRestantes",
      "type": "number",
      "description": "Dias restantes para resposta"
    }
  ],
  "regulations": [
    {
      "code": "RN-566-2022",
      "name": "Prazos de Resposta do Convenio",
      "source": "ANS",
      "deadlines": {
        "cobranca": 30,
        "reapresentacao": 15,
        "recurso": 15
      }
    }
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "author": "Sistema DMN Hospital"
}
