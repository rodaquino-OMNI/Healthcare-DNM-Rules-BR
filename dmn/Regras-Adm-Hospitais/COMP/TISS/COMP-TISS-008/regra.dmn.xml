<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  COMP-TISS-008 - Lote TISS Completo (Todos Campos Obrigatórios)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: COMP-TISS
  Perspectiva: HOSPITAL (Administrativo - Faturamento)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Todos os campos obrigatórios do padrão TISS estão preenchidos
  - Lote completo e sem campos faltantes
  - Validação automática aprovada

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Campos obrigatórios faltando no lote TISS
  - Lote incompleto com mais de 5 campos faltantes
  - Campos críticos ausentes (beneficiário, procedimento, executante)

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 412/2016 ANS - Padrão TISS
  - Manual Técnico TISS - Campos Obrigatórios
  - Guia de Preenchimento TISS por Tipo de Guia
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_COMP_TISS_008"
             name="Lote TISS Completo (Todos Campos Obrigatórios)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_COMP_TISS_008" name="Lote TISS Completo">
    <decisionTable id="DecisionTable_COMP_TISS_008" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Campos Obrigatórios Completos">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>camposObrigatoriosCompletos</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Quantidade Campos Faltantes">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>quantidadeCamposFaltantes</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tipo Guia">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>tipoGuia</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"SADT", "INTERNACAO", "CONSULTA", "HONORARIOS"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Lote incompleto com muitos campos faltantes -->
      <rule id="Rule_Bloqueio_1">
        <description>Lote com mais de 5 campos obrigatórios faltando</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>&gt; 5</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Lote TISS incompleto com múltiplos campos obrigatórios faltantes."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Retornar lote ao setor de faturamento para preenchimento completo antes de reenviar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Campos obrigatórios não completos -->
      <rule id="Rule_Bloqueio_2">
        <description>Campos obrigatórios ausentes no lote</description>
        <inputEntry id="InputEntry_B2_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 0</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Lote TISS possui campos obrigatórios não preenchidos conforme padrão ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Completar preenchimento de todos os campos obrigatórios antes de reenviar lote."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Tipo de guia requer validação adicional -->
      <rule id="Rule_Alerta_1">
        <description>Guia de internação ou honorários requer checagem manual</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>0</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>"INTERNACAO", "HONORARIOS"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Lote completo, mas tipo de guia requer validação adicional de campos específicos."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Revisar campos específicos para guias de internação/honorários antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Lote completo -->
      <rule id="Rule_Aprovado_1">
        <description>Todos os campos obrigatórios preenchidos</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>0</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Lote TISS completo com todos os campos obrigatórios preenchidos conforme padrão ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_COMP_TISS_008">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_COMP_TISS_008">
      <dmndi:DMNShape id="DMNShape_Decision_COMP_TISS_008" dmnElementRef="Decision_COMP_TISS_008">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
