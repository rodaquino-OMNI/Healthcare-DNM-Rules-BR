<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  {CATEGORY-SUBCATEGORY-NNN} - {Rule Name in Portuguese}
  ============================================================================
  Versao: 1.0.0 ({YYYY-MM-DD})
  Categoria: {CATEGORY-SUBCATEGORY}
  Perspectiva: HOSPITAL ({Department})

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - {Condition 1}
  - {Condition 2}

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - {Block condition 1}
  - {Block condition 2}

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - {Reference 1}
  - {Reference 2}
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_{CATEGORY}_{SUBCATEGORY}_{NNN}"
             name="{Rule Name}"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_{CATEGORY}_{SUBCATEGORY}_{NNN}" name="{Rule Name}">
    <decisionTable id="DecisionTable_{CATEGORY}_{SUBCATEGORY}_{NNN}" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="{Input Label 1}">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>{inputVariable1}</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"{VALUE1}", "{VALUE2}", "{VALUE3}"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="{Input Label 2}">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>{inputVariable2}</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="{Input Label 3}">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>{inputVariable3}</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - {Critical blocking condition} -->
      <rule id="Rule_Bloqueio_1">
        <description>{Blocking condition description}</description>
        <inputEntry id="InputEntry_B1_1"><text>"{BLOCKING_VALUE}"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"{Portuguese explanation of blocking reason}"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"{Portuguese recommended action}"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - {Secondary blocking condition} -->
      <rule id="Rule_Bloqueio_2">
        <description>{Secondary blocking description}</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>&lt; 0</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"{Portuguese explanation}"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"{Portuguese action}"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - {Warning condition} -->
      <rule id="Rule_Alerta_1">
        <description>{Warning condition description}</description>
        <inputEntry id="InputEntry_A1_1"><text>"{ALERT_VALUE}"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt; 30</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"{Portuguese alert message}"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"{Portuguese monitoring action}"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - {Approval condition} -->
      <rule id="Rule_Aprovado_1">
        <description>{Approval condition description}</description>
        <inputEntry id="InputEntry_P1_1"><text>"{VALID_VALUE}"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>[0..30]</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"{Portuguese success message}"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_{CATEGORY}_{SUBCATEGORY}_{NNN}">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_{CATEGORY}_{SUBCATEGORY}_{NNN}">
      <dmndi:DMNShape id="DMNShape_Decision_{CATEGORY}_{SUBCATEGORY}_{NNN}" dmnElementRef="Decision_{CATEGORY}_{SUBCATEGORY}_{NNN}">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
