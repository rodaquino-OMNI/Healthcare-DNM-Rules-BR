<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  APPEAL-ELIG-005 - Recurso ANS (Esgotadas Vias Internas)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: APPEAL-ELIG
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Vias internas da operadora completamente esgotadas
  - Decisao final da operadora desfavoravel
  - Fundamentacao em DUT ou normativas ANS disponivel

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Vias internas da operadora ainda nao esgotadas
  - Recurso prematuro junto a ANS
  - Ausencia de fundamentacao normativa ANS

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 388/2015 (segunda instancia ANS)
  - RN ANS 395/2016 Art. 6 (esgotamento vias internas)
  - Lei 9.656/1998 Art. 12 e Art. 35-C
  - DUT - Diretrizes de Utilizacao ANS
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_APPEAL_ELIG_005"
             name="Recurso ANS (Esgotadas Vias Internas)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_APPEAL_ELIG_005" name="Recurso ANS (Esgotadas Vias Internas)">
    <decisionTable id="DecisionTable_APPEAL_ELIG_005" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Instancia Atual">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>instanciaAtual</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"1A", "2A", "ANS"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Tem Fundamentacao ANS">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>temFundamentacaoANS</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Recurso ANS sem esgotar vias internas -->
      <rule id="Rule_Bloqueio_1">
        <description>Recurso ANS sem esgotar vias internas da operadora</description>
        <inputEntry id="InputEntry_B1_1"><text>"1A", "2A"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Recurso prematuro junto a ANS. Vias internas da operadora ainda nao esgotadas. Necessario completar fluxo recursal interno primeiro."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Retornar ao fluxo recursal da operadora. Esgotar todas as instancias internas antes de recorrer a ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Sem fundamentacao ANS/DUT -->
      <rule id="Rule_Bloqueio_2">
        <description>Recurso ANS sem fundamentacao em DUT ou normativas</description>
        <inputEntry id="InputEntry_B2_1"><text>"ANS"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Recurso ANS sem fundamentacao em DUT ou normativas ANS. Alta probabilidade de rejeicao liminar. Recurso inconsistente."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Desenvolver fundamentacao baseada em DUT ANS ou RN aplicavel antes de protocolar recurso. Buscar pareceres tecnicos."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Recurso ANS com requisitos cumpridos -->
      <rule id="Rule_Aprovado_1">
        <description>Recurso ANS com vias internas esgotadas e fundamentacao adequada</description>
        <inputEntry id="InputEntry_P1_1"><text>"ANS"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Recurso ANS elegivel. Vias internas esgotadas e fundamentacao normativa presente. Prosseguir com protocolo formal junto a ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Protocolar recurso via sistema ANS. Anexar historico completo recursal. Fundamentar em DUT e normativas ANS. Prazo: 10 dias."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_APPEAL_ELIG_005">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual para confirmar esgotamento de vias internas e adequacao de fundamentacao ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para gestor de recebiveis especializado em recursos ANS para validacao dos requisitos."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_APPEAL_ELIG_005">
      <dmndi:DMNShape id="DMNShape_Decision_APPEAL_ELIG_005" dmnElementRef="Decision_APPEAL_ELIG_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
