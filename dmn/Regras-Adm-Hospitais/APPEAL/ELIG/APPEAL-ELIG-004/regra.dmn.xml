<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  APPEAL-ELIG-004 - Recurso 1a Instancia vs 2a Instancia
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: APPEAL-ELIG
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Instancia correta para o tipo de recurso
  - Esgotamento de instancia anterior quando aplicavel
  - Conformidade com fluxo recursal ANS/Operadora

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Recurso em instancia incorreta
  - Falta de esgotamento da instancia anterior
  - Violacao do fluxo recursal hierarquico

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 395/2016 Art. 3-6 (instancias recursais)
  - RN ANS 388/2015 (ANS como segunda instancia)
  - Lei 9.656/1998 Art. 12
  - Principio da hierarquia recursal
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_APPEAL_ELIG_004"
             name="Recurso 1a Instancia vs 2a Instancia"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_APPEAL_ELIG_004" name="Recurso 1a Instancia vs 2a Instancia">
    <decisionTable id="DecisionTable_APPEAL_ELIG_004" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Instancia Atual">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>instanciaAtual</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"1A", "2A", "ANS"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA P1: Aprovado - Primeira instancia (operadora) -->
      <rule id="Rule_Aprovado_1">
        <description>Recurso em primeira instancia junto a operadora</description>
        <inputEntry id="InputEntry_P1_1"><text>"1A"</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Recurso em primeira instancia (operadora). Instancia correta e adequada. Prosseguir com preparacao e apresentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Preparar recurso administrativo junto a operadora. Reunir documentacao conforme RN ANS 395/2016. Protocolar dentro do prazo."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Segunda instancia (recurso interno) -->
      <rule id="Rule_Aprovado_2">
        <description>Recurso em segunda instancia junto a operadora</description>
        <inputEntry id="InputEntry_P2_1"><text>"2A"</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Recurso em segunda instancia (operadora). Primeira instancia foi esgotada. Prosseguir com recurso hierarquico."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Apresentar recurso a instancia superior da operadora. Reforcar argumentacao com evidencias adicionais. Fundamentar inadequacao da decisao anterior."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Recurso ANS (ultma instancia) -->
      <rule id="Rule_Alerta_1">
        <description>Recurso junto a ANS (esgotadas vias internas)</description>
        <inputEntry id="InputEntry_A1_1"><text>"ANS"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Recurso junto a ANS (ultima instancia administrativa). Vias internas da operadora devem estar esgotadas. Verificar cumprimento de requisitos formais."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Confirmar esgotamento de vias internas. Reunir historico completo do recurso. Fundamentar em DUT e normativas ANS. Protocolar via sistema ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_APPEAL_ELIG_004">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual para confirmar instancia correta e fluxo recursal aplicavel."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para gestor de recebiveis para validar instancia e historico recursal do caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_APPEAL_ELIG_004">
      <dmndi:DMNShape id="DMNShape_Decision_APPEAL_ELIG_004" dmnElementRef="Decision_APPEAL_ELIG_004">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
