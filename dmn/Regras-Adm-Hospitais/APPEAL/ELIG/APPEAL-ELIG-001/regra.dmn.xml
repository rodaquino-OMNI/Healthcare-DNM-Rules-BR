<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  APPEAL-ELIG-001 - Glosa Elegivel para Recurso (Valor Minimo)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: APPEAL-ELIG
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Valor da glosa atinge o valor minimo para recurso
  - ROI do recurso administrativo e positivo
  - Custo-beneficio favoravel para contestacao

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Valor abaixo do custo administrativo de recurso
  - ROI negativo (custo do recurso > valor recuperavel)
  - Microglosas nao viabilizam recurso individual

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 9.656/1998 Art. 12 (prazos e recursos)
  - RN ANS 395/2016 (recurso de glosa)
  - CPC 25 (custo administrativo)
  - Principio da economicidade processual
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_APPEAL_ELIG_001"
             name="Glosa Elegivel para Recurso (Valor Minimo)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_APPEAL_ELIG_001" name="Glosa Elegivel para Recurso (Valor Minimo)">
    <decisionTable id="DecisionTable_APPEAL_ELIG_001" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Valor Glosa">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>valorGlosa</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Valor Minimo Recurso">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>valorMinRecurso</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Valor abaixo do minimo -->
      <rule id="Rule_Bloqueio_1">
        <description>Valor da glosa abaixo do valor minimo para recurso</description>
        <inputEntry id="InputEntry_B1_1"><text>&lt; [valorMinRecurso]</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Valor da glosa inferior ao valor minimo estabelecido para recurso. ROI negativo. Considerar agrupar com outras glosas similares."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Aceitar glosa ou agrupar com outras glosas do mesmo motivo para recurso coletivo."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Valor proxximo ao limite -->
      <rule id="Rule_Alerta_1">
        <description>Valor da glosa proximo ao valor minimo (ate 20% acima)</description>
        <inputEntry id="InputEntry_A1_1"><text>[valorMinRecurso..(valorMinRecurso * 1.2)]</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Valor da glosa proximo ao limite minimo. Avaliar custo-beneficio do recurso individualmente ou considerar agrupamento estrategico."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Avaliar ROI detalhado do recurso. Considerar prioridade baixa se nao houver outras glosas similares."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Valor adequado para recurso -->
      <rule id="Rule_Aprovado_1">
        <description>Valor da glosa acima do minimo estabelecido</description>
        <inputEntry id="InputEntry_P1_1"><text>&gt; (valorMinRecurso * 1.2)</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Valor da glosa atinge criterio minimo para recurso. ROI positivo esperado. Elegivel para contestacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com avaliacao de elegibilidade (prazo, documentacao) para recurso de glosa."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_APPEAL_ELIG_001">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico de elegibilidade por valor."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para gestor de recebiveis para avaliacao caso a caso do custo-beneficio do recurso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_APPEAL_ELIG_001">
      <dmndi:DMNShape id="DMNShape_Decision_APPEAL_ELIG_001" dmnElementRef="Decision_APPEAL_ELIG_001">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
