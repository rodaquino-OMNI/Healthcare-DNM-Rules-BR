<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  APPEAL-ELIG-003 - Documentacao Suporte Disponivel
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: APPEAL-ELIG
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Documentacao suporte completa e disponivel
  - Evidencias clinicas ou administrativas adequadas
  - Fundamentacao tecnica consistente

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Ausencia de documentacao suporte
  - Impossibilidade de obter evidencias necessarias
  - Recurso sem fundamentacao viavel

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 395/2016 (documentacao recurso)
  - RN ANS 305/2012 (diretrizes assistenciais)
  - CFM Resolucao 1638/2002 (prontuario medico)
  - Lei 9.656/1998 Art. 12
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_APPEAL_ELIG_003"
             name="Documentacao Suporte Disponivel"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_APPEAL_ELIG_003" name="Documentacao Suporte Disponivel">
    <decisionTable id="DecisionTable_APPEAL_ELIG_003" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Documentacao">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temDocumentacao</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sem documentacao -->
      <rule id="Rule_Bloqueio_1">
        <description>Documentacao suporte nao disponivel</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Documentacao suporte indisponivel. Recurso sem fundamentacao tecnica viavel. Alta probabilidade de rejeicao."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Aceitar glosa ou tentar obter documentacao complementar antes de prosseguir. Avaliar fonte alternativa de evidencias."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Documentacao disponivel -->
      <rule id="Rule_Aprovado_1">
        <description>Documentacao suporte disponivel e completa</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Documentacao suporte disponivel. Fundamentacao tecnica viavel. Recurso elegivel para preparacao e apresentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com preparacao do recurso. Organizar documentacao conforme checklist ANS. Anexar evidencias completas."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_APPEAL_ELIG_003">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual para verificar disponibilidade e adequacao da documentacao suporte."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria medica para avaliar suficiencia da documentacao disponivel."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_APPEAL_ELIG_003">
      <dmndi:DMNShape id="DMNShape_Decision_APPEAL_ELIG_003" dmnElementRef="Decision_APPEAL_ELIG_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
