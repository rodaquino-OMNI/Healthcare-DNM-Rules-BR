<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  APPEAL-STRATEGY-001 - Priorizar por Valor Recuperavel
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: APPEAL-STRATEGY
  Perspectiva: HOSPITAL (Receivables - Appeals Management)

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 9.656/1998 (planos de saude)
  - RN ANS 395/2016 (recursos de glosa)
  - CPC 25 (provisoes)
  - IFRS 15 (reconhecimento de receita)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_APPEAL_STRATEGY_001"
             name="Priorizar por Valor Recuperavel"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_APPEAL_STRATEGY_001" name="Priorizar por Valor Recuperavel">
    <decisionTable id="DecisionTable_APPEAL_STRATEGY_001" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Valor Recuperavel">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>valorRecuperavel</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Prioridade Alta">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>prioridadeAlta</text>
        </inputExpression>
      </input>


      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B11: Bloquear -->
      <rule id="Rule_B1_1">
        <description>Valor recuperavel insuficiente para priorizacao.</description>
        <inputEntry id="InputEntry_B11_1"><text>valorRecuperavel &lt; 100</text></inputEntry>
        <inputEntry id="InputEntry_B11_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B11_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B11_2"><text>"Valor recuperavel insuficiente para priorizacao."</text></outputEntry>
        <outputEntry id="OutputEntry_B11_3"><text>"Classificar como prioridade baixa ou agrupar com outras glosas."</text></outputEntry>
        <outputEntry id="OutputEntry_B11_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B11_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P12: Prosseguir -->
      <rule id="Rule_P1_2">
        <description>Valor alto com prioridade confirmada.</description>
        <inputEntry id="InputEntry_P12_1"><text>valorRecuperavel >= 1000 and prioridadeAlta</text></inputEntry>
        <inputEntry id="InputEntry_P12_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P12_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P12_2"><text>"Valor alto com prioridade confirmada."</text></outputEntry>
        <outputEntry id="OutputEntry_P12_3"><text>"Alocar recursos para recurso imediato."</text></outputEntry>
        <outputEntry id="OutputEntry_P12_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P12_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA A13: Alertar -->
      <rule id="Rule_A1_3">
        <description>Valor intermediario merece atencao.</description>
        <inputEntry id="InputEntry_A13_1"><text>valorRecuperavel >= 500</text></inputEntry>
        <inputEntry id="InputEntry_A13_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A13_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A13_2"><text>"Valor intermediario merece atencao."</text></outputEntry>
        <outputEntry id="OutputEntry_A13_3"><text>"Avaliar em contexto de outras prioridades."</text></outputEntry>
        <outputEntry id="OutputEntry_A13_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_A13_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_APPEAL_STRATEGY_001">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_APPEAL_STRATEGY_001">
      <dmndi:DMNShape id="DMNShape_Decision_APPEAL_STRATEGY_001" dmnElementRef="Decision_APPEAL_STRATEGY_001">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
