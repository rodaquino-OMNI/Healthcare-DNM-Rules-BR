{
  "ruleId": "DENY-PREDICT-005",
  "name": "Bundle Billing Violation Detection",
  "category": "DENY",
  "subcategory": "DENY-PREDICT",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "specialty": ["Faturamento", "Auditoria"],
  "description": "Detecta violacoes de bundle (unbundling) que resultam em glosa",
  "denialRiskFactors": [
    "Cobranca separada de anestesia inclusa",
    "Cobranca de exames pre-op inclusos",
    "Unbundling de procedimentos relacionados"
  ],
  "bundleTypes": [
    "ANESTESIA_INCLUSA",
    "EXAMES_PRE_OP_INCLUSOS",
    "POSSIVEL_BUNDLE",
    "NAO_BUNDLE"
  ],
  "inputs": [
    {"name": "codigoTUSSPrincipal", "type": "string", "description": "Codigo TUSS do procedimento principal"},
    {"name": "codigoTUSSSecundario", "type": "string", "description": "Codigo TUSS do procedimento secundario"},
    {"name": "mesmaData", "type": "boolean", "description": "Indica se procedimentos sao na mesma data"},
    {"name": "tipoBundle", "type": "string", "description": "Tipo de bundle identificado"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "riscoDenial", "type": "string", "values": ["BAIXO", "MEDIO", "ALTO", "CRITICO"]},
    {"name": "documentacaoFaltante", "type": "string"}
  ],
  "references": [
    "RN 465/2021 ANS",
    "TUSS 2024",
    "Diretrizes de Auditoria"
  ],
  "historicalDenialRate": 0.90,
  "tags": ["bundle", "unbundling", "faturamento", "auditoria", "glosa"]
}
