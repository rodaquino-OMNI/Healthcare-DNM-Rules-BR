<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PREDICT-011 - Historico Taxa Glosa por Medico
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: DENY-PREDICT
  Perspectiva: HOSPITAL (Faturamento/Auditoria Administrativa)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Taxa de glosa historica do medico &lt; 8%
  - Medico com boa conformidade documental e justificativas clinicas

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Taxa de glosa historica do medico &gt;= 25%
  - Medico com historico recorrente de glosa por falta de documentacao

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 465/2021 - Diretrizes auditoria
  - CFM Resolucao 1.821/2007 - Prontuario medico
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DENY_PREDICT_011"
             name="Historico Taxa Glosa por Medico"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PREDICT_011" name="Historico Taxa Glosa por Medico">
    <decisionTable id="DecisionTable_DENY_PREDICT_011" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Taxa Glosa Medico (%)">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>taxaGlosaMedico</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="CRM Medico">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>crmMedico</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Taxa glosa medico &gt;= 25% -->
      <rule id="Rule_Bloqueio_1">
        <description>Medico com taxa de glosa &gt;= 25% - historico critico</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt;= 25</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"RISCO CRITICO: Medico possui taxa historica de glosa &gt;= 25%. Historico recorrente de problemas documentais ou justificativas clinicas inadequadas. Revisao exaustiva obrigatoria."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Auditoria medica deve revisar integralmente o caso. Verificar prontuario, evolucoes, justificativas clinicas. Considerar reuniao com o medico para orientacao. Avaliar necessidade de treinamento."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Taxa glosa medico entre 15% e 25% -->
      <rule id="Rule_Alerta_1">
        <description>Medico com taxa de glosa entre 15% e 25% - risco alto</description>
        <inputEntry id="InputEntry_A1_1"><text>[15..25)</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"RISCO ALTO: Medico possui taxa historica de glosa entre 15-25%. Verificar rigorosamente documentacao, evolucoes e justificativas clinicas antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Auditor medico deve revisar prontuario e evolucoes. Verificar se justificativas clinicas estao completas e fundamentadas. Orientar medico sobre melhorias necessarias."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Taxa glosa medico entre 8% e 15% -->
      <rule id="Rule_Alerta_2">
        <description>Medico com taxa de glosa entre 8% e 15% - risco medio</description>
        <inputEntry id="InputEntry_A2_1"><text>[8..15)</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"RISCO MEDIO: Medico possui taxa historica de glosa entre 8-15%. Verificar conformidade basica documental antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Validar checklist de documentacao obrigatoria. Verificar presenca de evolucoes diarias e justificativas clinicas quando aplicavel."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Taxa glosa medico &lt; 8% -->
      <rule id="Rule_Aprovado_1">
        <description>Medico com taxa de glosa &lt; 8% - historico positivo</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt; 8</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Medico possui taxa historica de glosa &lt; 8%. Bom historico de conformidade documental e justificativas clinicas. Baixo risco de glosa."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao. Manter checklist basico de documentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_DENY_PREDICT_011">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico. Verificar historico especifico do medico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria medica para consulta ao historico do profissional e avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PREDICT_011">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PREDICT_011" dmnElementRef="Decision_DENY_PREDICT_011">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
