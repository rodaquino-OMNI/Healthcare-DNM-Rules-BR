<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PREDICT-012 - Predicao Glosa Baseada em Sazonalidade
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: DENY-PREDICT
  Perspectiva: HOSPITAL (Faturamento/Auditoria Administrativa)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Mes de faturamento com baixa taxa historica de glosa (meses 1-11)
  - Periodo sem sobrecarga de auditoria das operadoras

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Dezembro (mes 12): pico de glosas (operadoras fechando contas anuais)
  - Fim de trimestre: aumento de rigor auditoriais

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 465/2021 - Diretrizes auditoria
  - Analise historica de comportamento auditoriais
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DENY_PREDICT_012"
             name="Predicao Glosa Baseada em Sazonalidade"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PREDICT_012" name="Predicao Glosa Baseada em Sazonalidade">
    <decisionTable id="DecisionTable_DENY_PREDICT_012" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Mes Faturamento (1-12)">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>mesFaturamento</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Dezembro (mes 12) - pico de glosas -->
      <rule id="Rule_Bloqueio_1">
        <description>Dezembro - operadoras fechando contas anuais - risco critico</description>
        <inputEntry id="InputEntry_B1_1"><text>12</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"RISCO CRITICO: Faturamento em DEZEMBRO. Historico mostra aumento de 40-60% na taxa de glosa neste mes. Operadoras fecham contas anuais e auditam rigorosamente para ajuste de provisoes."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Revisar exaustivamente toda documentacao. Priorizar casos com baixo risco. Considerar postergar casos borderline para janeiro. Acionar comite de auditoria para validacao rigorosa."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Fim de trimestre (meses 3, 6, 9) -->
      <rule id="Rule_Alerta_1">
        <description>Fim de trimestre - aumento de rigor auditoriais</description>
        <inputEntry id="InputEntry_A1_1"><text>3, 6, 9</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"RISCO ALTO: Faturamento em FIM DE TRIMESTRE. Operadoras aumentam rigor de auditoria para fechamento trimestral. Verificar conformidade rigorosa."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Revisar checklist de documentacao. Priorizar envio de casos com documentacao completa. Considerar postergar casos com documentacao incompleta."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Janeiro (mes 1) - retorno de ferias -->
      <rule id="Rule_Alerta_2">
        <description>Janeiro - retorno de ferias - sobrecarga operacional</description>
        <inputEntry id="InputEntry_A2_1"><text>1</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"RISCO MEDIO: Faturamento em JANEIRO. Retorno de ferias pode causar sobrecarga operacional e aumento de erros. Verificar qualidade do preenchimento."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Revisar checklist basico. Verificar ausencia de erros de preenchimento e conformidade com TISS. Priorizar controle de qualidade."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Demais meses (2, 4, 5, 7, 8, 10, 11) -->
      <rule id="Rule_Aprovado_1">
        <description>Demais meses - risco normal</description>
        <inputEntry id="InputEntry_P1_1"><text>2, 4, 5, 7, 8, 10, 11</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Mes de faturamento com risco normal. Nenhum fator sazonal identificado. Prosseguir com procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao. Manter checklist basico de documentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_DENY_PREDICT_012">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico. Verificar contexto sazonal especifico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para analise de fatores sazonais especificos."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PREDICT_012">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PREDICT_012" dmnElementRef="Decision_DENY_PREDICT_012">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
