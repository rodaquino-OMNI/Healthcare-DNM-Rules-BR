<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PREDICT-010 - Score de Risco Glosa Consolidado
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: DENY-PREDICT
  Perspectiva: HOSPITAL (Faturamento/Auditoria Administrativa)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Score de risco consolidado &lt; 30 (baixo risco)
  - Todos indicadores de qualidade dentro de parametros aceitaveis

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Score de risco consolidado >= 70 (alto risco)
  - Multiplos indicadores de risco acumulados

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 465/2021 - Diretrizes auditoria
  - ISO 27001 - Gestao de riscos
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DENY_PREDICT_010"
             name="Score de Risco Glosa Consolidado"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PREDICT_010" name="Score de Risco Glosa Consolidado">
    <decisionTable id="DecisionTable_DENY_PREDICT_010" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Score Risco Consolidado (0-100)">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>scoreRiscoConsolidado</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Score >= 70 (risco critico) -->
      <rule id="Rule_Bloqueio_1">
        <description>Score de risco >= 70 - multiplos indicadores de risco acumulados</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt;= 70</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"RISCO CRITICO: Score consolidado >= 70. Multiplos indicadores de risco detectados (operadora, procedimento, medico, sazonalidade). Revisao exaustiva obrigatoria."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Convocar comite multidisciplinar de auditoria (medico, enfermagem, administrativo). Revisar todos indicadores de risco. Considerar nao envio e renegociacao com operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Score entre 50 e 70 (risco alto) -->
      <rule id="Rule_Alerta_1">
        <description>Score de risco entre 50 e 70 - risco alto</description>
        <inputEntry id="InputEntry_A1_1"><text>[50..70)</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"RISCO ALTO: Score consolidado entre 50-70. Varios indicadores de risco identificados. Revisao rigorosa necessaria antes de envio."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Auditoria medica e administrativa devem revisar conjuntamente. Verificar todos documentos obrigatorios. Considerar contato previo com operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Score entre 30 e 50 (risco medio) -->
      <rule id="Rule_Alerta_2">
        <description>Score de risco entre 30 e 50 - risco medio</description>
        <inputEntry id="InputEntry_A2_1"><text>[30..50)</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"RISCO MEDIO: Score consolidado entre 30-50. Alguns indicadores de risco presentes. Verificar conformidade antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Revisar checklist de documentacao. Validar conformidade com normativas ANS. Auditor interno deve aprovar antes de envio."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Score &lt; 30 (risco baixo) -->
      <rule id="Rule_Aprovado_1">
        <description>Score de risco &lt; 30 - risco baixo</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt; 30</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Score consolidado &lt; 30. Baixo risco de glosa. Todos indicadores dentro de parametros aceitaveis."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao. Manter checklist basico de documentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_DENY_PREDICT_010">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico. Verificar componentes do score consolidado."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para analise detalhada dos componentes do score de risco."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PREDICT_010">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PREDICT_010" dmnElementRef="Decision_DENY_PREDICT_010">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
