<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PREDICT-008 - Predicao Glosa por Perfil Operadora
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: DENY-PREDICT
  Perspectiva: HOSPITAL (Faturamento/Auditoria Administrativa)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Taxa de glosa historica da operadora &lt; 5%
  - Operadora com perfil liberatorio (baixa taxa de auditoria)

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Taxa de glosa historica da operadora &gt;= 30% (perfil restritivo)
  - Operadora com historico de auditoria rigorosa em procedimentos similares

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 465/2021 - Diretrizes auditoria operadoras
  - Lei 9.656/1998 - Art. 10, 35-A (cobertura obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DENY_PREDICT_008"
             name="Predicao Glosa por Perfil Operadora"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PREDICT_008" name="Predicao Glosa por Perfil Operadora">
    <decisionTable id="DecisionTable_DENY_PREDICT_008" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Taxa Glosa Operadora (%)">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>taxaGlosaOperadora</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Operadora">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>operadora</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Taxa glosa &gt;= 30% (perfil muito restritivo) -->
      <rule id="Rule_Bloqueio_1">
        <description>Operadora com taxa de glosa &gt;= 30% - perfil muito restritivo</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"RISCO CRITICO: Operadora possui taxa historica de glosa &gt;= 30%. Perfil extremamente restritivo. Revisar exaustivamente documentacao antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Acionar time de auditoria interna para revisao completa de documentacao. Verificar precedentes de glosa similares. Considerar contato previo com operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Taxa glosa entre 15% e 30% (perfil restritivo) -->
      <rule id="Rule_Alerta_1">
        <description>Operadora com taxa de glosa entre 15% e 30% - perfil restritivo</description>
        <inputEntry id="InputEntry_A1_1"><text>[15..30)</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"RISCO ALTO: Operadora possui taxa historica de glosa entre 15-30%. Perfil restritivo. Verificar documentacao anexa e conformidade normativa ANS."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Revisar checklist de documentacao obrigatoria. Verificar se todos laudos e justificativas clinicas estao anexados. Auditor interno deve validar."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Taxa glosa entre 5% e 15% (perfil moderado) -->
      <rule id="Rule_Alerta_2">
        <description>Operadora com taxa de glosa entre 5% e 15% - perfil moderado</description>
        <inputEntry id="InputEntry_A2_1"><text>[5..15)</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"RISCO MEDIO: Operadora possui taxa historica de glosa entre 5-15%. Perfil moderado. Verificar conformidade basica antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Validar checklist minimo de documentacao. Verificar ausencia de duplicidades e erros de preenchimento TISS."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Taxa glosa &lt; 5% (perfil liberatorio) -->
      <rule id="Rule_Aprovado_1">
        <description>Operadora com taxa de glosa &lt; 5% - perfil liberatorio</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt; 5</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Operadora possui taxa historica de glosa &lt; 5%. Perfil liberatorio. Baixo risco de glosa desde que documentacao minima esteja presente."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao. Manter checklist basico de documentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_DENY_PREDICT_008">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico. Verificar historico especifico da operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para consulta ao historico da operadora e avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PREDICT_008">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PREDICT_008" dmnElementRef="Decision_DENY_PREDICT_008">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
