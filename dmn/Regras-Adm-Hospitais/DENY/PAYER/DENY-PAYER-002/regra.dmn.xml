<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PAYER-002 - Padrao Glosa Bradesco Saude
  ============================================================================
  Versao: 1.0.0 (2026-02-06)
  Categoria: DENY-PAYER (Padrao Especifico de Operadora)

  OBJETIVO:
  Identificar padroes de glosa especificos da Bradesco Saude, especialmente
  relacionados a exigencias documentais e prazos de pagamento.

  REFERENCIAS:
  - RN 412/2016 ANS - Rol de Procedimentos
  - TISS 4.01.00 - Padrao de Comunicacao
  - Contrato Bradesco Saude
  - Manual Operacional Bradesco
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_DENY_PAYER_002" name="Padrao Glosa Bradesco Saude" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PAYER_002" name="Detectar Padrao Glosa Bradesco">
    <decisionTable id="DecisionTable_DENY_PAYER_002" hitPolicy="FIRST">

      <input id="Input_1" label="Codigo Operadora">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>operadoraCodigo</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Exigencia Especifica Atendida">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>exigenciaEspecificaAtendida</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Prazo Pagamento Padrao">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>prazoPagamentoPadrao</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Tipo Exigencia">
        <inputExpression id="InputExpression_4" typeRef="string">
          <text>tipoExigencia</text>
        </inputExpression>
      </input>

      <!-- OUTPUTS - Hospital Perspective -->
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <rule id="Rule_Block_1">
        <description>Bradesco exige documentacao especifica nao fornecida</description>
        <inputEntry id="InputEntry_B1_1"><text>"BRADESCO", "005711"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>"Laudo Medico", "Relatorio Cirurgico", "Descritivo Tecnico"</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"GLOSA CERTA: Bradesco exige documentacao especifica. Laudo medico ou relatorio cirurgico obrigatorio nao anexado. Nao faturar."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA 2: BLOQUEIO - Exigencia de biometria nao atendida -->
      <rule id="Rule_Block_2">
        <description>Bradesco exige validacao biometrica em casos especificos</description>
        <inputEntry id="InputEntry_B2_1"><text>"BRADESCO", "005711"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>"Biometria", "Validacao Digital"</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"GLOSA CERTA: Bradesco exige validacao biometrica. Procedimento nao validado no sistema. Regularizar antes de faturar."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA 3: ALERTA - Nova exigencia identificada -->
      <rule id="Rule_Alert_1">
        <description>Bradesco com nova exigencia nao mapeada anteriormente</description>
        <inputEntry id="InputEntry_A1_1"><text>"BRADESCO", "005711"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>"Nova Exigencia", "Requisito Adicional"</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ATENCAO: Nova exigencia Bradesco identificada. Verificar se documentacao atual atende ao novo requisito."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA 4: ALERTA - Prazo de pagamento diferenciado -->
      <rule id="Rule_Alert_2">
        <description>Bradesco com prazo de pagamento fora do padrao</description>
        <inputEntry id="InputEntry_A2_1"><text>"BRADESCO", "005711"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"RISCO: Bradesco opera com prazo de pagamento diferenciado neste contrato. Verificar D+30/D+45 conforme clausula contratual."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA 5: PROSSEGUIR - Exigencias atendidas -->
      <rule id="Rule_Proceed_1">
        <description>Bradesco com todas exigencias atendidas</description>
        <inputEntry id="InputEntry_P1_1"><text>"BRADESCO", "005711"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Exigencias Bradesco atendidas. Documentacao conforme. Faturar normalmente."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA 6: PROSSEGUIR - Sem exigencia especifica -->
      <rule id="Rule_Proceed_2">
        <description>Procedimento Bradesco sem exigencia especifica</description>
        <inputEntry id="InputEntry_P2_1"><text>"BRADESCO", "005711"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>"Nenhuma", ""</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Procedimento padrao Bradesco sem exigencias adicionais."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA 7: REVISAR - Outras operadoras -->
      <rule id="Rule_Review_1">
        <description>Regra nao aplicavel - operadora nao e Bradesco</description>
        <inputEntry id="InputEntry_R1_1"><text>not("BRADESCO", "005711")</text></inputEntry>
        <inputEntry id="InputEntry_R1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_R1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_R1_2"><text>"Operadora nao e Bradesco. Esta regra nao se aplica."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_R1_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA FALLBACK -->
      <rule id="Rule_Fallback_DENY_PAYER_002">
        <description>Caso padrao Bradesco - verificar exigencias</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Verificar exigencias especificas Bradesco para este procedimento."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PAYER_002">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PAYER_002" dmnElementRef="Decision_DENY_PAYER_002">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
