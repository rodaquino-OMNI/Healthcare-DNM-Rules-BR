<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PAYER-005 - Padrao Glosa NotreDame Intermedica (GNDI)
  ============================================================================
  Versao: 1.0.0 (2026-02-06)
  Categoria: DENY-PAYER (Padrao Especifico de Operadora)

  OBJETIVO:
  Identificar padroes de glosa da NotreDame Intermedica relacionados a
  autorizacao de sistema e codigos de servico.

  REFERENCIAS:
  - RN 412/2016 ANS - Rol de Procedimentos
  - TISS 4.01.00 - Padrao de Comunicacao
  - Sistema de Autorizacao GNDI
  - Tabela de Servicos GNDI
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_DENY_PAYER_005" name="Padrao Glosa NotreDame Intermedica" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PAYER_005" name="Detectar Padrao Glosa GNDI">
    <decisionTable id="DecisionTable_DENY_PAYER_005" hitPolicy="FIRST">

      <input id="Input_1" label="Codigo Operadora">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>operadoraCodigo</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Autorizacao Sistema Valida">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>autorizacaoSistemaValida</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Codigo Servico Mapeado">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>codigoServicoMapeado</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Status Autorizacao">
        <inputExpression id="InputExpression_4" typeRef="string">
          <text>statusAutorizacao</text>
        </inputExpression>
      </input>

      <!-- OUTPUTS - Hospital Perspective -->
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <rule id="Rule_Block_1">
        <description>GNDI exige autorizacao no sistema proprio</description>
        <inputEntry id="InputEntry_B1_1"><text>"GNDI", "NOTREDAME", "359017"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>"Ausente", "Nao Encontrada"</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"GLOSA CERTA: GNDI sem autorizacao no sistema. Procedimento exige autorizacao previa no sistema proprio da operadora."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA 2: BLOQUEIO - Codigo de servico nao mapeado -->
      <rule id="Rule_Block_2">
        <description>GNDI com codigo de servico nao reconhecido</description>
        <inputEntry id="InputEntry_B2_1"><text>"GNDI", "NOTREDAME", "359017"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"GLOSA CERTA: Codigo de servico nao mapeado na tabela GNDI. Verificar correspondencia TUSS-GNDI."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA 3: ALERTA - Autorizacao parcial -->
      <rule id="Rule_Alert_1">
        <description>GNDI com autorizacao parcialmente aprovada</description>
        <inputEntry id="InputEntry_A1_1"><text>"GNDI", "NOTREDAME", "359017"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>"Parcial", "Em Analise"</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ATENCAO: Autorizacao GNDI parcialmente aprovada ou em analise. Verificar itens aprovados antes de executar."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA 4: ALERTA - Autorizacao proxima do vencimento -->
      <rule id="Rule_Alert_2">
        <description>GNDI com autorizacao proxima da data de validade</description>
        <inputEntry id="InputEntry_A2_1"><text>"GNDI", "NOTREDAME", "359017"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>"Proximo Vencimento", "Ultimos 5 Dias"</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"RISCO: Autorizacao GNDI proxima do vencimento. Executar ou renovar antes da data limite."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA 5: PROSSEGUIR - Autorizacao valida e codigo mapeado -->
      <rule id="Rule_Proceed_1">
        <description>GNDI com autorizacao valida e codigo correto</description>
        <inputEntry id="InputEntry_P1_1"><text>"GNDI", "NOTREDAME", "359017"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>"Aprovada", "Vigente"</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"GNDI com autorizacao valida e codigo de servico correto. Faturar normalmente."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA 6: PROSSEGUIR - Procedimento sem necessidade de autorizacao -->
      <rule id="Rule_Proceed_2">
        <description>Procedimento GNDI livre de autorizacao</description>
        <inputEntry id="InputEntry_P2_1"><text>"GNDI", "NOTREDAME", "359017"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>"Livre", "Nao Requerida"</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Procedimento GNDI livre de autorizacao previa."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA 7: REVISAR - Outras operadoras -->
      <rule id="Rule_Review_1">
        <description>Regra nao aplicavel - operadora nao e GNDI</description>
        <inputEntry id="InputEntry_R1_1"><text>not("GNDI", "NOTREDAME", "359017")</text></inputEntry>
        <inputEntry id="InputEntry_R1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_R1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_R1_2"><text>"Operadora nao e GNDI. Esta regra nao se aplica."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_R1_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA FALLBACK -->
      <rule id="Rule_Fallback_DENY_PAYER_005">
        <description>Caso padrao GNDI - verificar autorizacao</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Verificar status de autorizacao no sistema GNDI."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PAYER_005">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PAYER_005" dmnElementRef="Decision_DENY_PAYER_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
