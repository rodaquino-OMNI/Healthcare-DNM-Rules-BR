<!--
  DENY-PAYER-008 - Regra Operadora Nao-Publicada (Glosa Indevida)
  Versao: 1.0.0 (2026-02-08)
  Categoria: DENY-PAYER | Perspectiva: HOSPITAL (Faturamento)
  Refs: Lei 9.656/1998 Art. 25, CDC Art. 46, RN ANS 465/2021
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DENY_PAYER_008"
             name="Regra Operadora Nao-Publicada"
             targetNamespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_DENY_PAYER_008" name="Regra Operadora Nao-Publicada">
    <decisionTable id="DecisionTable_DENY_PAYER_008" hitPolicy="FIRST">
      <input id="Input_1" label="Regra Publicada"><inputExpression id="InputExpression_1" typeRef="boolean"><text>regraPublicada</text></inputExpression></input>
      <input id="Input_2" label="Operadora"><inputExpression id="InputExpression_2" typeRef="string"><text>operadora</text></inputExpression></input>
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string"><outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues></output>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>
      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>
      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string"><outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues></output>
      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string"><outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues></output>
      <rule id="Rule_Bloqueio_1"><description>Regra nao publicada - glosa indevida</description><inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry><inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry><outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry><outputEntry id="OutputEntry_B1_2"><text>"GLOSA INDEVIDA: Regra invocada NAO ESTA PUBLICADA (CDC Art. 46). Operadora nao pode aplicar regra nao contratual. Acionar juridico imediatamente."</text></outputEntry><outputEntry id="OutputEntry_B1_3"><text>"Acionar juridico para contestacao formal. Verificar contrato e manual vigente. Preparar recurso de glosa indevida. Considerar denuncia ANS."</text></outputEntry><outputEntry id="OutputEntry_B1_4"><text>"CONTRATO"</text></outputEntry><outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry></rule>
      <rule id="Rule_Aprovado_1"><description>Regra publicada oficialmente</description><inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry><inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry><outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry><outputEntry id="OutputEntry_P1_2"><text>"Regra publicada oficialmente. Validade contratual confirmada. Prosseguir com analise de conformidade."</text></outputEntry><outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com analise de conformidade da regra publicada."</text></outputEntry><outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry></rule>
      <rule id="Rule_Fallback_DENY_PAYER_008"><description>Regra padrao</description><inputEntry id="InputEntry_F_1"><text>-</text></inputEntry><inputEntry id="InputEntry_F_2"><text>-</text></inputEntry><outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry><outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual. Verificar status de publicacao da regra."</text></outputEntry><outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para validar status de publicacao."</text></outputEntry><outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry></rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI><dmndi:DMNDiagram id="DMNDiagram_DENY_PAYER_008"><dmndi:DMNShape id="DMNShape_Decision_DENY_PAYER_008" dmnElementRef="Decision_DENY_PAYER_008"><dc:Bounds height="80" width="180" x="160" y="100"/></dmndi:DMNShape></dmndi:DMNDiagram></dmndi:DMNDI>
</definitions>
