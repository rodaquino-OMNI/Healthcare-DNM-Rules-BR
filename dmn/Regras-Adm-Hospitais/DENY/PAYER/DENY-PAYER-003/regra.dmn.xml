<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PAYER-003 - Padrao Glosa SulAmerica
  ============================================================================
  Versao: 1.0.0 (2026-02-06)
  Categoria: DENY-PAYER (Padrao Especifico de Operadora)

  OBJETIVO:
  Identificar padroes de glosa da SulAmerica relacionados a protocolos
  internos e documentacao requerida.

  REFERENCIAS:
  - RN 412/2016 ANS - Rol de Procedimentos
  - TISS 4.01.00 - Padrao de Comunicacao
  - Contrato SulAmerica
  - Portal Prestador SulAmerica
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_DENY_PAYER_003" name="Padrao Glosa SulAmerica" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PAYER_003" name="Detectar Padrao Glosa SulAmerica">
    <decisionTable id="DecisionTable_DENY_PAYER_003" hitPolicy="FIRST">

      <input id="Input_1" label="Codigo Operadora">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>operadoraCodigo</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Protocolo Interno Valido">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>protocoloInternoValido</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Documentacao Completa">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>documentacaoCompleta</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Tipo Documentacao Requerida">
        <inputExpression id="InputExpression_4" typeRef="string">
          <text>tipoDocumentacaoRequerida</text>
        </inputExpression>
      </input>

      <!-- OUTPUTS - Hospital Perspective -->
      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <rule id="Rule_Block_1">
        <description>SulAmerica exige documentacao completa para procedimentos complexos</description>
        <inputEntry id="InputEntry_B1_1"><text>"SULAMERICA", "006246"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>"Laudo Detalhado", "Protocolo Clinico", "Justificativa Tecnica"</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"GLOSA CERTA: SulAmerica exige documentacao completa. Laudo detalhado, protocolo clinico ou justificativa tecnica nao anexados."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA 2: BLOQUEIO - Protocolo interno invalido ou expirado -->
      <rule id="Rule_Block_2">
        <description>SulAmerica com protocolo interno invalido</description>
        <inputEntry id="InputEntry_B2_1"><text>"SULAMERICA", "006246"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"GLOSA CERTA: Protocolo interno SulAmerica invalido ou expirado. Obter novo protocolo antes de faturar."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA 3: ALERTA - Documentacao parcial -->
      <rule id="Rule_Alert_1">
        <description>SulAmerica com documentacao parcialmente completa</description>
        <inputEntry id="InputEntry_A1_1"><text>"SULAMERICA", "006246"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>"Parcial", "Incompleta"</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ATENCAO: Documentacao SulAmerica parcialmente completa. Verificar se todos os anexos obrigatorios estao presentes."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA 4: ALERTA - Procedimento requer autorizacao especial -->
      <rule id="Rule_Alert_2">
        <description>SulAmerica requer autorizacao especial para determinados procedimentos</description>
        <inputEntry id="InputEntry_A2_1"><text>"SULAMERICA", "006246"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>"Autorizacao Especial", "Junta Medica"</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"RISCO: Procedimento SulAmerica requer autorizacao especial ou avaliacao de junta medica. Verificar status da autorizacao."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA 5: PROSSEGUIR - Documentacao completa e protocolo valido -->
      <rule id="Rule_Proceed_1">
        <description>SulAmerica com documentacao completa e protocolo valido</description>
        <inputEntry id="InputEntry_P1_1"><text>"SULAMERICA", "006246"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"SulAmerica com documentacao completa e protocolo valido. Faturar normalmente."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA 6: PROSSEGUIR - Procedimento padrao sem exigencia especial -->
      <rule id="Rule_Proceed_2">
        <description>Procedimento padrao SulAmerica</description>
        <inputEntry id="InputEntry_P2_1"><text>"SULAMERICA", "006246"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>"Nenhuma", "Padrao"</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Procedimento padrao SulAmerica sem exigencias adicionais."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA 7: REVISAR - Outras operadoras -->
      <rule id="Rule_Review_1">
        <description>Regra nao aplicavel - operadora nao e SulAmerica</description>
        <inputEntry id="InputEntry_R1_1"><text>not("SULAMERICA", "006246")</text></inputEntry>
        <inputEntry id="InputEntry_R1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_R1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_R1_2"><text>"Operadora nao e SulAmerica. Esta regra nao se aplica."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_R1_3"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA FALLBACK -->
      <rule id="Rule_Fallback_DENY_PAYER_003">
        <description>Caso padrao SulAmerica - verificar documentacao</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Verificar documentacao requerida pela SulAmerica para este procedimento."</text></outputEntry>
        <outputEntry id=""><text></text></outputEntry>
        <outputEntry id=""><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PAYER_003">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PAYER_003" dmnElementRef="Decision_DENY_PAYER_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
