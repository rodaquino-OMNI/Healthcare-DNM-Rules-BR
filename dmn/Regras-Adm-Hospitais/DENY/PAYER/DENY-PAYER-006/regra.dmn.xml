<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  DENY-PAYER-006 - Operadora com Historico de Glosa Sistematica
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: DENY-PAYER
  Perspectiva: HOSPITAL (Faturamento/Auditoria Administrativa)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Operadora com taxa historica &lt; 10% e relacionamento transparente
  - Historico de resolucao rapida de contestacoes

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Operadora com taxa historica &gt;= 40% (glosa sistematica)
  - Operadora com historico de contestacoes prolongadas e dificeis

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN ANS 465/2021 - Diretrizes auditoria operadoras
  - Lei 9.656/1998 - Art. 10, 35-A (cobertura obrigatoria)
  - CDC - Art. 51 (clausulas abusivas)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DENY_PAYER_006"
             name="Operadora com Historico de Glosa Sistematica"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_DENY_PAYER_006" name="Operadora com Historico de Glosa Sistematica">
    <decisionTable id="DecisionTable_DENY_PAYER_006" hitPolicy="FIRST">

      <input id="Input_1" label="Taxa Glosa Historica (%)">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>taxaGlosaHistorica</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Operadora">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>operadora</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <rule id="Rule_Bloqueio_1">
        <description>Operadora com taxa &gt;= 40% - glosa sistematica caracterizada</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt;= 40</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"RISCO CRITICO: Operadora com taxa historica &gt;= 40% caracteriza glosa sistematica. Possivel pratica abusiva (CDC Art. 51). Acionar juridico e ANS antes de enviar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Acionar departamento juridico para avaliar caracterizacao de clausula abusiva. Considerar denuncia a ANS. Revisar contrato com operadora. Nao enviar faturamento ate resolucao."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CONTRATO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <rule id="Rule_Alerta_1">
        <description>Operadora com taxa entre 25% e 40% - risco muito alto</description>
        <inputEntry id="InputEntry_A1_1"><text>[25..40)</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"RISCO MUITO ALTO: Operadora com taxa historica entre 25-40%. Possivel configuracao de glosa sistematica. Revisar exaustivamente documentacao. Considerar reuniao com operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Comite de auditoria deve revisar integralmente. Verificar se glosas sao justificadas ou abusivas. Documentar evidencias. Considerar reuniao com operadora para alinhamento."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"CONTRATO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Alerta_2">
        <description>Operadora com taxa entre 10% e 25% - risco alto</description>
        <inputEntry id="InputEntry_A2_1"><text>[10..25)</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"RISCO ALTO: Operadora com taxa historica entre 10-25%. Perfil restritivo. Verificar conformidade rigorosa com normativas ANS e contrato."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Auditoria deve revisar documentacao. Verificar checklist especifico da operadora. Validar conformidade com clausulas contratuais."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_1">
        <description>Operadora com taxa &lt; 10% - relacionamento saudavel</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt; 10</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Operadora com taxa historica &lt; 10%. Relacionamento saudavel. Baixo risco de glosa desde que documentacao minima esteja presente."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao. Manter checklist basico de documentacao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <rule id="Rule_Fallback_DENY_PAYER_006">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico. Verificar historico especifico da operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para consulta ao historico da operadora e avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DENY_PAYER_006">
      <dmndi:DMNShape id="DMNShape_Decision_DENY_PAYER_006" dmnElementRef="Decision_DENY_PAYER_006">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
