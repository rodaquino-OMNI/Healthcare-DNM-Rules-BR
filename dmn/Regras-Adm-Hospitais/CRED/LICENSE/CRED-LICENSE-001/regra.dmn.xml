<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-LICENSE-001 - Validade CRM (Alerta 90 Dias)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-LICENSE
  Perspectiva: HOSPITAL (Administrativo - Licenças Profissionais)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - CRM válido com mais de 90 dias para vencimento
  - Registro ativo e sem suspensão
  - Médico habilitado para exercer

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - CRM vencido ou suspenso
  - Médico com registro cassado
  - Pendências graves no conselho

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 3.268/1957 - Conselhos de Medicina
  - Resolução CFM 2.221/2018
  - Código de Ética Médica
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_LICENSE_001"
             name="Validade CRM (Alerta 90 Dias)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_LICENSE_001" name="Validade CRM">
    <decisionTable id="DecisionTable_CRED_LICENSE_001" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Dias Validade CRM">
        <inputExpression id="InputExpression_1" typeRef="integer">
          <text>diasValidadeCRM</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="CRM Suspenso">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>crmSuspenso</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - CRM suspenso -->
      <rule id="Rule_Bloqueio_1">
        <description>CRM suspenso pelo conselho</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"CRM do médico está suspenso pelo conselho regional. Médico impedido de atuar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Substituir médico ou aguardar regularização da suspensão do CRM."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - CRM vencido -->
      <rule id="Rule_Bloqueio_2">
        <description>CRM com validade vencida</description>
        <inputEntry id="InputEntry_B2_1"><text>&lt; 0</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"CRM do médico está vencido. Médico não habilitado para exercer."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Renovar CRM junto ao conselho regional antes de permitir atendimentos."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Vencimento em menos de 90 dias -->
      <rule id="Rule_Alerta_1">
        <description>CRM próximo ao vencimento</description>
        <inputEntry id="InputEntry_A1_1"><text>[0..90]</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"CRM do médico vence em menos de 90 dias. Programar renovação."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Notificar médico para iniciar processo de renovação do CRM."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - CRM válido com prazo adequado -->
      <rule id="Rule_Aprovado_1">
        <description>CRM válido e regular</description>
        <inputEntry id="InputEntry_P1_1"><text>&gt; 90</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"CRM válido e regular com prazo adequado de validade."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_LICENSE_001">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_LICENSE_001">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_LICENSE_001" dmnElementRef="Decision_CRED_LICENSE_001">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
