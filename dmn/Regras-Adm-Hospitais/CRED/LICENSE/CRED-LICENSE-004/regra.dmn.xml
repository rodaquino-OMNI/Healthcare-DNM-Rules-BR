<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-LICENSE-004 - Certificado de Residência Médica
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-LICENSE
  Perspectiva: HOSPITAL (Administrativo - Licenças Profissionais)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Certificado de residência válido e reconhecido
  - Área de residência compatível com procedimento
  - Programa reconhecido pela CNRM

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Procedimento requer residência não comprovada
  - Residência não reconhecida pela CNRM
  - Área de residência incompatível

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 6.932/1981 - Residência Médica
  - Resolução CNRM 01/2021
  - Resolução CFM específica por área
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_LICENSE_004"
             name="Certificado de Residência Médica"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_LICENSE_004" name="Certificado de Residência Médica">
    <decisionTable id="DecisionTable_CRED_LICENSE_004" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Residência">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temResidencia</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Residência Reconhecida">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>residenciaReconhecida</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Área Residência">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>areaResidencia</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Residência não reconhecida -->
      <rule id="Rule_Bloqueio_1">
        <description>Residência não reconhecida pela CNRM</description>
        <inputEntry id="InputEntry_B1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Programa de residência médica não reconhecido pela CNRM."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Comprovar residência em programa reconhecido ou obter título de especialista."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Procedimento pode requerer residência -->
      <rule id="Rule_Alerta_1">
        <description>Procedimento complexo sem residência comprovada</description>
        <inputEntry id="InputEntry_A1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Médico sem certificado de residência para procedimento que geralmente requer especialização."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Validar se médico possui título de especialista ou experiência comprovada."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Residência reconhecida -->
      <rule id="Rule_Aprovado_1">
        <description>Residência reconhecida e válida</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Médico possui certificado de residência médica reconhecido pela CNRM."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_LICENSE_004">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_LICENSE_004">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_LICENSE_004" dmnElementRef="Decision_CRED_LICENSE_004">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
