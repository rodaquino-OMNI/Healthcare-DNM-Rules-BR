<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-LICENSE-005 - Título de Especialista da Sociedade
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-LICENSE
  Perspectiva: HOSPITAL (Administrativo - Licenças Profissionais)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Título de especialista válido e reconhecido
  - Sociedade reconhecida pela AMB/CFM
  - Título vigente e sem pendências

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Procedimento requer título não comprovado
  - Sociedade não reconhecida
  - Título vencido ou cassado

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Resolução CFM 2.149/2016 - Títulos de especialista
  - AMB - Associação Médica Brasileira
  - Sociedades de especialidade reconhecidas
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_LICENSE_005"
             name="Título de Especialista da Sociedade"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_LICENSE_005" name="Título de Especialista">
    <decisionTable id="DecisionTable_CRED_LICENSE_005" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Título">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temTitulo</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Sociedade Reconhecida">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>sociedadeReconhecida</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Título Vigente">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>tituloVigente</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sociedade não reconhecida -->
      <rule id="Rule_Bloqueio_1">
        <description>Título de sociedade não reconhecida pela AMB/CFM</description>
        <inputEntry id="InputEntry_B1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Título de especialista emitido por sociedade não reconhecida pela AMB/CFM."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Obter título de sociedade reconhecida ou comprovar residência médica."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Título não vigente -->
      <rule id="Rule_Bloqueio_2">
        <description>Título vencido ou cassado</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Título de especialista vencido ou cassado pela sociedade."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Renovar título de especialista junto à sociedade de especialidade."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Procedimento pode requerer título -->
      <rule id="Rule_Alerta_1">
        <description>Procedimento complexo sem título de especialista</description>
        <inputEntry id="InputEntry_A1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Médico sem título de especialista para procedimento que geralmente requer especialização."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Validar se médico possui residência ou experiência comprovada na área."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Título válido -->
      <rule id="Rule_Aprovado_1">
        <description>Título de especialista válido e vigente</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Médico possui título de especialista válido de sociedade reconhecida."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_LICENSE_005">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_LICENSE_005">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_LICENSE_005" dmnElementRef="Decision_CRED_LICENSE_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
