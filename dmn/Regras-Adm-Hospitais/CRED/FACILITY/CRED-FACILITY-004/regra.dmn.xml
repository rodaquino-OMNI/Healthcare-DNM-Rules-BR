<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-FACILITY-004 - Equipamento Calibrado e Certificado
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-FACILITY
  Perspectiva: HOSPITAL (Administrativo - Gestão de Equipamentos)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Equipamento certificado e calibrado
  - Calibração realizada nos últimos 365 dias
  - Laudo técnico válido

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Equipamento sem certificação
  - Calibração vencida há mais de 60 dias
  - Laudo técnico ausente ou inválido

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RDC ANVISA 2/2010 - Gerenciamento de tecnologias
  - Portaria INMETRO específica por equipamento
  - NBR ISO 9001 - Sistema de gestão da qualidade
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_FACILITY_004"
             name="Equipamento Calibrado e Certificado"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_FACILITY_004" name="Equipamento Calibrado">
    <decisionTable id="DecisionTable_CRED_FACILITY_004" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Equipamento Certificado">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>equipamentoCertificado</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Dias Última Calibração">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>diasUltimaCalibracao</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Laudo Técnico">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>laudoTecnico</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Equipamento não certificado -->
      <rule id="Rule_Bloqueio_1">
        <description>Equipamento sem certificação válida</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Equipamento não certificado. Não autorizado para uso clínico."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Certificar equipamento antes de utilizar em procedimentos."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Calibração muito vencida (>425 dias = 14 meses) -->
      <rule id="Rule_Bloqueio_2">
        <description>Calibração vencida há mais de 60 dias</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 425</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Calibração do equipamento vencida há mais de 60 dias."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Recalibrar equipamento urgentemente antes de utilizar."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Sem laudo técnico -->
      <rule id="Rule_Bloqueio_3">
        <description>Laudo técnico ausente</description>
        <inputEntry id="InputEntry_B3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"Equipamento sem laudo técnico válido de calibração."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Obter laudo técnico de calibração antes de utilizar equipamento."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Calibração próxima ao vencimento (>335 dias = 11 meses) -->
      <rule id="Rule_Alerta_1">
        <description>Calibração próxima ao vencimento</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[335..425]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Calibração do equipamento próxima ao vencimento. Programar recalibração."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Agendar calibração do equipamento nos próximos 30 dias."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Equipamento regular -->
      <rule id="Rule_Aprovado_1">
        <description>Equipamento certificado e calibrado</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt;= 335</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Equipamento certificado, calibrado e com laudo técnico válido."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_FACILITY_004">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_FACILITY_004">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_FACILITY_004" dmnElementRef="Decision_CRED_FACILITY_004">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
