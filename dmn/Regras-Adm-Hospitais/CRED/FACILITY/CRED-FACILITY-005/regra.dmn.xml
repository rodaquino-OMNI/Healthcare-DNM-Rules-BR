<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-FACILITY-005 - Protocolos de Segurança do Paciente
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-FACILITY
  Perspectiva: HOSPITAL (Administrativo - Qualidade e Segurança)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Protocolos de segurança implementados
  - Metas internacionais cumpridas (>4 de 6)
  - Auditoria realizada nos últimos 12 meses

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Protocolos não implementados
  - Menos de 3 metas internacionais cumpridas
  - Auditoria desatualizada há mais de 24 meses

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Portaria MS/GM 529/2013 - Segurança do Paciente
  - RDC ANVISA 36/2013 - Núcleo de Segurança
  - OMS - Metas Internacionais de Segurança do Paciente
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_FACILITY_005"
             name="Protocolos de Segurança do Paciente"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_FACILITY_005" name="Protocolos Segurança Paciente">
    <decisionTable id="DecisionTable_CRED_FACILITY_005" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Protocolos Implementados">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>protocolosImplementados</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Metas Internacionais (de 6)">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>metasInternacionais</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Dias Última Auditoria">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>ultimaAuditoria</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Protocolos não implementados -->
      <rule id="Rule_Bloqueio_1">
        <description>Hospital sem protocolos de segurança implementados</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Hospital sem protocolos de segurança do paciente implementados."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Implementar Núcleo de Segurança do Paciente e protocolos obrigatórios."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Poucas metas cumpridas (<3 de 6) -->
      <rule id="Rule_Bloqueio_2">
        <description>Menos de metade das metas internacionais cumpridas</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&lt; 3</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Hospital cumpre menos de 50% das metas internacionais de segurança."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Implementar plano de ação para atingir pelo menos 4 das 6 metas internacionais."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Auditoria desatualizada -->
      <rule id="Rule_Alerta_1">
        <description>Auditoria de segurança desatualizada</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt; 365</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Auditoria de segurança do paciente desatualizada há mais de 1 ano."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Programar auditoria de segurança nos próximos 60 dias."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Protocolos implementados e metas cumpridas -->
      <rule id="Rule_Aprovado_1">
        <description>Protocolos implementados com maioria das metas cumpridas</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&gt;= 4</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>&lt;= 365</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Protocolos de segurança implementados e metas internacionais cumpridas."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_FACILITY_005">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_FACILITY_005">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_FACILITY_005" dmnElementRef="Decision_CRED_FACILITY_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
