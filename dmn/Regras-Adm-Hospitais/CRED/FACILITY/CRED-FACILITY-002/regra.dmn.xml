<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-FACILITY-002 - Acreditação ONA/JCI Vigente
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-FACILITY
  Perspectiva: HOSPITAL (Administrativo - Acreditação)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Acreditação ONA/JCI vigente
  - Mais de 90 dias para vencimento
  - Nível de acreditação adequado

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Hospital sem acreditação quando procedimento requer
  - Acreditação vencida
  - Nível de acreditação insuficiente

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - ONA - Manual Brasileiro de Acreditação
  - JCI - Joint Commission International Standards
  - RN 363/2014 ANS (valorização acreditação)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_FACILITY_002"
             name="Acreditação ONA/JCI Vigente"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_FACILITY_002" name="Acreditação ONA/JCI">
    <decisionTable id="DecisionTable_CRED_FACILITY_002" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Acreditação">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>acreditacao</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ONA1", "ONA2", "ONA3", "JCI", "NENHUMA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Dias para Vencimento">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>diasVencimento</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA A1: Alerta - Acreditação vencendo -->
      <rule id="Rule_Alerta_1">
        <description>Acreditação próxima ao vencimento</description>
        <inputEntry id="InputEntry_A1_1"><text>"ONA1", "ONA2", "ONA3", "JCI"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[30..90]</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Acreditação vigente mas próxima ao vencimento."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Programar renovação da acreditação nos próximos 60 dias."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Sem acreditação -->
      <rule id="Rule_Alerta_2">
        <description>Hospital sem acreditação</description>
        <inputEntry id="InputEntry_A2_1"><text>"NENHUMA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Hospital sem acreditação ONA/JCI. Pode impactar qualidade e competitividade."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Considerar processo de acreditação para melhorar qualidade e credenciamento."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Acreditação vigente -->
      <rule id="Rule_Aprovado_1">
        <description>Acreditação ONA/JCI vigente com prazo adequado</description>
        <inputEntry id="InputEntry_P1_1"><text>"ONA1", "ONA2", "ONA3", "JCI"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&gt; 90</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Hospital com acreditação vigente e regular."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_FACILITY_002">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_FACILITY_002">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_FACILITY_002" dmnElementRef="Decision_CRED_FACILITY_002">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
