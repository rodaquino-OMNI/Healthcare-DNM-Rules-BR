<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  CRED-PROVIDER-005 - Carga Horária Médica Compatível
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: CRED-PROVIDER
  Perspectiva: HOSPITAL (Administrativo - Gestão de RH Médico)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Carga horária realizada dentro do limite contratado
  - Desvio inferior a 10% da carga horária contratada
  - Médico operando dentro dos parâmetros de jornada

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Carga horária realizada excede muito o contratado (>130%)
  - Desvio superior a 30% indicando possível erro de registro
  - Violação de limites de jornada de trabalho

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - CLT - Consolidação das Leis do Trabalho
  - Resolução CFM 2.162/2017 - Jornada médica
  - Contrato de trabalho ou credenciamento
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_CRED_PROVIDER_005"
             name="Carga Horária Médica Compatível"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_CRED_PROVIDER_005" name="Carga Horária Médica Compatível">
    <decisionTable id="DecisionTable_CRED_PROVIDER_005" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Carga Horária Contratada">
        <inputExpression id="InputExpression_1" typeRef="integer">
          <text>cargaHorariaContratada</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Carga Horária Realizada">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>cargaHorariaRealizada</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Desvio Percentual">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>desvioPercentual</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Desvio muito alto (>30%) -->
      <rule id="Rule_Bloqueio_1">
        <description>Carga horária realizada excede muito o contratado</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>&gt; 30</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Carga horária realizada excede em mais de 30% o contratado. Possível erro de registro."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Revisar registros de ponto e ajustar lançamentos antes de faturar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Desvio moderado (10-30%) -->
      <rule id="Rule_Alerta_1">
        <description>Desvio entre 10% e 30% requer monitoramento</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>[10..30]</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Carga horária realizada apresenta desvio moderado em relação ao contratado."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Monitorar carga horária e validar registros com o departamento de RH."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"CRED"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Desvio aceitável (<10%) -->
      <rule id="Rule_Aprovado_1">
        <description>Carga horária dentro dos parâmetros normais</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>&lt; 10</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Carga horária realizada está compatível com a contratada (desvio inferior a 10%)."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrão."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisão manual -->
      <rule id="Rule_Fallback_CRED_PROVIDER_005">
        <description>Regra padrão - Requer avaliação manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situação requer análise manual por não corresponder a nenhum critério automático."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliação caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_CRED_PROVIDER_005">
      <dmndi:DMNShape id="DMNShape_Decision_CRED_PROVIDER_005" dmnElementRef="Decision_CRED_PROVIDER_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
