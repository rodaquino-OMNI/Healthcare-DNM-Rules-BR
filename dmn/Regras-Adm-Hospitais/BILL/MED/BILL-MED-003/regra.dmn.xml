<?xml version='1.0' encoding='utf-8'?>
<!--
  ============================================================================
  BILL-MED-003 - Medicamento Controlado
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-MED
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_BILL-MED-003" name="Medicamento Controlado" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL-MED-003" name="Medicamento Controlado">
    <decisionTable id="DecisionTable_BILL-MED-003" hitPolicy="FIRST">

      <input id="Input_1" label="Classificacao Portaria">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>classificacaoPortaria</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"A1", "A2", "A3", "B1", "B2", "C1", "C2", "C3", "C4", "C5", "D1", "D2", "E", "F"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Prescricao Medica Valida">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>prescricaoMedicaValida</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Registro Dispensacao Status">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>registroDispensacaoStatus</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"COMPLETO", "PARCIAL", "AUSENTE"</text>
        </inputValues>
      </input>

      <input id="Input_4" label="Quantidade Confere Prescricao">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>quantidadeConferePrescricao</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloquear_1">
        <description>Bloqueio: Controlado sem prescricao valida</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - Medicamento controlado sem prescricao medica valida. Conforme Portaria 344/SVS, substancias controladas requerem prescricao especifica. Obter prescricao antes de faturar."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"OBTER_PRESCRICAO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_2">
        <description>Bloqueio: Sem registro de dispensacao</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>"AUSENTE"</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - Medicamento controlado sem registro de dispensacao. RDC ANVISA 22/2014 exige escrituracao completa. Registrar dispensacao no SNGPC antes de faturar."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"COMPLETAR_REGISTRO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_3">
        <description>Bloqueio: Lista A sem rastreabilidade completa</description>
        <inputEntry id="InputEntry_B3_1"><text>"A1", "A2", "A3"</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>"PARCIAL"</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - Substancia entorpecente (Lista A) com registro de dispensacao incompleto. Rastreabilidade total obrigatoria. Completar registro antes de faturar."</text></outputEntry>
<outputEntry id="OutputEntry_B3_3"><text>"COMPLETAR_REGISTRO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_3_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_3_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_1">
        <description>Alerta: Registro de dispensacao parcial</description>
        <inputEntry id="InputEntry_A1_1"><text>"B1", "B2", "C1", "C2", "C3", "C4", "C5"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>"PARCIAL"</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Registro de dispensacao parcialmente completo para medicamento controlado. Completar campos faltantes para evitar problemas em fiscalizacao ANVISA."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"COMPLETAR_REGISTRO"</text></outputEntry>
<outputEntry id="Rule_Alertar_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alertar_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      <rule id="Rule_Alertar_2">
        <description>Alerta: Quantidade divergente da prescricao</description>
        <inputEntry id="InputEntry_A2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>"COMPLETO"</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"ALERTA - Quantidade dispensada diverge da quantidade prescrita. Verificar justificativa para diferenca e documentar ajuste se necessario."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"AJUSTAR_QUANTIDADE"</text></outputEntry>
<outputEntry id="Rule_Alertar_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alertar_2_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Aprovado: Controlado com documentacao completa</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>"COMPLETO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"APROVADO - Medicamento controlado com documentacao completa. Prescricao valida, registro de dispensacao conforme Portaria 344/SVS e quantidade conferida. Prosseguir faturamento."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"FATURAR"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_BILL-MED-003">
        <description>Regra padrao - Dados insuficientes para decisao automatica</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"REVISAR - Dados insuficientes para validacao de medicamento controlado. Verificar: classificacao portaria, prescricao medica, registro de dispensacao e quantidade."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"COMPLETAR_REGISTRO"</text></outputEntry>
<outputEntry id="Rule_Fallback_BILL-MED-003_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_BILL-MED-003_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL-MED-003">
      <dmndi:DMNShape id="DMNShape_Decision_BILL-MED-003" dmnElementRef="Decision_BILL-MED-003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>