  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_BILL-MED-002" name="Antimicrobiano Hospitalar" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL-MED-002" name="Antimicrobiano Hospitalar">
    <decisionTable id="DecisionTable_BILL-MED-002" hitPolicy="FIRST">

      <input id="Input_1" label="Classe Antimicrobiano">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>classeAntimicrobiano</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"RESTRITO", "CONTROLADO", "PADRAO"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Percentual Duracao Protocolo">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>percentualDuracaoProtocolo</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Cultura Sensibilidade Status">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>culturaSensibilidadeStatus</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"DOCUMENTADA", "PENDENTE", "NAO_APLICAVEL"</text>
        </inputValues>
      </input>

      <input id="Input_4" label="Autorizacao CCIH">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>possuiAutorizacaoCcih</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloquear_1">
        <description>Bloqueio: Antimicrobiano restrito sem autorizacao CCIH</description>
        <inputEntry id="InputEntry_B1_1"><text>"RESTRITO"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - Antimicrobiano de uso restrito sem autorizacao CCIH. Conforme RDC ANVISA 2616/1998, antimicrobianos restritos requerem liberacao da Comissao de Controle de Infeccao."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"SOLICITAR_CCIH"</text></outputEntry>
<outputEntry id="Rule_Bloquear_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_2">
        <description>Bloqueio: Duracao excede protocolo sem cultura</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 100</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>"NAO_APLICAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - Duracao de tratamento antimicrobiano excede protocolo sem cultura de sensibilidade. Programa de Stewardship requer justificativa documentada para uso prolongado."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"DOCUMENTAR_CULTURA"</text></outputEntry>
<outputEntry id="Rule_Bloquear_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_3">
        <description>Bloqueio: Uso prolongado sem justificativa</description>
        <inputEntry id="InputEntry_B3_1"><text>"CONTROLADO"</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>&gt; 100</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>"PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - Antimicrobiano controlado com duracao superior ao protocolo e cultura pendente. Completar investigacao microbiologica ou justificar extensao do tratamento."</text></outputEntry>
<outputEntry id="OutputEntry_B3_3"><text>"JUSTIFICAR_DURACAO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_3_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_3_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_1">
        <description>Alerta: Duracao proxima do limite (75%)</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[75..100]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Duracao de tratamento antimicrobiano acima de 75% do limite protocolar. Avaliar necessidade de extensao e preparar justificativa se necessario."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"JUSTIFICAR_DURACAO"</text></outputEntry>
<outputEntry id="Rule_Alertar_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alertar_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      <rule id="Rule_Alertar_2">
        <description>Alerta: Cultura pendente em tratamento empirico</description>
        <inputEntry id="InputEntry_A2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>&lt; 75</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>"PENDENTE"</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"ALERTA - Tratamento empirico com cultura de sensibilidade pendente. Acompanhar resultado para ajuste terapeutico e documentacao adequada."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"DOCUMENTAR_CULTURA"</text></outputEntry>
<outputEntry id="Rule_Alertar_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alertar_2_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Aprovado: Antimicrobiano restrito com autorizacao</description>
        <inputEntry id="InputEntry_P1_1"><text>"RESTRITO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt; 75</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>"DOCUMENTADA"</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"APROVADO - Antimicrobiano restrito com autorizacao CCIH, cultura documentada e duracao dentro do protocolo. Prosseguir com faturamento."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"FATURAR"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      <rule id="Rule_Prosseguir_2">
        <description>Aprovado: Antimicrobiano padrao dentro do protocolo</description>
        <inputEntry id="InputEntry_P2_1"><text>"PADRAO"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>&lt; 100</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"APROVADO - Antimicrobiano padrao com duracao dentro do protocolo. Dispensa autorizacao CCIH especial. Prosseguir com faturamento."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"FATURAR"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_BILL-MED-002">
        <description>Regra padrao - Dados insuficientes para decisao automatica</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"REVISAR - Dados insuficientes para validacao de antimicrobiano hospitalar. Verificar: classe, duracao, cultura de sensibilidade e autorizacao CCIH."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_CCIH"</text></outputEntry>
<outputEntry id="Rule_Fallback_BILL-MED-002_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_BILL-MED-002_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL-MED-002">
      <dmndi:DMNShape id="DMNShape_Decision_BILL-MED-002" dmnElementRef="Decision_BILL-MED-002">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>