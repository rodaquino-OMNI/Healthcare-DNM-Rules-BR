  "status": "active",
  "description": "Valida cobranca de procedimentos repetidos baseado em motivo e intervalo",
  "businessRationale": "Garantir cobranca de repeticoes legitimas e evitar glosas por falta de justificativa",
  "riskLevel": "HIGH",
  "glosaRisk": "Repeticao por falha tecnica ou intervalo inadequado",
  "inputs": [
    {"name": "procedimentoRepetido", "type": "boolean"},
    {"name": "motivoRepeticao", "type": "string", "values": ["complicacao", "progressao_doenca", "rotina", "falha_tecnica", "qualidade_insuficiente"]},
    {"name": "diasDesdeAnterior", "type": "number"},
    {"name": "justificativaDocumentada", "type": "boolean"},
    {"name": "mesmoProfissional", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["ANS Repeat Procedure Guidelines", "TUSS Modifier Rules", "Contract Specifications"]
}
