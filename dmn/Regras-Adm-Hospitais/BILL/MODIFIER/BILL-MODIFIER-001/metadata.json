{
  "ruleId": "BILL-MODIFIER-001",
  "version": "1.0.0",
  "name": "Same Access Modifier Validation",
  "category": "BILL",
  "subcategory": "MODIFIER",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "description": "Valida aplicacao correta de modificador de mesmo acesso cirurgico",
  "businessRationale": "Maximizar receita documentando acessos diferentes quando aplicavel",
  "riskLevel": "MEDIUM",
  "glosaRisk": "Reducao automatica por operadora quando acessos nao documentados",
  "inputs": [
    {"name": "quantidadeProcedimentos", "type": "number"},
    {"name": "mesmoAcessoCirurgico", "type": "boolean"},
    {"name": "acessosDiferentesDocumentados", "type": "boolean"},
    {"name": "modificadorMesmoAcessoAplicado", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["CBHPM Regras de Porte", "TUSS Modifier Guidelines", "ANS Audit Standards"]
