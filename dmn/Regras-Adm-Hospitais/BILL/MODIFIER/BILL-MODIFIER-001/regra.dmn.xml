<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_BILL_MODIFIER_001" name="Same Access Modifier Validation" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_MODIFIER_001" name="Validar Modificador Mesmo Acesso">
    <decisionTable id="DecisionTable_BILL_MODIFIER_001" hitPolicy="FIRST">

      <input id="Input_1" label="Quantidade Procedimentos">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>quantidadeProcedimentos</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Mesmo Acesso Cirurgico">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>mesmoAcessoCirurgico</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Acessos Diferentes Documentados">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>acessosDiferentesDocumentados</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Modificador Mesmo Acesso Aplicado">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>modificadorMesmoAcessoAplicado</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string" />
      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string" />

      
      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string"><outputValues>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</outputValues></output><output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string"><outputValues>"BAIXO", "MEDIO", "ALTO", "CRITICO"</outputValues></output><rule id="Rule_Block_1">
        <description>Bloquear multiplos procedimentos mesmo acesso sem modificador</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>false</text></inputEntry>
        
      <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_2"><text>"BLOQUEIO: Multiplos procedimentos pela mesma via de acesso sem modificador conforme CBHPM. Operadora aplicara reducao de 50-70% automaticamente, resultando em glosa parcial."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_3"><text>"Aplicar modificador de mesmo acesso no sistema antes do faturamento OU anexar descricao operatoria documentando acessos cirurgicos distintos (ex: incisao separada)."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Block_1_4"><text>"VALOR"</text></outputEntry>
      <outputEntry id="OutputEntry_Block_1_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Alert_1">
        <description>Alertar modificador aplicado quando acessos podem ser diferentes</description>
        <inputEntry id="InputEntry_A1_1"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_2"><text>"ALERTA RECEITA: Modificador de reducao aplicado mas acessos DIFERENTES estao documentados. Perda potencial de 30-50% da receita do procedimento secundario."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_3"><text>"Revisar descricao operatoria. Se acessos sao realmente diferentes (incisoes distintas, tempos separados), REMOVER modificador e faturar integralmente conforme CBHPM."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Alert_1_4"><text>"VALOR"</text></outputEntry>
      <outputEntry id="OutputEntry_Alert_1_5"><text>"MEDIO"</text></outputEntry></rule>

      
      <rule id="Rule_Alert_2">
        <description>Alertar multiplos procedimentos sem documentacao de acesso</description>
        <inputEntry id="InputEntry_A2_1"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>null</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_2"><text>"Multiplos procedimentos sem documentacao clara de acesso. Risco de glosa."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_3"><text>"Documentar acessos cirurgicos na descricao operatoria."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Alert_2_4"><text>"VALOR"</text></outputEntry>
      <outputEntry id="OutputEntry_Alert_2_5"><text>"MEDIO"</text></outputEntry></rule>

      
      <rule id="Rule_Proceed_1">
        <description>Prosseguir acessos diferentes documentados</description>
        <inputEntry id="InputEntry_P1_1"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>false</text></inputEntry>
        
      <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_P1_2"><text>"Acessos diferentes documentados. Cobranca integral de cada procedimento."</text></outputEntry>
        
      <outputEntry id="OutputEntry_P1_3"><text>"Faturar todos procedimentos sem reducao. Anexar descricao dos acessos."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Proceed_1_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Proceed_1_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Proceed_2">
        <description>Prosseguir mesmo acesso com modificador correto</description>
        <inputEntry id="InputEntry_P2_1"><text>&gt; 1</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_P2_2"><text>"Modificador mesmo acesso corretamente aplicado. Cobranca padrao."</text></outputEntry>
        
      <outputEntry id="OutputEntry_P2_3"><text>"Faturar com reducao conforme tabela contratual."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Proceed_2_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Proceed_2_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Proceed_3">
        <description>Prosseguir procedimento unico</description>
        <inputEntry id="InputEntry_P3_1"><text>1</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_P3_2"><text>"Procedimento unico. Modificador de acesso nao aplicavel."</text></outputEntry>
        
      <outputEntry id="OutputEntry_P3_3"><text>"Faturar procedimento normalmente."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Proceed_3_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Proceed_3_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Fallback">
        <description>Caso padrao - revisar manualmente</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_2"><text>"Dados insuficientes para validar modificador de acesso."</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_3"><text>"Verificar quantidade procedimentos e documentacao de acessos."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Fallback_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Fallback_5"><text>"MEDIO"</text></outputEntry></rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_MODIFIER_001">
      <dmndi:DMNShape id="DMNShape_Decision" dmnElementRef="Decision_BILL_MODIFIER_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>