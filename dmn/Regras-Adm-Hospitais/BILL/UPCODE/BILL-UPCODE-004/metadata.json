{
  "ruleId": "BILL-UPCODE-004",
  "version": "1.0.0",
  "name": "ICU Standard Admission Coding Validation",
  "category": "BILL",
  "subcategory": "UPCODE",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "description": "Valida cobranca de diarias UTI vs enfermaria baseado em criterios clinicos",
  "businessRationale": "Maximizar receita de diarias UTI quando criterios clinicos presentes, evitar glosas",
  "riskLevel": "HIGH",
  "glosaRisk": "Diaria UTI sem criterios de gravidade documentados",
  "inputs": [
    {"name": "tipoLeitoCobrado", "type": "string", "values": ["uti_adulto", "uti_pediatrica", "uti_neonatal", "semi_intensiva", "enfermaria"]},
    {"name": "sapsScore", "type": "number", "description": "SAPS II or III score"},
    {"name": "ventilacaoMecanica", "type": "boolean"},
    {"name": "drogasVasoativas", "type": "boolean"},
    {"name": "evolucaoMedicaDiaria", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["AMIB Criterios UTI", "TUSS Diarias", "ANS RN 465/2021", "CFM Resolucao UTI"]
}
