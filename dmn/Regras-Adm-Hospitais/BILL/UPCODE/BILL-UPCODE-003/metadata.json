{
  "ruleId": "BILL-UPCODE-003",
  "version": "1.0.0",
  "name": "Anesthesia Time Based Coding Validation",
  "category": "BILL",
  "subcategory": "UPCODE",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "description": "Valida cobranca de anestesia baseada em tempo documentado na ficha anestesica",
  "businessRationale": "Garantir cobranca correta de unidades anestesicas conforme tempo documentado",
  "riskLevel": "HIGH",
  "glosaRisk": "Unidades anestesicas incompativeis com tempo documentado",
  "inputs": [
    {"name": "tempoAnestesiaMinutos", "type": "number"},
    {"name": "unidadesAnestesiaCobradas", "type": "number"},
    {"name": "tipoAnestesia", "type": "string", "values": ["geral", "raqui", "peridural", "local", "sedacao"]},
    {"name": "fichaAnestesicaCompleta", "type": "boolean"},
    {"name": "asaPaciente", "type": "number"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["SBA - Sociedade Brasileira de Anestesiologia", "TUSS Anesthesia Codes", "CFM Resolucao Anestesia"]
}
