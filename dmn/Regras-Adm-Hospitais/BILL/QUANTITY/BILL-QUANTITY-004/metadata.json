{
  "ruleId": "BILL-QUANTITY-004",
  "version": "1.0.0",
  "name": "Days Hospitalization Validation",
  "category": "BILL",
  "subcategory": "QUANTITY",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "description": "Valida dias de internacao contra media DRG e tipo de internacao",
  "businessRationale": "Justificar permanencias prolongadas e identificar subcobranca em altas precoces",
  "riskLevel": "HIGH",
  "glosaRisk": "Permanencia acima da media sem justificativa clinica",
  "inputs": [
    {"name": "tipoInternacao", "type": "string", "values": ["cirurgica", "clinica", "obstetrica", "pediatrica", "psiquiatrica"]},
    {"name": "diasCobrados", "type": "number"},
    {"name": "mediaPermanenciaDRG", "type": "number"},
    {"name": "complicacoesDocumentadas", "type": "boolean"},
    {"name": "altaProgramada", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["DRG Brasil", "ANAHP Benchmarks", "ANS Guidelines"]
}
