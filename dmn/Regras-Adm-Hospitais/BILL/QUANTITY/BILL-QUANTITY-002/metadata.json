  "status": "active",
  "description": "Valida quantidade de materiais contra padrao do procedimento",
  "businessRationale": "Evitar glosas por consumo excessivo e capturar materiais nao cobrados",
  "riskLevel": "HIGH",
  "glosaRisk": "Consumo acima do padrao sem justificativa clinica",
  "inputs": [
    {"name": "tipoMaterial", "type": "string", "values": ["opme", "medicamento", "material_consumo", "gases"]},
    {"name": "quantidadeCobrada", "type": "number"},
    {"name": "quantidadePadrao", "type": "number"},
    {"name": "percentualDesvio", "type": "number", "description": "Desvio percentual do padrao"},
    {"name": "justificativaExcesso", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["ANVISA Material Standards", "Hospital Cost Protocols", "ANS OPME Guidelines"]
