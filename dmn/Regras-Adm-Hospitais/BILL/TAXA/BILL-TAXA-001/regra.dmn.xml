<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  BILL-TAXA-001 - Taxa Sala Cirurgica x Porte
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-TAXA
  Perspectiva: HOSPITAL (Faturamento/Centro Cirurgico)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Taxa de sala cirurgica compativel com o porte cirurgico (TUSS)
  - Valor dentro de +/-10% da tabela de referencia AMB/CBHPM
  - Documentacao do porte cirurgico anexada

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Taxa cobrada superior a 20% da tabela de referencia sem justificativa
  - Porte cirurgico nao documentado ou divergente do procedimento
  - Cobranca de taxa de sala para procedimentos ambulatoriais

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - AMB CBHPM 7a Ed. (classificacao de porte cirurgico)
  - ANS RN 465/2021 (cobertura de taxas cirurgicas)
  - TISS 4.01.00 (codificacao de procedimentos)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_BILL_TAXA_001"
             name="Taxa Sala Cirurgica x Porte"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_TAXA_001" name="Taxa Sala Cirurgica x Porte">
    <decisionTable id="DecisionTable_BILL_TAXA_001" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Porte Cirurgico">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>porteCirurgico</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"1", "2", "3", "4", "5", "6", "7", "8"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Taxa Cobrada (R$)">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>taxaCobrada</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Taxa Referencia (R$)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>taxaReferencia</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Taxa superior a 20% da referencia -->
      <rule id="Rule_Bloqueio_1">
        <description>Taxa de sala cirurgica superior a 20% da tabela de referencia sem justificativa</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Taxa de sala cirurgica superior a 20% da tabela de referencia AMB/CBHPM. Risco de glosa."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Bloquear faturamento. Revisar taxa cobrada e ajustar conforme tabela contratual."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Taxa entre 10-20% acima da referencia -->
      <rule id="Rule_Alerta_1">
        <description>Taxa de sala cirurgica entre 10% e 20% acima da referencia - Documentar justificativa</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Taxa elevada (10-20% acima da referencia). Documentar justificativa para auditoria."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Anexar justificativa de custos adicionais (equipamentos especiais, complexidade). Preparar defesa."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Taxa compativel com porte -->
      <rule id="Rule_Aprovado_1">
        <description>Taxa de sala cirurgica dentro de +/-10% da tabela de referencia</description>
        <inputEntry id="InputEntry_P1_1"><text>"1", "2", "3", "4", "5", "6", "7", "8"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Taxa de sala cirurgica compativel com porte cirurgico e tabela de referencia."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento. Registrar porte cirurgico no sistema para auditoria."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_BILL_TAXA_001">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_TAXA_001">
      <dmndi:DMNShape id="DMNShape_Decision_BILL_TAXA_001" dmnElementRef="Decision_BILL_TAXA_001">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
