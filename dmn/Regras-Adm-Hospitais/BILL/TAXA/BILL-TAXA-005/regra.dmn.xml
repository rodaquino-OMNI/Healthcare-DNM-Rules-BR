<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  BILL-TAXA-005 - Refeicao Acompanhante
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-TAXA
  Perspectiva: HOSPITAL (Faturamento/Hotelaria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Fornecimento de refeicao para acompanhante de menor ou idoso (gratuito por lei)
  - Cobranca de refeicao para acompanhante de adulto (18-60 anos) se aplicavel
  - Taxa de refeicao compativel com custo real da nutricao

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Cobranca de refeicao para acompanhante de menor de 18 anos (vedado por lei)
  - Cobranca de refeicao para acompanhante de idoso >60 anos (vedado por lei)
  - Taxa de refeicao superior ao custo operacional justificado

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - Lei 8.069/1990 ECA Art. 12 (direito a acompanhante com refeicao)
  - Lei 10.741/2003 Estatuto Idoso Art. 16 (refeicao gratuita)
  - ANS RN 465/2021 (vedacao de cobranca indevida)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_BILL_TAXA_005"
             name="Refeicao Acompanhante"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_TAXA_005" name="Refeicao Acompanhante">
    <decisionTable id="DecisionTable_BILL_TAXA_005" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Idade Paciente">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>idadePaciente</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Acompanhante Presente">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>acompanhantePresente</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Taxa Refeicao Cobrada">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>taxaRefeicaoCobrada</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Cobranca para acompanhante de menor -->
      <rule id="Rule_Bloqueio_1">
        <description>Cobranca de refeicao para acompanhante de menor de 18 anos (vedado por lei)</description>
        <inputEntry id="InputEntry_B1_1"><text>&lt; 18</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Cobranca de refeicao para acompanhante de menor e vedada por lei (ECA Art. 12)."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Bloquear cobranca imediatamente. Estornar valores cobrados e notificar ouvidoria."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"CONTRATO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Cobranca para acompanhante de idoso -->
      <rule id="Rule_Bloqueio_2">
        <description>Cobranca de refeicao para acompanhante de idoso >60 anos (vedado por lei)</description>
        <inputEntry id="InputEntry_B2_1"><text>&gt; 60</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Cobranca de refeicao para acompanhante de idoso e vedada por lei (Estatuto Idoso Art. 16)."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Bloquear cobranca imediatamente. Estornar valores e revisar processo de faturamento."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"CONTRATO"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Refeicao gratuita para acompanhante de menor/idoso -->
      <rule id="Rule_Aprovado_1">
        <description>Fornecimento de refeicao gratuita para acompanhante de menor ou idoso</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Refeicao fornecida gratuitamente para acompanhante conforme direito legal."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir sem cobranca. Registrar custo operacional no controle de hotelaria hospitalar."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Cobranca para adulto 18-60 anos -->
      <rule id="Rule_Aprovado_2">
        <description>Cobranca de refeicao para acompanhante de adulto 18-60 anos (permitido)</description>
        <inputEntry id="InputEntry_P2_1"><text>[18..60]</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Cobranca de refeicao para acompanhante de adulto 18-60 anos. Paciente ciente do custo."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com cobranca. Confirmar ciencia do paciente sobre taxa de refeicao do acompanhante."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P3: Aprovado - Sem acompanhante -->
      <rule id="Rule_Aprovado_3">
        <description>Sem acompanhante presente - Nao ha cobranca de refeicao</description>
        <inputEntry id="InputEntry_P3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P3_2"><text>"Sem acompanhante presente. Nao ha cobranca de refeicao de acompanhante."</text></outputEntry>
        <outputEntry id="OutputEntry_P3_3"><text>"Prosseguir sem cobranca de refeicao de acompanhante."</text></outputEntry>
        <outputEntry id="OutputEntry_P3_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P3_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_BILL_TAXA_005">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_TAXA_005">
      <dmndi:DMNShape id="DMNShape_Decision_BILL_TAXA_005" dmnElementRef="Decision_BILL_TAXA_005">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
