<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  BILL-OPME-007 - Nota Fiscal OPME Completa
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-OPME
  Perspectiva: HOSPITAL (Faturamento)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Nota fiscal OPME anexada ao prontuario
  - Nota fiscal com dados completos (CNPJ, numero NF, lote, validade)
  - Valor nota fiscal compativel com valor cobrado

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Ausencia de nota fiscal para OPME alto custo
  - Dados incompletos na nota fiscal
  - Divergencia valor NF vs valor cobrado superior a 10%

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - IN 59/2021 ANS - Rastreabilidade de OPME
  - RDC 16/2013 ANVISA - Rastreabilidade de Produtos para Saude
  - CPC Art. 47 - Transparencia de Precos
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_BILL_OPME_007"
             name="Nota Fiscal OPME Completa"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_OPME_007" name="Nota Fiscal OPME Completa">
    <decisionTable id="DecisionTable_BILL_OPME_007" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Nota Fiscal">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temNotaFiscal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="NF Completa">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>nfCompleta</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Divergencia Valor NF">
        <inputExpression id="InputExpression_3" typeRef="double">
          <text>divergenciaValorNF</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="OPME Alto Custo">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>opmeAltoCusto</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sem NF para OPME alto custo -->
      <rule id="Rule_Bloqueio_1">
        <description>Bloqueio: OPME alto custo sem nota fiscal</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - OPME de alto custo sem nota fiscal anexada. Conforme IN 59/2021 ANS, rastreabilidade completa e obrigatoria."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar nota fiscal completa ao fornecedor e anexar ao prontuario antes de faturar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - NF incompleta -->
      <rule id="Rule_Bloqueio_2">
        <description>Bloqueio: Nota fiscal com dados incompletos</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - Nota fiscal OPME com dados incompletos (faltam: CNPJ fornecedor, numero NF, lote ou validade). RDC 16/2013 exige rastreabilidade total."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Completar dados faltantes na nota fiscal ou solicitar segunda via ao fornecedor."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Divergencia valor NF superior a 10% -->
      <rule id="Rule_Bloqueio_3">
        <description>Bloqueio: Divergencia elevada entre valor NF e valor cobrado</description>
        <inputEntry id="InputEntry_B3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>&gt; 10</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - Divergencia superior a 10% entre valor nota fiscal e valor cobrado. Risco de glosa por superfaturamento."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Corrigir valor cobrado para coincidir com nota fiscal ou apresentar justificativa tecnica documentada."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Divergencia menor -->
      <rule id="Rule_Alerta_1">
        <description>Alerta: Divergencia moderada entre NF e valor cobrado</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>[5..10]</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Divergencia entre 5% e 10% entre valor nota fiscal e valor cobrado. Recomenda-se revisar."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Verificar se divergencia se deve a impostos ou ajustar valor cobrado."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"VALOR"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - NF completa e valor compativel -->
      <rule id="Rule_Aprovado_1">
        <description>Aprovado: Nota fiscal completa e valor compativel</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>[0..5]</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"APROVADO - Nota fiscal OPME completa e valor compativel com o cobrado (divergencia ate 5%)."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - OPME baixo custo sem NF -->
      <rule id="Rule_Aprovado_2">
        <description>Aprovado: OPME baixo custo sem exigencia NF</description>
        <inputEntry id="InputEntry_P2_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"APROVADO - OPME de baixo custo sem exigencia de nota fiscal individual."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_BILL_OPME_007">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_OPME_007">
      <dmndi:DMNShape id="DMNShape_Decision_BILL_OPME_007" dmnElementRef="Decision_BILL_OPME_007">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
