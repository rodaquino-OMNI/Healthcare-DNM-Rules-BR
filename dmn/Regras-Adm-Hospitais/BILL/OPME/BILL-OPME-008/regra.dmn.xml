<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  BILL-OPME-008 - Consentimento Paciente OPME
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-OPME
  Perspectiva: HOSPITAL (Faturamento)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Termo de consentimento informado assinado pelo paciente
  - Consentimento especifico para OPME de alto custo
  - Documento arquivado no prontuario antes do procedimento

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Ausencia de consentimento para OPME alto custo
  - Consentimento assinado apos o procedimento (invalido)
  - Consentimento generico sem especificar o OPME

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - CDC Art. 6 III - Direito a Informacao Clara
  - CPC Art. 15 - Consentimento Livre e Esclarecido
  - RN 465/2021 ANS - Transparencia em OPME
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_BILL_OPME_008"
             name="Consentimento Paciente OPME"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_OPME_008" name="Consentimento Paciente OPME">
    <decisionTable id="DecisionTable_BILL_OPME_008" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Consentimento">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temConsentimento</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Consentimento Especifico">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>consentimentoEspecifico</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Assinado Antes Procedimento">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>assinadoAntesProcedimento</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="OPME Alto Custo">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>opmeAltoCusto</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sem consentimento para OPME alto custo -->
      <rule id="Rule_Bloqueio_1">
        <description>Bloqueio: OPME alto custo sem consentimento informado</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - OPME de alto custo sem termo de consentimento informado. Conforme CDC Art. 6 III, paciente tem direito a informacao clara sobre custos."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Obter consentimento informado do paciente especificando o OPME e custos envolvidos."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Consentimento generico -->
      <rule id="Rule_Bloqueio_2">
        <description>Bloqueio: Consentimento generico sem especificar OPME</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - Consentimento generico inadequado para OPME de alto custo. CPC Art. 15 exige consentimento especifico."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Solicitar termo de consentimento especifico com detalhes do OPME e custos estimados."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Consentimento assinado apos procedimento -->
      <rule id="Rule_Bloqueio_3">
        <description>Bloqueio: Consentimento assinado apos o procedimento</description>
        <inputEntry id="InputEntry_B3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - Termo de consentimento assinado APOS o procedimento e invalido. Consentimento deve ser previo ao ato medico."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Revisar processo de consentimento informado. Impossivel regularizar procedimento ja realizado."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Consentimento generico para OPME baixo custo -->
      <rule id="Rule_Alerta_1">
        <description>Alerta: Consentimento generico para OPME baixo custo</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Consentimento generico para OPME de baixo custo. Recomenda-se especificar o material utilizado."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Detalhar OPME no prontuario mesmo com consentimento generico."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Consentimento especifico e valido -->
      <rule id="Rule_Aprovado_1">
        <description>Aprovado: Consentimento informado especifico e previo</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"APROVADO - Termo de consentimento informado especifico para OPME, assinado antes do procedimento."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - OPME baixo custo sem exigencia -->
      <rule id="Rule_Aprovado_2">
        <description>Aprovado: OPME baixo custo sem exigencia consentimento especifico</description>
        <inputEntry id="InputEntry_P2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"APROVADO - OPME de baixo custo com consentimento cirurgico geral suficiente."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_BILL_OPME_008">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_OPME_008">
      <dmndi:DMNShape id="DMNShape_Decision_BILL_OPME_008" dmnElementRef="Decision_BILL_OPME_008">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
