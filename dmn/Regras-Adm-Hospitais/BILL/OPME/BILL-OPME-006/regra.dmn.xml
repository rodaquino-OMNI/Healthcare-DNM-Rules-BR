<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  BILL-OPME-006 - Validade Registro ANVISA
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-OPME
  Perspectiva: HOSPITAL (Faturamento)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Registro ANVISA vigente na data do procedimento
  - Registro renovado dentro do prazo
  - OPME com certificacao internacional equivalente quando aplicavel

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Registro ANVISA vencido
  - OPME sem registro ANVISA obrigatorio
  - Registro ANVISA suspenso ou cancelado

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RDC 185/2001 ANVISA - Registro de Produtos Implantaveis
  - Lei 6.360/1976 - Vigilancia Sanitaria
  - RN 465/2021 ANS - Cobertura de OPME
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_BILL_OPME_006"
             name="Validade Registro ANVISA"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_OPME_006" name="Validade Registro ANVISA">
    <decisionTable id="DecisionTable_BILL_OPME_006" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Registro ANVISA">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>registroANVISA</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Status Registro">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>statusRegistro</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"VIGENTE", "VENCIDO", "SUSPENSO", "CANCELADO", "AUSENTE"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Dias Ate Vencimento">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>diasAteVencimento</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="OPME Requer Registro">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>opmeRequerRegistro</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Registro ANVISA ausente quando obrigatorio -->
      <rule id="Rule_Bloqueio_1">
        <description>Bloqueio: OPME sem registro ANVISA obrigatorio</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>"AUSENTE"</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - OPME sem registro ANVISA. Conforme RDC 185/2001, produtos implantaveis requerem registro sanitario vigente."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar numero de registro ANVISA valido ao fornecedor antes de faturar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Registro ANVISA vencido -->
      <rule id="Rule_Bloqueio_2">
        <description>Bloqueio: Registro ANVISA vencido</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"VENCIDO"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - Registro ANVISA vencido na data do procedimento. Produto nao pode ser utilizado nem faturado."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Verificar renovacao do registro ANVISA junto ao fornecedor. Substituir produto se necessario."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Registro ANVISA suspenso ou cancelado -->
      <rule id="Rule_Bloqueio_3">
        <description>Bloqueio: Registro ANVISA suspenso ou cancelado</description>
        <inputEntry id="InputEntry_B3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>"SUSPENSO", "CANCELADO"</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - Registro ANVISA suspenso ou cancelado. Produto irregular nao pode ser utilizado."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Contatar fornecedor para regularizacao ou substituir produto imediatamente."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Registro proximo do vencimento -->
      <rule id="Rule_Alerta_1">
        <description>Alerta: Registro ANVISA proximo do vencimento</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"VIGENTE"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>[1..90]</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Registro ANVISA vigente mas proximo do vencimento (menos de 90 dias). Monitorar renovacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Notificar fornecedor sobre vencimento proximo e solicitar comprovante de renovacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Registro ANVISA vigente -->
      <rule id="Rule_Aprovado_1">
        <description>Aprovado: Registro ANVISA vigente e valido</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"VIGENTE"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>&gt; 90</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"APROVADO - Registro ANVISA vigente e valido conforme RDC 185/2001."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - OPME nao requer registro -->
      <rule id="Rule_Aprovado_2">
        <description>Aprovado: OPME nao requer registro ANVISA</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"APROVADO - OPME isento de registro ANVISA conforme legislacao vigente."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento conforme procedimento padrao."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_BILL_OPME_006">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao requer analise manual por nao corresponder a nenhum criterio automatico."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria administrativa para avaliacao caso a caso."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_OPME_006">
      <dmndi:DMNShape id="DMNShape_Decision_BILL_OPME_006" dmnElementRef="Decision_BILL_OPME_006">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
