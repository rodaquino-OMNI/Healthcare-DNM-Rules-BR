<?xml version='1.0' encoding='utf-8'?>
<!--
  ============================================================================
  BILL-OPME-003 - Cadeia Autorizacao OPME
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-OPME
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_BILL-OPME-003" name="Cadeia Autorizacao OPME" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL-OPME-003" name="Cadeia Autorizacao OPME">
    <decisionTable id="DecisionTable_BILL-OPME-003" hitPolicy="FIRST">

      <input id="Input_1" label="Possui Autorizacao Previa">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>possuiAutorizacaoPrevia</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Valor Excede Limite">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>valorExcedeLimite</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Laudo Medico Completo">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>laudoMedicoCompleto</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Cotacao Fornecedor Valida">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>cotacaoFornecedorValida</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Status Autorizacao">
        <inputExpression id="InputExpression_5" typeRef="string">
          <text>statusAutorizacao</text>
        </inputExpression>
        <inputValues id="InputValues_5">
          <text>"CONFIRMADA", "PENDENTE", "NAO_SOLICITADA"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloquear_1">
        <description>Bloqueio: Alto valor sem autorizacao previa</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_5"><text>"NAO_SOLICITADA"</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - OPME de alto valor sem autorizacao previa. Conforme RN ANS 465/2021, materiais acima do limite contratual requerem autorizacao. Solicitar antes de faturar."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"SOLICITAR_AUTORIZACAO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_2">
        <description>Bloqueio: Sem laudo medico para OPME especial</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - OPME especial sem laudo medico justificativo. Resolucao CFM exige laudo para materiais de alto custo. Completar documentacao medica antes de faturar."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"COMPLETAR_LAUDO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_2_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_3">
        <description>Bloqueio: Sem cotacao de fornecedor</description>
        <inputEntry id="InputEntry_B3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B3_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - OPME sem cotacao de fornecedor documentada. Auditoria de operadora pode questionar origem e preco. Documentar cotacao antes de faturar."</text></outputEntry>
<outputEntry id="OutputEntry_B3_3"><text>"OBTER_COTACAO"</text></outputEntry>
<outputEntry id="Rule_Bloquear_3_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Bloquear_3_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_1">
        <description>Alerta: Autorizacao pendente de confirmacao</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>"PENDENTE"</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Autorizacao previa solicitada mas pendente de confirmacao. Aguardar confirmacao da operadora ou faturar com risco de glosa por falta de autorizacao vigente."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"SOLICITAR_AUTORIZACAO"</text></outputEntry>
<outputEntry id="Rule_Alertar_1_outputEntry_alertasConformidade"><text>"VALOR"</text></outputEntry>
<outputEntry id="Rule_Alertar_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Aprovado: Cadeia de autorizacao completa para alto valor</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>"CONFIRMADA"</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"APROVADO - Cadeia de autorizacao OPME completa. Autorizacao previa confirmada, laudo medico presente, cotacao valida documentada. Prosseguir com faturamento."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"FATURAR"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      <rule id="Rule_Prosseguir_2">
        <description>Aprovado: OPME abaixo do limite sem autorizacao</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"APROVADO - OPME abaixo do limite de autorizacao previa. Laudo medico presente e cotacao documentada. Autorizacao nao obrigatoria para este valor."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"FATURAR"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_BILL-OPME-003">
        <description>Regra padrao - Dados insuficientes para decisao automatica</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"REVISAR - Dados insuficientes para validacao de cadeia de autorizacao OPME. Verificar: autorizacao previa, laudo medico, cotacao e status de aprovacao."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"SOLICITAR_AUTORIZACAO"</text></outputEntry>
<outputEntry id="Rule_Fallback_BILL-OPME-003_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_BILL-OPME-003_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL-OPME-003">
      <dmndi:DMNShape id="DMNShape_Decision_BILL-OPME-003" dmnElementRef="Decision_BILL-OPME-003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>