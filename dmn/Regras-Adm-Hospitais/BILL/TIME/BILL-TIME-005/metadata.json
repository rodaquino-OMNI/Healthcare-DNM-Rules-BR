{
  "ruleId": "BILL-TIME-005",
  "version": "1.0.0",
  "name": "Emergency Overtime Billing Validation",
  "category": "BILL",
  "subcategory": "TIME",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "description": "Valida cobranca de adicionais noturno, fim de semana e feriado",
  "businessRationale": "Capturar adicionais legitimos e evitar glosas por horario incompativel",
  "riskLevel": "MEDIUM",
  "glosaRisk": "Adicional cobrado para horario nao elegivel",
  "inputs": [
    {"name": "horaInicioProcedimento", "type": "number", "description": "Hora de inicio (0-23)"},
    {"name": "diaSemana", "type": "string", "values": ["segunda", "terca", "quarta", "quinta", "sexta", "sabado", "domingo", "feriado"]},
    {"name": "adicionalNoturnoCobrado", "type": "boolean"},
    {"name": "adicionalFimSemanaCobrado", "type": "boolean"},
    {"name": "contratoPermiteAdicionais", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["CLT Adicional Noturno", "Contract Surcharge Rules", "ANS Billing Standards"]
}
