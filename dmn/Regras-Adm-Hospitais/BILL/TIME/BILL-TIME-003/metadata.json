{
  "ruleId": "BILL-TIME-003",
  "version": "1.0.0",
  "name": "Surgical Time Complexity Validation",
  "category": "BILL",
  "subcategory": "TIME",
  "perspective": "HOSPITAL",
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06",
  "status": "active",
  "description": "Valida tempo cirurgico contra porte e complexidade do procedimento",
  "businessRationale": "Garantir porte adequado baseado em tempo real e evitar downcoding",
  "riskLevel": "MEDIUM",
  "glosaRisk": "Porte incompativel com tempo documentado",
  "inputs": [
    {"name": "porteCirurgico", "type": "string", "values": ["1", "2", "3", "4", "5", "6", "7", "8"]},
    {"name": "tempoCirurgicoMinutos", "type": "number"},
    {"name": "tempoEsperadoMinutos", "type": "number"},
    {"name": "justificativaDesvio", "type": "boolean"}
  ],
  "outputs": [
    {"name": "resultado", "type": "string", "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]},
    {"name": "observacao", "type": "string"},
    {"name": "acaoRecomendada", "type": "string"}
  ],
  "references": ["CBHPM Porte Guidelines", "TUSS Complexity Codes", "SBC Surgical Standards"]
}
