<!--
  ============================================================================
  BILL-MATERIAL-001 - Validacao de Cobranca de OPME
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: BILL-MATERIAL
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_BILL-MATERIAL-001" name="Validacao de Cobranca de OPME" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL-MATERIAL-001" name="Validacao Cobranca OPME">
    <decisionTable id="DecisionTable_BILL-MATERIAL-001" hitPolicy="FIRST">

      <input id="Input_1" label="Possui Autorizacao Previa">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>possuiAutorizacaoPrevia</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Percentual Variacao Preco">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>percentualVariacaoPreco</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Registro ANVISA Valido">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>registroAnvisaValido</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Quantidade Dentro Autorizado">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>quantidadeDentroAutorizado</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloquear_1">
        <description>Bloqueio: OPME sem autorizacao previa obrigatoria</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"BLOQUEADO - OPME cobrado sem autorizacao previa da operadora. Conforme RN ANS 465/2021, materiais de alto custo requerem autorizacao previa. Risco de glosa integral do item."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"SOLICITAR_AUTORIZACAO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_2">
        <description>Bloqueio: OPME sem registro ANVISA valido</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"BLOQUEADO - OPME sem registro ANVISA valido ou vencido. Produto nao regularizado nao pode ser cobrado. Verificar lote e validade do registro."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"REVISAR_DOCUMENTACAO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_2_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <rule id="Rule_Bloquear_3">
        <description>Bloqueio: Quantidade excede autorizacao</description>
        <inputEntry id="InputEntry_B3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_4"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B3_2"><text>"BLOQUEADO - Quantidade de OPME cobrada excede quantidade autorizada. Solicitar autorizacao complementar antes de faturar excedente."</text></outputEntry>
<outputEntry id="OutputEntry_B3_3"><text>"SOLICITAR_AUTORIZACAO"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_3_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Bloquear_3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alertar_1">
        <description>Alerta: Preco excede 20% da tabela de referencia</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>&gt; 20</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"ALERTA - Preco do OPME excede 20% da tabela de referencia SIMPRO/Brasindice. Risco de glosa parcial por sobrepreco. Verificar justificativa de preco ou solicitar negociacao previa."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"AJUSTAR_PRECO"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_1_4"><text>"DOC"</text></outputEntry>
<outputEntry id="OutputEntry_Alertar_1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Aprovado: OPME autorizado com preco dentro da faixa</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>[0..20]</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"APROVADO - OPME com autorizacao previa valida, registro ANVISA ativo, quantidade dentro do autorizado e preco dentro da faixa de referencia. Prosseguir com faturamento."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"FATURAR"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_1_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Prosseguir_1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_BILL-MATERIAL-001">
        <description>Regra padrao - Dados insuficientes para decisao automatica</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"REVISAR - Dados insuficientes para validacao automatica. Verificar: status de autorizacao, registro ANVISA, preco de referencia e quantidade autorizada."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"REVISAR_DOCUMENTACAO"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_BILL-MATERIAL-001_4"><text>"NENHUM"</text></outputEntry>
<outputEntry id="OutputEntry_Fallback_BILL-MATERIAL-001_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL-MATERIAL-001">
      <dmndi:DMNShape id="DMNShape_Decision_BILL-MATERIAL-001" dmnElementRef="Decision_BILL-MATERIAL-001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>