  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_BILL_BUNDLE_005" name="Cirurgia Coluna Artrodese Bundle Validation" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_BILL_BUNDLE_005" name="Validar Bundle Coluna Artrodese">
    <decisionTable id="DecisionTable_BILL_BUNDLE_005" hitPolicy="FIRST">

      <input id="Input_1" label="Tipo Procedimento Principal">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>tipoProcedimentoPrincipal</text>
        </inputExpression>
        <inputValues><text>"artrodese", "descompressao", "discectomia", "outro"</text></inputValues>
      </input>

      <input id="Input_2" label="Numero Niveis">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>numeroNiveis</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Implantes Utilizados">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>implantesUtilizados</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Contrato Pagamento Por Nivel">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>contratoPagamentoPorNivel</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Documentacao Imagem Completa">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>documentacaoImagemCompleta</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string" />
      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string" />

      
      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string"><outputValues>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</outputValues></output><output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string"><outputValues>"BAIXO", "MEDIO", "ALTO", "CRITICO"</outputValues></output><rule id="Rule_Block_1">
        <description>Bloquear artrodese sem documentacao de imagem completa</description>
        <inputEntry id="InputEntry_B1_1"><text>"artrodese"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_5"><text>false</text></inputEntry>
        
      <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_2"><text>"Artrodese sem documentacao de imagem pre e pos-operatoria. Alto risco de glosa."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_3"><text>"Anexar RM/TC pre-op e radiografia pos-op confirmando niveis e implantes."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Block_1_4"><text>"VALOR"</text></outputEntry>
      <outputEntry id="OutputEntry_Block_1_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Block_2">
        <description>Bloquear niveis acima do padrao sem pagamento por nivel</description>
        <inputEntry id="InputEntry_B2_1"><text>"artrodese"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 3</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_5"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B2_2"><text>"Artrodese de mais de 3 niveis sem contrato de pagamento por nivel. Revisar cobertura."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B2_3"><text>"Negociar pagamento por nivel adicional ou justificar clinicamente extensao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Block_2_4"><text>"VALOR"</text></outputEntry>
      <outputEntry id="OutputEntry_Block_2_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Alert_1">
        <description>Alertar artrodese multinivel - confirmar cobranca por nivel</description>
        <inputEntry id="InputEntry_A1_1"><text>"artrodese"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>&gt; 2</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_2"><text>"Artrodese multinivel com pagamento por nivel. Confirmar quantidade de implantes."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_3"><text>"Documentar cada nivel com imagem e listar todos implantes utilizados."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Alert_1_4"><text>"VALOR"</text></outputEntry>
      <outputEntry id="OutputEntry_Alert_1_5"><text>"MEDIO"</text></outputEntry></rule>

      
      <rule id="Rule_Proceed_1">
        <description>Prosseguir artrodese padrao com documentacao</description>
        <inputEntry id="InputEntry_P1_1"><text>"artrodese"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>[1..3]</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_5"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_P1_2"><text>"Artrodese padrao com documentacao completa. Cobranca aprovada."</text></outputEntry>
        
      <outputEntry id="OutputEntry_P1_3"><text>"Faturar procedimento com nota fiscal de implantes."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Proceed_1_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Proceed_1_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Proceed_2">
        <description>Prosseguir descompressao simples</description>
        <inputEntry id="InputEntry_P2_1"><text>"descompressao", "discectomia"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>[1..2]</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_5"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_P2_2"><text>"Descompressao/discectomia sem implantes. Cobranca padrao."</text></outputEntry>
        
      <outputEntry id="OutputEntry_P2_3"><text>"Faturar procedimento conforme tabela."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Proceed_2_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Proceed_2_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Fallback">
        <description>Caso padrao - revisar manualmente</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_5"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_2"><text>"Dados insuficientes para validar bundle cirurgia de coluna."</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_3"><text>"Verificar tipo procedimento, niveis, implantes e documentacao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Fallback_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Fallback_5"><text>"MEDIO"</text></outputEntry></rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_BILL_BUNDLE_005">
      <dmndi:DMNShape id="DMNShape_Decision" dmnElementRef="Decision_BILL_BUNDLE_005">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>