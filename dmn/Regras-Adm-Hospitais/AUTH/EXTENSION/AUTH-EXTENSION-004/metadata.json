{
  "ruleId": "AUTH-EXTENSION-004",
  "ruleName": "Prorrogacao Pediatrica",
  "version": "1.0.0",
  "category": "AUTH",
  "subcategory": "EXTENSION",
  "perspective": "HOSPITAL",
  "description": "Avalia solicitacoes de prorrogacao de autorizacao para tratamentos pediatricos",
  "inputs": [
    {
      "name": "idadePaciente",
      "type": "number",
      "description": "Idade do paciente em anos"
    },
    {
      "name": "tipoTratamento",
      "type": "string",
      "description": "Tipo de tratamento (PEDIATRICO, ADOLESCENTE, TRANSICAO, ADULTO)"
    },
    {
      "name": "acompanhamentoEspecializado",
      "type": "boolean",
      "description": "Indica se existe acompanhamento de especialista pediatrico"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string"
    },
    {
      "name": "acaoRecomendada",
      "type": "string"
    }
  ],
  "businessRules": {
    "blockWhen": "idade > 18 AND pediatrico=true",
    "alertWhen": "idade > 16"
  },
  "references": [
    "RN ANS 259/2011",
    "Estatuto da Crianca e Adolescente (ECA)",
    "Lei 9.656/1998"
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06"
}
