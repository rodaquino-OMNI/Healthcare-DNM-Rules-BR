  Categoria: AUTH-EXTENSION
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_AUTH_EXTENSION_004" name="Prorrogacao Pediatrica" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_EXTENSION_004" name="Avaliar Prorrogacao de Tratamento Pediatrico">
    <decisionTable id="DecisionTable_AUTH_EXTENSION_004" hitPolicy="FIRST">

      <input id="Input_1" label="Idade Paciente">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>idadePaciente</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Tipo Tratamento">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoTratamento</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"PEDIATRICO", "ADOLESCENTE", "TRANSICAO", "ADULTO"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Acompanhamento Especializado">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>acompanhamentoEspecializado</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloqueio_1">
        <description>Paciente adulto em protocolo pediatrico</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt; 18</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>"PEDIATRICO"</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"Paciente acima de 18 anos nao elegivel para protocolo pediatrico."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"Transferir para protocolo de tratamento adulto ou solicitar justificativa especial."</text></outputEntry>
<outputEntry id="Rule_Bloqueio_1_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Bloqueio_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Bloqueio_2">
        <description>Tratamento pediatrico sem especialista</description>
        <inputEntry id="InputEntry_B2_1"><text>&lt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"PEDIATRICO"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"Crianca ate 12 anos requer acompanhamento de pediatra."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"Vincular especialista pediatrico ao tratamento."</text></outputEntry>
<outputEntry id="Rule_Bloqueio_2_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Bloqueio_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Paciente em idade de transicao pediatrica</description>
        <inputEntry id="InputEntry_A1_1"><text>[16..18]</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"PEDIATRICO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Paciente em idade de transicao (16-18 anos). Avaliar passagem para adulto."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"Planejar transicao gradual para protocolo adulto conforme ECA."</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_2">
        <description>Adolescente em tratamento pediatrico</description>
        <inputEntry id="InputEntry_A2_1"><text>[13..16[</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"PEDIATRICO"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Adolescente em protocolo pediatrico. Verificar adequacao do tratamento."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"Avaliar se tratamento de adolescente seria mais adequado."</text></outputEntry>
<outputEntry id="Rule_Alerta_2_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Alerta_2_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Tratamento pediatrico adequado</description>
        <inputEntry id="InputEntry_P1_1"><text>&lt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"PEDIATRICO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Prorrogacao pediatrica aprovada. Acompanhamento especializado confirmado."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com autorizacao de tratamento pediatrico."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_2">
        <description>Protocolo de transicao adequado</description>
        <inputEntry id="InputEntry_P2_1"><text>[13..18]</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>"TRANSICAO"</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Tratamento de transicao aprovado para adolescente."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com protocolo de transicao pediatrico-adulto."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_3">
        <description>Tratamento de adolescente</description>
        <inputEntry id="InputEntry_P3_1"><text>[13..18]</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>"ADOLESCENTE"</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P3_2"><text>"Tratamento de adolescente aprovado."</text></outputEntry>
<outputEntry id="OutputEntry_P3_3"><text>"Prosseguir com autorizacao de tratamento."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_3_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_3_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_AUTH_EXTENSION_004">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Prorrogacao pediatrica requer analise manual."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria pediatrica avaliar elegibilidade."</text></outputEntry>
<outputEntry id="Rule_Fallback_AUTH_EXTENSION_004_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_AUTH_EXTENSION_004_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_EXTENSION_004">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_EXTENSION_004" dmnElementRef="Decision_AUTH_EXTENSION_004">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>