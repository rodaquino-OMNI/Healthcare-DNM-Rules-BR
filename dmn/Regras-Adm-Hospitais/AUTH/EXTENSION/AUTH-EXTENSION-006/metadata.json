{
  "ruleId": "AUTH-EXTENSION-006",
  "ruleName": "Prorrogacao Doenca Cronica",
  "version": "1.0.0",
  "category": "AUTH",
  "subcategory": "EXTENSION",
  "perspective": "HOSPITAL",
  "description": "Avalia solicitacoes de prorrogacao de autorizacao baseada em classificacao de doenca cronica",
  "inputs": [
    {
      "name": "cid10",
      "type": "string",
      "description": "Codigo CID-10 da doenca"
    },
    {
      "name": "tempoDiagnostico",
      "type": "number",
      "description": "Tempo desde o diagnostico em anos"
    },
    {
      "name": "laudoPeriodicidadeOk",
      "type": "boolean",
      "description": "Indica se o laudo esta dentro do prazo de periodicidade"
    },
    {
      "name": "classificacaoCronico",
      "type": "boolean",
      "description": "Indica se a doenca esta classificada como cronica"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string"
    },
    {
      "name": "acaoRecomendada",
      "type": "string"
    }
  ],
  "businessRules": {
    "blockWhen": "tempo < 1ano AND cronico=true",
    "alertWhen": "laudo_vencendo"
  },
  "references": [
    "RN ANS 259/2011",
    "RN 424/2017",
    "Lei 9.656/1998"
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06"
}
