<?xml version='1.0' encoding='utf-8'?>
<!--
  ============================================================================
  AUTH-EXTENSION-008 - Prorrogacao UTI
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-EXTENSION
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_AUTH_EXTENSION_008" name="Prorrogacao UTI" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_EXTENSION_008" name="Avaliar Prorrogacao de Internacao em UTI">
    <decisionTable id="DecisionTable_AUTH_EXTENSION_008" hitPolicy="FIRST">

      <input id="Input_1" label="Dias Internacao">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>diasInternacao</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Score Gravidade">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>scoreGravidade</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"CRITICO", "GRAVE", "MODERADO", "LEVE", "ESTAVEL"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Prognostico">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>prognostico</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"FAVORAVEL", "RESERVADO", "DESFAVORAVEL", "INDEFINIDO"</text>
        </inputValues>
      </input>

      <input id="Input_4" label="Tendencia Melhora">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>tendenciaMelhora</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloqueio_1">
        <description>Internacao prolongada com score de melhora</description>
        <inputEntry id="InputEntry_B1_1"><text>&gt; 60</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>"LEVE", "ESTAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"Paciente com mais de 60 dias em UTI e score estavel/leve. Nao justifica prorrogacao."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"Providenciar transferencia para unidade de menor complexidade."</text></outputEntry>
<outputEntry id="Rule_Bloqueio_1_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Bloqueio_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Bloqueio_2">
        <description>Paciente estavel para transferencia</description>
        <inputEntry id="InputEntry_B2_1"><text>&gt; 30</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"ESTAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>"FAVORAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>true</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"Paciente estavel com prognostico favoravel. Criterios de alta de UTI atingidos."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"Iniciar protocolo de alta de UTI conforme CFM 2.156/2016."</text></outputEntry>
<outputEntry id="Rule_Bloqueio_2_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Bloqueio_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Internacao prolongada requer revisao</description>
        <inputEntry id="InputEntry_A1_1"><text>[31..60]</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Internacao em UTI entre 31-60 dias. Revisao obrigatoria de permanencia."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"Convocar junta medica para avaliar continuidade de internacao em UTI."</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_2">
        <description>Prognostico desfavoravel requer discussao</description>
        <inputEntry id="InputEntry_A2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"CRITICO", "GRAVE"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>"DESFAVORAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A2_2"><text>"Paciente grave com prognostico desfavoravel. Discutir condutas com familia."</text></outputEntry>
<outputEntry id="OutputEntry_A2_3"><text>"Agendar reuniao multidisciplinar e comunicacao com familiares."</text></outputEntry>
<outputEntry id="Rule_Alerta_2_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Alerta_2_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Paciente critico necessita permanencia</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"CRITICO"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_4"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Paciente em estado critico sem melhora. Prorrogacao de UTI aprovada."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com autorizacao de permanencia em UTI."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_2">
        <description>Paciente grave em tratamento intensivo</description>
        <inputEntry id="InputEntry_P2_1"><text>&lt;= 30</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>"GRAVE"</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Paciente grave com internacao dentro do prazo padrao. Prorrogacao aprovada."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com autorizacao de tratamento intensivo."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_3">
        <description>Internacao recente em UTI</description>
        <inputEntry id="InputEntry_P3_1"><text>&lt;= 15</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P3_2"><text>"Internacao em UTI dentro do periodo inicial. Aprovacao automatica."</text></outputEntry>
<outputEntry id="OutputEntry_P3_3"><text>"Prosseguir com autorizacao padrao de UTI."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_3_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_3_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_4">
        <description>Paciente moderado sem melhora</description>
        <inputEntry id="InputEntry_P4_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P4_2"><text>"MODERADO"</text></inputEntry>
        <inputEntry id="InputEntry_P4_3"><text>"RESERVADO"</text></inputEntry>
        <inputEntry id="InputEntry_P4_4"><text>false</text></inputEntry>
<outputEntry id="OutputEntry_P4_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P4_2"><text>"Paciente moderado sem melhora e prognostico reservado. Manter em UTI."</text></outputEntry>
<outputEntry id="OutputEntry_P4_3"><text>"Prosseguir com prorrogacao e intensificar monitoramento."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_4_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_4_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_AUTH_EXTENSION_008">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Prorrogacao de UTI requer analise da equipe intensivista."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"Encaminhar para medico intensivista avaliar necessidade de permanencia."</text></outputEntry>
<outputEntry id="Rule_Fallback_AUTH_EXTENSION_008_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_AUTH_EXTENSION_008_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_EXTENSION_008">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_EXTENSION_008" dmnElementRef="Decision_AUTH_EXTENSION_008">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>