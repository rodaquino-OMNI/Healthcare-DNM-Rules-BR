<!--
  ============================================================================
  AUTH-EXTENSION-002 - Renovacao Tratamento Cronico
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-EXTENSION
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_AUTH_EXTENSION_002" name="Renovacao Tratamento Cronico" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_EXTENSION_002" name="Avaliar Renovacao de Tratamento Cronico">
    <decisionTable id="DecisionTable_AUTH_EXTENSION_002" hitPolicy="FIRST">

      <input id="Input_1" label="Tipo Doenca">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>tipoDoenca</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"CRONICA", "AGUDA", "DEGENERATIVA", "AUTOIMUNE"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Tempo Previsto (meses)">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>tempoPrevisto</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Meses Desde Laudo">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>laudoAtualizacaoMeses</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->
<rule id="Rule_Bloqueio_1">
        <description>Laudo de atualizacao com mais de 6 meses</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>&gt; 6</text></inputEntry>
<outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B1_2"><text>"Laudo de atualizacao vencido. Prazo maximo de 6 meses conforme RN 259/2011."</text></outputEntry>
<outputEntry id="OutputEntry_B1_3"><text>"Solicitar novo laudo medico atualizado para renovacao do tratamento."</text></outputEntry>
<outputEntry id="Rule_Bloqueio_1_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Bloqueio_1_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Bloqueio_2">
        <description>Doenca aguda nao elegivel para renovacao cronica</description>
        <inputEntry id="InputEntry_B2_1"><text>"AGUDA"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 12</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
<outputEntry id="OutputEntry_B2_2"><text>"Doenca aguda nao pode ter renovacao superior a 12 meses."</text></outputEntry>
<outputEntry id="OutputEntry_B2_3"><text>"Revisar classificacao da doenca ou solicitar nova autorizacao."</text></outputEntry>
<outputEntry id="Rule_Bloqueio_2_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Bloqueio_2_outputEntry_riscoDenial"><text>"ALTO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Alerta_1">
        <description>Laudo entre 4 e 6 meses - renovacao necessaria em breve</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>[4..6]</text></inputEntry>
<outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
<outputEntry id="OutputEntry_A1_2"><text>"Laudo de atualizacao proximo do vencimento. Providenciar renovacao."</text></outputEntry>
<outputEntry id="OutputEntry_A1_3"><text>"Agendar consulta para atualizacao do laudo medico."</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_alertasConformidade"><text>"PRAZO"</text></outputEntry>
<outputEntry id="Rule_Alerta_1_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_1">
        <description>Tratamento cronico com documentacao em dia</description>
        <inputEntry id="InputEntry_P1_1"><text>"CRONICA"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>&lt; 4</text></inputEntry>
<outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P1_2"><text>"Renovacao de tratamento cronico aprovada. Laudo dentro da validade."</text></outputEntry>
<outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento do tratamento continuado."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_1_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_2">
        <description>Tratamento degenerativo com laudo valido</description>
        <inputEntry id="InputEntry_P2_1"><text>"DEGENERATIVA"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>&lt; 4</text></inputEntry>
<outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P2_2"><text>"Renovacao de tratamento degenerativo aprovada."</text></outputEntry>
<outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com autorizacao de continuidade."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_2_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Prosseguir_3">
        <description>Tratamento autoimune com laudo valido</description>
        <inputEntry id="InputEntry_P3_1"><text>"AUTOIMUNE"</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>&lt; 4</text></inputEntry>
<outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
<outputEntry id="OutputEntry_P3_2"><text>"Renovacao de tratamento autoimune aprovada."</text></outputEntry>
<outputEntry id="OutputEntry_P3_3"><text>"Prosseguir com autorizacao de continuidade do tratamento."</text></outputEntry>
<outputEntry id="Rule_Prosseguir_3_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Prosseguir_3_outputEntry_riscoDenial"><text>"BAIXO"</text></outputEntry>
      </rule>

      
      <rule id="Rule_Fallback_AUTH_EXTENSION_002">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
<outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
<outputEntry id="OutputEntry_F_2"><text>"Renovacao de tratamento requer analise manual."</text></outputEntry>
<outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria medica avaliar elegibilidade de renovacao."</text></outputEntry>
<outputEntry id="Rule_Fallback_AUTH_EXTENSION_002_outputEntry_alertasConformidade"><text>"NENHUM"</text></outputEntry>
<outputEntry id="Rule_Fallback_AUTH_EXTENSION_002_outputEntry_riscoDenial"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_EXTENSION_002">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_EXTENSION_002" dmnElementRef="Decision_AUTH_EXTENSION_002">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>