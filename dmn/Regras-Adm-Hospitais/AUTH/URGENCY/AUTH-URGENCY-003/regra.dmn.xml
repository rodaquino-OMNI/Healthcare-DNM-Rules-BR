<!--
  ============================================================================
  AUTH-URGENCY-003 - Bypass por Condicao Risco de Vida
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-URGENCY
  Perspectiva: HOSPITAL (Administrativo)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_AUTH_URGENCY_003" name="Bypass por Condicao Risco de Vida" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_URGENCY_003" name="Aplicar Bypass por Risco de Vida">
    <decisionTable id="DecisionTable_AUTH_URGENCY_003" hitPolicy="FIRST">

      <input id="Input_1" label="Risco de Vida">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>riscoVida</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Classificacao Manchester">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>classificacaoManchester</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"VERMELHO", "LARANJA", "AMARELO", "VERDE", "AZUL"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Documentacao Clinica">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>documentacaoClinica</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="CID Emergencial">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>cidEmergencial</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string" />
      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string" />

      
      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string"><outputValues>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</outputValues></output><output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string"><outputValues>"BAIXO", "MEDIO", "ALTO", "CRITICO"</outputValues></output><rule id="Rule_Aprovado_1">
        <description>Classificacao Manchester vermelho - bypass imediato</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"VERMELHO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_2"><text>"Bypass por risco de vida. Classificacao Manchester vermelho."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_3"><text>"Atender imediatamente. Documentar e regularizar posteriormente."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Classificacao Manchester laranja com risco de vida</description>
        <inputEntry id="InputEntry_A2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"LARANJA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_A2_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_2"><text>"Bypass por risco de vida. Manchester laranja com documentacao."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_3"><text>"Atender e documentar risco de vida para regularizacao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_2_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_2_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_3">
        <description>CID classifica como emergencia</description>
        <inputEntry id="InputEntry_A3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>true</text></inputEntry>
        
      <outputEntry id="OutputEntry_A3_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A3_2"><text>"Bypass por CID emergencial com risco de vida documentado."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A3_3"><text>"Atender e anexar documentacao clinica para regularizacao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_3_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_3_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Alerta_1">
        <description>Alegacao de risco sem documentacao adequada</description>
        <inputEntry id="InputEntry_AL1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_AL1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AL1_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_AL1_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_AL1_1"><text>"Alertar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_AL1_2"><text>"Risco de vida alegado mas documentacao incompleta."</text></outputEntry>
        
      <outputEntry id="OutputEntry_AL1_3"><text>"Documentar condicao clinica detalhadamente."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Alerta_1_4"><text>"DOC"</text></outputEntry>
      <outputEntry id="OutputEntry_Alerta_1_5"><text>"MEDIO"</text></outputEntry></rule>

      
      <rule id="Rule_Bloqueio_1">
        <description>Sem risco de vida documentado</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>"VERDE", "AZUL"</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_2"><text>"Bypass por risco de vida nao aplicavel. Sem risco documentado."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_3"><text>"Seguir fluxo normal de autorizacao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Bloqueio_1_4"><text>"DOC"</text></outputEntry>
      <outputEntry id="OutputEntry_Bloqueio_1_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Fallback_AUTH_URGENCY_003">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_2"><text>"Avaliar condicao de risco de vida."</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_3"><text>"Solicitar avaliacao medica para classificacao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Fallback_AUTH_URGENCY_003_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Fallback_AUTH_URGENCY_003_5"><text>"MEDIO"</text></outputEntry></rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_URGENCY_003">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_URGENCY_003" dmnElementRef="Decision_AUTH_URGENCY_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>