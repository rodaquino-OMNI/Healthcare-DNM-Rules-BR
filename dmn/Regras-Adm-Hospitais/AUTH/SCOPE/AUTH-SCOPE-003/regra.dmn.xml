<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  AUTH-SCOPE-003 - Local Atendimento Compativel (Ambulatorio vs Internacao)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-SCOPE
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Local realizado corresponde ao autorizado
  - Compatibilidade entre local autorizado e realizado
  - Modalidade de atendimento adequada

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Local realizado diferente do autorizado
  - Internacao autorizada mas atendimento ambulatorial
  - Incompatibilidade de modalidade

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - RN 465/2021 (Procedimentos Regulados)
  - TISS 4.01.00 (Guia SP/SADT)
  - Lei 9.656/1998 Art. 12 (Cobertura Obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_AUTH_SCOPE_003"
             name="Local Atendimento Compativel (Ambulatorio vs Internacao)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_SCOPE_003" name="Verificar Local Atendimento Compativel">
    <decisionTable id="DecisionTable_AUTH_SCOPE_003" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Local Autorizado">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>localAutorizado</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"AMBULATORIO", "INTERNACAO", "DOMICILIAR"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Local Realizado">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>localRealizado</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"AMBULATORIO", "INTERNACAO", "DOMICILIAR"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Local incompativel -->
      <rule id="Rule_Bloqueio_1">
        <description>Local realizado diferente do autorizado</description>
        <inputEntry id="InputEntry_B1_1"><text>not("" + localRealizado = "" + localAutorizado)</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Local de atendimento realizado difere do autorizado pela operadora. Faturamento bloqueado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar nova autorizacao para local correto ou realizar atendimento no local autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Internacao autorizada, ambulatorio realizado -->
      <rule id="Rule_Alerta_1">
        <description>Autorizacao para internacao mas realizado em ambulatorio</description>
        <inputEntry id="InputEntry_A1_1"><text>"INTERNACAO"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"AMBULATORIO"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Procedimento autorizado para internacao mas realizado em ambulatorio. Pode gerar glosa."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Verificar justificativa clinica para alteracao. Solicitar anuencia da operadora se necessario."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Local compativel -->
      <rule id="Rule_Aprovado_1">
        <description>Local realizado identico ao autorizado</description>
        <inputEntry id="InputEntry_P1_1"><text>"" + localRealizado = "" + localAutorizado</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Local de atendimento realizado corresponde ao autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme local autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_AUTH_SCOPE_003">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de local de atendimento requer analise manual."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria verificar compatibilidade de local de atendimento."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_SCOPE_003">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_SCOPE_003" dmnElementRef="Decision_AUTH_SCOPE_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
