<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  AUTH-SCOPE-002 - Quantidade Sessoes Autorizadas vs Realizadas
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-SCOPE
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Sessoes realizadas dentro do limite autorizado
  - Quantidade compativel com autorizacao previa
  - Nao ha excedentes

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Sessoes realizadas excedem quantidade autorizada
  - Falta autorizacao para sessoes extras
  - Quantidade zerada ou invalida

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - RN 465/2021 (Procedimentos Regulados)
  - TISS 4.01.00 (Guia SP/SADT)
  - Lei 9.656/1998 Art. 12 (Cobertura Obrigatoria)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_AUTH_SCOPE_002"
             name="Quantidade Sessoes Autorizadas vs Realizadas"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_SCOPE_002" name="Verificar Quantidade Sessoes Autorizadas vs Realizadas">
    <decisionTable id="DecisionTable_AUTH_SCOPE_002" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Sessoes Autorizadas">
        <inputExpression id="InputExpression_1" typeRef="integer">
          <text>sessoesAutorizadas</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Sessoes Realizadas">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>sessoesRealizadas</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Excedente sem autorizacao -->
      <rule id="Rule_Bloqueio_1">
        <description>Sessoes realizadas excedem quantidade autorizada</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>&gt; sessoesAutorizadas</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Quantidade de sessoes realizadas excede o autorizado. Faturamento bloqueado para excedentes."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar autorizacao adicional para sessoes excedentes ou faturar apenas quantidade autorizada."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"FREQ"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Quantidade invalida -->
      <rule id="Rule_Bloqueio_2">
        <description>Quantidade de sessoes invalida</description>
        <inputEntry id="InputEntry_B2_1"><text>&lt;= 0</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Quantidade de sessoes autorizadas invalida (zero ou negativa)."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Corrigir autorizacao com quantidade valida de sessoes."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Proximo do limite -->
      <rule id="Rule_Alerta_1">
        <description>Sessoes realizadas proximas ao limite</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[sessoesAutorizadas * 0.8..sessoesAutorizadas]</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Sessoes realizadas atingiram 80% ou mais do limite autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Avaliar necessidade de prorrogacao da autorizacao antes de realizar novas sessoes."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"FREQ"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Quantidade dentro do limite -->
      <rule id="Rule_Aprovado_1">
        <description>Sessoes realizadas dentro do limite autorizado</description>
        <inputEntry id="InputEntry_P1_1"><text>&gt; 0</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt; sessoesAutorizadas * 0.8</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Quantidade de sessoes realizadas esta dentro do limite autorizado."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento das sessoes realizadas."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_AUTH_SCOPE_002">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de quantidade de sessoes requer analise manual."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria verificar quantidades autorizadas vs realizadas."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_SCOPE_002">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_SCOPE_002" dmnElementRef="Decision_AUTH_SCOPE_002">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
