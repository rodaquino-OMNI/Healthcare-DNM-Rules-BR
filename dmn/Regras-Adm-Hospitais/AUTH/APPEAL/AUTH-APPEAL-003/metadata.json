{
  "ruleId": "AUTH-APPEAL-003",
  "ruleName": "Avaliacao Elegibilidade para Recurso",
  "version": "1.0.0",
  "category": "AUTH",
  "subcategory": "APPEAL",
  "perspective": "HOSPITAL",
  "description": "Avalia se o caso e elegivel para recurso",
  "inputs": [
    {
      "name": "motivoNegativa",
      "type": "string",
      "description": "Motivo da negativa da autorizacao"
    },
    {
      "name": "podeContestar",
      "type": "boolean",
      "description": "Indica se o motivo e contestavel"
    },
    {
      "name": "recursoAnterior",
      "type": "boolean",
      "description": "Indica se ja houve recurso anterior"
    },
    {
      "name": "recursosDisponiveis",
      "type": "number",
      "description": "Numero de instancias de recurso disponiveis"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string"
    },
    {
      "name": "acaoRecomendada",
      "type": "string"
    }
  ],
  "references": [
    "RN 395/2016 ANS",
    "Regulamento de Recursos"
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06"
}
