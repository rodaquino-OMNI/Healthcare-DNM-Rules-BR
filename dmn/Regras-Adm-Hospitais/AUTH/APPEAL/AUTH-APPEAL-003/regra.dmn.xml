<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_AUTH_APPEAL_003" name="Avaliacao Elegibilidade para Recurso" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_APPEAL_003" name="Avaliar Elegibilidade para Recurso">
    <decisionTable id="DecisionTable_AUTH_APPEAL_003" hitPolicy="FIRST">

      <input id="Input_1" label="Motivo Negativa">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>motivoNegativa</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"NAO_COBERTO", "DOCUMENTACAO_INCOMPLETA", "CID_INCOMPATIVEL", "SEM_INDICACAO", "LIMITE_EXCEDIDO", "CARENCIA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Pode Contestar">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>podeContestar</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Recurso Anterior">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>recursoAnterior</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Recursos Disponiveis">
        <inputExpression id="InputExpression_4" typeRef="number">
          <text>recursosDisponiveis</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string" />
      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string" />

      
      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string"><outputValues>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</outputValues></output><output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string"><outputValues>"BAIXO", "MEDIO", "ALTO", "CRITICO"</outputValues></output><rule id="Rule_Bloqueio_1">
        <description>Nao ha mais recursos disponiveis</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_4"><text>0</text></inputEntry>
        
      <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_2"><text>"Todos os recursos foram esgotados. Nao ha mais instancias."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_3"><text>"Considerar via judicial ou nova solicitacao."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Bloqueio_1_4"><text>"PRAZO"</text></outputEntry>
      <outputEntry id="OutputEntry_Bloqueio_1_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Bloqueio_2">
        <description>Negativa por carencia nao contestavel</description>
        <inputEntry id="InputEntry_B2_1"><text>"CARENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B2_2"><text>"Negativa por carencia nao e passivel de contestacao."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B2_3"><text>"Aguardar cumprimento da carencia ou justificar urgencia."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Bloqueio_2_4"><text>"PRAZO"</text></outputEntry>
      <outputEntry id="OutputEntry_Bloqueio_2_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Negativa por documentacao incompleta - contestavel</description>
        <inputEntry id="InputEntry_A1_1"><text>"DOCUMENTACAO_INCOMPLETA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>&gt; 0</text></inputEntry>
        
      <outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_2"><text>"Elegivel para recurso. Completar documentacao e protocolar."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_3"><text>"Reunir documentacao faltante e protocolar recurso."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Negativa por CID incompativel - contestavel</description>
        <inputEntry id="InputEntry_A2_1"><text>"CID_INCOMPATIVEL"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_4"><text>&gt; 0</text></inputEntry>
        
      <outputEntry id="OutputEntry_A2_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_2"><text>"Elegivel para recurso. Justificar indicacao clinica."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_3"><text>"Anexar justificativa medica detalhada e protocolar recurso."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_2_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_2_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_3">
        <description>Negativa passivel de contestacao</description>
        <inputEntry id="InputEntry_A3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_2"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A3_4"><text>&gt; 0</text></inputEntry>
        
      <outputEntry id="OutputEntry_A3_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A3_2"><text>"Caso elegivel para recurso."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A3_3"><text>"Preparar fundamentacao e protocolar recurso."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_3_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_3_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Fallback_AUTH_APPEAL_003">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_4"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_2"><text>"Avaliar elegibilidade para recurso."</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_3"><text>"Analisar motivo da negativa e opcoes de recurso."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Fallback_AUTH_APPEAL_003_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Fallback_AUTH_APPEAL_003_5"><text>"MEDIO"</text></outputEntry></rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_APPEAL_003">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_APPEAL_003" dmnElementRef="Decision_AUTH_APPEAL_003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>