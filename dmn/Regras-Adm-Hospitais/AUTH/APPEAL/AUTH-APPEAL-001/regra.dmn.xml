<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_AUTH_APPEAL_001" name="Verificacao Conformidade Prazo de Recurso" targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_APPEAL_001" name="Verificar Conformidade Prazo de Recurso">
    <decisionTable id="DecisionTable_AUTH_APPEAL_001" hitPolicy="FIRST">

      <input id="Input_1" label="Foi Negado">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>foiNegado</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Dias Desde Negativa">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>diasDesdeNegativa</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Prazo Recurso Dias">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>prazoRecursoDias</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string" />
      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string" />

      
      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string"><outputValues>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</outputValues></output><output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string"><outputValues>"BAIXO", "MEDIO", "ALTO", "CRITICO"</outputValues></output><rule id="Rule_Bloqueio_1">
        <description>Prazo para recurso expirado</description>
        <inputEntry id="InputEntry_B1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>&gt; 30</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_2"><text>"Prazo para recurso expirado. Mais de 30 dias desde a negativa."</text></outputEntry>
        
      <outputEntry id="OutputEntry_B1_3"><text>"Solicitar nova autorizacao. Recurso nao mais viavel."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Bloqueio_1_4"><text>"PRAZO"</text></outputEntry>
      <outputEntry id="OutputEntry_Bloqueio_1_5"><text>"ALTO"</text></outputEntry></rule>

      
      <rule id="Rule_Alerta_1">
        <description>Prazo para recurso proximo de expirar</description>
        <inputEntry id="InputEntry_AL1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_AL1_2"><text>[25..30]</text></inputEntry>
        <inputEntry id="InputEntry_AL1_3"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_AL1_1"><text>"Alertar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_AL1_2"><text>"URGENTE: Prazo para recurso expira em breve."</text></outputEntry>
        
      <outputEntry id="OutputEntry_AL1_3"><text>"Protocolar recurso imediatamente."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Alerta_1_4"><text>"PRAZO"</text></outputEntry>
      <outputEntry id="OutputEntry_Alerta_1_5"><text>"MEDIO"</text></outputEntry></rule>

      
      <rule id="Rule_Alerta_2">
        <description>Prazo para recurso em andamento</description>
        <inputEntry id="InputEntry_AL2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_AL2_2"><text>[15..24]</text></inputEntry>
        <inputEntry id="InputEntry_AL2_3"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_AL2_1"><text>"Alertar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_AL2_2"><text>"Prazo para recurso em andamento. Preparar documentacao."</text></outputEntry>
        
      <outputEntry id="OutputEntry_AL2_3"><text>"Iniciar preparacao do recurso."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Alerta_2_4"><text>"PRAZO"</text></outputEntry>
      <outputEntry id="OutputEntry_Alerta_2_5"><text>"MEDIO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_1">
        <description>Dentro do prazo para recurso</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>&lt; 15</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_A1_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_2"><text>"Dentro do prazo para recurso. Tempo habil disponivel."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A1_3"><text>"Preparar e protocolar recurso."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_1_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_1_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_2">
        <description>Autorizacao nao foi negada</description>
        <inputEntry id="InputEntry_A2_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_A2_1"><text>"Prosseguir"</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_2"><text>"Autorizacao nao foi negada. Recurso nao aplicavel."</text></outputEntry>
        
      <outputEntry id="OutputEntry_A2_3"><text>"Prosseguir com fluxo normal."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Aprovado_2_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Aprovado_2_5"><text>"BAIXO"</text></outputEntry></rule>

      
      <rule id="Rule_Fallback_AUTH_APPEAL_001">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        
      <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_2"><text>"Verificar prazo de recurso."</text></outputEntry>
        
      <outputEntry id="OutputEntry_F_3"><text>"Consultar data da negativa e calcular prazo."</text></outputEntry>
      
      <outputEntry id="OutputEntry_Fallback_AUTH_APPEAL_001_4"><text>"NENHUM"</text></outputEntry>
      <outputEntry id="OutputEntry_Fallback_AUTH_APPEAL_001_5"><text>"MEDIO"</text></outputEntry></rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_APPEAL_001">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_APPEAL_001" dmnElementRef="Decision_AUTH_APPEAL_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>