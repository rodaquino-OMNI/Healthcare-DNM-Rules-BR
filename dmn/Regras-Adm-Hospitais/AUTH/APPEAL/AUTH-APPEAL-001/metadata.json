{
  "ruleId": "AUTH-APPEAL-001",
  "ruleName": "Verificacao Conformidade Prazo de Recurso",
  "version": "1.0.0",
  "category": "AUTH",
  "subcategory": "APPEAL",
  "perspective": "HOSPITAL",
  "description": "Verifica se o recurso esta dentro do prazo regulamentar",
  "inputs": [
    {
      "name": "foiNegado",
      "type": "boolean",
      "description": "Indica se a autorizacao foi negada"
    },
    {
      "name": "diasDesdeNegativa",
      "type": "number",
      "description": "Dias desde a negativa da autorizacao"
    },
    {
      "name": "prazoRecursoDias",
      "type": "number",
      "description": "Prazo em dias para recurso"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string"
    },
    {
      "name": "acaoRecomendada",
      "type": "string"
    }
  ],
  "references": [
    "RN 395/2016 ANS",
    "CDC Art. 26"
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06"
}
