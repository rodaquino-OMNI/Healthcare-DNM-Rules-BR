<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  AUTH-TIMING-008 - Prorrogacao UTI Automatica
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-TIMING
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Internacao UTI dentro do prazo autorizado inicial
  - Prorrogacao automatica prevista em contrato
  - Documentacao de gravidade e necessidade presente

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - UTI prolongada sem criterios para prorrogacao automatica
  - Ausencia de justificativa clinica para permanencia
  - Paciente sem criterios de gravidade para UTI

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Renovacao de Autorizacao)
  - RN 465/2021 (Procedimentos de Internacao)
  - RN 338/2013 Art. 2 (Criterios UTI)
  - Resolucao CFM 2271/2020 (Criterios Admissao UTI)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_AUTH_TIMING_008"
             name="Prorrogacao UTI Automatica"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_TIMING_008" name="Verificar Prorrogacao Automatica de UTI">
    <decisionTable id="DecisionTable_AUTH_TIMING_008" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tipo Atendimento">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>tipoAtendimento</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ELETIVO", "URGENCIA", "EMERGENCIA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Dias Internacao">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>diasInternacao</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tem Prorrogacao">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>temProrrogacao</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - UTI emergencial prolongada sem prorrogacao (>7 dias) -->
      <rule id="Rule_Bloqueio_1">
        <description>UTI de emergencia acima de 7 dias sem prorrogacao autorizada</description>
        <inputEntry id="InputEntry_B1_1"><text>"EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>&gt; 7</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"UTI de emergencia acima de 7 dias sem prorrogacao autorizada. Prazo tipico expirado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar prorrogacao urgente com relatorio medico justificando permanencia em UTI."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - UTI eletiva prolongada sem prorrogacao (>5 dias) -->
      <rule id="Rule_Bloqueio_2">
        <description>UTI eletiva acima de 5 dias sem prorrogacao autorizada</description>
        <inputEntry id="InputEntry_B2_1"><text>"ELETIVO"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 5</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"UTI eletiva acima de 5 dias sem prorrogacao autorizada. Prazo tipico expirado."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Solicitar prorrogacao com relatorio medico justificando permanencia em UTI pos-cirurgica."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - UTI critica prolongada (>14 dias) sem prorrogacao -->
      <rule id="Rule_Bloqueio_3">
        <description>UTI acima de 14 dias sem prorrogacao autorizada</description>
        <inputEntry id="InputEntry_B3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>&gt; 14</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"UTI prolongada acima de 14 dias sem prorrogacao. Risco critico de glosa."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"URGENTE: Solicitar prorrogacao com relatorio medico completo e analise de criterios de permanencia em UTI."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - UTI emergencial proxima ao limite (5-7 dias) -->
      <rule id="Rule_Alerta_1">
        <description>UTI de emergencia entre 5-7 dias, proxima ao limite</description>
        <inputEntry id="InputEntry_A1_1"><text>"EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[5..7]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"UTI de emergencia entre 5-7 dias. Proxima ao limite tipico. Avaliar necessidade de prorrogacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Solicitar avaliacao medica sobre previsao de alta ou necessidade de prorrogacao da UTI."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - UTI eletiva proxima ao limite (3-5 dias) -->
      <rule id="Rule_Alerta_2">
        <description>UTI eletiva entre 3-5 dias, proxima ao limite</description>
        <inputEntry id="InputEntry_A2_1"><text>"ELETIVO"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>[3..5]</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"UTI eletiva entre 3-5 dias. Proxima ao limite tipico pos-cirurgico. Avaliar necessidade de prorrogacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Solicitar avaliacao medica sobre previsao de alta ou necessidade de prorrogacao da UTI."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - UTI emergencial dentro do prazo inicial (0-5 dias) -->
      <rule id="Rule_Aprovado_1">
        <description>UTI de emergencia dentro do prazo inicial tipico</description>
        <inputEntry id="InputEntry_P1_1"><text>"EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>[0..4]</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"UTI de emergencia dentro do prazo inicial tipico (0-4 dias). Faturamento ok."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento. Monitorar previsao de alta da UTI para planejamento."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - UTI eletiva dentro do prazo inicial (0-3 dias) -->
      <rule id="Rule_Aprovado_2">
        <description>UTI eletiva dentro do prazo inicial tipico pos-cirurgico</description>
        <inputEntry id="InputEntry_P2_1"><text>"ELETIVO"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>[0..2]</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"UTI eletiva dentro do prazo inicial tipico pos-cirurgico (0-2 dias). Faturamento ok."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento. Monitorar previsao de alta da UTI para planejamento."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P3: Aprovado - UTI com prorrogacao autorizada -->
      <rule id="Rule_Aprovado_3">
        <description>UTI prolongada com prorrogacao autorizada</description>
        <inputEntry id="InputEntry_P3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>&gt; 5</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P3_2"><text>"UTI prolongada com prorrogacao autorizada pela operadora. Faturamento ok."</text></outputEntry>
        <outputEntry id="OutputEntry_P3_3"><text>"Prosseguir com faturamento conforme prorrogacao autorizada. Monitorar necessidade de novas renovacoes."</text></outputEntry>
        <outputEntry id="OutputEntry_P3_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P3_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_AUTH_TIMING_008">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de prorrogacao de UTI requer analise manual especializada."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria medica avaliar criterios de permanencia em UTI e status de prorrogacoes."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_TIMING_008">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_TIMING_008" dmnElementRef="Decision_AUTH_TIMING_008">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
