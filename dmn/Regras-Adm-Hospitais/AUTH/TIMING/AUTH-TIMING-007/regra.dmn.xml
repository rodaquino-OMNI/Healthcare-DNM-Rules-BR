<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  AUTH-TIMING-007 - Renovacao Internacao Prolongada
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-TIMING
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Internacao dentro do prazo autorizado inicial
  - Renovacao solicitada antes do vencimento (48h antecedencia)
  - Justificativa clinica para prolongamento presente

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Internacao alem do prazo sem renovacao
  - Renovacao solicitada apos vencimento
  - Ausencia de justificativa clinica

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Renovacao de Autorizacao)
  - RN 465/2021 (Procedimentos de Internacao)
  - TISS 4.01.00 (Guia Internacao)
  - Instrucao Normativa DIDES/GGRAS 58/2020
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_AUTH_TIMING_007"
             name="Renovacao Internacao Prolongada"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_TIMING_007" name="Verificar Renovacao de Internacao Prolongada">
    <decisionTable id="DecisionTable_AUTH_TIMING_007" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tipo Atendimento">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>tipoAtendimento</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ELETIVO", "URGENCIA", "EMERGENCIA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Dias Internacao">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>diasInternacao</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tem Prorrogacao">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>temProrrogacao</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Internacao prolongada sem prorrogacao -->
      <rule id="Rule_Bloqueio_1">
        <description>Internacao acima de 15 dias sem prorrogacao autorizada</description>
        <inputEntry id="InputEntry_B1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>&gt; 15</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Internacao acima de 15 dias sem prorrogacao autorizada pela operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar prorrogacao da internacao com justificativa clinica detalhada antes de prosseguir."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Internacao critica prolongada (>30 dias) sem prorrogacao -->
      <rule id="Rule_Bloqueio_2">
        <description>Internacao acima de 30 dias sem prorrogacao</description>
        <inputEntry id="InputEntry_B2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 30</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Internacao prolongada acima de 30 dias sem prorrogacao. Risco critico de glosa."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"URGENTE: Solicitar prorrogacao com relatorio medico completo e analise de viabilidade de alta."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Internacao proxima ao limite (10-15 dias) -->
      <rule id="Rule_Alerta_1">
        <description>Internacao entre 10-15 dias, proxima ao limite tipico</description>
        <inputEntry id="InputEntry_A1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[10..15]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Internacao entre 10-15 dias, proxima ao limite tipico. Requer avaliacao de necessidade de prorrogacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Solicitar avaliacao medica sobre previsao de alta ou necessidade de prorrogacao junto a operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Internacao entre 16-30 dias sem prorrogacao -->
      <rule id="Rule_Alerta_2">
        <description>Internacao entre 16-30 dias sem prorrogacao formalizada</description>
        <inputEntry id="InputEntry_A2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>[16..30]</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Internacao entre 16-30 dias sem prorrogacao formalizada. Risco elevado de glosa parcial."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Solicitar URGENTE prorrogacao junto a operadora com justificativa clinica detalhada."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Internacao dentro do prazo inicial (0-10 dias) -->
      <rule id="Rule_Aprovado_1">
        <description>Internacao dentro do prazo inicial tipico</description>
        <inputEntry id="InputEntry_P1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>[0..10]</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Internacao dentro do prazo inicial tipico (0-10 dias). Faturamento ok."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento. Monitorar previsao de alta para planejamento."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Internacao com prorrogacao autorizada -->
      <rule id="Rule_Aprovado_2">
        <description>Internacao prolongada com prorrogacao autorizada</description>
        <inputEntry id="InputEntry_P2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>&gt; 10</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Internacao prolongada com prorrogacao autorizada pela operadora. Faturamento ok."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento conforme prorrogacao autorizada. Monitorar necessidade de novas renovacoes."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_AUTH_TIMING_007">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de renovacao de internacao requer analise manual especializada."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria avaliar necessidade clinica de prolongamento e status de prorrogacoes."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_TIMING_007">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_TIMING_007" dmnElementRef="Decision_AUTH_TIMING_007">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
