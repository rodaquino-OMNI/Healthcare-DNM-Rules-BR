<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  AUTH-PREAUTH-008 - Multiplos Procedimentos Mesma Guia
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-PREAUTH
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Autorizacao abrange todos os procedimentos da guia
  - Quantidade de procedimentos dentro do limite autorizado
  - Documentacao clinica justifica multiplos procedimentos

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Procedimento adicional nao autorizado
  - Quantidade de procedimentos excede limite da guia
  - Falta justificativa clinica para multiplicidade

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - TISS 4.01.00 (Guia SADT)
  - RN 465/2021 (Procedimentos Regulados)
  - Instrucao Normativa DIDES/GGRAS 58/2020
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_AUTH_PREAUTH_008"
             name="Multiplos Procedimentos Mesma Guia"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_PREAUTH_008" name="Verificar Multiplos Procedimentos na Mesma Guia">
    <decisionTable id="DecisionTable_AUTH_PREAUTH_008" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tem Autorizacao">
        <inputExpression id="InputExpression_1" typeRef="boolean">
          <text>temAutorizacao</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Status Autorizacao">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>statusAutorizacao</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"TOTAL", "PARCIAL", "NEGADA", "EXPIRADA"</text>
        </inputValues>
      </input>

      <input id="Input_3" label="Quantidade Procedimentos na Guia">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>quantidadeProcedimentos</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Sem autorizacao -->
      <rule id="Rule_Bloqueio_1">
        <description>Guia com multiplos procedimentos sem autorizacao</description>
        <inputEntry id="InputEntry_B1_1"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>&gt; 1</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Guia contendo multiplos procedimentos sem autorizacao previa. Faturamento bloqueado."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Solicitar autorizacao especificando todos os procedimentos a serem realizados."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Autorizacao negada -->
      <rule id="Rule_Bloqueio_2">
        <description>Autorizacao negada para multiplos procedimentos</description>
        <inputEntry id="InputEntry_B2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>"NEGADA"</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>&gt; 1</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Autorizacao negada pela operadora para multiplos procedimentos."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Encaminhar para recurso administrativo ou cancelar procedimentos nao autorizados."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Autorizacao expirada -->
      <rule id="Rule_Bloqueio_3">
        <description>Autorizacao expirada para multiplos procedimentos</description>
        <inputEntry id="InputEntry_B3_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>"EXPIRADA"</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>&gt; 1</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"Autorizacao para multiplos procedimentos expirada antes do atendimento."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Solicitar renovacao da autorizacao especificando todos os procedimentos."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Autorizacao parcial com multiplos procedimentos -->
      <rule id="Rule_Alerta_1">
        <description>Multiplos procedimentos com autorizacao parcial</description>
        <inputEntry id="InputEntry_A1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"PARCIAL"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt; 1</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Guia com multiplos procedimentos autorizada parcialmente. Requer segregacao individual de cada procedimento."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Faturar somente procedimentos autorizados. Itens nao autorizados requerem nova solicitacao ou cobranca particular."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Quantidade elevada de procedimentos -->
      <rule id="Rule_Alerta_2">
        <description>Quantidade elevada de procedimentos na mesma guia</description>
        <inputEntry id="InputEntry_A2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>"TOTAL"</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>&gt; 5</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Quantidade elevada de procedimentos na mesma guia. Requer validacao de necessidade clinica."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Verificar se todos os procedimentos sao clinicamente justificados e cobertos pela autorizacao."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"DUP"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Procedimento unico autorizado -->
      <rule id="Rule_Aprovado_1">
        <description>Procedimento unico totalmente autorizado</description>
        <inputEntry id="InputEntry_P1_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>"TOTAL"</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>1</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Procedimento unico totalmente autorizado pela operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Prosseguir com faturamento conforme guia autorizada."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Multiplos procedimentos autorizados -->
      <rule id="Rule_Aprovado_2">
        <description>Multiplos procedimentos totalmente autorizados</description>
        <inputEntry id="InputEntry_P2_1"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>"TOTAL"</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>[2..5]</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Multiplos procedimentos totalmente autorizados pela operadora."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Prosseguir com faturamento de todos os procedimentos autorizados."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_AUTH_PREAUTH_008">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de multiplos procedimentos requer analise manual detalhada."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria avaliar compatibilidade e necessidade clinica dos multiplos procedimentos."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_PREAUTH_008">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_PREAUTH_008" dmnElementRef="Decision_AUTH_PREAUTH_008">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
