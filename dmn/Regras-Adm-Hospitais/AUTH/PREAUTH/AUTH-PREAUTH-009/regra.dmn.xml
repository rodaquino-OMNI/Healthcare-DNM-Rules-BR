<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  AUTH-PREAUTH-009 - Autorizacao Retroativa (Emergencia)
  ============================================================================
  Versao: 1.0.0 (2026-02-08)
  Categoria: AUTH-PREAUTH
  Perspectiva: HOSPITAL (Faturamento/Auditoria)

  ============================================================================
  INDICACOES (Quando PROSSEGUIR):
  ============================================================================
  - Atendimento de emergencia caracterizado
  - Autorizacao retroativa dentro do prazo regulatorio (24-72h)
  - Documentacao de urgencia/emergencia presente

  ============================================================================
  CONTRAINDICACOES (Quando BLOQUEAR):
  ============================================================================
  - Atendimento eletivo sem autorizacao previa
  - Autorizacao retroativa fora do prazo permitido
  - Falta caracterizacao de emergencia na documentacao

  ============================================================================
  REFERENCIAS NORMATIVAS:
  ============================================================================
  - RN 424/2017 (Autorizacao Previa)
  - RN 465/2021 Art. 3 (Procedimentos de Urgencia/Emergencia)
  - Lei 9.656/1998 Art. 12-C (Cobertura Emergencial)
  - RN 259/2011 Art. 2 (Prazo Emergencia 12h, Urgencia 24h)
  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_AUTH_PREAUTH_009"
             name="Autorizacao Retroativa (Emergencia)"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <decision id="Decision_AUTH_PREAUTH_009" name="Verificar Autorizacao Retroativa para Emergencia">
    <decisionTable id="DecisionTable_AUTH_PREAUTH_009" hitPolicy="FIRST">

      <!-- ========== INPUTS ========== -->
      <input id="Input_1" label="Tipo Atendimento">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>tipoAtendimento</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"ELETIVO", "URGENCIA", "EMERGENCIA"</text>
        </inputValues>
      </input>

      <input id="Input_2" label="Horas Desde Atendimento">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>horasDesdeAtendimento</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tem Autorizacao">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>temAutorizacao</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 STANDARD) ========== -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues><text>"Prosseguir", "Bloquear", "Alertar", "Revisar"</text></outputValues>
      </output>

      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>

      <output id="Output_3" label="Acao Recomendada" name="acaoRecomendada" typeRef="string"/>

      <output id="Output_4" label="Alertas Conformidade" name="alertasConformidade" typeRef="string">
        <outputValues><text>"NENHUM", "DUP", "FREQ", "PRAZO", "DOC", "VALOR", "CRED", "CONTRATO"</text></outputValues>
      </output>

      <output id="Output_5" label="Risco Denial" name="riscoDenial" typeRef="string">
        <outputValues><text>"BAIXO", "MEDIO", "ALTO", "CRITICO"</text></outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- REGRA B1: Bloqueio - Atendimento eletivo sem autorizacao -->
      <rule id="Rule_Bloqueio_1">
        <description>Atendimento eletivo realizado sem autorizacao previa</description>
        <inputEntry id="InputEntry_B1_1"><text>"ELETIVO"</text></inputEntry>
        <inputEntry id="InputEntry_B1_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_B1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B1_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_2"><text>"Atendimento eletivo realizado sem autorizacao previa. Nao se aplica autorizacao retroativa."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_3"><text>"Procedimentos eletivos devem ter autorizacao previa obrigatoria. Solicitar autorizacao antes de executar."</text></outputEntry>
        <outputEntry id="OutputEntry_B1_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_B1_5"><text>"CRITICO"</text></outputEntry>
      </rule>

      <!-- REGRA B2: Bloqueio - Emergencia sem autorizacao retroativa apos 72h -->
      <rule id="Rule_Bloqueio_2">
        <description>Emergencia sem autorizacao apos prazo regulatorio</description>
        <inputEntry id="InputEntry_B2_1"><text>"EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_B2_2"><text>&gt; 72</text></inputEntry>
        <inputEntry id="InputEntry_B2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B2_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_2"><text>"Atendimento de emergencia sem autorizacao retroativa apos 72h. Prazo regulatorio expirado."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_3"><text>"Solicitar justificativa formal do atraso e negociar com operadora autorizacao excepcional."</text></outputEntry>
        <outputEntry id="OutputEntry_B2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B2_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA B3: Bloqueio - Urgencia sem autorizacao apos 48h -->
      <rule id="Rule_Bloqueio_3">
        <description>Urgencia sem autorizacao apos prazo regulatorio</description>
        <inputEntry id="InputEntry_B3_1"><text>"URGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_B3_2"><text>&gt; 48</text></inputEntry>
        <inputEntry id="InputEntry_B3_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_B3_1"><text>"Bloquear"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_2"><text>"Atendimento de urgencia sem autorizacao retroativa apos 48h. Prazo regulatorio expirado."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_3"><text>"Solicitar justificativa formal do atraso e negociar com operadora autorizacao excepcional."</text></outputEntry>
        <outputEntry id="OutputEntry_B3_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_B3_5"><text>"ALTO"</text></outputEntry>
      </rule>

      <!-- REGRA A1: Alerta - Emergencia no limite do prazo (48-72h) -->
      <rule id="Rule_Alerta_1">
        <description>Emergencia proxima ao limite do prazo retroativo</description>
        <inputEntry id="InputEntry_A1_1"><text>"EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>[48..72]</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A1_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_2"><text>"Emergencia sem autorizacao entre 48-72h. Prazo retroativo no limite regulatorio."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_3"><text>"Solicitar autorizacao retroativa URGENTE a operadora antes de vencer prazo de 72h."</text></outputEntry>
        <outputEntry id="OutputEntry_A1_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA A2: Alerta - Urgencia no limite do prazo (24-48h) -->
      <rule id="Rule_Alerta_2">
        <description>Urgencia proxima ao limite do prazo retroativo</description>
        <inputEntry id="InputEntry_A2_1"><text>"URGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_A2_2"><text>[24..48]</text></inputEntry>
        <inputEntry id="InputEntry_A2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_A2_1"><text>"Alertar"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_2"><text>"Urgencia sem autorizacao entre 24-48h. Prazo retroativo no limite regulatorio."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_3"><text>"Solicitar autorizacao retroativa URGENTE a operadora antes de vencer prazo de 48h."</text></outputEntry>
        <outputEntry id="OutputEntry_A2_4"><text>"PRAZO"</text></outputEntry>
        <outputEntry id="OutputEntry_A2_5"><text>"MEDIO"</text></outputEntry>
      </rule>

      <!-- REGRA P1: Aprovado - Emergencia dentro do prazo retroativo -->
      <rule id="Rule_Aprovado_1">
        <description>Emergencia dentro do prazo para autorizacao retroativa</description>
        <inputEntry id="InputEntry_P1_1"><text>"EMERGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_P1_2"><text>&lt;= 48</text></inputEntry>
        <inputEntry id="InputEntry_P1_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P1_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_2"><text>"Atendimento de emergencia dentro do prazo para autorizacao retroativa (ate 72h)."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_3"><text>"Solicitar autorizacao retroativa a operadora justificando carater emergencial do atendimento."</text></outputEntry>
        <outputEntry id="OutputEntry_P1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P1_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P2: Aprovado - Urgencia dentro do prazo retroativo -->
      <rule id="Rule_Aprovado_2">
        <description>Urgencia dentro do prazo para autorizacao retroativa</description>
        <inputEntry id="InputEntry_P2_1"><text>"URGENCIA"</text></inputEntry>
        <inputEntry id="InputEntry_P2_2"><text>&lt;= 24</text></inputEntry>
        <inputEntry id="InputEntry_P2_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_P2_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_2"><text>"Atendimento de urgencia dentro do prazo para autorizacao retroativa (ate 48h)."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_3"><text>"Solicitar autorizacao retroativa a operadora justificando carater urgente do atendimento."</text></outputEntry>
        <outputEntry id="OutputEntry_P2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P2_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA P3: Aprovado - Atendimento com autorizacao previa -->
      <rule id="Rule_Aprovado_3">
        <description>Atendimento ja possui autorizacao previa</description>
        <inputEntry id="InputEntry_P3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_P3_3"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_P3_1"><text>"Prosseguir"</text></outputEntry>
        <outputEntry id="OutputEntry_P3_2"><text>"Atendimento ja possui autorizacao previa registrada."</text></outputEntry>
        <outputEntry id="OutputEntry_P3_3"><text>"Prosseguir com faturamento conforme autorizacao existente."</text></outputEntry>
        <outputEntry id="OutputEntry_P3_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_P3_5"><text>"BAIXO"</text></outputEntry>
      </rule>

      <!-- REGRA F: Fallback - Requer revisao manual -->
      <rule id="Rule_Fallback_AUTH_PREAUTH_009">
        <description>Regra padrao - Requer avaliacao manual</description>
        <inputEntry id="InputEntry_F_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_F_3"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_F_1"><text>"Revisar"</text></outputEntry>
        <outputEntry id="OutputEntry_F_2"><text>"Situacao de autorizacao retroativa requer analise manual especializada."</text></outputEntry>
        <outputEntry id="OutputEntry_F_3"><text>"Encaminhar para auditoria avaliar elegibilidade para autorizacao retroativa."</text></outputEntry>
        <outputEntry id="OutputEntry_F_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_F_5"><text>"MEDIO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_AUTH_PREAUTH_009">
      <dmndi:DMNShape id="DMNShape_Decision_AUTH_PREAUTH_009" dmnElementRef="Decision_AUTH_PREAUTH_009">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
