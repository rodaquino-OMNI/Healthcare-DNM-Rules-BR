{
  "ruleId": "AUTH-PREAUTH-001",
  "ruleName": "Verificacao Existencia Autorizacao Previa",
  "version": "1.0.0",
  "category": "AUTH",
  "subcategory": "PREAUTH",
  "perspective": "HOSPITAL",
  "description": "Verifica se existe autorizacao previa valida antes de prosseguir com faturamento",
  "inputs": [
    {
      "name": "temAutorizacaoPrevia",
      "type": "boolean",
      "description": "Indica se existe autorizacao previa para o procedimento"
    },
    {
      "name": "numeroGuia",
      "type": "string",
      "description": "Numero da guia de autorizacao"
    },
    {
      "name": "tipoGuia",
      "type": "string",
      "description": "Tipo da guia (SADT, INTERNACAO, CONSULTA, HONORARIOS)"
    }
  ],
  "outputs": [
    {
      "name": "resultado",
      "type": "string",
      "values": ["Prosseguir", "Bloquear", "Alertar", "Revisar"]
    },
    {
      "name": "observacao",
      "type": "string"
    },
    {
      "name": "acaoRecomendada",
      "type": "string"
    }
  ],
  "references": [
    "RN 465/2021 ANS",
    "Manual TISS 4.0"
  ],
  "createdAt": "2026-02-06",
  "updatedAt": "2026-02-06"
}
