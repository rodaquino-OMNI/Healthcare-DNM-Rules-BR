<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:di="http://www.omg.org/spec/DMN/20180521/DI/" id="DDI_QT_001" name="DDI-QT-001: Amiodarona + Fluoroquinolonas" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="ddi_qt_001_decision" name="Amiodarona + Fluoroquinolonas QT Prolongation">
    <decisionTable id="ddi_qt_001_table" hitPolicy="FIRST">
      <input id="input_medicamentos_ativos" label="Medicamentos Ativos">
        <inputExpression id="input_expr_medicamentos_ativos" typeRef="string">
          <text>medicamentosAtivos</text>
        </inputExpression>
      </input>
      <input id="input_medicamento_novo" label="Medicamento Novo">
        <inputExpression id="input_expr_medicamento_novo" typeRef="string">
          <text>medicamentoNovo</text>
        </inputExpression>
      </input>
      <input id="input_potassio" label="Potássio (mmol/L)">
        <inputExpression id="input_expr_potassio" typeRef="number">
          <text>potassio</text>
        </inputExpression>
      </input>
      <input id="input_historico_qt" label="Histórico QT Longo">
        <inputExpression id="input_expr_historico" typeRef="boolean">
          <text>historicoQTLongo</text>
        </inputExpression>
      </input>

      <output id="output_nivel_alerta" name="nivelAlerta" typeRef="string">
        <outputValues>
          <text>"Alerta","Atencao","Informativo"</text>
        </outputValues>
      </output>
      <output id="output_urgencia" name="urgencia" typeRef="string">
        <outputValues>
          <text>"IMEDIATA","URGENTE","ROTINA"</text>
        </outputValues>
      </output>
      <output id="output_medicamentos_conflitantes" name="medicamentosConflitantes" typeRef="string" />
      <output id="output_mecanismo_interacao" name="mecanismoInteracao" typeRef="string" />
      <output id="output_acao_requerida" name="acaoRequerida" typeRef="string" />

      <!-- Rule 1: Amiodarona + Fluoroquinolonas com hipocalemia ou QT prévio -->
      <rule id="rule_amio_fluoro_alto_risco">
        <inputEntry id="input_medicamentos_amio">
          <text>list contains(medicamentosAtivos, "AMIODARONA")</text>
        </inputEntry>
        <inputEntry id="input_novo_fluoro">
          <text>"MOXIFLOXACINO" or "LEVOFLOXACINO" or "CIPROFLOXACINO"</text>
        </inputEntry>
        <inputEntry id="input_k_baixo">
          <text>&lt; 3.5</text>
        </inputEntry>
        <inputEntry id="input_qt_sim">
          <text>true</text>
        </inputEntry>
        <outputEntry id="output_alerta_alto">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_alto">
          <text>"IMEDIATA"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_alto">
          <text>"Amiodarona + Fluoroquinolona (K+&lt;3.5 + QT previo)"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_alto">
          <text>"Duplo bloqueio canais K+ (IKr) = prolongamento QTc aditivo. Risco Torsades de pointes CRITICO com hipocalemia."</text>
        </outputEntry>
        <outputEntry id="output_acao_alto">
          <text>"URGENTE: (1) Corrigir K+ &gt;4.0 mmol/L ANTES antibiotico, (2) Mg &gt;2.0, (3) ECG baseline + 48h + 7 dias, (4) Considerar antibiotico alternativo (doxiciclina, ceftriaxona). Se QTc&gt;500ms, SUSPENDER quinolona."</text>
        </outputEntry>
      </rule>

      <!-- Rule 2: Amiodarona + Moxifloxacino (maior risco) -->
      <rule id="rule_amio_moxi">
        <inputEntry id="input_medicamentos_amio_moxi">
          <text>list contains(medicamentosAtivos, "AMIODARONA")</text>
        </inputEntry>
        <inputEntry id="input_novo_moxi">
          <text>"MOXIFLOXACINO"</text>
        </inputEntry>
        <inputEntry id="input_k_normal">
          <text>&gt;= 3.5</text>
        </inputEntry>
        <inputEntry id="input_qt_nao">
          <text>false</text>
        </inputEntry>
        <outputEntry id="output_alerta_moxi">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_moxi">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_moxi">
          <text>"Amiodarona + Moxifloxacino"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_moxi">
          <text>"Moxifloxacino possui MAIOR efeito QT entre fluoroquinolonas. Risco Torsades documentado."</text>
        </outputEntry>
        <outputEntry id="output_acao_moxi">
          <text>"EVITAR: Usar levofloxacino (menor efeito QT) ou ceftriaxona. Se ESSENCIAL: ECG baseline, K+/Mg normais, ECG 72h. Suspender se QTc&gt;500ms ou aumento &gt;60ms."</text>
        </outputEntry>
      </rule>

      <!-- Rule 3: Amiodarona + Levo/Cipro (menor risco mas monitorar) -->
      <rule id="rule_amio_levo_cipro">
        <inputEntry id="input_medicamentos_amio_lc">
          <text>list contains(medicamentosAtivos, "AMIODARONA")</text>
        </inputEntry>
        <inputEntry id="input_novo_lc">
          <text>"LEVOFLOXACINO" or "CIPROFLOXACINO"</text>
        </inputEntry>
        <inputEntry id="input_k_ok">
          <text>&gt;= 3.5</text>
        </inputEntry>
        <inputEntry id="input_qt_nao_lc">
          <text>-</text>
        </inputEntry>
        <outputEntry id="output_alerta_lc">
          <text>"Atencao"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_lc">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_lc">
          <text>"Amiodarona + Levofloxacino/Ciprofloxacino"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_lc">
          <text>"Prolongamento QT moderado. Risco menor que moxifloxacino."</text>
        </outputEntry>
        <outputEntry id="output_acao_lc">
          <text>"ECG baseline recomendado. K+ e Mg normais. Monitorar sintomas (palpitacoes, sincope). ECG 72h se historia cardiaca."</text>
        </outputEntry>
      </rule>

      <!-- Fallback Rule -->
      <rule id="rule_fallback">
        <inputEntry id="input_fallback_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="output_fallback_1">
          <text>"Informativo"</text>
        </outputEntry>
        <outputEntry id="output_fallback_2">
          <text>"ROTINA"</text>
        </outputEntry>
        <outputEntry id="output_fallback_3">
          <text>""</text>
        </outputEntry>
        <outputEntry id="output_fallback_4">
          <text>""</text>
        </outputEntry>
        <outputEntry id="output_fallback_5">
          <text>""</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
