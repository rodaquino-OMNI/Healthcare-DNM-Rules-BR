<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:di="http://www.omg.org/spec/DMN/20180521/DI/" id="DDI_QT_015" name="DDI-QT-015: Citalopram + Eritromicina" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="ddi_qt_015_decision" name="Citalopram + Eritromicina QT Prolongation">
    <decisionTable id="ddi_qt_015_table" hitPolicy="FIRST">
      <input id="input_medicamentos_ativos" label="Medicamentos Ativos">
        <inputExpression id="input_expr_medicamentos_ativos" typeRef="string">
          <text>medicamentosAtivos</text>
        </inputExpression>
      </input>
      <input id="input_medicamento_novo" label="Medicamento Novo">
        <inputExpression id="input_expr_medicamento_novo" typeRef="string">
          <text>medicamentoNovo</text>
        </inputExpression>
      </input>
      <input id="input_dose_citalopram" label="Dose Citalopram (mg/dia)">
        <inputExpression id="input_expr_dose" typeRef="number">
          <text>doseCitalopram</text>
        </inputExpression>
      </input>
      <input id="input_idade" label="Idade (anos)">
        <inputExpression id="input_expr_idade" typeRef="number">
          <text>idade</text>
        </inputExpression>
      </input>

      <output id="output_nivel_alerta" name="nivelAlerta" typeRef="string">
        <outputValues>
          <text>"Alerta","Atencao","OK"</text>
        </outputValues>
      </output>
      <output id="output_urgencia" name="urgencia" typeRef="string">
        <outputValues>
          <text>"IMEDIATA","URGENTE","ROTINA"</text>
        </outputValues>
      </output>
      <output id="output_medicamentos_conflitantes" name="medicamentosConflitantes" typeRef="string" />
      <output id="output_mecanismo_interacao" name="mecanismoInteracao" typeRef="string" />
      <output id="output_acao_requerida" name="acaoRequerida" typeRef="string" />

      <!-- Rule 1: High dose citalopram (>20mg) + erythromycin -->
      <rule id="rule_citalopram_alta_eritro">
        <inputEntry id="input_medicamentos_cital">
          <text>list contains(medicamentosAtivos, "CITALOPRAM")</text>
        </inputEntry>
        <inputEntry id="input_novo_eritro">
          <text>"ERITROMICINA"</text>
        </inputEntry>
        <inputEntry id="input_dose_alta">
          <text>&gt; 20</text>
        </inputEntry>
        <inputEntry id="input_idade_qualquer">
          <text>-</text>
        </inputEntry>
        <outputEntry id="output_alerta_alta">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_alta">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_alta">
          <text>"Citalopram &gt;20mg/dia + Eritromicina"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_alta">
          <text>"QT aditivo CRÍTICO. FDA LIMITOU citalopram MAX 20mg/dia (2012) por QT. Citalopram 40mg +18ms, Eritromicina +10-15ms. Combinação &gt;20mg EXCEDE limite FDA."</text>
        </outputEntry>
        <outputEntry id="output_acao_alta">
          <text>"REDUZIR citalopram MAX 20mg/dia (limite FDA). ECG baseline + 48h obrigatório. Alternativa antibiótico: azitromicina 5 dias (&lt;7 dias menor QT que eritro), doxiciclina, amoxicilina-clavulanato. K+/Mg normais. Suspender se QTc&gt;500ms."</text>
        </outputEntry>
      </rule>

      <!-- Rule 2: Standard dose citalopram (≤20mg) + erythromycin, age >60 -->
      <rule id="rule_citalopram_padrao_eritro_idoso">
        <inputEntry id="input_medicamentos_cital2">
          <text>list contains(medicamentosAtivos, "CITALOPRAM")</text>
        </inputEntry>
        <inputEntry id="input_novo_eritro2">
          <text>"ERITROMICINA"</text>
        </inputEntry>
        <inputEntry id="input_dose_padrao">
          <text>&lt;= 20</text>
        </inputEntry>
        <inputEntry id="input_idade_idoso">
          <text>&gt; 60</text>
        </inputEntry>
        <outputEntry id="output_alerta_idoso">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_idoso">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_idoso">
          <text>"Citalopram ≤20mg + Eritromicina (idade &gt;60)"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_idoso">
          <text>"FDA limitou citalopram MAX 20mg/dia &gt;60 anos. Com eritromicina, risco QT aumentado mesmo doses baixas."</text>
        </outputEntry>
        <outputEntry id="output_acao_idoso">
          <text>"ECG baseline obrigatório. Curso eritromicina CURTO (5-7 dias máximo). Preferir azitromicina 5 dias ou doxiciclina. K+&gt;4.0, Mg&gt;2.0. Monitorar sintomas (tontura, palpitações). Considerar sertralina alternativa (menor QT que citalopram)."</text>
        </outputEntry>
      </rule>

      <!-- Rule 3: Standard dose citalopram (≤20mg) + erythromycin, age ≤60 -->
      <rule id="rule_citalopram_padrao_eritro_jovem">
        <inputEntry id="input_medicamentos_cital3">
          <text>list contains(medicamentosAtivos, "CITALOPRAM")</text>
        </inputEntry>
        <inputEntry id="input_novo_eritro3">
          <text>"ERITROMICINA"</text>
        </inputEntry>
        <inputEntry id="input_dose_padrao2">
          <text>&lt;= 20</text>
        </inputEntry>
        <inputEntry id="input_idade_jovem">
          <text>&lt;= 60</text>
        </inputEntry>
        <outputEntry id="output_alerta_jovem">
          <text>"Atencao"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_jovem">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_jovem">
          <text>"Citalopram ≤20mg + Eritromicina"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_jovem">
          <text>"QT aditivo moderado. Citalopram 20mg +8-10ms, Eritromicina +10-15ms. Dentro limite FDA mas requer monitoramento."</text>
        </outputEntry>
        <outputEntry id="output_acao_jovem">
          <text>"ACEITÁVEL com precauções: ECG baseline recomendado. Curso eritromicina curto (5-7 dias). K+/Mg normais. Monitorar sintomas. Alternativa: azitromicina 5 dias, doxiciclina. Suspender eritro se sintomas."</text>
        </outputEntry>
      </rule>

      <!-- Fallback Rule -->
      <rule id="rule_fallback">
        <inputEntry id="input_fallback_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="output_fallback_1">
          <text>"OK"</text>
        </outputEntry>
        <outputEntry id="output_fallback_2">
          <text>"ROTINA"</text>
        </outputEntry>
        <outputEntry id="output_fallback_3">
          <text>""</text>
        </outputEntry>
        <outputEntry id="output_fallback_4">
          <text>""</text>
        </outputEntry>
        <outputEntry id="output_fallback_5">
          <text>""</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
