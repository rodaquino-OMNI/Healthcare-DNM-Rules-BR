<?xml version="1.0" encoding="UTF-8"?>
<!-- DDI-MODERATE-004: Metformina + IBP - Deficiencia B12 -->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" id="DDI_MODERATE_004" name="DDI-MODERATE-004: Metformina + IBP" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="ddi_moderate_004_decision" name="Metformina + IBP - Deficiencia B12">
    <decisionTable id="ddi_moderate_004_table" hitPolicy="FIRST">
      <input id="input_medicamentos_ativos"><inputExpression typeRef="string"><text>medicamentosAtivos</text></inputExpression></input>
      <input id="input_medicamento_novo"><inputExpression typeRef="string"><text>medicamentoNovo</text></inputExpression></input>
      <input id="input_duracao_uso"><inputExpression typeRef="string"><text>duracaoUso</text></inputExpression></input>
      <output id="output_nivel_alerta" name="nivelAlerta" typeRef="string"><outputValues><text>"Alerta","Atencao","Informativo","OK"</text></outputValues></output>
      <output id="output_acao_requerida" name="acaoRequerida" typeRef="string" />
      <output id="output_justificativa" name="justificativaCientifica" typeRef="string" />

      <rule id="rule_metformina_ibp_longo">
        <inputEntry><text>list contains(medicamentosAtivos, "METFORMINA")</text></inputEntry>
        <inputEntry><text>"OMEPRAZOL" or "PANTOPRAZOL" or "LANSOPRAZOL" or "ESOMEPRAZOL"</text></inputEntry>
        <inputEntry><text>"CRONICO" or "LONGO_PRAZO"</text></inputEntry>
        <outputEntry><text>"Atencao"</text></outputEntry>
        <outputEntry><text>"Duplo risco deficiencia B12: metformina + IBP cronico. Dosar B12 anualmente. Se&lt; 200 pg/mL, suplementar. Considerar descontinuar IBP se indicacao fraca. Sintomas: neuropatia, anemia, fadiga."</text></outputEntry>
        <outputEntry><text>"Ambos reduzem absorcao B12 por mecanismos diferentes. Lam JR, JAMA 2013."</text></outputEntry>
      </rule>
      <rule id="Rule_Fallback">
        <inputEntry><text>-</text></inputEntry>
        <inputEntry><text>-</text></inputEntry>
        <inputEntry><text>-</text></inputEntry>
        <outputEntry><text>"OK"</text></outputEntry>
        <outputEntry><text>""</text></outputEntry>
        <outputEntry><text>""</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
