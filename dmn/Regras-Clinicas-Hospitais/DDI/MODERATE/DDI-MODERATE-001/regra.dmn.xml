<?xml version="1.0" encoding="UTF-8"?>
<!-- DDI-MODERATE-001: Estatina + Diltiazem/Verapamil - Limite Dose -->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" id="DDI_MODERATE_001" name="DDI-MODERATE-001: Estatina + BCC" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="ddi_moderate_001_decision" name="Estatina + Diltiazem/Verapamil - Dose Limit">
    <decisionTable id="ddi_moderate_001_table" hitPolicy="FIRST">
      <input id="input_medicamentos_ativos"><inputExpression typeRef="string"><text>medicamentosAtivos</text></inputExpression></input>
      <input id="input_medicamento_novo"><inputExpression typeRef="string"><text>medicamentoNovo</text></inputExpression></input>
      <output id="output_nivel_alerta" name="nivelAlerta" typeRef="string"><outputValues><text>"Alerta","Atencao","Informativo","OK"</text></outputValues></output>
      <output id="output_acao_requerida" name="acaoRequerida" typeRef="string" />
      <output id="output_justificativa" name="justificativaCientifica" typeRef="string" />

      <rule id="rule_sinva_diltiazem">
        <inputEntry><text>list contains(medicamentosAtivos, "SINVASTATINA")</text></inputEntry>
        <inputEntry><text>"DILTIAZEM" or "VERAPAMIL"</text></inputEntry>
        <outputEntry><text>"Atencao"</text></outputEntry>
        <outputEntry><text>"LIMITAR sinvastatina a MAX 10mg/dia com diltiazem/verapamil (FDA). BCC inibem CYP3A4, aumentando risco miopatia. Alternativas: pravastatina, rosuvastatina (sem interacao)."</text></outputEntry>
        <outputEntry><text>"FDA dose cap para sinvastatina com inibidores CYP3A4 moderados."</text></outputEntry>
      </rule>
      <rule id="rule_atorva_bcc">
        <inputEntry><text>list contains(medicamentosAtivos, "ATORVASTATINA")</text></inputEntry>
        <inputEntry><text>"DILTIAZEM" or "VERAPAMIL"</text></inputEntry>
        <outputEntry><text>"Informativo"</text></outputEntry>
        <outputEntry><text>"Interacao menor. Atorvastatina pode ser usada, mas monitorar sintomas musculares. Limitar a 40mg/dia como precaucao."</text></outputEntry>
        <outputEntry><text>"Atorvastatina parcialmente CYP3A4. Menor risco que sinvastatina."</text></outputEntry>
      </rule>
      <rule id="Rule_Fallback">
        <inputEntry><text>-</text></inputEntry>
        <inputEntry><text>-</text></inputEntry>
        <outputEntry><text>"OK"</text></outputEntry>
        <outputEntry><text>""</text></outputEntry>
        <outputEntry><text>""</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
