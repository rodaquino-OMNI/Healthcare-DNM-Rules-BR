<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:di="http://www.omg.org/spec/DMN/20180521/DI/" id="DDI_CONTRAIND_002" name="DDI-CONTRAIND-002: IMAOs + Meperidina" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="ddi_contraind_002_decision" name="IMAOs + Meperidina Interaction">
    <decisionTable id="ddi_contraind_002_table" hitPolicy="FIRST">
      <input id="input_medicamentos_ativos" label="Medicamentos Ativos">
        <inputExpression id="input_expr_medicamentos_ativos" typeRef="string">
          <text>medicamentosAtivos</text>
        </inputExpression>
      </input>
      <input id="input_medicamento_novo" label="Medicamento Novo">
        <inputExpression id="input_expr_medicamento_novo" typeRef="string">
          <text>medicamentoNovo</text>
        </inputExpression>
      </input>

      <output id="output_nivel_alerta" name="nivelAlerta" typeRef="string">
        <outputValues>
          <text>"Alerta","Atencao","Informativo"</text>
        </outputValues>
      </output>
      <output id="output_urgencia" name="urgencia" typeRef="string">
        <outputValues>
          <text>"IMEDIATA","URGENTE","ROTINA"</text>
        </outputValues>
      </output>
      <output id="output_medicamentos_conflitantes" name="medicamentosConflitantes" typeRef="string" />
      <output id="output_mecanismo_interacao" name="mecanismoInteracao" typeRef="string" />
      <output id="output_acao_requerida" name="acaoRequerida" typeRef="string" />

      <!-- Rule 1: IMAOs irreversíveis + Meperidina -->
      <rule id="rule_imao_meperidina">
        <inputEntry id="input_medicamentos_imao">
          <text>list contains(medicamentosAtivos, "FENELZINA") or list contains(medicamentosAtivos, "TRANILCIPROMINA") or list contains(medicamentosAtivos, "ISOCARBOXAZIDA") or list contains(medicamentosAtivos, "SELEGILINA")</text>
        </inputEntry>
        <inputEntry id="input_novo_meperidina">
          <text>"MEPERIDINA" or "PETIDINA"</text>
        </inputEntry>
        <outputEntry id="output_alerta_imao">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_imao">
          <text>"IMEDIATA"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_imao">
          <text>"IMAO + Meperidina"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_imao">
          <text>"Meperidina metabolito (normeperidina) + inibicao MAO = acumulo MASSIVO serotonina + catecolaminas = sindrome serotoninergica GRAVE + crises hipertensivas + depressao respiratoria"</text>
        </outputEntry>
        <outputEntry id="output_acao_imao">
          <text>"CONTRAINDICADO ABSOLUTO: Nunca associar. Se IMAO ativo, aguardar washout 14 dias. Alternativas analgesia: morfina, fentanil, hidromorfona (com cautela). Mortalidade reportada."</text>
        </outputEntry>
      </rule>

      <!-- Rule 2: Meperidina em uso + prescrição IMAO -->
      <rule id="rule_meperidina_imao">
        <inputEntry id="input_medicamentos_meperidina">
          <text>list contains(medicamentosAtivos, "MEPERIDINA") or list contains(medicamentosAtivos, "PETIDINA")</text>
        </inputEntry>
        <inputEntry id="input_novo_imao">
          <text>"FENELZINA" or "TRANILCIPROMINA" or "ISOCARBOXAZIDA" or "SELEGILINA"</text>
        </inputEntry>
        <outputEntry id="output_alerta_meperidina">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="output_urgencia_meperidina">
          <text>"IMEDIATA"</text>
        </outputEntry>
        <outputEntry id="output_conflitantes_meperidina">
          <text>"Meperidina ativa + IMAO prescrito"</text>
        </outputEntry>
        <outputEntry id="output_mecanismo_meperidina">
          <text>"Mesmo mecanismo - metabolito normeperidina + inibicao MAO = FATAL"</text>
        </outputEntry>
        <outputEntry id="output_acao_meperidina">
          <text>"CONTRAINDICADO: Suspender meperidina 24h antes de iniciar IMAO. Interacao pode ocorrer ate 48h apos ultima dose meperidina. Risco mortalidade alto."</text>
        </outputEntry>
      </rule>

      <!-- Fallback Rule -->
      <rule id="rule_fallback">
        <inputEntry id="input_fallback_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="input_fallback_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="output_fallback_1">
          <text>"Informativo"</text>
        </outputEntry>
        <outputEntry id="output_fallback_2">
          <text>"ROTINA"</text>
        </outputEntry>
        <outputEntry id="output_fallback_3">
          <text>""</text>
        </outputEntry>
        <outputEntry id="output_fallback_4">
          <text>""</text>
        </outputEntry>
        <outputEntry id="output_fallback_5">
          <text>""</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
