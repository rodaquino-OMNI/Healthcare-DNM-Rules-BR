<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DLI_RENAL_003"
             name="Alerta: Enoxaparina em Insuficiencia Renal Grave"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ═══════════════════════════════════════════════════════════════════════════
    DLI-RENAL-003 - Enoxaparina + CrCl <30 mL/min
    Versao: 1.0.0 (2026-02-06)
    Categoria: Alerta Drug-Lab Interaction
    ═══════════════════════════════════════════════════════════════════════════

    AJUSTE CRITICO:
    - CrCl <30: Reduzir para 1 mg/kg DIARIO (ao inves de 12/12h)
    - Risco de acumulo e sangramento
    - Monitorar anti-Xa se disponivel

    REFERENCIAS:
    - Enoxaparin Package Insert (FDA)
    - ACCP Guidelines on Anticoagulation 2024
    ═══════════════════════════════════════════════════════════════════════════
  -->

  <decision id="Decision_DLI_RENAL_003" name="Ajustar Enoxaparina em DRC">
    <decisionTable id="DecisionTable_DLI_RENAL_003" hitPolicy="FIRST">

      <input id="Input_1" label="Medicamento Atual">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>medicamentoAtual</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Clearance Creatinina (mL/min)">
        <inputExpression id="InputExpression_2" typeRef="number">
          <text>clearanceCreatinina</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Funcao Renal">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>funcaoRenal</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Nivel de Alerta" name="nivelAlerta" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Informativo", "Atencao", "Alerta", "Alerta"</text>
        </outputValues>
      </output>

      <output id="Output_2" label="Ajuste Recomendado" name="ajusteDoseRecomendado" typeRef="string"/>
      <output id="Output_3" label="Frequencia Recomendada" name="frequenciaRecomendada" typeRef="string"/>
      <output id="Output_4" label="Monitoramento Requerido" name="monitoramentoRequerido" typeRef="string"/>

      <!-- ALERTA: CrCl <30 requer ajuste para dose diaria -->
      <rule id="Rule_Alerta_1">
        <description>Enoxaparina em CrCl &lt;30: Ajustar para 1 mg/kg DIARIO</description>
        <inputEntry id="InputEntry_A1_1">
          <text>"ENOXAPARINA", "CLEXANE", "VERSA"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A1_2">
          <text>&lt; 30</text>
        </inputEntry>
        <inputEntry id="InputEntry_A1_3">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A1_1">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_2">
          <text>"AJUSTAR ENOXAPARINA - CrCl &lt;30 requer 1 mg/kg 1x/dia (ao inves de 12/12h). Risco de acumulo e sangramento. Monitorar anti-Xa se disponivel."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_3">
          <text>"1 mg/kg 24/24h (dose DIARIA)"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_4">
          <text>"Anti-Xa se disponivel (alvo 0.5-1.0 UI/mL). Hemograma, sinais de sangramento."</text>
        </outputEntry>
      </rule>

      <rule id="Rule_Alerta_2">
        <description>Enoxaparina em funcao renal GRAVE ou DIALISE</description>
        <inputEntry id="InputEntry_A2_1">
          <text>"ENOXAPARINA", "CLEXANE", "VERSA"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A2_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_A2_3">
          <text>"GRAVE", "DIALISE"</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A2_1">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A2_2">
          <text>"AJUSTAR ENOXAPARINA - DRC Grave/Dialise requer dose DIARIA 1 mg/kg. Considerar heparina nao-fracionada (mais titulavel)."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A2_3">
          <text>"1 mg/kg 24/24h"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A2_4">
          <text>"Anti-Xa, hemograma. Considerar HNF em dialise."</text>
        </outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_DLI_RENAL_003">
        <description>Sem ajuste necessario</description>
        <inputEntry id="InputEntry_F_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_3">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_F_1">
          <text>"Informativo"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_2">
          <text>"Sem ajuste necessario."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_3">
          <text>"Conforme prescricao"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_4">
          <text>"Rotina"</text>
        </outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DLI_RENAL_003">
      <dmndi:DMNShape id="DMNShape_Decision_DLI_RENAL_003" dmnElementRef="Decision_DLI_RENAL_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
