{
  "ruleId": "VIT-CRITICAL-BP-002",
  "category": "VIT",
  "subcategory": "CRITICAL",
  "name": "Crise Hipertensiva",
  "description": "Detecta pressão arterial criticamente alta (> 220/120 mmHg) indicando risco de lesão de órgão-alvo",
  "inputs": [
    {
      "name": "pressaoSistolica",
      "type": "number",
      "description": "Pressão arterial sistólica em mmHg"
    },
    {
      "name": "pressaoDiastolica",
      "type": "number",
      "description": "Pressão arterial diastólica em mmHg"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "validValues": ["ALERTA", "ATENCAO", "INFORMATIVO", "OK"]
    },
    {
      "name": "nivelRisco",
      "type": "string",
      "validValues": ["MUITO_ALTO", "ALTO", "MODERADO", "BAIXO"]
    },
    {
      "name": "intervencaoRequerida",
      "type": "string"
    },
    {
      "name": "frequenciaMonitoramento",
      "type": "string"
    }
  ],
  "regulatoryCompliance": ["RDC-36-2013", "NR-32"],
  "clinicalReferences": ["AHA-Hypertension-Guidelines-2017", "ESC-Hypertension-2018"],
  "version": "1.0.0",
  "status": "active",
  "criticality": "CRITICAL"
}
