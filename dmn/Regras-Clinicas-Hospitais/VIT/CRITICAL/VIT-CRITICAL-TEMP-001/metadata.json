    {
      "name": "temperatura",
      "type": "number",
      "description": "Temperatura corporal em graus Celsius"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "validValues": ["ALERTA", "ATENCAO", "INFORMATIVO", "OK"]
    },
    {
      "name": "nivelRisco",
      "type": "string",
      "validValues": ["MUITO_ALTO", "ALTO", "MODERADO", "BAIXO"]
    },
    {
      "name": "intervencaoRequerida",
      "type": "string"
    },
    {
      "name": "frequenciaMonitoramento",
      "type": "string"
    }
  ],
  "regulatoryCompliance": ["RDC-36-2013", "NR-32"],
  "clinicalReferences": ["Wilderness-Medical-Society-2019", "ACEP-Fever-Guidelines"],
  "version": "1.0.0",
  "status": "active",
  "criticality": "HIGH"
}
