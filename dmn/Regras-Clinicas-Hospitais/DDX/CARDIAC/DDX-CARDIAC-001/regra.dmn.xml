<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DDX_CARDIAC_001"
             name="Beta-bloqueador em ICC Descompensada"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <!--
    DDX-CARDIAC-001: Beta-bloqueador + ICC Descompensada
    Versão: 1.0.0 (2026-02-06)
    Especialidade: Cardiologia

    CONTRAINDICAÇÃO:
    - Beta-bloqueadores em pacientes com ICC descompensada (aguda)
    - Risco de piora da função cardíaca e choque cardiogênico

    REFERÊNCIAS:
    - ACC/AHA Heart Failure Guidelines 2022
    - ESC Heart Failure Guidelines 2021
    - ACCF/AHA/ACP/HFSA/ISHLT 2013 Guideline
  -->

  <decision id="Decision_DDX_CARDIAC_001" name="Alerta Beta-bloqueador ICC">
    <decisionTable id="DecisionTable_DDX_CARDIAC_001" hitPolicy="FIRST">

      <input id="Input_1" label="Medicamento Atual">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>medicamentoAtual</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Funcao Cardiaca">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>funcaoCardiaca</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"OK", "HFpEF", "HFrEF", "DESCOMPENSADA"</text>
        </inputValues>
      </input>

      <output id="Output_1" label="Nivel Alerta" name="nivelAlerta" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Alerta", "Atencao", "Informativo", "Sem_Alerta"</text>
        </outputValues>
      </output>

      <output id="Output_2" label="Contraindicacao" name="contraindicacao" typeRef="string"/>
      <output id="Output_3" label="Medicamento Alternativo" name="medicamentoAlternativo" typeRef="string"/>
      <output id="Output_4" label="Acao Requerida" name="acaoRequerida" typeRef="string"/>

      <!-- ALERTA: Beta-bloqueador + ICC descompensada -->
      <rule id="Rule_Alerta_1">
        <description>Beta-bloqueador em ICC descompensada - CONTRAINDICADO</description>
        <inputEntry id="InputEntry_A1_1">
          <text>"ATENOLOL", "BISOPROLOL", "CARVEDILOL", "METOPROLOL", "NEBIVOLOL", "PROPRANOLOL"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A1_2">
          <text>"DESCOMPENSADA"</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A1_1">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_2">
          <text>"Beta-bloqueador contraindicado em ICC descompensada/aguda. Risco de piora hemodinamica e choque cardiogenico."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_3">
          <text>"Suspender temporariamente. Reintroduzir após estabilização clínica."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_4">
          <text>"SUSPENDER_MEDICAMENTO"</text>
        </outputEntry>
      </rule>

      <!-- ATENÇÃO: Beta-bloqueador em HFrEF compensada (OK com monitoramento) -->
      <rule id="Rule_Atencao_1">
        <description>Beta-bloqueador em HFrEF compensada - monitorar</description>
        <inputEntry id="InputEntry_AT1_1">
          <text>"BISOPROLOL", "CARVEDILOL", "METOPROLOL"</text>
        </inputEntry>
        <inputEntry id="InputEntry_AT1_2">
          <text>"HFrEF"</text>
        </inputEntry>
        <outputEntry id="OutputEntry_AT1_1">
          <text>"Atencao"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_AT1_2">
          <text>"Beta-bloqueador apropriado para HFrEF compensada. Monitorar FC, PA e sinais de descompensacao."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_AT1_3">
          <text>"-"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_AT1_4">
          <text>"MONITORAR_SINAIS_VITAIS"</text>
        </outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_DDX_CARDIAC_001">
        <description>Sem alerta</description>
        <inputEntry id="InputEntry_F_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_F_1">
          <text>"Sem_Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_2">
          <text>"Sem contraindicacao identificada."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_3">
          <text>"-"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_4">
          <text>"NENHUMA_ACAO"</text>
        </outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DDX_CARDIAC_001">
      <dmndi:DMNShape id="DMNShape_Decision_DDX_CARDIAC_001" dmnElementRef="Decision_DDX_CARDIAC_001">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
