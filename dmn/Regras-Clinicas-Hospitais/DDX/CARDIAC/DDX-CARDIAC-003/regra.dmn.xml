<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_DDX_CARDIAC_003"
             name="AINE em Insuficiencia Cardiaca"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <!--
    DDX-CARDIAC-003: AINE + ICC
    Versão: 1.0.0 (2026-02-06)

    CONTRAINDICAÇÃO:
    - AINEs aumentam retenção hídrica e Na+
    - Antagonizam efeito de diuréticos e IECA
    - Pioram descompensação em ICC
  -->

  <decision id="Decision_DDX_CARDIAC_003" name="Alerta AINE em ICC">
    <decisionTable id="DecisionTable_DDX_CARDIAC_003" hitPolicy="FIRST">

      <input id="Input_1" label="Medicamento Atual">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>medicamentoAtual</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Funcao Cardiaca">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>funcaoCardiaca</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Nivel Alerta" name="nivelAlerta" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Alerta", "Atencao", "Informativo", "Sem_Alerta"</text>
        </outputValues>
      </output>

      <output id="Output_2" label="Contraindicacao" name="contraindicacao" typeRef="string"/>
      <output id="Output_3" label="Medicamento Alternativo" name="medicamentoAlternativo" typeRef="string"/>
      <output id="Output_4" label="Acao Requerida" name="acaoRequerida" typeRef="string"/>

      <!-- ATENÇÃO: AINE em qualquer ICC -->
      <rule id="Rule_Atencao_1">
        <description>AINE em insuficiencia cardiaca</description>
        <inputEntry id="InputEntry_AT1_1">
          <text>"IBUPROFENO", "NAPROXENO", "DICLOFENACO", "CETOPROFENO", "INDOMETACINA", "PIROXICAM", "CELECOXIBE"</text>
        </inputEntry>
        <inputEntry id="InputEntry_AT1_2">
          <text>"HFrEF", "HFpEF", "DESCOMPENSADA"</text>
        </inputEntry>
        <outputEntry id="OutputEntry_AT1_1">
          <text>"Atencao"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_AT1_2">
          <text>"AINE em ICC: risco de retencao hidrica, antagonismo de diureticos/IECA e descompensacao."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_AT1_3">
          <text>"Preferir Paracetamol ou opioide fraco. Limitar duracao se AINE necessario. Monitorar peso e edema."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_AT1_4">
          <text>"MONITORAR_PESO_EDEMA"</text>
        </outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_DDX_CARDIAC_003">
        <description>Sem alerta</description>
        <inputEntry id="InputEntry_F_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_F_1">
          <text>"Sem_Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_2">
          <text>"Sem contraindicacao identificada."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_3">
          <text>"-"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_4">
          <text>"NENHUMA_ACAO"</text>
        </outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_DDX_CARDIAC_003">
      <dmndi:DMNShape id="DMNShape_Decision_DDX_CARDIAC_003" dmnElementRef="Decision_DDX_CARDIAC_003">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
