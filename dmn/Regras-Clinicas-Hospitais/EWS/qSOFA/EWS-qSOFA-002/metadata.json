{
  "ruleId": "EWS-qSOFA-002",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "qSOFA with Lactate Integration",
  "description": "Combines qSOFA with lactate monitoring for enhanced sepsis detection and resuscitation guidance.",
  "clinicalDomain": "Critical Care / Infectious Disease",
  "evidenceBase": {
    "primarySource": "Sepsis-3 Consensus, Surviving Sepsis Campaign 2021",
    "lactateClearance": ">=10% in 2-4h associated with 11% mortality reduction per hour",
    "septicShock": "Vasopressors + Lactate >2 after resuscitation"
  },
  "lactateThresholds": {
    "normal": "<2 mmol/L",
    "elevated": "2-4 mmol/L",
    "severe": ">4 mmol/L"
  },
  "inputs": [
    {
      "name": "lactato",
      "type": "number",
      "unit": "mmol/L"
    },
    {
      "name": "qsofaScore",
      "type": "number",
      "range": "0-3"
    },
    {
      "name": "emUsoVasopressores",
      "type": "boolean"
    },
    {
      "name": "tendenciaLactato",
      "type": "string",
      "values": [
        "aumentando",
        "estavel",
        "clareando"
      ]
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "lactate",
    "sepsis",
    "septic-shock",
    "resuscitation"
  ],
  "relatedRules": [
    "EWS-qSOFA-001",
    "EWS-qSOFA-003"
  ],
  "status": "active",
  "criticality": "HIGH"
}