{
  "ruleId": "EWS-qSOFA-004",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "qSOFA for Elderly Patients (>=65 years)",
  "description": "Adapted qSOFA evaluation for elderly patients with consideration for atypical presentations and reduced physiological reserve.",
  "clinicalDomain": "Geriatric Medicine / Emergency Medicine",
  "evidenceBase": {
    "primarySource": "Sepsis-3 + Geriatric Medicine literature",
    "atypicalPresentation": "30-50% of elderly sepsis without typical signs",
    "feverAbsent": "20-30% of elderly infections without fever",
    "mortalityVeryElderly": "45-55% if qSOFA >=2 in >=80 years"
  },
  "geriatricConsiderations": [
    "Atypical presentations (confusion may be only sign)",
    "Reduced physiological reserve",
    "Polypharmacy effects on vital signs",
    "Baseline cognitive impairment masks altered mentation",
    "Lower threshold for investigation in frail patients"
  ],
  "inputs": [
    {
      "name": "idade",
      "type": "number",
      "threshold": 65
    },
    {
      "name": "qsofaScore",
      "type": "number",
      "range": "0-3"
    },
    {
      "name": "mudancaEstadoMentalBaseline",
      "type": "boolean",
      "description": "Change from patient's baseline mental status"
    },
    {
      "name": "fragilidade",
      "type": "boolean",
      "description": "Known frailty (Clinical Frailty Scale or similar)"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "elderly",
    "geriatric",
    "frailty",
    "delirium",
    "atypical-sepsis"
  ],
  "relatedRules": [
    "EWS-qSOFA-001",
    "EWS-qSOFA-005"
  ],
  "status": "active",
  "criticality": "HIGH"
}