{
  "ruleId": "EWS-qSOFA-001",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "qSOFA Sepsis Screening (>=2 Positive)",
  "description": "Identifies patients at high risk for sepsis using the Quick Sequential Organ Failure Assessment criteria.",
  "clinicalDomain": "Infectious Disease / Critical Care / Emergency Medicine",
  "evidenceBase": {
    "primarySource": "Singer M et al. JAMA 2016;315:801-810 (Sepsis-3)",
    "guidelines": [
      "Surviving Sepsis Campaign 2021"
    ],
    "sensitivity": "30%",
    "specificity": "98%",
    "mortalityRate": {
      "qSOFA_positive": "24%",
      "qSOFA_negative": "3%"
    }
  },
  "scoringCriteria": {
    "respiratoryRate": {
      ">=22": 1
    },
    "alteredMentation": {
      "GCS<15": 1
    },
    "systolicBP": {
      "<=100": 1
    },
    "positiveThreshold": ">=2 points"
  },
  "inputs": [
    {
      "name": "qsofaScore",
      "type": "number",
      "label": "qSOFA Score",
      "required": true,
      "range": "0-3"
    },
    {
      "name": "suspeitaInfeccao",
      "type": "boolean",
      "label": "Suspeita Infeccao"
    },
    {
      "name": "lactato",
      "type": "number",
      "unit": "mmol/L"
    },
    {
      "name": "emUTI",
      "type": "boolean",
      "description": "Use SOFA instead of qSOFA in ICU"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "sepsis",
    "sepsis-3",
    "screening",
    "infection",
    "critical-care"
  ],
  "compliance": [
    "Surviving_Sepsis_Campaign"
  ],
  "relatedRules": [
    "EWS-qSOFA-002",
    "EWS-qSOFA-003",
    "EWS-MEWS-001"
  ],
  "status": "active",
  "criticality": "HIGH"
}