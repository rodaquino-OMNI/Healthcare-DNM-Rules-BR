{
  "ruleId": "EWS-qSOFA-005",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "qSOFA with SIRS Criteria Integration",
  "description": "Combines qSOFA specificity with SIRS sensitivity for comprehensive sepsis screening.",
  "clinicalDomain": "Emergency Medicine / Infectious Disease",
  "evidenceBase": {
    "qSOFA": {
      "source": "Sepsis-3 2016",
      "sensitivity": "30%",
      "specificity": "98%"
    },
    "SIRS": {
      "source": "ACCP/SCCM 1992",
      "sensitivity": "97%",
      "specificity": "35%"
    },
    "combined": "Better overall detection when used together"
  },
  "sirsCriteria": {
    "temperature": ">38C or <36C",
    "heartRate": ">90 bpm",
    "respiratoryRate": ">20/min",
    "wbc": ">12,000 or <4,000 or >10% bands",
    "threshold": ">=2 criteria"
  },
  "inputs": [
    {
      "name": "qsofaScore",
      "type": "number",
      "range": "0-3"
    },
    {
      "name": "criteriosSIRS",
      "type": "number",
      "range": "0-4"
    },
    {
      "name": "suspeitaInfeccao",
      "type": "boolean"
    },
    {
      "name": "leucocitos",
      "type": "number",
      "unit": "/mm3"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "SIRS",
    "sepsis",
    "screening",
    "integration"
  ],
  "relatedRules": [
    "EWS-qSOFA-001",
    "EWS-qSOFA-006"
  ],
  "status": "active",
  "criticality": "HIGH"
}