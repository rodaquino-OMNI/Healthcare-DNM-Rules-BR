{
  "ruleId": "EWS-qSOFA-007",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "qSOFA Post-Surgical Patient Evaluation",
  "description": "Adapted qSOFA interpretation for post-surgical patients considering expected surgical stress response and complication timelines.",
  "clinicalDomain": "Surgical Critical Care",
  "evidenceBase": {
    "primarySource": "Sepsis-3 + Surgical literature",
    "anastomoticLeakMortality": "20-30%",
    "peakLeakWindow": "Day 5-7 post-operative"
  },
  "postSurgicalTimeline": {
    "day0-2": "Expected surgical stress response (tachycardia, tachypnea)",
    "day3-5": "Watch for developing infection (SSI)",
    "day5-7": "Peak risk for anastomotic leak",
    "day7plus": "Late complications (abscess, pneumonia)"
  },
  "surgeryTypes": [
    "abdominal",
    "thoracic",
    "cardiac",
    "orthopedic",
    "vascular",
    "other"
  ],
  "inputs": [
    {
      "name": "diasPosCirurgia",
      "type": "number",
      "description": "Days since surgery"
    },
    {
      "name": "qsofaScore",
      "type": "number",
      "range": "0-3"
    },
    {
      "name": "tipoCirurgia",
      "type": "string",
      "values": [
        "abdominal",
        "thoracic",
        "cardiac",
        "orthopedic",
        "vascular",
        "other"
      ]
    },
    {
      "name": "tendenciaPiora",
      "type": "boolean",
      "description": "Worsening trend from previous assessment"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "post-surgical",
    "surgical-complications",
    "anastomotic-leak",
    "SSI"
  ],
  "relatedRules": [
    "EWS-qSOFA-001",
    "EWS-MEWS-001"
  ],
  "status": "active",
  "criticality": "HIGH"
}