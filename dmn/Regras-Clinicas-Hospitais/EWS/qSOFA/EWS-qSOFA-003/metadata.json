{
  "ruleId": "EWS-qSOFA-003",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "qSOFA Individual Component Assessment",
  "description": "Evaluates each qSOFA component separately for early detection and trend analysis.",
  "clinicalDomain": "Emergency Medicine / Critical Care",
  "evidenceBase": {
    "primarySource": "Singer M et al. JAMA 2016 (Sepsis-3)",
    "componentAnalysis": {
      "tachypnea": {
        "sensitivity": "70%",
        "threshold": "RR >= 22/min"
      },
      "hypotension": {
        "specificity": "96%",
        "threshold": "SBP <= 100 mmHg"
      },
      "alteredMentation": {
        "mortalityOR": 3.8,
        "threshold": "GCS < 15"
      }
    }
  },
  "qsofaCriteria": {
    "respiratoryRate": {
      "threshold": 22,
      "unit": "irpm",
      "direction": ">="
    },
    "glasgowComaScale": {
      "threshold": 15,
      "direction": "<"
    },
    "systolicBP": {
      "threshold": 100,
      "unit": "mmHg",
      "direction": "<="
    }
  },
  "inputs": [
    {
      "name": "frequenciaRespiratoria",
      "type": "number",
      "unit": "irpm"
    },
    {
      "name": "glasgowScore",
      "type": "number",
      "range": "3-15"
    },
    {
      "name": "paSistolica",
      "type": "number",
      "unit": "mmHg"
    },
    {
      "name": "suspeitaInfeccao",
      "type": "boolean"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "components",
    "tachypnea",
    "hypotension",
    "GCS",
    "sepsis"
  ],
  "relatedRules": [
    "EWS-qSOFA-001",
    "EWS-qSOFA-002"
  ],
  "status": "active",
  "criticality": "HIGH"
}