{
  "ruleId": "EWS-qSOFA-006",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "qSOFA",
  "name": "Sepsis Bundle Compliance Checker",
  "description": "Monitors compliance with Surviving Sepsis Campaign Hour-1 Bundle interventions.",
  "clinicalDomain": "Quality Improvement / Sepsis Management",
  "evidenceBase": {
    "primarySource": "Surviving Sepsis Campaign 2021",
    "mortalityImpact": "7.6% increase per hour of antibiotic delay",
    "bundleCompliance": "25% mortality reduction when fully compliant"
  },
  "hour1Bundle": {
    "elements": [
      "Measure lactate (remeasure if >2 mmol/L)",
      "Obtain blood cultures before antibiotics",
      "Administer broad spectrum antibiotics",
      "Begin rapid fluid administration if hypotension or lactate >=4",
      "Apply vasopressors if hypotensive during/after resuscitation"
    ],
    "timeWindow": "60 minutes from sepsis recognition"
  },
  "inputs": [
    {
      "name": "minutosDesdeReconhecimento",
      "type": "number",
      "unit": "minutes"
    },
    {
      "name": "lactatoColhido",
      "type": "boolean"
    },
    {
      "name": "hemoculturasColhidas",
      "type": "boolean"
    },
    {
      "name": "antibioticoAdministrado",
      "type": "boolean"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "qSOFA",
    "sepsis-bundle",
    "SSC",
    "compliance",
    "quality",
    "antibiotics"
  ],
  "compliance": [
    "Surviving_Sepsis_Campaign_2021"
  ],
  "relatedRules": [
    "EWS-qSOFA-001",
    "EWS-qSOFA-002"
  ],
  "status": "active",
  "criticality": "HIGH"
}