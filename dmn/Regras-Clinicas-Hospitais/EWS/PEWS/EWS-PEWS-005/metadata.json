{
  "ruleId": "EWS-PEWS-005",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "PEWS",
  "name": "PEWS Cardiovascular Component - Age-Adjusted",
  "description": "Evaluates cardiovascular status using age-adjusted heart rate and perfusion assessment for pediatric patients.",
  "clinicalDomain": "Pediatric Cardiology / Emergency Medicine",
  "evidenceBase": {
    "primarySource": "Pediatric vital sign references, PALS guidelines",
    "keyFinding": "Children maintain BP until late in shock - CRT and color are more sensitive"
  },
  "ageAdjustedHR": {
    "0-3months": "100-160 bpm",
    "3-6months": "90-120 bpm",
    "6-12months": "80-120 bpm",
    "1-3years": "80-110 bpm",
    "3-6years": "70-110 bpm",
    "6-12years": "60-95 bpm",
    ">12years": "60-100 bpm"
  },
  "perfusionAssessment": {
    "CRT": {
      "normal": "<2 seconds",
      "mild": "3 seconds",
      "moderate": "4 seconds",
      "severe": ">=5 seconds"
    },
    "colorScore": {
      "0": "Pink",
      "1": "Pale",
      "2": "Gray",
      "3": "Gray/mottled"
    }
  },
  "inputs": [
    {
      "name": "idadeMeses",
      "type": "number"
    },
    {
      "name": "frequenciaCardiaca",
      "type": "number",
      "unit": "bpm"
    },
    {
      "name": "tempoEnchimentoCapilar",
      "type": "number",
      "unit": "seconds"
    },
    {
      "name": "coloracaoPele",
      "type": "number",
      "range": "0-3"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "PEWS",
    "cardiovascular",
    "pediatric",
    "perfusion",
    "CRT",
    "shock"
  ],
  "relatedRules": [
    "EWS-PEWS-001",
    "EWS-PEWS-004"
  ],
  "status": "active",
  "criticality": "HIGH"
}