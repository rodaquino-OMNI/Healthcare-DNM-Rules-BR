<?xml version="1.0" encoding="UTF-8"?>
<!--
  ============================================================================
  EWS-PEWS-006: PEWS Behavior Component Assessment
  ============================================================================

  Pediatric Early Warning Score - Behavior/Neurological Assessment.
  This rule evaluates level of consciousness and behavior in children.

  Evidence Base: Brighton PEWS, Monaghan 2005
  Behavior Scoring:
  - 0: Playing/appropriate
  - 1: Sleeping/irritable
  - 2: Lethargy/reduced response to pain
  - 3: Unresponsive/inappropriate

  ============================================================================
-->
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/"
             id="Definitions_EWS_PEWS_006"
             name="PEWS Behavior Component"
             targetNamespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ═══════════════════════════════════════════════════════════════════════════
    EWS-PEWS-006: PEWS Behavior Component Assessment
    Version: 1.0.0 (2026-02-06)
    Clinical Domain: Pediatric Neurology / Emergency Medicine
    ═══════════════════════════════════════════════════════════════════════════

    BEHAVIOR ASSESSMENT:
    - Level of consciousness
    - Response to parents/environment
    - Irritability vs lethargy
    - Inconsolable crying

    CLINICAL SIGNIFICANCE:
    - Behavior change often earliest sign of deterioration
    - Parents best recognize subtle changes
    - Irritability may precede lethargy
    ═══════════════════════════════════════════════════════════════════════════
  -->

  <decision id="Decision_EWS_PEWS_006" name="PEWS Behavior Component Evaluation">
    <decisionTable id="DecisionTable_EWS_PEWS_006" hitPolicy="FIRST">

      <!-- INPUT 1: Behavior Score (0-3) -->
      <input id="Input_1" label="Score Comportamento">
        <inputExpression id="InputExpression_1" typeRef="number">
          <text>scoreComportamento</text>
        </inputExpression>
      </input>

      <!-- INPUT 2: Change from Baseline -->
      <input id="Input_2" label="Mudanca do Baseline">
        <inputExpression id="InputExpression_2" typeRef="boolean">
          <text>mudancaDoBaseline</text>
        </inputExpression>
      </input>

      <!-- INPUT 3: Parental Concern about Behavior -->
      <input id="Input_3" label="Pais Notam Mudanca">
        <inputExpression id="InputExpression_3" typeRef="boolean">
          <text>paisNotamMudanca</text>
        </inputExpression>
      </input>

      <!-- INPUT 4: Inconsolable Crying -->
      <input id="Input_4" label="Choro Inconsolavel">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>choroInconsolavel</text>
        </inputExpression>
      </input>

      <!-- OUTPUT 1: Alert Level -->
      <output id="Output_1" label="Nivel Alerta" name="nivelAlerta" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Alerta", "Atencao", "Informativo", "OK", "Revisar"</text>
        </outputValues>
      </output>

      <!-- OUTPUT 2: Urgency -->
      <output id="Output_2" label="Urgencia" name="urgencia" typeRef="string">
        <outputValues id="OutputValues_2">
          <text>"IMEDIATA", "URGENTE", "ROTINA", "INFORMATIVA"</text>
        </outputValues>
      </output>

      <!-- OUTPUT 3: Required Action -->
      <output id="Output_3" label="Acao Requerida" name="acaoRequerida" typeRef="string"/>

      <!-- OUTPUT 4: Clinical Justification -->
      <output id="Output_4" label="Justificativa Cientifica" name="justificativaCientifica" typeRef="string"/>

      <!-- RULE 1: CRITICAL - Unresponsive (score 3) -->
      <rule id="Rule_Critical_Unresponsive">
        <description>Unresponsive child - immediate emergency response</description>
        <inputEntry id="InputEntry_1_1">
          <text>3</text>
        </inputEntry>
        <inputEntry id="InputEntry_1_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_1_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_1_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_1_1">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_1_2">
          <text>"IMEDIATA"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_1_3">
          <text>"CRIANCA NAO RESPONSIVA - EMERGENCIA. Verificar ABC. Glicemia capilar IMEDIATA (hipoglicemia comum em criancas). Avaliacao neurologica rapida. Acesso venoso. Preparar para convulsao. Descartar intoxicacao, trauma, infeccao SNC."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_1_4">
          <text>"Score comportamento 3 (nao responsivo) indica comprometimento neurologico grave. Em criancas, causas incluem: hipoglicemia, convulsao pos-ictal, intoxicacao, sepse com encefalopatia, meningite, TCE. Todas requerem acao imediata."</text>
        </outputEntry>
      </rule>

      <!-- RULE 2: HIGH RISK - Lethargy (score 2) -->
      <rule id="Rule_HighRisk_Lethargy">
        <description>Lethargic child with reduced response to pain</description>
        <inputEntry id="InputEntry_2_1">
          <text>2</text>
        </inputEntry>
        <inputEntry id="InputEntry_2_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_2_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_2_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_2_1">
          <text>"Alerta"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_2_2">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_2_3">
          <text>"Crianca LETARGICA - resposta reduzida. Avaliacao medica URGENTE. Glicemia capilar. Avaliar hidratacao. Investigar sepse (febre + letargia = meningite ate prova contraria). Monitorar nivel de consciencia continuamente."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_2_4">
          <text>"Letargia (score 2) em crianca e sinal de alarme. Diferente de sono normal, crianca letargica nao acorda adequadamente quando estimulada. Em febris, letargia tem alto VPP para doenca bacteriana invasiva."</text>
        </outputEntry>
      </rule>

      <!-- RULE 3: ATTENTION - Parental concern about behavior -->
      <rule id="Rule_Attention_ParentalConcern">
        <description>Parents notice behavior change - always take seriously</description>
        <inputEntry id="InputEntry_3_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_3_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_3_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_3_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_3_1">
          <text>"Atencao"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_3_2">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_3_3">
          <text>"Pais percebem mudanca de comportamento - VALORIZAR. Pais conhecem seus filhos melhor que qualquer score. Avaliar detalhadamente. Perguntar especificamente o que mudou. Documentar preocupacoes. Baixar limiar para investigacao."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_3_4">
          <text>"Preocupacao parental sobre comportamento e preditor independente de doenca grave em criancas. Estudos mostram que 'pais preocupados com o comportamento' aumenta probabilidade de doenca seria em 3x. NUNCA ignorar."</text>
        </outputEntry>
      </rule>

      <!-- RULE 4: ATTENTION - Inconsolable crying -->
      <rule id="Rule_Attention_InconsolableCrying">
        <description>Inconsolable crying may indicate pain or illness</description>
        <inputEntry id="InputEntry_4_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_4_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_4_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_4_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_4_1">
          <text>"Atencao"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_4_2">
          <text>"URGENTE"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_4_3">
          <text>"Choro inconsolavel em crianca - investigar causa. Examinar completamente (despir). Avaliar dor (otite, hernias, cabelo em torniquete, trauma). Em lactentes, considerar invaginacao intestinal. Se febril + choro alto, pensar meningite."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_4_4">
          <text>"Choro inconsolavel pode indicar dor oculta ou doenca grave. Causas comuns: otite, invaginacao, torção testicular, infeccao urinária, meningite. Exame físico detalhado e obrigatório. 'Irritabilidade paradoxal' (piora ao pegar) sugere meningite."</text>
        </outputEntry>
      </rule>

      <!-- RULE 5: INFO - Irritable but consolable (score 1) -->
      <rule id="Rule_Info_Irritable">
        <description>Mildly irritable or sleeping - enhanced monitoring</description>
        <inputEntry id="InputEntry_5_1">
          <text>1</text>
        </inputEntry>
        <inputEntry id="InputEntry_5_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_5_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_5_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_5_1">
          <text>"Informativo"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_5_2">
          <text>"ROTINA"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_5_3">
          <text>"Crianca levemente irritavel ou mais sonolenta que habitual. Comum em doenca. Se consolavel pelos pais e desperta quando estimulada, monitorar. Repetir avaliacao em 2-4 horas. Orientar pais sobre sinais de alerta."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_5_4">
          <text>"Score comportamento 1 (irritavel/dormindo mais) e comum em criancas doentes e pode ser normal. Chave: crianca responde aos pais, faz contato visual, acorda para alimentar. Se consolavel, provavelmente estavel."</text>
        </outputEntry>
      </rule>

      <!-- RULE 6: FALLBACK -->
      <rule id="Rule_Fallback_EWS_PEWS_006">
        <description>Comportamento normal ou dados incompletos</description>
        <inputEntry id="InputEntry_F_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_F_4">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_F_1">
          <text>"Revisar"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_2">
          <text>"ROTINA"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_3">
          <text>"Verificar componente comportamental do PEWS. Score 0: crianca brincando, interagindo apropriadamente. Considerar contexto (sono noturno e normal). Perguntar sempre aos pais sobre mudancas."</text>
        </outputEntry>
        <outputEntry id="OutputEntry_F_4">
          <text>"Comportamento e frequentemente o primeiro parametro a mudar em crianca deteriorando. Avaliacao inclui: consolabilidade, interacao com ambiente, resposta aos pais, tono muscular. Pais sao os melhores avaliadores."</text>
        </outputEntry>
      </rule>

    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_EWS_PEWS_006">
      <dmndi:DMNShape id="DMNShape_Decision_EWS_PEWS_006" dmnElementRef="Decision_EWS_PEWS_006">
        <dc:Bounds height="80" width="180" x="160" y="100"/>
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>

</definitions>
