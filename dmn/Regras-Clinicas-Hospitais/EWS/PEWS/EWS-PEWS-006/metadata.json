{
  "ruleId": "EWS-PEWS-006",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "PEWS",
  "name": "PEWS Behavior Component Assessment",
  "description": "Evaluates neurological and behavioral status as part of PEWS scoring, including parental concern as a key indicator.",
  "clinicalDomain": "Pediatric Neurology / Emergency Medicine",
  "evidenceBase": {
    "primarySource": "Brighton PEWS, Monaghan 2005",
    "keyFinding": "Parental concern about behavior increases probability of serious illness by 3x"
  },
  "behaviorScoring": {
    "0": "Playing/appropriate, happy, interacting",
    "1": "Sleeping, irritable when awake, consolable",
    "2": "Lethargic, reduced response to pain",
    "3": "Unresponsive, inappropriate response to stimuli"
  },
  "inputs": [
    {
      "name": "scoreComportamento",
      "type": "number",
      "range": "0-3"
    },
    {
      "name": "mudancaDoBaseline",
      "type": "boolean"
    },
    {
      "name": "paisNotamMudanca",
      "type": "boolean"
    },
    {
      "name": "choroInconsolavel",
      "type": "boolean"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "PEWS",
    "behavior",
    "neurological",
    "pediatric",
    "parental-concern",
    "consciousness"
  ],
  "relatedRules": [
    "EWS-PEWS-001",
    "EWS-PEWS-002"
  ],
  "status": "active",
  "criticality": "HIGH"
}