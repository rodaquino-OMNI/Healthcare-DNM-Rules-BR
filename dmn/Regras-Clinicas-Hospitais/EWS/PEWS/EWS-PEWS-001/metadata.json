{
  "ruleId": "EWS-PEWS-001",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "PEWS",
  "name": "PEWS Critical Score Alert (>=5)",
  "description": "Triggers immediate clinical response for PEWS scores indicating high risk of deterioration in pediatric patients.",
  "clinicalDomain": "Pediatric Emergency / Pediatric Critical Care",
  "evidenceBase": {
    "primarySource": "Monaghan A. Arch Dis Child 2005;90:1083-1089",
    "validation": "Brighton PEWS studies",
    "sensitivity": "78% for PICU admission",
    "specificity": "95% for clinical deterioration"
  },
  "scoringComponents": {
    "behavior": {
      "0": "Playing/appropriate",
      "1": "Sleeping/irritable",
      "2": "Lethargy/reduced response to pain",
      "3": "Unresponsive/inappropriate response"
    },
    "cardiovascular": {
      "0": "Pink, CRT 1-2s",
      "1": "Pale, CRT 3s",
      "2": "Gray, CRT 4s, tachycardia",
      "3": "Gray/mottled, CRT >=5s, tachy/bradycardia"
    },
    "respiratory": {
      "0": "Normal",
      "1": "Mild increase, mild accessory use",
      "2": "Moderate increase, moderate accessory use, retractions",
      "3": "Severe distress, apnea, gasping"
    }
  },
  "inputs": [
    {
      "name": "pewsScoreTotal",
      "type": "number",
      "range": "0-9"
    },
    {
      "name": "hasComponenteScore3",
      "type": "boolean"
    },
    {
      "name": "idadeMeses",
      "type": "number"
    },
    {
      "name": "doencaCronica",
      "type": "boolean"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "PEWS",
    "pediatric",
    "early-warning",
    "critical-care",
    "children"
  ],
  "relatedRules": [
    "EWS-PEWS-002",
    "EWS-PEWS-003"
  ],
  "status": "active",
  "criticality": "HIGH"
}