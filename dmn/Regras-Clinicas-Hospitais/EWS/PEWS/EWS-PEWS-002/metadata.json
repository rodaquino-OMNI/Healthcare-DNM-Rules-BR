{
  "ruleId": "EWS-PEWS-002",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "PEWS",
  "name": "PEWS Medium Risk Alert (Score 3-4)",
  "description": "Triggers enhanced monitoring protocol for PEWS scores indicating medium risk in pediatric patients.",
  "clinicalDomain": "Pediatric Medicine / Ward Care",
  "evidenceBase": {
    "primarySource": "Monaghan A. Arch Dis Child 2005",
    "parentalConcern": "Increases PPV of PEWS by 40%"
  },
  "inputs": [
    {
      "name": "pewsScoreTotal",
      "type": "number",
      "range": "3-4"
    },
    {
      "name": "tendencia",
      "type": "string",
      "values": [
        "piorando",
        "estavel",
        "melhorando"
      ]
    },
    {
      "name": "preocupacaoPais",
      "type": "boolean"
    },
    {
      "name": "horasSemAceitacaoOral",
      "type": "number"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "PEWS",
    "pediatric",
    "medium-risk",
    "parental-concern",
    "monitoring"
  ],
  "relatedRules": [
    "EWS-PEWS-001",
    "EWS-PEWS-003"
  ],
  "status": "active",
  "criticality": "HIGH"
}