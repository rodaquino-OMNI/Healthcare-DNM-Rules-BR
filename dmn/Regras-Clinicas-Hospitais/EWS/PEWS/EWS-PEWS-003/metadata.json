{
  "ruleId": "EWS-PEWS-003",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "PEWS",
  "name": "PEWS Low Risk Alert (Score 0-2)",
  "description": "Confirms stable status for pediatric patients with low PEWS scores requiring routine monitoring.",
  "clinicalDomain": "Pediatric Medicine / Ward Care",
  "evidenceBase": {
    "primarySource": "Monaghan A. Arch Dis Child 2005"
  },
  "inputs": [
    {
      "name": "pewsScoreTotal",
      "type": "number",
      "range": "0-2"
    },
    {
      "name": "aumentoRecente",
      "type": "boolean"
    },
    {
      "name": "primeiraAvaliacao",
      "type": "boolean"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "PEWS",
    "pediatric",
    "low-risk",
    "routine",
    "stable"
  ],
  "relatedRules": [
    "EWS-PEWS-001",
    "EWS-PEWS-002"
  ],
  "status": "active",
  "criticality": "HIGH"
}