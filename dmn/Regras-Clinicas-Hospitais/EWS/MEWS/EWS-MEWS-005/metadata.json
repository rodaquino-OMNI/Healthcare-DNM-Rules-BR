{
  "ruleId": "EWS-MEWS-005",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "MEWS",
  "name": "MEWS Cardiovascular Component Alert",
  "description": "Triggers alerts for hemodynamic instability indicators within MEWS scoring.",
  "clinicalDomain": "Cardiology / Critical Care",
  "evidenceBase": {
    "primarySource": "Subbe CP et al. QJM 2001;94:521-526",
    "keyFinding": "Combined BP + HR abnormalities increase mortality 4x"
  },
  "scoringCriteria": {
    "systolicBP": {
      "<70": {
        "points": 3,
        "interpretation": "Circulatory shock"
      },
      "71-80": {
        "points": 2,
        "interpretation": "Severe hypotension"
      },
      "81-100": {
        "points": 1,
        "interpretation": "Hypotension"
      },
      "101-199": {
        "points": 0,
        "interpretation": "Normal"
      },
      ">=200": {
        "points": 2,
        "interpretation": "Hypertensive crisis"
      }
    },
    "heartRate": {
      "<40": {
        "points": 2,
        "interpretation": "Severe bradycardia"
      },
      "41-50": {
        "points": 1,
        "interpretation": "Bradycardia"
      },
      "51-100": {
        "points": 0,
        "interpretation": "Normal"
      },
      "101-110": {
        "points": 1,
        "interpretation": "Mild tachycardia"
      },
      "111-129": {
        "points": 2,
        "interpretation": "Moderate tachycardia"
      },
      ">=130": {
        "points": 3,
        "interpretation": "Severe tachycardia"
      }
    }
  },
  "inputs": [
    {
      "name": "paSistolica",
      "type": "number",
      "unit": "mmHg"
    },
    {
      "name": "frequenciaCardiaca",
      "type": "number",
      "unit": "bpm"
    },
    {
      "name": "sinaisHipoperfusao",
      "type": "boolean"
    },
    {
      "name": "cardiopatiaConhecida",
      "type": "boolean"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "MEWS",
    "cardiovascular",
    "shock",
    "hypotension",
    "tachycardia",
    "bradycardia"
  ],
  "relatedRules": [
    "EWS-MEWS-001",
    "EWS-qSOFA-001"
  ],
  "status": "active",
  "criticality": "HIGH"
}