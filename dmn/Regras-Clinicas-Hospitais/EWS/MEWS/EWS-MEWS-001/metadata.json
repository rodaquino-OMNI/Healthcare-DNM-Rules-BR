{
  "ruleId": "EWS-MEWS-001",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "MEWS",
  "name": "MEWS Critical Score Alert (>=5)",
  "description": "Triggers immediate clinical response for MEWS scores indicating high risk of deterioration in adult patients.",
  "clinicalDomain": "Emergency Medicine / Acute Care",
  "evidenceBase": {
    "primarySource": "Subbe CP et al. QJM 2001;94:521-526",
    "guidelines": [
      "NICE CG50 Acutely ill adults"
    ],
    "validation": "Multiple validation studies",
    "sensitivity": "75% for cardiac arrest detection",
    "mortalityRisk": "5.4x increased at MEWS >=5"
  },
  "scoringCriteria": {
    "systolicBP": {
      "<70": 3,
      "71-80": 2,
      "81-100": 1,
      "101-199": 0,
      ">=200": 2
    },
    "heartRate": {
      "<40": 2,
      "41-50": 1,
      "51-100": 0,
      "101-110": 1,
      "111-129": 2,
      ">=130": 3
    },
    "respiratoryRate": {
      "<9": 2,
      "9-14": 0,
      "15-20": 1,
      "21-29": 2,
      ">=30": 3
    },
    "temperature": {
      "<35": 2,
      "35-38.4": 0,
      ">=38.5": 2
    },
    "avpu": {
      "Alert": 0,
      "Verbal": 1,
      "Pain": 2,
      "Unresponsive": 3
    }
  },
  "triggerThresholds": {
    "critical": "MEWS >= 5",
    "redFlag": "AVPU = Unresponsive",
    "highRiskModifier": "Age >= 70 years with score 4"
  },
  "inputs": [
    {
      "name": "mewsScoreTotal",
      "type": "number",
      "label": "MEWS Score Total",
      "required": true,
      "range": "0-14",
      "description": "Aggregate MEWS score from all 5 parameters"
    },
    {
      "name": "avpuScore",
      "type": "string",
      "label": "AVPU Score",
      "required": true,
      "values": [
        "A",
        "V",
        "P",
        "U"
      ],
      "description": "Level of consciousness: Alert, Verbal, Pain, Unresponsive"
    },
    {
      "name": "idadePaciente",
      "type": "number",
      "label": "Idade Paciente",
      "required": false,
      "description": "Patient age for risk stratification"
    },
    {
      "name": "posOperatorio",
      "type": "boolean",
      "label": "Pos Operatorio",
      "required": false,
      "description": "True if patient is post-operative"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ],
      "description": "Alert severity level"
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ],
      "description": "Response urgency classification"
    },
    {
      "name": "acaoRequerida",
      "type": "string",
      "description": "Detailed clinical action required"
    },
    {
      "name": "justificativaCientifica",
      "type": "string",
      "description": "Evidence-based rationale for the alert level"
    }
  ],
  "responseProtocol": {
    "score0to2": "Routine monitoring every 4-6 hours",
    "score3to4": "Increase monitoring, inform nurse in charge",
    "score5plus": "Immediate medical review, consider HDU/ICU"
  },
  "tags": [
    "MEWS",
    "early-warning",
    "acute-care",
    "deterioration",
    "adult-medicine"
  ],
  "compliance": [
    "NICE_CG50"
  ],
  "relatedRules": [
    "EWS-MEWS-002",
    "EWS-MEWS-003",
    "EWS-NEWS-001"
  ],
  "status": "active",
  "criticality": "HIGH"
}