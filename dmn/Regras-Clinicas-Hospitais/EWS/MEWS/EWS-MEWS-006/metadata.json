{
  "ruleId": "EWS-MEWS-006",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "MEWS",
  "name": "MEWS Temperature Component Alert",
  "description": "Triggers alerts for temperature abnormalities (fever and hypothermia) within MEWS scoring.",
  "clinicalDomain": "Infectious Disease / Emergency Medicine",
  "evidenceBase": {
    "primarySource": "Subbe CP et al. QJM 2001;94:521-526",
    "keyFinding": "Hypothermia in infection indicates severe sepsis with 40% higher mortality"
  },
  "scoringCriteria": {
    "temperature": {
      "<35": {
        "points": 2,
        "interpretation": "Hypothermia"
      },
      "35-38.4": {
        "points": 0,
        "interpretation": "Normal/low-grade fever"
      },
      ">=38.5": {
        "points": 2,
        "interpretation": "Fever"
      }
    }
  },
  "inputs": [
    {
      "name": "temperatura",
      "type": "number",
      "unit": "Celsius"
    },
    {
      "name": "suspeitaInfeccao",
      "type": "boolean"
    },
    {
      "name": "imunossuprimido",
      "type": "boolean"
    },
    {
      "name": "mewsAssociado",
      "type": "number",
      "description": "Total MEWS score excluding temperature"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "MEWS",
    "temperature",
    "fever",
    "hypothermia",
    "sepsis",
    "infection"
  ],
  "relatedRules": [
    "EWS-MEWS-001",
    "EWS-qSOFA-001"
  ],
  "status": "active",
  "criticality": "HIGH"
}