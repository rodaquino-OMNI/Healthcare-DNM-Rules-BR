{
  "ruleId": "EWS-MEWS-003",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "MEWS",
  "name": "MEWS Low Risk Alert (Score 0-2)",
  "description": "Confirms stable status for patients with low MEWS scores requiring routine monitoring.",
  "clinicalDomain": "General Medicine / Ward Care",
  "evidenceBase": {
    "primarySource": "Subbe CP et al. QJM 2001;94:521-526",
    "mortalityRisk": "<1% at MEWS 0-2",
    "stabilityRate": "95% remain stable over 24 hours"
  },
  "triggerThresholds": {
    "lowRisk": "MEWS 0-2",
    "modifiers": [
      "Recent increase",
      "Patient complaints"
    ]
  },
  "inputs": [
    {
      "name": "mewsScoreTotal",
      "type": "number",
      "range": "0-2"
    },
    {
      "name": "aumentoRecente",
      "type": "boolean",
      "description": "Score recently increased from zero"
    },
    {
      "name": "queixaEspecifica",
      "type": "boolean",
      "description": "Patient has specific complaints despite low score"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "MEWS",
    "early-warning",
    "low-risk",
    "routine",
    "adult-medicine"
  ],
  "relatedRules": [
    "EWS-MEWS-001",
    "EWS-MEWS-002"
  ],
  "status": "active",
  "criticality": "HIGH"
}