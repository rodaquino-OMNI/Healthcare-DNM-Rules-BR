{
  "ruleId": "EWS-MEWS-002",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "MEWS",
  "name": "MEWS Medium Risk Alert (Score 3-4)",
  "description": "Triggers enhanced monitoring protocol for MEWS scores indicating medium risk of deterioration.",
  "clinicalDomain": "General Medicine / Ward Care",
  "evidenceBase": {
    "primarySource": "Subbe CP et al. QJM 2001;94:521-526",
    "mortalityRisk": "2.1x increased at MEWS 3-4",
    "progressionRate": "35% progress to critical if untreated"
  },
  "triggerThresholds": {
    "mediumRisk": "MEWS 3-4",
    "modifiers": [
      "Worsening trend",
      "Comorbidities",
      "Early admission (<24h)"
    ]
  },
  "inputs": [
    {
      "name": "mewsScoreTotal",
      "type": "number",
      "label": "MEWS Score Total",
      "required": true,
      "range": "3-4"
    },
    {
      "name": "tendenciaScore",
      "type": "string",
      "label": "Tendencia Score",
      "values": [
        "piorando",
        "estavel",
        "melhorando"
      ]
    },
    {
      "name": "temComorbidades",
      "type": "boolean",
      "label": "Comorbidades"
    },
    {
      "name": "horasDesdeAdmissao",
      "type": "number",
      "label": "Horas Desde Admissao"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "MEWS",
    "early-warning",
    "medium-risk",
    "monitoring",
    "adult-medicine"
  ],
  "relatedRules": [
    "EWS-MEWS-001",
    "EWS-MEWS-003"
  ],
  "status": "active",
  "criticality": "HIGH"
}