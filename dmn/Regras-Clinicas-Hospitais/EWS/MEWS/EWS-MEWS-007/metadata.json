{
  "ruleId": "EWS-MEWS-007",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "MEWS",
  "name": "MEWS Trend Analysis Alert",
  "description": "Evaluates MEWS score changes over time to detect deterioration patterns and treatment response.",
  "clinicalDomain": "Quality & Safety / Early Warning",
  "evidenceBase": {
    "primarySource": "Multiple validation studies",
    "keyFinding": "Rate of change may be more important than absolute value",
    "rapidDeterioration": ">=3 point increase has 78% PPV for adverse events",
    "persistentElevation": ">=3 for >6h increases mortality 2.5x"
  },
  "inputs": [
    {
      "name": "mewsAtual",
      "type": "number",
      "description": "Current MEWS score"
    },
    {
      "name": "mewsAnterior",
      "type": "number",
      "description": "Previous MEWS score (typically 4h ago)"
    },
    {
      "name": "horasNesteNivel",
      "type": "number",
      "description": "Hours at current MEWS level"
    },
    {
      "name": "respostaAoTratamento",
      "type": "string",
      "values": [
        "melhorando",
        "estavel",
        "sem_resposta",
        "piorando"
      ]
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "MEWS",
    "trend-analysis",
    "deterioration",
    "treatment-response",
    "quality"
  ],
  "relatedRules": [
    "EWS-MEWS-001",
    "EWS-MEWS-002",
    "EWS-MEWS-003"
  ],
  "status": "active",
  "criticality": "HIGH"
}