{
  "ruleId": "EWS-NEWS-001",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "NEWS2",
  "name": "NEWS2 Critical Score Alert (≥7 or Single Parameter 3)",
  "description": "Triggers immediate clinical response for NEWS2 scores indicating high risk of deterioration in adult patients.",
  "clinicalDomain": "Emergency Medicine / Critical Care",
  "evidenceBase": {
    "primarySource": "Royal College of Physicians UK (2017)",
    "guidelines": [
      "NICE CG50 Acutely ill adults in hospital"
    ],
    "validation": "35,585 admissions (Smith et al., BMJ 2013)",
    "sensitivity": "89.4%",
    "specificity": "76.8%"
  },
  "triggerThresholds": {
    "critical": "NEWS2 ≥ 7",
    "redFlag": "Any single parameter = 3",
    "highRiskModifier": "Age ≥75 years with score 5-6"
  },
  "inputs": [
    {
      "name": "news2ScoreTotal",
      "type": "number",
      "label": "NEWS2 Score Total",
      "required": true,
      "range": "0-20",
      "description": "Aggregate NEWS2 score from all 7 parameters"
    },
    {
      "name": "hasParametroScore3",
      "type": "boolean",
      "label": "Single Parameter Score 3",
      "required": true,
      "description": "True if any single parameter scores 3 points (extreme value)"
    },
    {
      "name": "idadePaciente",
      "type": "number",
      "label": "Idade Paciente",
      "required": false,
      "description": "Patient age for risk stratification"
    },
    {
      "name": "cuidadosPaliativos",
      "type": "boolean",
      "label": "Cuidados Paliativos",
      "required": false,
      "description": "True if patient is under palliative care (modifies response focus)"
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "Atencao",
        "Informativo",
        "OK",
        "Revisar"
      ],
      "description": "Alert severity level"
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "ROTINA",
        "INFORMATIVA"
      ],
      "description": "Response urgency classification"
    },
    {
      "name": "acaoRequerida",
      "type": "string",
      "description": "Detailed clinical action required"
    },
    {
      "name": "justificativaCientifica",
      "type": "string",
      "description": "Evidence-based rationale for the alert level"
    }
  ],
  "riskScores": {
    "news2_7plus": {
      "mortalityRate": "8.7%",
      "deteriorationRisk": "High",
      "recommendedResponse": "Immediate senior review"
    },
    "singleParam3": {
      "mortalityRate": "Variable (depends on parameter)",
      "deteriorationRisk": "High",
      "recommendedResponse": "Urgent clinical assessment within 30 min"
    },
    "score5to6_elderly": {
      "mortalityRate": "3.1%",
      "deteriorationRisk": "Medium-High",
      "recommendedResponse": "Review within 1 hour + enhanced monitoring"
    }
  },
  "tags": [
    "NEWS2",
    "early-warning",
    "critical-care",
    "deterioration",
    "RCP",
    "adult-medicine"
  ],
  "compliance": [
    "NICE_CG50",
    "RCP_NEWS2_2017"
  ],
  "relatedRules": [
    "EWS-NEWS-002",
    "EWS-NEWS-003",
    "EWS-qSOFA-001"
  ],
  "status": "active",
  "criticality": "HIGH"
}