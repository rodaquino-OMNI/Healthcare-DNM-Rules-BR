{
  "ruleId": "EWS-NEWS-002",
  "version": "1.0.0",
  "createdAt": "2026-02-06",
  "category": "CLINICAL_ALERT",
  "subcategory": "EARLY_WARNING",
  "alertSystem": "NEWS2",
  "name": "NEWS2 Single Parameter Red Flags (Score 3)",
  "description": "Detects extreme values in individual vital signs that score 3 points, indicating immediate clinical deterioration risk regardless of total score.",
  "clinicalDomain": "Emergency Medicine / Critical Care",
  "evidenceBase": {
    "primarySource": "Royal College of Physicians UK (2017)",
    "guidelines": [
      "NICE CG50"
    ],
    "parameterThresholds": "Evidence-based extremes validated across 35,585 patients"
  },
  "inputs": [
    {
      "name": "frequenciaRespiratoria",
      "type": "number",
      "unit": "rpm",
      "criticalRanges": "≤8 or ≥25",
      "required": true
    },
    {
      "name": "saturacaoO2",
      "type": "number",
      "unit": "%",
      "criticalThreshold": "≤91",
      "required": true
    },
    {
      "name": "pressaoSistolica",
      "type": "number",
      "unit": "mmHg",
      "criticalRanges": "≤90 or ≥220",
      "required": true
    },
    {
      "name": "frequenciaCardiaca",
      "type": "number",
      "unit": "bpm",
      "criticalRanges": "≤40 or ≥131",
      "required": true
    },
    {
      "name": "nivelConsciencia",
      "type": "string",
      "values": [
        "Alert",
        "V",
        "P",
        "U"
      ],
      "criticalValues": [
        "V",
        "P",
        "U"
      ],
      "required": true
    }
  ],
  "outputs": [
    {
      "name": "nivelAlerta",
      "type": "string",
      "values": [
        "Alerta",
        "OK"
      ]
    },
    {
      "name": "urgencia",
      "type": "string",
      "values": [
        "IMEDIATA",
        "URGENTE",
        "INFORMATIVA"
      ]
    },
    {
      "name": "acaoRequerida",
      "type": "string"
    },
    {
      "name": "justificativaCientifica",
      "type": "string"
    }
  ],
  "tags": [
    "NEWS2",
    "vital-signs",
    "red-flag",
    "deterioration",
    "parameter-extremes"
  ],
  "relatedRules": [
    "EWS-NEWS-001",
    "EWS-NEWS-003"
  ],
  "status": "active",
  "criticality": "HIGH"
}