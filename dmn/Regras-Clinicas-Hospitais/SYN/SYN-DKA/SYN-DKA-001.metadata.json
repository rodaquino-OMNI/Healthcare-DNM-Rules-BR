{
  "ruleId": "SYN-DKA-001",
  "ruleName": "Deteccao de Cetoacidose Diabetica",
  "category": "SYNDROME_DETECTION",
  "subcategory": "DKA",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "ENDOCRINOLOGIA_MEDICINA_INTERNA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "30_MINUTES",
  "clinicalReferences": [
    "ADA Standards of Care in Diabetes 2024",
    "Joint British Diabetes Societies (JBDS) DKA Guidelines",
    "Kitabchi AE et al. Diabetes Care 2009",
    "AACE/ACE Clinical Practice Guidelines"
  ],
  "inputs": [
    {
      "variable": "glicose",
      "type": "number",
      "unit": "mg/dL",
      "required": true,
      "criticalThreshold": 250
    },
    {
      "variable": "phArterial",
      "type": "number",
      "required": true,
      "normalRange": [7.35, 7.45],
      "criticalThreshold": 7.30
    },
    {
      "variable": "bicarbonato",
      "type": "number",
      "unit": "mEq/L",
      "required": true,
      "normalRange": [22, 26],
      "criticalThreshold": 18
    },
    {
      "variable": "cetonasPositivas",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "DKA_MANAGEMENT",
    "actions": [
      "Hidratacao IV agressiva (SF 0.9%)",
      "Insulina regular IV 0.1 U/kg/h",
      "Reposicao de potassio (se K < 5.3)",
      "Monitorar glicemia horaria",
      "Gasometria a cada 2-4h",
      "Investigar fator precipitante"
    ]
  },
  "mortalityImpact": "CAD grave tem mortalidade 5-10%",
  "tags": ["dka", "diabetes", "ketoacidosis", "acidosis", "insulin", "endocrinology", "critical"]
}
