{
  "ruleId": "SYN-DKA-005",
  "ruleName": "Edema Cerebral na CAD",
  "category": "SYNDROME_DETECTION",
  "subcategory": "DKA",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "MEDICINA_INTENSIVA_NEUROLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "15_MINUTES",
  "clinicalReferences": [
    "ISPAD Clinical Practice Consensus Guidelines 2022",
    "ADA Pediatric DKA Guidelines",
    "Wolfsdorf J et al. Pediatric Diabetes 2018",
    "Glaser N et al. N Engl J Med 2001"
  ],
  "inputs": [
    {
      "variable": "escalaGlasgow",
      "type": "number",
      "required": true,
      "range": [3, 15],
      "criticalThreshold": 8
    },
    {
      "variable": "cefaleiaIntensa",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "alteracoesPupilares",
      "type": "boolean",
      "required": true,
      "description": "Anisocoria, midriase fixa, resposta lenta"
    },
    {
      "variable": "horasTratamentoCAD",
      "type": "number",
      "unit": "horas",
      "required": true,
      "riskWindow": [4, 12]
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "CEREBRAL_EDEMA_DKA",
    "actions": [
      "Manitol 0.5-1 g/kg IV em 20 min",
      "OU Salina hipertonica 3% 2.5-5 mL/kg",
      "Reduzir taxa de hidratacao em 50%",
      "Elevar cabeceira 30 graus",
      "TC cranio urgente",
      "Intubacao se GCS < 8"
    ]
  },
  "mortalityImpact": "Edema cerebral na CAD tem mortalidade 20-40%",
  "tags": ["dka", "cerebral-edema", "pediatric", "neurology", "emergency", "mannitol"]
}
