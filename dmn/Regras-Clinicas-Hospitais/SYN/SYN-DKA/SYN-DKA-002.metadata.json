{
  "ruleId": "SYN-DKA-002",
  "ruleName": "Deteccao de Estado Hiperglicemico Hiperosmolar",
  "category": "SYNDROME_DETECTION",
  "subcategory": "DKA",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "ENDOCRINOLOGIA_MEDICINA_INTERNA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "30_MINUTES",
  "clinicalReferences": [
    "ADA Standards of Care in Diabetes 2024",
    "Kitabchi AE et al. Diabetes Care 2009",
    "Joint British Diabetes Societies HHS Guidelines 2022",
    "AACE/ACE Clinical Practice Guidelines"
  ],
  "inputs": [
    {
      "variable": "glicose",
      "type": "number",
      "unit": "mg/dL",
      "required": true,
      "criticalThreshold": 600
    },
    {
      "variable": "osmolaridade",
      "type": "number",
      "unit": "mOsm/kg",
      "required": true,
      "normalRange": [275, 295],
      "criticalThreshold": 320
    },
    {
      "variable": "nivelConscienciaAlterado",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "cetonasFortementePositivas",
      "type": "boolean",
      "required": true,
      "description": "Diferenciar de CAD"
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "HHS_MANAGEMENT",
    "actions": [
      "Hidratacao IV PRIORITARIA (deficit 8-12L)",
      "Insulina IV baixa dose APOS hidratacao",
      "Correcao lenta da osmolaridade (3-8 mOsm/h)",
      "Profilaxia de TVP",
      "Monitorar nivel de consciencia"
    ]
  },
  "mortalityImpact": "EHH tem mortalidade 10-20%, maior que CAD",
  "tags": ["hhs", "ehh", "diabetes", "hyperosmolar", "dehydration", "endocrinology", "critical"]
}
