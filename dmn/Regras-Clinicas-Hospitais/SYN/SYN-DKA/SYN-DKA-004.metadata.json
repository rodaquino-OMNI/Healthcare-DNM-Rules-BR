{
  "ruleId": "SYN-DKA-004",
  "ruleName": "Resolucao e Transicao na CAD",
  "category": "SYNDROME_DETECTION",
  "subcategory": "DKA",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "ENDOCRINOLOGIA_MEDICINA_INTERNA",
  "severity": "HIGH",
  "timeSensitive": true,
  "maxResponseTime": "2_HOURS",
  "clinicalReferences": [
    "ADA Standards of Care in Diabetes 2024",
    "Joint British Diabetes Societies DKA Guidelines",
    "Kitabchi Protocol for DKA",
    "Umpierrez GE, Diabetes Care 2009"
  ],
  "inputs": [
    {
      "variable": "glicose",
      "type": "number",
      "unit": "mg/dL",
      "required": true,
      "targetForResolution": 200
    },
    {
      "variable": "phArterial",
      "type": "number",
      "required": true,
      "targetForResolution": 7.30
    },
    {
      "variable": "bicarbonato",
      "type": "number",
      "unit": "mEq/L",
      "required": true,
      "targetForResolution": 15
    },
    {
      "variable": "tolerandoDietaOral",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "DKA_RESOLUTION_TRANSITION",
    "actions": [
      "Verificar todos criterios de resolucao",
      "Aguardar tolerancia a dieta oral",
      "Calcular dose de insulina SC",
      "Aplicar SC com overlap de 2h de insulina IV",
      "Monitorar glicemia a cada 4h apos transicao"
    ]
  },
  "mortalityImpact": "Transicao inadequada pode causar recorrencia de CAD",
  "tags": ["dka", "resolution", "transition", "insulin", "subcutaneous", "discharge"]
}
