{
  "ruleId": "SYN-DKA-003",
  "ruleName": "Monitoramento de Potassio na CAD",
  "category": "SYNDROME_DETECTION",
  "subcategory": "DKA",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "ENDOCRINOLOGIA_MEDICINA_INTENSIVA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "30_MINUTES",
  "clinicalReferences": [
    "ADA Standards of Care in Diabetes 2024",
    "Joint British Diabetes Societies DKA Guidelines",
    "Kitabchi Protocol for DKA Management",
    "AHA Guidelines for Hypokalemia"
  ],
  "inputs": [
    {
      "variable": "potassio",
      "type": "number",
      "unit": "mEq/L",
      "required": true,
      "normalRange": [3.5, 5.0],
      "criticalThreshold": 3.3
    },
    {
      "variable": "insulinaEmInfusao",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "alteracoesECG",
      "type": "string",
      "required": false,
      "allowedValues": ["NORMAL", "ALTERADO"]
    },
    {
      "variable": "horasTratamento",
      "type": "number",
      "unit": "horas",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "DKA_POTASSIUM_MONITORING",
    "actions": [
      "Dosar K+ a cada 2h nas primeiras 4-6h",
      "Se K+ < 3.3: PARAR insulina, repor K+",
      "Se K+ 3.3-5.2: adicionar K+ ao soro",
      "Se K+ > 5.3: aguardar, nao adicionar K+",
      "ECG se K+ < 3.0 ou > 6.0"
    ]
  },
  "mortalityImpact": "Hipocalemia grave pode causar arritmia fatal em minutos",
  "tags": ["dka", "potassium", "hypokalemia", "insulin", "electrolytes", "monitoring"]
}
