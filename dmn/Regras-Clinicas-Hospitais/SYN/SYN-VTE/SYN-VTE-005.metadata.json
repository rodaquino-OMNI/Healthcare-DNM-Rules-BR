{
  "ruleId": "SYN-VTE-005",
  "ruleName": "Monitoramento de Anticoagulacao - HIT e Sangramento",
  "category": "SYNDROME_DETECTION",
  "subcategory": "VTE",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "HEMATOLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "1_HOUR",
  "clinicalReferences": [
    "Lo GK et al. J Thromb Haemost 2006 (4T Score)",
    "ASH Guidelines on HIT 2018",
    "ISTH Bleeding Classification",
    "ACC Expert Consensus on Reversal Agents 2020"
  ],
  "inputs": [
    {
      "variable": "score4T",
      "type": "number",
      "required": false,
      "range": [0, 8],
      "description": "4T Score para HIT"
    },
    {
      "variable": "quedaPlaquetas",
      "type": "number",
      "unit": "%",
      "required": true,
      "criticalThreshold": 50
    },
    {
      "variable": "sangramentoAtivo",
      "type": "string",
      "required": true,
      "allowedValues": ["NENHUM", "MENOR", "CRNM", "MAIOR"]
    },
    {
      "variable": "anticoagulanteEmUso",
      "type": "string",
      "required": true,
      "allowedValues": ["HEPARINA_NF", "ENOXAPARINA", "VARFARINA", "RIVAROXABAN", "APIXABAN", "DABIGATRAN", "OUTRO"]
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "ANTICOAGULATION_COMPLICATIONS",
    "actions": [
      "Monitorar plaquetas a cada 2-3 dias com heparina",
      "Calcular 4T score se queda plaquetaria",
      "Suspender heparina se HIT provavel",
      "Reverter anticoagulacao se sangramento maior",
      "Considerar anticoagulante alternativo"
    ]
  },
  "mortalityImpact": "HIT nao tratada tem 20-30% trombose e 5-10% mortalidade",
  "tags": ["vte", "hit", "heparin", "bleeding", "anticoagulation", "safety", "reversal"]
}
