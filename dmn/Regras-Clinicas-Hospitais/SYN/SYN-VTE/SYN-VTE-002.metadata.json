{
  "ruleId": "SYN-VTE-002",
  "ruleName": "Deteccao de Embolia Pulmonar via Wells PE Score",
  "category": "SYNDROME_DETECTION",
  "subcategory": "VTE",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "PNEUMOLOGIA_CARDIOLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "1_HOUR",
  "clinicalReferences": [
    "Wells PS et al. Thromb Haemost 2000",
    "ESC Guidelines on Pulmonary Embolism 2019",
    "ACCP Guidelines for VTE 2021",
    "AHA Scientific Statement on PE 2011"
  ],
  "inputs": [
    {
      "variable": "wellsScorePE",
      "type": "number",
      "required": true,
      "range": [0, 12.5],
      "description": "Soma dos criterios de Wells para EP"
    },
    {
      "variable": "pressaoSistolica",
      "type": "number",
      "unit": "mmHg",
      "required": true,
      "criticalThreshold": 90
    },
    {
      "variable": "dDimero",
      "type": "number",
      "unit": "ng/mL",
      "required": false,
      "normalRange": [0, 500]
    },
    {
      "variable": "angioTcPositiva",
      "type": "boolean",
      "required": false
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "PULMONARY_EMBOLISM",
    "actions": [
      "AngioTC de torax se EP provavel",
      "D-Dimero se EP improvavel",
      "Anticoagulacao se confirmado",
      "Trombolise se EP macica com choque",
      "UTI se instabilidade ou risco intermediario-alto"
    ]
  },
  "mortalityImpact": "EP macica nao tratada tem mortalidade > 25% em 1h",
  "tags": ["vte", "pe", "pulmonary-embolism", "wells-score", "thrombolysis", "critical"]
}
