{
  "ruleId": "SYN-VTE-003",
  "ruleName": "Estratificacao de Gravidade EP via PESI Score",
  "category": "SYNDROME_DETECTION",
  "subcategory": "VTE",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "PNEUMOLOGIA_CARDIOLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "2_HOURS",
  "clinicalReferences": [
    "Aujesky D et al. Lancet 2005 (PESI original)",
    "Jimenez D et al. Arch Intern Med 2010 (sPESI)",
    "ESC Guidelines on Pulmonary Embolism 2019",
    "CHEST Guidelines 2021"
  ],
  "inputs": [
    {
      "variable": "pesiScore",
      "type": "number",
      "required": true,
      "description": "PESI Score calculado"
    },
    {
      "variable": "disfuncaoVD",
      "type": "boolean",
      "required": true,
      "description": "Disfuncao VD por ECO ou BNP > 100 pg/mL"
    },
    {
      "variable": "troponinaElevada",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "instabilidadeHemodinamica",
      "type": "boolean",
      "required": true,
      "description": "PAS < 90 mmHg ou queda > 40 mmHg por > 15 min"
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "PE_RISK_STRATIFICATION",
    "actions": [
      "Calcular PESI ou sPESI",
      "ECO para avaliar VD",
      "Dosar troponina e BNP",
      "Definir nivel de cuidado (UTI vs enfermaria vs domiciliar)",
      "Considerar trombolise se alto risco"
    ]
  },
  "mortalityImpact": "PESI V tem mortalidade 10-24.5% vs 0-1.6% em PESI I",
  "tags": ["vte", "pe", "pesi", "risk-stratification", "thrombolysis", "prognosis"]
}
