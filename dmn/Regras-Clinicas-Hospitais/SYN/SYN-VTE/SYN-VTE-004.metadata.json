{
  "ruleId": "SYN-VTE-004",
  "ruleName": "Profilaxia de TEV via Padua Score",
  "category": "SYNDROME_DETECTION",
  "subcategory": "VTE",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "MEDICINA_INTERNA",
  "severity": "HIGH",
  "timeSensitive": true,
  "maxResponseTime": "24_HOURS",
  "clinicalReferences": [
    "Barbar S et al. J Thromb Haemost 2010 (Padua Score)",
    "ACCP Guidelines for VTE Prevention 2021",
    "NICE Guideline NG89 - VTE Prevention",
    "IMPROVE Bleeding Risk Score"
  ],
  "inputs": [
    {
      "variable": "paduaScore",
      "type": "number",
      "required": true,
      "range": [0, 20],
      "criticalThreshold": 4
    },
    {
      "variable": "contraindicacaoAnticoagulacao",
      "type": "boolean",
      "required": true,
      "description": "Sangramento ativo, coagulopatia, etc"
    },
    {
      "variable": "altoRiscoSangramento",
      "type": "boolean",
      "required": true,
      "description": "IMPROVE bleeding score >= 7"
    },
    {
      "variable": "profilaxiaEmUso",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "VTE_PROPHYLAXIS",
    "actions": [
      "Calcular Padua Score na admissao",
      "Se >= 4: Enoxaparina 40mg SC 1x/dia",
      "Se contraindicacao: CPI ou meias elasticas",
      "Reavaliar diariamente",
      "Considerar profilaxia estendida na alta"
    ]
  },
  "mortalityImpact": "Profilaxia adequada reduz TEV em 50-70%",
  "tags": ["vte", "prophylaxis", "padua", "prevention", "hospitalized", "enoxaparin"]
}
