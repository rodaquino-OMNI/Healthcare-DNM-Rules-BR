{
  "ruleId": "SYN-VTE-001",
  "ruleName": "Deteccao de TVP via Wells Score",
  "category": "SYNDROME_DETECTION",
  "subcategory": "VTE",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "ANGIOLOGIA_HEMATOLOGIA",
  "severity": "HIGH",
  "timeSensitive": true,
  "maxResponseTime": "4_HOURS",
  "clinicalReferences": [
    "Wells PS et al. Lancet 1997",
    "ACCP Guidelines for VTE Prevention and Treatment 2021",
    "CHEST Guidelines on Antithrombotic Therapy 2021",
    "Sociedade Brasileira de Angiologia e Cirurgia Vascular"
  ],
  "inputs": [
    {
      "variable": "wellsScoreTVP",
      "type": "number",
      "required": true,
      "range": [-2, 9],
      "description": "Soma dos criterios de Wells para TVP"
    },
    {
      "variable": "dDimero",
      "type": "number",
      "unit": "ng/mL",
      "required": false,
      "normalRange": [0, 500]
    },
    {
      "variable": "usgDopplerPositivo",
      "type": "boolean",
      "required": false
    },
    {
      "variable": "sintomasUnilaterais",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "DVT_TREATMENT",
    "actions": [
      "USG Doppler venoso de MMII",
      "D-Dimero se probabilidade baixa/moderada",
      "Anticoagulacao se confirmado",
      "Elevar membro afetado",
      "Avaliar risco de EP"
    ]
  },
  "mortalityImpact": "TVP nao tratada tem 10-30% risco de EP fatal",
  "tags": ["vte", "dvt", "wells-score", "d-dimer", "anticoagulation", "thrombosis"]
}
