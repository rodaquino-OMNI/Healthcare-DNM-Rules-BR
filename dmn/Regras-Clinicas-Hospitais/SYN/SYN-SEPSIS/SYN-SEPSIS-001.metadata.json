{
  "ruleId": "SYN-SEPSIS-001",
  "ruleName": "Deteccao de Sepse via qSOFA Score",
  "category": "SYNDROME_DETECTION",
  "subcategory": "SEPSIS",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "MEDICINA_INTENSIVA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "1_HOUR",
  "clinicalReferences": [
    "Sepsis-3 Consensus Definitions (JAMA 2016)",
    "Surviving Sepsis Campaign Guidelines 2021",
    "ILAS - Instituto Latino-Americano de Sepse"
  ],
  "inputs": [
    {
      "variable": "frequenciaRespiratoria",
      "type": "number",
      "unit": "rpm",
      "required": true,
      "criticalThreshold": 22
    },
    {
      "variable": "pressaoSistolica",
      "type": "number",
      "unit": "mmHg",
      "required": true,
      "criticalThreshold": 100
    },
    {
      "variable": "escalaGlasgow",
      "type": "number",
      "unit": "pontos",
      "required": true,
      "range": [3, 15],
      "criticalThreshold": 15
    },
    {
      "variable": "suspeitaInfeccao",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "SEPSIS_BUNDLE_1H",
    "actions": [
      "Coletar hemoculturas (2 amostras)",
      "Dosar lactato serico",
      "Iniciar antibiotico empirico em 1 hora",
      "Ressuscitacao volemica se hipotensao"
    ]
  },
  "mortalityImpact": "7-8% increase per hour delay",
  "tags": ["sepsis", "qSOFA", "infection", "critical", "time-sensitive"]
}
