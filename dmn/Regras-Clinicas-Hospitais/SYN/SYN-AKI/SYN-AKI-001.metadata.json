{
  "ruleId": "SYN-AKI-001",
  "ruleName": "Deteccao de Lesao Renal Aguda via Creatinina",
  "category": "SYNDROME_DETECTION",
  "subcategory": "AKI",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "NEFROLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "4_HOURS",
  "clinicalReferences": [
    "KDIGO Clinical Practice Guideline for Acute Kidney Injury (2012)",
    "NICE Guideline NG148 - Acute Kidney Injury (2019)",
    "Sociedade Brasileira de Nefrologia - Diretrizes AKI"
  ],
  "inputs": [
    {
      "variable": "creatininaAtual",
      "type": "number",
      "unit": "mg/dL",
      "required": true,
      "normalRange": [0.7, 1.2]
    },
    {
      "variable": "creatininaBasal",
      "type": "number",
      "unit": "mg/dL",
      "required": false,
      "description": "Creatinina basal dos ultimos 7-365 dias"
    },
    {
      "variable": "variacaoCreatinina48h",
      "type": "number",
      "unit": "mg/dL",
      "required": false,
      "criticalThreshold": 0.3
    },
    {
      "variable": "dialiseIniciada",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "AKI_BUNDLE",
    "actions": [
      "Suspender medicamentos nefrotoxicos (AINEs, aminoglicosideos)",
      "Otimizar volemia e perfusao renal",
      "Monitorar debito urinario (alvo >= 0.5 mL/kg/h)",
      "Solicitar parecer nefrologia (Estagio 2-3)",
      "Avaliar indicacao de dialise (Estagio 3)"
    ]
  },
  "mortalityImpact": "AKI Estagio 3 tem mortalidade hospitalar 40-60%",
  "tags": ["aki", "kidney", "creatinine", "kdigo", "nephrology", "critical"]
}
