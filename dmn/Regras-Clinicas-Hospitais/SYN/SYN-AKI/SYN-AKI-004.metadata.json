{
  "ruleId": "SYN-AKI-004",
  "ruleName": "Deteccao de Sindrome Cardiorrenal",
  "category": "SYNDROME_DETECTION",
  "subcategory": "AKI",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "NEFROLOGIA_CARDIOLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "4_HOURS",
  "clinicalReferences": [
    "ADQI Consensus on Cardiorenal Syndromes",
    "ESC Heart Failure Guidelines 2021",
    "KDIGO AKI Guidelines 2012",
    "ACC/AHA Heart Failure Guidelines"
  ],
  "inputs": [
    {
      "variable": "ntProBnp",
      "type": "number",
      "unit": "pg/mL",
      "required": true,
      "normalRange": [0, 300],
      "criticalThreshold": 5000
    },
    {
      "variable": "creatinina",
      "type": "number",
      "unit": "mg/dL",
      "required": true,
      "normalRange": [0.7, 1.2]
    },
    {
      "variable": "congestaoPulmonar",
      "type": "boolean",
      "required": true,
      "description": "Evidencia clinica ou radiologica de congestao"
    },
    {
      "variable": "fracaoEjecao",
      "type": "number",
      "unit": "%",
      "required": false,
      "normalRange": [55, 70]
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "CARDIORENAL_SYNDROME",
    "actions": [
      "Avaliacao conjunta cardiologia + nefrologia",
      "Otimizar descongestao sem comprometer perfusao renal",
      "Considerar inotroticos se baixo debito",
      "Ultrafiltração se refratario a diureticos",
      "Monitoramento hemodinamico intensivo"
    ]
  },
  "mortalityImpact": "SCR aumenta mortalidade hospitalar em 30-50%",
  "tags": ["aki", "cardiorenal", "heart-failure", "bnp", "diuretic-resistance"]
}
