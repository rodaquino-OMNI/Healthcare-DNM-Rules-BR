{
  "ruleId": "SYN-MI-005",
  "ruleName": "Arritmias Pos-IAM",
  "category": "SYNDROME_DETECTION",
  "subcategory": "MI",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "CARDIOLOGIA_ELETROFISIOLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "5_MINUTES",
  "clinicalReferences": [
    "ESC Guidelines on Ventricular Arrhythmias 2022",
    "AHA ACLS Guidelines 2020",
    "ACC/AHA/HRS Guideline for Device Therapy 2017",
    "ESC STEMI Guidelines 2023"
  ],
  "inputs": [
    {
      "variable": "tipoArritmia",
      "type": "string",
      "required": true,
      "allowedValues": ["SINUSAL", "FA", "FLUTTER", "TV_NAO_SUSTENTADA", "TV_SUSTENTADA", "TV_SEM_PULSO", "FV", "BAVT", "BAV_2_MOBITZ_II", "RIVA"]
    },
    {
      "variable": "estabilidadeHemodinamica",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "fracaoEjecao",
      "type": "number",
      "unit": "%",
      "required": false,
      "criticalThreshold": 30
    },
    {
      "variable": "horasPosIAM",
      "type": "number",
      "unit": "horas",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "POST_MI_ARRHYTHMIA",
    "actions": [
      "Cardioversao/desfibrilacao se instavel",
      "Amiodarona para TV",
      "Marcapasso transvenoso se BAVT instavel",
      "Corrigir K+ e Mg++",
      "Avaliar CDI se FE <= 30% apos 40 dias"
    ]
  },
  "mortalityImpact": "FV/TV nas primeiras 48h aumenta mortalidade em 2x",
  "tags": ["mi", "arrhythmia", "vt", "vf", "heart-block", "defibrillation", "pacemaker"]
}
