{
  "ruleId": "SYN-MI-002",
  "ruleName": "Deteccao de NSTEMI via Troponina e ECG",
  "category": "SYNDROME_DETECTION",
  "subcategory": "MI",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "CARDIOLOGIA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "1_HOUR",
  "clinicalReferences": [
    "Fourth Universal Definition of MI (ESC/ACC 2018)",
    "ESC NSTE-ACS Guidelines 2020",
    "High-Sensitivity Troponin 0h/1h Algorithm",
    "GRACE Risk Score"
  ],
  "inputs": [
    {
      "variable": "troponinaHs",
      "type": "number",
      "unit": "ng/L",
      "required": true,
      "criticalThreshold": 52
    },
    {
      "variable": "deltaTroponina1h",
      "type": "number",
      "unit": "ng/L",
      "required": false,
      "criticalThreshold": 5
    },
    {
      "variable": "infradesnivelamentoST",
      "type": "number",
      "unit": "mm",
      "required": false,
      "criticalThreshold": 1
    },
    {
      "variable": "instabilidadeHemodinamica",
      "type": "boolean",
      "required": true
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "NSTEMI_MANAGEMENT",
    "actions": [
      "Troponina seriada (0h/1h ou 0h/3h)",
      "ECG seriado",
      "Calcular GRACE score",
      "Antitrombina dupla + anticoagulacao",
      "Estrategia invasiva baseada no risco"
    ]
  },
  "mortalityImpact": "NSTEMI alto risco tem mortalidade 5-10% em 30 dias",
  "tags": ["nstemi", "mi", "troponin", "acs", "chest-pain", "cardiology"]
}
