{
  "ruleId": "SYN-MI-004",
  "ruleName": "Complicacoes Mecanicas do IAM",
  "category": "SYNDROME_DETECTION",
  "subcategory": "MI",
  "version": "1.0.0",
  "effectiveDate": "2026-02-06",
  "specialty": "CARDIOLOGIA_CIRURGIA_CARDIACA",
  "severity": "CRITICAL",
  "timeSensitive": true,
  "maxResponseTime": "30_MINUTES",
  "clinicalReferences": [
    "ESC STEMI Guidelines 2023",
    "AHA Mechanical Complications of MI",
    "Society of Thoracic Surgeons Guidelines",
    "European Association for Cardio-Thoracic Surgery"
  ],
  "inputs": [
    {
      "variable": "diasPosIAM",
      "type": "number",
      "unit": "dias",
      "required": true,
      "criticalRange": [3, 7]
    },
    {
      "variable": "soproCardiacoNovo",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "deterioracaoSubita",
      "type": "boolean",
      "required": true
    },
    {
      "variable": "achadoEco",
      "type": "string",
      "required": false,
      "allowedValues": ["NORMAL", "CIV", "IM_GRAVE", "DERRAME_PERICARDICO", "ANEURISMA_VE"]
    }
  ],
  "outputs": [
    "nivelAlerta",
    "classificacaoSindrome",
    "protocoloAtivado",
    "acaoRequerida",
    "urgencia"
  ],
  "automationLevel": "ALERT_ONLY",
  "requiresPhysicianReview": true,
  "protocolActivation": {
    "protocol": "MECHANICAL_COMPLICATIONS_MI",
    "actions": [
      "ECO urgente a beira leito",
      "Contato com cirurgia cardiaca",
      "Suporte hemodinamico (BIA, inotripicos)",
      "Preparar para cirurgia de emergencia",
      "Pericardiocentese se tamponamento"
    ]
  },
  "mortalityImpact": "Complicacoes mecanicas tem mortalidade > 50% mesmo com cirurgia",
  "tags": ["mi", "mechanical-complications", "vsd", "papillary-rupture", "cardiac-surgery", "emergency"]
}
