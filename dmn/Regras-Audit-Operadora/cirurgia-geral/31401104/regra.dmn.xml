<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_31401104"
             name="Lateral Internal Sphincterotomy"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: 31401104
    Procedimento: Lateral Internal Sphincterotomy
    Especialidade: Cirurgia Geral
    Versão: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICAÇÕES CLÍNICAS:
    Fissura crônica >8 semanas, falha tratamento tópico

    CONTRAINDICAÇÕES:
    Crohn perianal, incontinência prévia

    REFERÊNCIAS TÉCNICAS:
    SBC Proctologia 2024, ASCRS Fissure 2023

    ===============================================================================
  -->

  <decision id="Decision_31401104" name="Regra Clínica - Lateral Internal Sphincterotomy">
    <decisionTable id="DecisionTable_31401104" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_fissuraAnal" label="Fissuraanal" camunda:inputVariable="fissuraAnal">
        <inputExpression id="InputExpression_fissuraAnal" typeRef="string">
          <text>fissuraAnal</text>
        </inputExpression>
      </input>

      <input id="Input_falhaClínica" label="Falhaclínica" camunda:inputVariable="falhaClínica">
        <inputExpression id="InputExpression_falhaClínica" typeRef="string">
          <text>falhaClínica</text>
        </inputExpression>
      </input>

      <input id="Input_cronicidade" label="Cronicidade" camunda:inputVariable="cronicidade">
        <inputExpression id="InputExpression_cronicidade" typeRef="string">
          <text>cronicidade</text>
        </inputExpression>
      </input>

      <input id="Input_historicoClinico" label="Historicoclinico" camunda:inputVariable="historicoClinico">
        <inputExpression id="InputExpression_historicoClinico" typeRef="string">
          <text>historicoClinico</text>
        </inputExpression>
      </input>

      <input id="Input_expectativaVidaSuperior1Ano" label="Expectativavidasuperior1Ano" camunda:inputVariable="expectativaVidaSuperior1Ano">
        <inputExpression id="InputExpression_expectativaVidaSuperior1Ano" typeRef="boolean">
          <text>expectativaVidaSuperior1Ano</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (3 - Padrão TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observação Clínica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentação Técnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- CONTRAINDICAÇÕES -->
      <rule id="Rule_Contraind_ExpectativaVida">
        <description>Contraindicação: Expectativa de vida menor que 1 ano</description>
                <inputEntry id="InputEntry_Contraind_ExpVida_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_5"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_observacao"><text>"Expectativa de vida insuficiente para benefício do procedimento"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_fundamentacao"><text>"SBC Proctologia 2024, ASCRS Fissure 2023 - Procedimentos requerem expectativa de vida compatível com benefício clínico"</text></outputEntry>
      <outputEntry id="OE_Contraind_ExpectativaVida_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_ExpectativaVida_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_Documentacao">
        <description>Contraindicação: Documentação clínica inadequada</description>
                <inputEntry id="InputEntry_Contraind_Doc_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Doc_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Doc_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Doc_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Doc_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_Doc_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_Doc_observacao"><text>"Crohn perianal, incontinência prévia"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_Doc_fundamentacao"><text>"SBC Proctologia 2024, ASCRS Fissure 2023 - Contraindicações conforme diretrizes clínicas"</text></outputEntry>
      <outputEntry id="OE_Contraind_Documentacao_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_Documentacao_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APROVAÇÕES -->
      <rule id="Rule_Aprovado_IndicacaoClara">
        <description>Aprovado: Indicação clínica clara e documentada</description>
                <inputEntry id="InputEntry_Aprovado_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_observacao"><text>"Fissura crônica >8 semanas, falha tratamento tópico"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_fundamentacao"><text>"SBC Proctologia 2024, ASCRS Fissure 2023 - Indicação conforme diretrizes clínicas atualizadas"</text></outputEntry>
      <outputEntry id="OE_Aprovado_IndicacaoClara_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_IndicacaoClara_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_31401104">
        <description>Regra padrão - Análise adicional necessária</description>
                <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Caso requer análise clínica adicional - critérios não totalmente atendidos"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"Avaliação individualizada necessária conforme complexidade clínica e diretrizes especializadas"</text></outputEntry>
      <outputEntry id="OE_Fallback_31401104_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_31401104_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
