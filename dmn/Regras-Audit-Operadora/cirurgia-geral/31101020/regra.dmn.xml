        <inputEntry>
          <text>"40-49.9",">=50"</text>
        </inputEntry>
        <inputEntry>
          <text>-</text>
        </inputEntry>
        <inputEntry>
          <text>"2-5anos",">5anos"</text>
        </inputEntry>
