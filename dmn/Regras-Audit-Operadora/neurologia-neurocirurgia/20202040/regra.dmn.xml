<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             id="Definitions_20202040" name="Monitorizacao_neurofisiologica_intraoperatoria" targetNamespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 20202040 - Monitorização neurofisiológica intraoperatória
    Versao: 3.1.0-LEAN-TIER2 (2026-02-08)

    Indicacoes Clinicas (DUT/ANS):
    - Cirurgias de coluna com risco de lesão medular ou radicular
    - Procedimentos neurovasculares (aneurismas, malformações AV)
    - Ressecções de tumores em área eloquente cerebral
    - Cirurgias de base de crânio com risco de lesão de nervos cranianos
    - Procedimentos complexos de epilepsia (EEG contínuo intraoperatório)

    Contraindicacoes:
    - Cirurgias periféricas sem risco neurológico
    - Ausência de equipamento certificado
    - Equipe sem treinamento em neurofisiologia

    Referencias:
    - Diretrizes ABN (Academia Brasileira de Neurologia) 2024
    - RN ANS 465/2021 (Rol de Procedimentos)
    - Norma SBCN (Sociedade Brasileira de Cirurgia Neurológica)
  -->
  <decision id="Decision_20202040" name="Indicacao para Monitorizacao neurofisiologica intraoperatoria">
    <decisionTable id="DecisionTable_20202040" hitPolicy="FIRST">
      <!-- Input 1: Tipo de cirurgia neurológica -->
      <input id="Input_1" label="Tipo de Cirurgia">
        <inputExpression id="InputExpression_1" typeRef="string"><text>tipoCirurgia</text></inputExpression>
        <inputValues id="InputValues_1">
          <text>"coluna_complexa","neurovascular","tumor_eloquente","base_cranio","epilepsia","outra"</text>
        </inputValues>
      </input>
      <!-- Input 2: Risco de lesão neurológica -->
      <input id="Input_2" label="Risco de Lesao Neurologica">
        <inputExpression id="InputExpression_2" typeRef="string"><text>riscoLesaoNeurologica</text></inputExpression>
        <inputValues id="InputValues_2">
          <text>"alto","medio","baixo"</text>
        </inputValues>
      </input>
      <!-- Input 3: Equipamento certificado disponível -->
      <input id="Input_3" label="Equipamento Certificado">
        <inputExpression id="InputExpression_3" typeRef="boolean"><text>equipamentoCertificado</text></inputExpression>
      </input>
      <!-- Input 4: Laudo neurológico/neurocirúrgico indicando necessidade -->
      <input id="Input_4" label="Laudo Neurologico">
        <inputExpression id="InputExpression_4" typeRef="boolean"><text>laudoNeurologico</text></inputExpression>
      </input>
      <!-- Input 5: Historico Clinico -->
      <input id="Input_5" label="Historico Clinico">
        <inputExpression id="InputExpression_5" typeRef="string"><text>historicoClinico</text></inputExpression>
        <inputValues id="InputValues_5">
          <text>"Adequado","Incompleto","NaoDocumentado"</text>
        </inputValues>
      </input>
      <!-- Input 6: Dias desde ultimo procedimento -->
      <input id="Input_ultimoProcedimentoDias" label="Dias Desde Ultimo Procedimento" camunda:inputVariable="ultimoProcedimentoDias">
        <inputExpression id="InputExpression_ultimoProcedimentoDias" typeRef="integer">
          <text>ultimoProcedimentoDias</text>
        </inputExpression>
      </input>
      <!-- Output 1: Resultado da avaliação -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <!-- Output 2: Observação clínica -->
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>
      <!-- Output 3: Fundamentação legal/técnica -->
      <output id="Output_3" label="Fundamentacao" name="fundamentacao" typeRef="string"/>
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_4" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_5" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- CONTRAINDICATIONS -->
      <rule id="Rule_Contraindicacao_Equipamento">
        <inputEntry id="IE_1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_1_3"><text>false</text></inputEntry>
        <inputEntry id="IE_1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_1_5"><text>-</text></inputEntry>
        <inputEntry id="IE_1_6"><text>-</text></inputEntry>
        <outputEntry id="OE_1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_1_2"><text>"Equipamento certificado não disponível. Requisito obrigatório para monitorização segura."</text></outputEntry>
        <outputEntry id="OE_1_3"><text>"RN ANS 465/2021 Art. 12 - Infraestrutura obrigatória"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_Equipamento_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_Equipamento_5"><text>"NEGAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Contraindicacao_RiscoBaixo">
        <inputEntry id="IE_2_1"><text>"outra"</text></inputEntry>
        <inputEntry id="IE_2_2"><text>"baixo"</text></inputEntry>
        <inputEntry id="IE_2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_2_4"><text>-</text></inputEntry>
        <inputEntry id="IE_2_5"><text>-</text></inputEntry>
        <inputEntry id="IE_2_6"><text>-</text></inputEntry>
        <outputEntry id="OE_2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_2_2"><text>"Cirurgia sem risco neurológico significativo. Monitorização não indicada."</text></outputEntry>
        <outputEntry id="OE_2_3"><text>"Diretrizes ABN 2024 - Indicações específicas"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_RiscoBaixo_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_RiscoBaixo_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_20202040_FREQ_Monitor">
        <description>FREQ: Monitorizacao neurofisiologica excessiva</description>
        <inputEntry id="IE_20202040_FREQ_1"><text>-</text></inputEntry>
        <inputEntry id="IE_20202040_FREQ_2"><text>-</text></inputEntry>
        <inputEntry id="IE_20202040_FREQ_3"><text>-</text></inputEntry>
        <inputEntry id="IE_20202040_FREQ_4"><text>-</text></inputEntry>
        <inputEntry id="IE_20202040_FREQ_5"><text>"Incompleto","NaoDocumentado"</text></inputEntry>
        <inputEntry id="IE_20202040_FREQ_6"><text>&lt; 180</text></inputEntry>
        <outputEntry id="OE_20202040_FREQ_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_20202040_FREQ_2"><text>"Monitorizacao neurofisiologica excessiva. Limite 2x/ano exceto em contexto cirurgico"</text></outputEntry>
        <outputEntry id="OE_20202040_FREQ_3"><text>"SBN 2023 - Monitorizacao restrita a procedimentos com risco neurologico"</text></outputEntry>
        <outputEntry id="OE_20202040_FREQ_4"><text>"FREQ"</text></outputEntry>
        <outputEntry id="OE_20202040_FREQ_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APPROVALS: Alto risco neurológico -->
      <rule id="Rule_Aprovado_ColunaComplexa">
        <inputEntry id="IE_3_1"><text>"coluna_complexa"</text></inputEntry>
        <inputEntry id="IE_3_2"><text>"alto","medio"</text></inputEntry>
        <inputEntry id="IE_3_3"><text>true</text></inputEntry>
        <inputEntry id="IE_3_4"><text>true</text></inputEntry>
        <inputEntry id="IE_3_5"><text>-</text></inputEntry>
        <inputEntry id="IE_3_6"><text>-</text></inputEntry>
        <outputEntry id="OE_3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_3_2"><text>"Cirurgia de coluna complexa com risco de lesão medular. Monitorização de potenciais evocados somatossensitivos (PESS) e motores (PEM) indicada."</text></outputEntry>
        <outputEntry id="OE_3_3"><text>"Diretrizes ABN 2024 + RN ANS 465/2021 + Norma SBCN"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_ColunaComplexa_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_ColunaComplexa_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_Neurovascular">
        <inputEntry id="IE_4_1"><text>"neurovascular"</text></inputEntry>
        <inputEntry id="IE_4_2"><text>"alto","medio"</text></inputEntry>
        <inputEntry id="IE_4_3"><text>true</text></inputEntry>
        <inputEntry id="IE_4_4"><text>true</text></inputEntry>
        <inputEntry id="IE_4_5"><text>-</text></inputEntry>
        <inputEntry id="IE_4_6"><text>-</text></inputEntry>
        <outputEntry id="OE_4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_4_2"><text>"Procedimento neurovascular com risco de isquemia cerebral. Monitorização de EEG/PESS contínua indicada durante clipagem de aneurisma ou AVM."</text></outputEntry>
        <outputEntry id="OE_4_3"><text>"Diretrizes ABN 2024 + RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Neurovascular_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Neurovascular_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_TumorEloquente">
        <inputEntry id="IE_5_1"><text>"tumor_eloquente"</text></inputEntry>
        <inputEntry id="IE_5_2"><text>"alto"</text></inputEntry>
        <inputEntry id="IE_5_3"><text>true</text></inputEntry>
        <inputEntry id="IE_5_4"><text>true</text></inputEntry>
        <inputEntry id="IE_5_5"><text>-</text></inputEntry>
        <inputEntry id="IE_5_6"><text>-</text></inputEntry>
        <outputEntry id="OE_5_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_5_2"><text>"Ressecção de tumor em área eloquente (motora, linguagem). Mapeamento cortical e monitorização de PEM/PESS para preservação funcional."</text></outputEntry>
        <outputEntry id="OE_5_3"><text>"Diretrizes ABN 2024 + Norma SBCN"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_TumorEloquente_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_TumorEloquente_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_BaseCranio">
        <inputEntry id="IE_6_1"><text>"base_cranio"</text></inputEntry>
        <inputEntry id="IE_6_2"><text>"alto","medio"</text></inputEntry>
        <inputEntry id="IE_6_3"><text>true</text></inputEntry>
        <inputEntry id="IE_6_4"><text>true</text></inputEntry>
        <inputEntry id="IE_6_5"><text>-</text></inputEntry>
        <inputEntry id="IE_6_6"><text>-</text></inputEntry>
        <outputEntry id="OE_6_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_6_2"><text>"Cirurgia de base de crânio com risco de lesão de nervos cranianos (VII, VIII, IX-XII). Monitorização de potenciais evocados auditivos de tronco (BERA) e eletromiografia facial indicada."</text></outputEntry>
        <outputEntry id="OE_6_3"><text>"Diretrizes ABN 2024 + RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_BaseCranio_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_BaseCranio_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_Epilepsia">
        <inputEntry id="IE_7_1"><text>"epilepsia"</text></inputEntry>
        <inputEntry id="IE_7_2"><text>"alto","medio"</text></inputEntry>
        <inputEntry id="IE_7_3"><text>true</text></inputEntry>
        <inputEntry id="IE_7_4"><text>true</text></inputEntry>
        <inputEntry id="IE_7_5"><text>-</text></inputEntry>
        <inputEntry id="IE_7_6"><text>-</text></inputEntry>
        <outputEntry id="OE_7_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_7_2"><text>"Cirurgia de epilepsia refratária. EEG intraoperatório contínuo para identificação e ressecção do foco epileptogênico."</text></outputEntry>
        <outputEntry id="OE_7_3"><text>"Diretrizes ABN 2024 + RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Epilepsia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Epilepsia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_20202040">
        <inputEntry id="IE_8_1"><text>-</text></inputEntry>
        <inputEntry id="IE_8_2"><text>-</text></inputEntry>
        <inputEntry id="IE_8_3"><text>-</text></inputEntry>
        <inputEntry id="IE_8_4"><text>-</text></inputEntry>
        <inputEntry id="IE_8_5"><text>-</text></inputEntry>
        <inputEntry id="IE_8_6"><text>-</text></inputEntry>
        <outputEntry id="OE_8_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_8_2"><text>"Caso não enquadrado nas regras automáticas. Requer avaliação por neurofisiologista e auditor médico para análise de indicação específica."</text></outputEntry>
        <outputEntry id="OE_8_3"><text>"Análise caso a caso conforme RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_20202040_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_20202040_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
