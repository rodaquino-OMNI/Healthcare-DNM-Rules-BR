<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             id="Definitions_30729117" name="Simpatectomia" targetNamespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 30729117 - Simpatectomia (toracoscópica ou aberta)
    Versao: 3.1.0-LEAN-TIER2 (2026-02-08)

    TIER-2 ENRICHMENT:
    - Input 6: ultimoProcedimentoDias (frequency control)
    - PROT rule: Simpatectomia sem indicacao refrataria
    - ESC rule: Sem tratamento clinico previo
    - 5-output format: resultado, observacao, fundamentacao, alertasDesperdicio, acaoRecomendada

    Indicacoes Clinicas (DUT/ANS):
    - Hiperidrose palmar/axilar primária grave refratária (>6 meses de tratamento conservador)
    - Eritrofobia (rubor facial) refratário com impacto social significativo
    - Síndrome dolorosa regional complexa (SDRC) refratária tipo I
    - Doença arterial oclusiva periférica avançada (Raynaud grave)

    Contraindicacoes:
    - Hiperidrose secundária (hipertireoidismo, menopausa, infecções)
    - Insuficiência cardiopulmonar grave
    - História de cirurgia torácica prévia com aderências extensas
    - Ausência de tratamento conservador prévio (toxina botulínica, anticolinérgicos)

    Referencias:
    - Diretrizes SBACV (Sociedade Brasileira de Angiologia e Cirurgia Vascular) 2024
    - RN ANS 465/2021
    - Consenso Internacional de Hiperidrose 2023
    - SBC Torax 2023 - Tratamento conservador obrigatorio
  -->
  <decision id="Decision_30729117" name="Indicacao para Simpatectomia">
    <decisionTable id="DecisionTable_30729117" hitPolicy="FIRST">
      <!-- Input 1: Diagnóstico principal -->
      <input id="Input_1" label="Diagnostico Principal">
        <inputExpression id="InputExpression_1" typeRef="string"><text>diagnosticoPrincipal</text></inputExpression>
        <inputValues id="InputValues_1">
          <text>"hiperidrose_primaria","eritrofobia","sdrc_tipo1","raynaud_grave","hiperidrose_secundaria","outra"</text>
        </inputValues>
      </input>
      <!-- Input 2: Tempo de tratamento conservador prévio (meses) -->
      <input id="Input_2" label="Tempo Tratamento Conservador (meses)">
        <inputExpression id="InputExpression_2" typeRef="number"><text>tempoTratamentoConservador</text></inputExpression>
      </input>
      <!-- Input 3: Risco cardiopulmonar -->
      <input id="Input_3" label="Risco Cardiopulmonar">
        <inputExpression id="InputExpression_3" typeRef="string"><text>riscoCardiopulmonar</text></inputExpression>
        <inputValues id="InputValues_3">
          <text>"alto","medio","baixo"</text>
        </inputValues>
      </input>
      <!-- Input 4: Laudo neurológico/vascular -->
      <input id="Input_4" label="Laudo Especializado">
        <inputExpression id="InputExpression_4" typeRef="boolean"><text>laudoEspecializado</text></inputExpression>
      </input>
      <!-- Input 5: Exames Comprobatorios -->
      <input id="Input_5" label="Exames Comprobatorios">
        <inputExpression id="InputExpression_5" typeRef="string"><text>examesComprobatorios</text></inputExpression>
        <inputValues id="InputValues_5">
          <text>"Completo","Incompleto","NaoDocumentado"</text>
        </inputValues>
      </input>
      <!-- Input 6: Dias Desde Ultimo Procedimento -->
      <input id="Input_ultimoProcedimentoDias" label="Dias Desde Ultimo Procedimento" camunda:inputVariable="ultimoProcedimentoDias">
        <inputExpression id="InputExpression_ultimoProcedimentoDias" typeRef="integer">
          <text>ultimoProcedimentoDias</text>
        </inputExpression>
      </input>
      <!-- Output 1: Resultado da avaliação -->
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <!-- Output 2: Observação clínica -->
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>
      <!-- Output 3: Fundamentação legal/técnica -->
      <output id="Output_3" label="Fundamentacao" name="fundamentacao" typeRef="string"/>
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_4" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_5" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- CONTRAINDICATIONS -->
      <rule id="Rule_Contraindicacao_HiperidroseSec">
        <inputEntry id="IE_1_1"><text>"hiperidrose_secundaria"</text></inputEntry>
        <inputEntry id="IE_1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_1_5"><text>-</text></inputEntry>
        <inputEntry id="IE_1_6"><text>-</text></inputEntry>
        <outputEntry id="OE_1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_1_2"><text>"Hiperidrose secundária a condição sistêmica. Tratamento da causa base obrigatório antes de procedimento cirúrgico."</text></outputEntry>
        <outputEntry id="OE_1_3"><text>"Diretrizes SBACV 2024 - Contraindicação absoluta"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_HiperidroseSec_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_HiperidroseSec_5"><text>"NEGAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Contraindicacao_RiscoAlto">
        <inputEntry id="IE_2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_2_3"><text>"alto"</text></inputEntry>
        <inputEntry id="IE_2_4"><text>-</text></inputEntry>
        <inputEntry id="IE_2_5"><text>-</text></inputEntry>
        <inputEntry id="IE_2_6"><text>-</text></inputEntry>
        <outputEntry id="OE_2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_2_2"><text>"Risco cardiopulmonar alto (ICC classe IV, DPOC grave). Contraindicação para toracoscopia."</text></outputEntry>
        <outputEntry id="OE_2_3"><text>"RN ANS 465/2021 - Segurança do paciente"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_RiscoAlto_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_RiscoAlto_5"><text>"NEGAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Contraindicacao_TratamentoInsuficiente">
        <inputEntry id="IE_3_1"><text>"hiperidrose_primaria","eritrofobia"</text></inputEntry>
        <inputEntry id="IE_3_2"><text>&lt; 6</text></inputEntry>
        <inputEntry id="IE_3_3"><text>-</text></inputEntry>
        <inputEntry id="IE_3_4"><text>-</text></inputEntry>
        <inputEntry id="IE_3_5"><text>-</text></inputEntry>
        <inputEntry id="IE_3_6"><text>-</text></inputEntry>
        <outputEntry id="OE_3_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_3_2"><text>"Tratamento conservador insuficiente (mínimo 6 meses). Necessário tentativa de toxina botulínica e anticolinérgicos antes de cirurgia definitiva."</text></outputEntry>
        <outputEntry id="OE_3_3"><text>"Consenso Internacional de Hiperidrose 2023"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_TratamentoInsuficiente_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraindicacao_TratamentoInsuficiente_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- WASTE PREVENTION RULES -->
      <rule id="Rule_30729117_PROT_Simpatectomia">
        <description>PROT: Simpatectomia sem indicacao de hiperidrose refrataria</description>
        <inputEntry id="IE_30729117_PROT_1"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_PROT_2"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_PROT_3"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_PROT_4"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_PROT_5"><text>"Incompleto","NaoDocumentado"</text></inputEntry>
        <inputEntry id="IE_30729117_PROT_6"><text>-</text></inputEntry>
        <outputEntry id="OE_30729117_PROT_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_30729117_PROT_2"><text>"Simpatectomia sem indicacao documentada de hiperidrose refrataria"</text></outputEntry>
        <outputEntry id="OE_30729117_PROT_3"><text>"SBC Torax 2023 - Simpatectomia apenas para hiperidrose primaria refrataria"</text></outputEntry>
        <outputEntry id="OE_30729117_PROT_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_30729117_PROT_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_30729117_ESC_Conservador">
        <description>ESC: Simpatectomia sem tratamento clinico previo</description>
        <inputEntry id="IE_30729117_ESC_1"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_ESC_2"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_ESC_3"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_ESC_4"><text>-</text></inputEntry>
        <inputEntry id="IE_30729117_ESC_5"><text>"Incompleto","NaoDocumentado"</text></inputEntry>
        <inputEntry id="IE_30729117_ESC_6"><text>-</text></inputEntry>
        <outputEntry id="OE_30729117_ESC_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_30729117_ESC_2"><text>"Documentar falha de tratamento clinico (toxina botulinica, anticolinergicos)"</text></outputEntry>
        <outputEntry id="OE_30729117_ESC_3"><text>"SBC Torax 2023 - Tratamento clinico antes de simpatectomia"</text></outputEntry>
        <outputEntry id="OE_30729117_ESC_4"><text>"ESC"</text></outputEntry>
        <outputEntry id="OE_30729117_ESC_5"><text>"SUGERIR_ALTERNATIVA"</text></outputEntry>
      </rule>

      <!-- APPROVALS -->
      <rule id="Rule_Aprovado_HiperidrosePrimaria">
        <inputEntry id="IE_4_1"><text>"hiperidrose_primaria"</text></inputEntry>
        <inputEntry id="IE_4_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_4_3"><text>"baixo","medio"</text></inputEntry>
        <inputEntry id="IE_4_4"><text>true</text></inputEntry>
        <inputEntry id="IE_4_5"><text>"Completo"</text></inputEntry>
        <inputEntry id="IE_4_6"><text>-</text></inputEntry>
        <outputEntry id="OE_4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_4_2"><text>"Hiperidrose primária grave refratária a 6+ meses de tratamento conservador. Simpatectomia toracoscópica T3-T4 indicada."</text></outputEntry>
        <outputEntry id="OE_4_3"><text>"Diretrizes SBACV 2024 + Consenso Internacional 2023"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_HiperidrosePrimaria_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_HiperidrosePrimaria_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_Eritrofobia">
        <inputEntry id="IE_5_1"><text>"eritrofobia"</text></inputEntry>
        <inputEntry id="IE_5_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_5_3"><text>"baixo","medio"</text></inputEntry>
        <inputEntry id="IE_5_4"><text>true</text></inputEntry>
        <inputEntry id="IE_5_5"><text>"Completo"</text></inputEntry>
        <inputEntry id="IE_5_6"><text>-</text></inputEntry>
        <outputEntry id="OE_5_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_5_2"><text>"Eritrofobia (rubor facial) refratária com impacto social documentado. Simpatectomia T2 indicada após falha de terapia comportamental."</text></outputEntry>
        <outputEntry id="OE_5_3"><text>"Diretrizes SBACV 2024 + RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Eritrofobia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Eritrofobia_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_SDRC">
        <inputEntry id="IE_6_1"><text>"sdrc_tipo1"</text></inputEntry>
        <inputEntry id="IE_6_2"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="IE_6_3"><text>"baixo","medio"</text></inputEntry>
        <inputEntry id="IE_6_4"><text>true</text></inputEntry>
        <inputEntry id="IE_6_5"><text>"Completo"</text></inputEntry>
        <inputEntry id="IE_6_6"><text>-</text></inputEntry>
        <outputEntry id="OE_6_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_6_2"><text>"Síndrome Dolorosa Regional Complexa (SDRC) tipo I refratária a bloqueios simpáticos. Simpatectomia lombar indicada para alívio da dor."</text></outputEntry>
        <outputEntry id="OE_6_3"><text>"Diretrizes SBACV 2024 + RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_SDRC_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_SDRC_5"><text>"APROVAR"</text></outputEntry>
      </rule>
      <rule id="Rule_Aprovado_Raynaud">
        <inputEntry id="IE_7_1"><text>"raynaud_grave"</text></inputEntry>
        <inputEntry id="IE_7_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_7_3"><text>"baixo","medio"</text></inputEntry>
        <inputEntry id="IE_7_4"><text>true</text></inputEntry>
        <inputEntry id="IE_7_5"><text>"Completo"</text></inputEntry>
        <inputEntry id="IE_7_6"><text>-</text></inputEntry>
        <outputEntry id="OE_7_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_7_2"><text>"Doença de Raynaud grave com úlceras digitais recorrentes, refratária a vasodilatadores. Simpatectomia digital indicada."</text></outputEntry>
        <outputEntry id="OE_7_3"><text>"Diretrizes SBACV 2024 + RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Raynaud_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Aprovado_Raynaud_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_30729117">
        <inputEntry id="IE_8_1"><text>-</text></inputEntry>
        <inputEntry id="IE_8_2"><text>-</text></inputEntry>
        <inputEntry id="IE_8_3"><text>-</text></inputEntry>
        <inputEntry id="IE_8_4"><text>-</text></inputEntry>
        <inputEntry id="IE_8_5"><text>-</text></inputEntry>
        <inputEntry id="IE_8_6"><text>-</text></inputEntry>
        <outputEntry id="OE_8_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_8_2"><text>"Caso não enquadrado nas regras automáticas. Requer avaliação por cirurgião vascular e auditor médico."</text></outputEntry>
        <outputEntry id="OE_8_3"><text>"Análise caso a caso conforme RN ANS 465/2021"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_30729117_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_30729117_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
