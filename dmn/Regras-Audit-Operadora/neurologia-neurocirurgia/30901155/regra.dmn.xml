        <outputEntry id="OE_Rule_Contraind_Generalizada_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_Generalizada_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_Eloquente">
