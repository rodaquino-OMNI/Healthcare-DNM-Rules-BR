<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DD/20100524/DC/"
             xmlns:di="http://www.omg.org/spec/DD/20100524/DI/"
             id="Definitions_UNN_005"
             name="Prevencao de Procedimento Desnecessario - Ecocardiograma de Rotina Pre-Operatorio"
             namespace="http://camunda.org/schema/1.0/dmn"
             exporter="Camunda Modeler"
             exporterVersion="5.0.0">
  <!--
    UNN-005 - Prevencao de Procedimento Desnecessario - Ecocardiograma de Rotina Pre-Operatorio
    Versao: 1.0.0 (2026-02-07)
    Especialidade: Controle de Desperdicio
    Categoria: Unnecessary Procedure Prevention

    Objetivo:
    - Evitar ecocardiograma de rotina em pre-operatorio de baixo risco
    - Seguir diretrizes de avaliacao cardiovascular pre-operatoria
    - Reduzir exames desnecessarios que nao alteram conduta

    Indicacoes para Bloqueio (Choosing Wisely):
    - Cirurgia de baixo risco cardiovascular
    - Paciente assintomatico cardiaco
    - Capacidade funcional adequada (>4 METs)

    Excecoes Permitidas:
    - Cirurgia de alto risco cardiovascular
    - Sintomas cardiologicos (dispneia, dor toracica, sincope)
    - Sopro cardiaco novo ou nao investigado
    - Capacidade funcional limitada

    Referencias Normativas:
    - ABM Choosing Wisely Brasil 2024 - Cardiologia
    - ACC/AHA Perioperative Guidelines 2023
    - SBC - Diretriz Pre-Operatorio Cardiaco 2022
  -->

  <decision id="Decision_UNN_005" name="Prevencao Desnecessario - Ecocardiograma Rotina Pre-Operatorio">
    <decisionTable id="DecisionTable_UNN_005" hitPolicy="FIRST">

      <!-- Input 1: Cirurgia de baixo risco cardiovascular -->
      <input id="Input_cirurgiaBaixoRiscoCardiovascular" label="Cirurgia de Baixo Risco Cardiovascular">
        <inputExpression id="InputExpr_cirurgiaBaixoRiscoCardiovascular" typeRef="boolean">
          <text>cirurgiaBaixoRiscoCardiovascular</text>
        </inputExpression>
      </input>

      <!-- Input 2: Paciente com sintomas cardiologicos -->
      <input id="Input_sintomasCardiologicos" label="Sintomas Cardiologicos (dispneia, dor toracica, sincope)">
        <inputExpression id="InputExpr_sintomasCardiologicos" typeRef="boolean">
          <text>sintomasCardiologicos</text>
        </inputExpression>
      </input>

      <!-- Input 3: Sopro cardiaco novo ou nao investigado -->
      <input id="Input_soproCardiacoNovo" label="Sopro Cardiaco Novo ou Nao Investigado">
        <inputExpression id="InputExpr_soproCardiacoNovo" typeRef="boolean">
          <text>soproCardiacoNovo</text>
        </inputExpression>
      </input>

      <!-- Input 4: Capacidade funcional limitada -->
      <input id="Input_capacidadeFuncionalLimitada" label="Capacidade Funcional Limitada (menos que 4 METs)">
        <inputExpression id="InputExpr_capacidadeFuncionalLimitada" typeRef="boolean">
          <text>capacidadeFuncionalLimitada</text>
        </inputExpression>
      </input>

      <!-- Output 1: Resultado -->
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <!-- Output 2: Observacao -->
      <output id="Output_observacao" label="Observacao" name="observacao" typeRef="string" />

      <!-- Output 3: Fundamentacao -->
      <output id="Output_fundamentacao" label="Fundamentacao Legal" name="fundamentacao" typeRef="string" />
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- ============================================== -->
      <!-- REPROVADO: Eco rotina baixo risco             -->
      <!-- ============================================== -->
      <rule id="Rule_UNN_005_Reprovado_EcoRotina">
        <description>Reprovado - Ecocardiograma de rotina em pre-op de baixo risco</description>
        <inputEntry id="IE_Rep1_1"><text>true</text></inputEntry>
        <inputEntry id="IE_Rep1_2"><text>false</text></inputEntry>
        <inputEntry id="IE_Rep1_3"><text>false</text></inputEntry>
        <inputEntry id="IE_Rep1_4"><text>false</text></inputEntry>
        <outputEntry id="OE_Rep1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep1_2"><text>"Ecocardiograma de rotina nao indicado em pre-operatorio de baixo risco cardiovascular sem sintomas. Nao altera conduta cirurgica."</text></outputEntry>
        <outputEntry id="OE_Rep1_3"><text>"ABM Choosing Wisely 2024; ACC/AHA Perioperative 2023"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Reprovado_EcoRotina_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Reprovado_EcoRotina_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- APROVADO: Sintomas cardiologicos              -->
      <!-- ============================================== -->
      <rule id="Rule_UNN_005_Aprovado_Sintomas">
        <description>Aprovado - Sintomas cardiologicos requerem investigacao</description>
        <inputEntry id="IE_Aprov1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov1_2"><text>true</text></inputEntry>
        <inputEntry id="IE_Aprov1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov1_4"><text>-</text></inputEntry>
        <outputEntry id="OE_Aprov1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov1_2"><text>"Ecocardiograma autorizado - Sintomas cardiologicos requerem avaliacao antes de cirurgia."</text></outputEntry>
        <outputEntry id="OE_Aprov1_3"><text>"Sintomas ativos - Investigacao indicada"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_Sintomas_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_Sintomas_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- APROVADO: Sopro cardiaco                      -->
      <!-- ============================================== -->
      <rule id="Rule_UNN_005_Aprovado_Sopro">
        <description>Aprovado - Sopro cardiaco requer investigacao</description>
        <inputEntry id="IE_Aprov2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov2_3"><text>true</text></inputEntry>
        <inputEntry id="IE_Aprov2_4"><text>-</text></inputEntry>
        <outputEntry id="OE_Aprov2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov2_2"><text>"Ecocardiograma autorizado - Sopro cardiaco novo ou nao investigado requer avaliacao valvar."</text></outputEntry>
        <outputEntry id="OE_Aprov2_3"><text>"Sopro cardiaco - Investigacao indicada"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_Sopro_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_Sopro_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- APROVADO: Capacidade funcional limitada       -->
      <!-- ============================================== -->
      <rule id="Rule_UNN_005_Aprovado_CapacidadeLimitada">
        <description>Aprovado - Capacidade funcional limitada requer investigacao</description>
        <inputEntry id="IE_Aprov3_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov3_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov3_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov3_4"><text>true</text></inputEntry>
        <outputEntry id="OE_Aprov3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov3_2"><text>"Ecocardiograma autorizado - Capacidade funcional menor que 4 METs requer avaliacao cardiaca."</text></outputEntry>
        <outputEntry id="OE_Aprov3_3"><text>"Capacidade limitada - SBC Diretriz 2022"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_CapacidadeLimitada_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_CapacidadeLimitada_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- APROVADO: Cirurgia alto risco                 -->
      <!-- ============================================== -->
      <rule id="Rule_UNN_005_Aprovado_AltoRisco">
        <description>Aprovado - Cirurgia de alto risco cardiovascular</description>
        <inputEntry id="IE_Aprov4_1"><text>false</text></inputEntry>
        <inputEntry id="IE_Aprov4_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov4_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Aprov4_4"><text>-</text></inputEntry>
        <outputEntry id="OE_Aprov4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov4_2"><text>"Ecocardiograma autorizado - Cirurgia de alto risco cardiovascular justifica avaliacao cardiaca."</text></outputEntry>
        <outputEntry id="OE_Aprov4_3"><text>"Cirurgia alto risco - ACC/AHA 2023"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_AltoRisco_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Aprovado_AltoRisco_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- PENDENTE: Fallback                            -->
      <!-- ============================================== -->
      <rule id="Rule_UNN_005_Pendente_Fallback">
        <description>Pendente - Requer analise manual por auditor</description>
        <inputEntry id="IE_Pend_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend_4"><text>-</text></inputEntry>
        <outputEntry id="OE_Pend_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_Pend_2"><text>"Caso requer analise manual para avaliacao de risco cardiologico pre-operatorio."</text></outputEntry>
        <outputEntry id="OE_Pend_3"><text>"Auditoria cardiologica - Processo manual"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Pendente_Fallback_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_Rule_UNN_005_Pendente_Fallback_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
