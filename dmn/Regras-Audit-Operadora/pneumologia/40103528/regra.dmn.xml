<?xml version='1.0' encoding='UTF-8'?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" id="Definitions_40103528" name="Polissonografia de noite inteira (PSG)" targetNamespace="http://camunda.org/schema/1.0/dmn">
  
  <decision id="Decision_40103528" name="Regras de Autorização para Polissonografia (PSG)">
    <decisionTable id="DecisionTable_40103528" hitPolicy="FIRST">

      <input id="Input_1" label="Diagnóstico Principal">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>diagnosticoPrincipal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Escala Epworth">
        <inputExpression id="InputExpression_2" typeRef="integer">
          <text>escalaEpworth</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="IMC">
        <inputExpression id="InputExpression_3" typeRef="integer">
          <text>imc</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Relato de Apneias Testemunhadas">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>apneiasTestemunhadas</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" typeRef="string" />
      <output id="Output_2" label="Observação" typeRef="string" />
      <output id="Output_3" label="Fundamentação" typeRef="string" />

      
      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string"><outputValues><text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text></outputValues></output><output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string"><outputValues><text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text></outputValues></output><rule id="Rule_Contraind_40103528_1">
        <description>Infecção cutânea ativa contraindicação temporária</description>
        <inputEntry id="InputEntry_C1_1">
          <text>"L08.0", "L08.8", "L08.9"</text>
        </inputEntry>
        <inputEntry id="InputEntry_C1_2">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_C1_3">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_C1_4">
          <text />
        </inputEntry>
        <outputEntry id="OutputEntry_C1_1">
          <text>"Negado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_C1_2">
          <text>"Contraindicação temporária: infecção cutânea ativa. Postergar até resolução"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_C1_3">
          <text>"AASM 2023: Infecções cutâneas podem comprometer adesão dos eletrodos e causar contaminação do equipamento"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"SOLICITAR_INFO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_40103528_1">
        <description>Alta suspeita de AOS - Berlim 3 domínios positivos</description>
        <inputEntry id="InputEntry_A1_1">
          <text>"G47.3", "G47.30", "G47.31", "G47.33"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A1_2">
          <text>&amp;gt;= 11</text>
        </inputEntry>
        <inputEntry id="InputEntry_A1_3">
          <text>&amp;gt;= 30</text>
        </inputEntry>
        <inputEntry id="InputEntry_A1_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A1_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_2">
          <text>"Alta probabilidade de apneia obstrutiva do sono. Epworth &amp;gt;=11, IMC &amp;gt;=30, apneias testemunhadas"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A1_3">
          <text>"Academia Brasileira de Sono 2023: Questionário de Berlim com 3 domínios positivos indica alta probabilidade de AOS. Epworth &amp;gt;10 confirma sonolência"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Aprovado_40103528_2">
        <description>Moderada suspeita de AOS - Berlim 2 domínios + IMC</description>
        <inputEntry id="InputEntry_A2_1">
          <text>"G47.3", "G47.30", "G47.31", "R06.83"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A2_2">
          <text>[6..10]</text>
        </inputEntry>
        <inputEntry id="InputEntry_A2_3">
          <text>&amp;gt;= 30</text>
        </inputEntry>
        <inputEntry id="InputEntry_A2_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A2_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A2_2">
          <text>"Probabilidade intermediária de AOS. Obesidade + apneias testemunhadas justificam investigação"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A2_3">
          <text>"Academia Brasileira de Sono 2023: IMC &amp;gt;=30 é fator de risco independente para AOS grave. Indicação de PSG mesmo com Epworth 6-10"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Aprovado_40103528_3">
        <description>Hipersonolência diurna excessiva</description>
        <inputEntry id="InputEntry_A3_1">
          <text>"G47.1", "G47.10", "G47.11", "G47.12"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A3_2">
          <text>&amp;gt;= 16</text>
        </inputEntry>
        <inputEntry id="InputEntry_A3_3">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_A3_4">
          <text />
        </inputEntry>
        <outputEntry id="OutputEntry_A3_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A3_2">
          <text>"Hipersonolência grave (Epworth &amp;gt;=16). Indicação para investigação de distúrbios do sono"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A3_3">
          <text>"Escala de Epworth: Pontuação &amp;gt;=16 indica sonolência grave. PSG é indicada para diagnóstico diferencial (AOS, narcolepsia, PLM)"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Aprovado_40103528_4">
        <description>Insuficiência cardíaca com suspeita de AOS central</description>
        <inputEntry id="InputEntry_A4_1">
          <text>"I50.0", "I50.1", "I50.9"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A4_2">
          <text>&amp;gt;= 6</text>
        </inputEntry>
        <inputEntry id="InputEntry_A4_3">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_A4_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A4_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A4_2">
          <text>"Insuficiência cardíaca com sintomas sugestivos de apneia central do sono. Indicação diagnóstica"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A4_3">
          <text>"Academia Brasileira de Sono 2023: 40-50% dos pacientes com IC tem AOS central. PSG é essencial para diagnóstico e tratamento adequado"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Aprovado_40103528_5">
        <description>Arritmia noturna inexplicada</description>
        <inputEntry id="InputEntry_A5_1">
          <text>"I49.0", "I49.1", "I49.9"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A5_2">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_A5_3">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_A5_4">
          <text />
        </inputEntry>
        <outputEntry id="OutputEntry_A5_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A5_2">
          <text>"Arritmia noturna sem causa aparente. Investigação de AOS como fator desencadeante"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A5_3">
          <text>"AASM 2023: AOS está associada a fibrilação atrial, bradiarritmias e taquiarritmias ventriculares. PSG indicada para investigação"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Aprovado_40103528_6">
        <description>Hipertensão refratária</description>
        <inputEntry id="InputEntry_A6_1">
          <text>"I10", "I15.0", "I15.1", "I15.9"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A6_2">
          <text>&amp;gt;= 6</text>
        </inputEntry>
        <inputEntry id="InputEntry_A6_3">
          <text>&amp;gt;= 28</text>
        </inputEntry>
        <inputEntry id="InputEntry_A6_4">
          <text />
        </inputEntry>
        <outputEntry id="OutputEntry_A6_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A6_2">
          <text>"Hipertensão refratária com sobrepeso. Investigação de AOS como causa secundária"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A6_3">
          <text>"Academia Brasileira de Sono 2023: 50-80% dos pacientes com HAS refratária tem AOS. Tratamento da AOS melhora controle pressórico"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Aprovado_40103528_7">
        <description>Insônia crônica com suspeita de distúrbio respiratório</description>
        <inputEntry id="InputEntry_A7_1">
          <text>"G47.0", "G47.00", "G47.01"</text>
        </inputEntry>
        <inputEntry id="InputEntry_A7_2">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_A7_3">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_A7_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_A7_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A7_2">
          <text>"Insônia crônica com apneias testemunhadas. Investigação de distúrbio respiratório do sono como causa"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_A7_3">
          <text>"AASM 2023: AOS pode se manifestar como insônia. PSG diferencia insônia primária de secundária a distúrbio respiratório"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      <rule id="Rule_Fallback_40103528">
        <description>Regra padrão - Critérios não atendidos</description>
        <inputEntry id="InputEntry_Default_1">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_Default_2">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_Default_3">
          <text />
        </inputEntry>
        <inputEntry id="InputEntry_Default_4">
          <text />
        </inputEntry>
        <outputEntry id="OutputEntry_Default_1">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_Default_2">
          <text>"Documentação insuficiente. Enviar: Escala de Epworth preenchida, peso/altura, relato de sintomas noturnos testemunhados"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_Default_3">
          <text>"ANS RN 465/2021 Art. 4º - Documentação clínica insuficiente para autorização"</text>
        </outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"DOC"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"SOLICITAR_INFO"</text></outputEntry></rule>

    </decisionTable>
  </decision>
</definitions>