<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             id="Definitions_41301099"
             name="PET-CT Oncologico"
             targetNamespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 41301099 - PET-CT Oncologico (Tomografia por Emissao de Positrons)
    Procedimento: PET-CT com FDG para estadiamento e seguimento oncologico
    Versao: 3.1.0-LEAN-TIER2 (2026-02-08)

    Indicacoes clinicas DUT/ANS:
    - Estadiamento inicial de neoplasias com alta captacao de FDG
    - Avaliacao de resposta terapeutica apos tratamento oncologico
    - Deteccao de recidiva em casos suspeitos
    - Planejamento radioterapico (delimitacao de volumes-alvo)
    - Caracterizacao de nodulos pulmonares ou massas mediastinais

    Contraindicacoes:
    - Neoplasias com baixa captacao de FDG (carcinoma renal, hepatocelular, prostata bem diferenciado)
    - Exames convencionais suficientes para estadiamento
    - Ausencia de diagnostico oncologico confirmado ou suspeita fundada
    - Uso indiscriminado como rastreamento sem indicacao

    Referencias:
    - RN ANS 465/2021 Rol de Procedimentos
    - Portaria SAS/MS 876/2013 (Diretrizes Oncologia)
    - Sociedade Brasileira de Biologia, Medicina Nuclear e Imagem Molecular
  -->
  <decision id="Decision_41301099" name="Indicacao para PET-CT Oncologico [LEAN TIER-2]">
    <decisionTable id="DecisionTable_41301099" hitPolicy="FIRST">
      <!-- Input 1: Diagnostico Oncologico -->
      <input id="Input_1" label="Diagnostico Oncologico CID-10">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>diagnosticoOncologico</text>
        </inputExpression>
      </input>
      <!-- Input 2: Finalidade do PET-CT -->
      <input id="Input_2" label="Finalidade do Exame">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>finalidadeExame</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"ESTADIAMENTO_INICIAL", "AVALIACAO_RESPOSTA", "SUSPEITA_RECIDIVA", "PLANEJAMENTO_RT", "RASTREAMENTO"</text>
        </inputValues>
      </input>
      <!-- Input 3: Tipo de Neoplasia (captacao FDG) -->
      <input id="Input_3" label="Tipo de Neoplasia">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>tipoNeoplasia</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"ALTA_CAPTACAO", "BAIXA_CAPTACAO", "CAPTACAO_VARIAVEL"</text>
        </inputValues>
      </input>
      <!-- Input 4: Exames Convencionais Realizados -->
      <input id="Input_4" label="Exames Convencionais Realizados">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>examesConvencionais</text>
        </inputExpression>
      </input>
      <!-- Input 5: Estadiamento -->
      <input id="Input_5" label="Estadiamento TNM">
        <inputExpression id="InputExpression_5" typeRef="string">
          <text>estadiamento</text>
        </inputExpression>
      </input>
      <!-- Output -->
      <!-- Input: Dias desde ultimo procedimento (DUP detection) -->
      <input id="Input_ultimoProcedimentoDias" label="Dias Desde Ultimo Procedimento">
        <inputExpression id="InputExpression_ultimoProcedimentoDias" typeRef="number">
          <text>ultimoProcedimentoDias</text>
        </inputExpression>
      </input>

      <output id="Output_1" label="Resultado" name="resultado" typeRef="string"/>
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string"/>
      <output id="Output_3" label="Fundamentacao" name="fundamentacao" typeRef="string"/>
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio"><text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text></outputValues>
      </output>
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada"><text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text></outputValues>
      </output>

      <!-- REGRA 1: Contraindicacao - Uso como rastreamento -->
      <rule id="Rule_Contraindicacao_Rastreamento">
        <description>PET-CT nao indicado para rastreamento populacional</description>
        <inputEntry id="InputEntry_1_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_2_1"><text>"RASTREAMENTO"</text></inputEntry>
        <inputEntry id="InputEntry_3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_5_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Contraindicacao_Rastreamento_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_1"><text>"PET-CT nao e indicado para rastreamento de cancer sem diagnostico ou suspeita fundada."</text></outputEntry>
        <outputEntry id="OutputEntry_3_1"><text>"RN ANS 465/2021 - PET-CT restrito a indicacoes oncologicas especificas, nao para rastreamento."</text></outputEntry>
        <outputEntry id="OutputEntry_4_1"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_5_1"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- REGRA 2: Contraindicacao - Neoplasia de baixa captacao -->
      <rule id="Rule_Contraindicacao_BaixaCaptacao">
        <description>Neoplasias com baixa captacao de FDG tem PET-CT pouco util</description>
        <inputEntry id="InputEntry_1_2"><text>starts with(diagnosticoOncologico, "C")</text></inputEntry>
        <inputEntry id="InputEntry_2_2"><text>"ESTADIAMENTO_INICIAL", "AVALIACAO_RESPOSTA"</text></inputEntry>
        <inputEntry id="InputEntry_3_2"><text>"BAIXA_CAPTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_4_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_5_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Contraindicacao_BaixaCaptacao_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_2"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_2"><text>"PET-CT tem acuracia limitada para neoplasias de baixa captacao (renal, hepatocelular, prostata bem diferenciado). Usar TC/RM."</text></outputEntry>
        <outputEntry id="OutputEntry_3_2"><text>"Diretrizes SBMN - Exames convencionais prefer√≠veis para tumores de baixa atividade metabolica."</text></outputEntry>
        <outputEntry id="OutputEntry_4_2"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_5_2"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- WASTE DETECTION: DUP -->
      <rule id="Rule_41301099_DUP">
        <description>DUP - PET-CT oncologico repetido em menos de 90 dias</description>
        <inputEntry id="IE_DUP_41301099_1"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_41301099_2"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_41301099_3"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_41301099_4"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_41301099_5"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_41301099_ultimo"><text>&lt; 90</text></inputEntry>
        <outputEntry id="OE_DUP_41301099_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_DUP_41301099_observacao"><text>"PET-CT oncologico repetido em menos de 90 dias"</text></outputEntry>
        <outputEntry id="OE_DUP_41301099_fundamentacao"><text>"NCCN/ACR 2024: PET-CT estadiamento/resposta intervalo minimo 90 dias"</text></outputEntry>
        <outputEntry id="OE_DUP_41301099_alertasDesperdicio"><text>"DUP"</text></outputEntry>
        <outputEntry id="OE_DUP_41301099_acaoRecomendada"><text>"AGUARDAR_PRAZO"</text></outputEntry>
      </rule>


      <!-- REGRA 3: Pendente - Sem exames convencionais -->
      <rule id="Rule_Pendente_SemExamesConvencionais">
        <description>PET-CT requer exames convencionais previos</description>
        <inputEntry id="InputEntry_1_3"><text>starts with(diagnosticoOncologico, "C")</text></inputEntry>
        <inputEntry id="InputEntry_2_3"><text>"ESTADIAMENTO_INICIAL", "AVALIACAO_RESPOSTA"</text></inputEntry>
        <inputEntry id="InputEntry_3_3"><text>"ALTA_CAPTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_4_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_5_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Pendente_SemExamesConvencionais_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_3"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_2_3"><text>"Solicitar exames convencionais (TC, RM) antes do PET-CT. PET-CT e exame complementar, nao substitui imagem anatomica."</text></outputEntry>
        <outputEntry id="OutputEntry_3_3"><text>"RN ANS 465/2021 - PET-CT requer correlacao com exames anatomicos previos."</text></outputEntry>
        <outputEntry id="OutputEntry_4_3"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_5_3"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- REGRA 4: Aprovado - Estadiamento inicial -->
      <rule id="Rule_Aprovado_EstadiamentoInicial">
        <description>PET-CT para estadiamento de neoplasia de alta captacao</description>
        <inputEntry id="InputEntry_1_4"><text>starts with(diagnosticoOncologico, "C")</text></inputEntry>
        <inputEntry id="InputEntry_2_4"><text>"ESTADIAMENTO_INICIAL"</text></inputEntry>
        <inputEntry id="InputEntry_3_4"><text>"ALTA_CAPTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_4_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_5_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Aprovado_EstadiamentoInicial_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_4"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_4"><text>"Aprovado - PET-CT para estadiamento inicial de neoplasia com alta captacao de FDG (" + diagnosticoOncologico + ")."</text></outputEntry>
        <outputEntry id="OutputEntry_3_4"><text>"Portaria SAS/MS 876/2013 - PET-CT indicado para estadiamento de canceres FDG-avidos."</text></outputEntry>
        <outputEntry id="OutputEntry_4_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_5_4"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REGRA 5: Aprovado - Avaliacao de resposta terapeutica -->
      <rule id="Rule_Aprovado_AvaliacaoResposta">
        <description>PET-CT para avaliar resposta ao tratamento oncologico</description>
        <inputEntry id="InputEntry_1_5"><text>starts with(diagnosticoOncologico, "C")</text></inputEntry>
        <inputEntry id="InputEntry_2_5"><text>"AVALIACAO_RESPOSTA"</text></inputEntry>
        <inputEntry id="InputEntry_3_5"><text>"ALTA_CAPTACAO", "CAPTACAO_VARIAVEL"</text></inputEntry>
        <inputEntry id="InputEntry_4_5"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_5_5"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Aprovado_AvaliacaoResposta_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_5"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_5"><text>"Aprovado - PET-CT para avaliacao de resposta metabolica apos quimioterapia/radioterapia."</text></outputEntry>
        <outputEntry id="OutputEntry_3_5"><text>"Diretrizes SBMN - PET-CT util para avaliar resposta precoce antes de mudancas anatomicas."</text></outputEntry>
        <outputEntry id="OutputEntry_4_5"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_5_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REGRA 6: Aprovado - Suspeita de recidiva -->
      <rule id="Rule_Aprovado_SuspeitaRecidiva">
        <description>PET-CT para investigar recidiva com marcador elevado ou sintomas</description>
        <inputEntry id="InputEntry_1_6"><text>starts with(diagnosticoOncologico, "C")</text></inputEntry>
        <inputEntry id="InputEntry_2_6"><text>"SUSPEITA_RECIDIVA"</text></inputEntry>
        <inputEntry id="InputEntry_3_6"><text>"ALTA_CAPTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_4_6"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_5_6"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Aprovado_SuspeitaRecidiva_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_6"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_6"><text>"Aprovado - PET-CT para deteccao de recidiva em paciente com suspeita clinica ou bioquimica."</text></outputEntry>
        <outputEntry id="OutputEntry_3_6"><text>"Portaria SAS/MS 876/2013 - PET-CT indicado para deteccao precoce de recidiva."</text></outputEntry>
        <outputEntry id="OutputEntry_4_6"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_5_6"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REGRA 7: Aprovado - Planejamento radioterapico -->
      <rule id="Rule_Aprovado_PlanejamentoRT">
        <description>PET-CT para planejamento de radioterapia</description>
        <inputEntry id="InputEntry_1_7"><text>starts with(diagnosticoOncologico, "C")</text></inputEntry>
        <inputEntry id="InputEntry_2_7"><text>"PLANEJAMENTO_RT"</text></inputEntry>
        <inputEntry id="InputEntry_3_7"><text>"ALTA_CAPTACAO"</text></inputEntry>
        <inputEntry id="InputEntry_4_7"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_5_7"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Aprovado_PlanejamentoRT_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_7"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_7"><text>"Aprovado - PET-CT para delimitacao de volumes-alvo em radioterapia de alta precisao."</text></outputEntry>
        <outputEntry id="OutputEntry_3_7"><text>"Diretrizes radioterapia - PET-CT melhora definicao de GTV/CTV em tumores FDG-avidos."</text></outputEntry>
        <outputEntry id="OutputEntry_4_7"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_5_7"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REGRA 8: Fallback -->
      <rule id="Rule_Fallback_41301099">
        <description>Dados incompletos - requer avaliacao</description>
        <inputEntry id="InputEntry_1_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_2_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_3_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_5_8"><text>-</text></inputEntry>
        <inputEntry id="IE_Rule_Fallback_41301099_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_8"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_2_8"><text>"Dados incompletos. Necessario: (1) CID-10, (2) Finalidade, (3) Tipo de captacao, (4) Exames previos, (5) Estadiamento."</text></outputEntry>
        <outputEntry id="OutputEntry_3_8"><text>"Requer avaliacao do auditor medico com justificativa da indicacao do PET-CT."</text></outputEntry>
        <outputEntry id="OutputEntry_4_8"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_5_8"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>
</definitions>
