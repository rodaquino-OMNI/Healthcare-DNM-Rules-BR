        <inputEntry id="IE_DUP_40501319_3"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_40501319_4"><text>-</text></inputEntry>
        <inputEntry id="IE_DUP_40501319_ultimo"><text>&lt; 180</text></inputEntry>
