          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_imaging_requested_psa">
          <text>true</text>
        </inputEntry>
        <inputEntry id="IE_DecisionRule_approve_psa_psadt_ultimo"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_resultado_psa">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_psa">
          <text>"Imagem aprovada: PSADT &lt;10 meses indica alto risco de metastase detectavel"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_psa">
          <text>"PSADT &lt;10 meses associado a maior risco de mets detectaveis; considerar PSMA-PET"</text>
        </outputEntry>
        <outputEntry id="OE_psa_alertasDesperdicio">
          <text>"NENHUM"</text>
        </outputEntry>
        <outputEntry id="OE_psa_acaoRecomendada">
          <text>"APROVAR"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_pending_rising_asymp">
        <description>Pending for rising markers without symptoms</description>
        <inputEntry id="InputEntry_marker_type_pending">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_marker_trend_pending">
          <text>"rising"</text>
        </inputEntry>
        <inputEntry id="InputEntry_clinical_symptoms_pending">
          <text>false</text>
        </inputEntry>
