<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_009" name="ORT_SPI_009" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_009" name="Correção escoliose - critérios">
    <decisionTable id="DecisionTable_ORT_SPI_009" hitPolicy="FIRST">
      <input id="Input_anguloCobbGraus" label="Ângulo Cobb (graus)">
        <inputExpression id="InputExpression_anguloCobbGraus" typeRef="integer">
          <text>anguloCobbGraus</text>
        </inputExpression>
      </input>
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <input id="Input_progressao" label="Progressão Documentada">
        <inputExpression id="InputExpression_progressao" typeRef="boolean">
          <text>progressao</text>
        </inputExpression>
      </input>
      <input id="Input_dor" label="Dor Significativa">
        <inputExpression id="InputExpression_dor" typeRef="boolean">
          <text>dor</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Reprovado_1">
        <inputEntry id="InputEntry_anguloCobbGraus_1">
          <text>&lt; 40</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_1">
          <text>&lt; 18</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_dor_1">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Escoliose &amp;lt;40° sem progressão - observação ou órtese"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"SRS: curvas &amp;lt;40° em crescimento sem progressão não requerem cirurgia"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_2">
        <inputEntry id="InputEntry_anguloCobbGraus_2">
          <text>&gt; 50</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_2">
          <text>&lt; 18</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_dor_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Escoliose &amp;gt;50° em adolescente - correção cirúrgica indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"SRS: curvas &amp;gt;50° em adolescentes têm indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_anguloCobbGraus_3">
          <text>[40..50]</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_3">
          <text>&lt; 18</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_dor_3">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Escoliose 40-50° com progressão - cirurgia indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"SRS: progressão &amp;gt;5° em 6 meses em curvas 40-50° indica cirurgia"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Pendente_4">
        <inputEntry id="InputEntry_anguloCobbGraus_4">
          <text>&gt; 40</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_4">
          <text>&gt; 18</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_4">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_dor_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_4">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_4">
          <text>"Escoliose adulto - avaliar sintomas e falha conservadora"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_4">
          <text>"SRS: escoliose adulto requer análise individualizada sintomas vs riscos"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_anguloCobbGraus_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_dor_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes Scoliosis Research Society (SRS)"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_009">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
