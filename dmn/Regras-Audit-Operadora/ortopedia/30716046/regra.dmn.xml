<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_CONS_018" name="ORT_CONS_018" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_CONS_018" name="Dedos em garra/martelo conservador">
    <decisionTable id="DecisionTable_ORT_CONS_018" hitPolicy="FIRST">
      <input id="Input_deformidadeFlexivel" label="Deformidade Flexível">
        <inputExpression id="InputExpression_deformidadeFlexivel" typeRef="boolean">
          <text>deformidadeFlexivel</text>
        </inputExpression>
      </input>
      <input id="Input_ulceracao" label="Ulceração Presente">
        <inputExpression id="InputExpression_ulceracao" typeRef="boolean">
          <text>ulceracao</text>
        </inputExpression>
      </input>
      <input id="Input_orteseTentada" label="Órtese Tentada">
        <inputExpression id="InputExpression_orteseTentada" typeRef="boolean">
          <text>orteseTentada</text>
        </inputExpression>
      </input>
      <input id="Input_duracaoSintomas" label="Duração (meses)">
        <inputExpression id="InputExpression_duracaoSintomas" typeRef="integer">
          <text>duracaoSintomas</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Reprovado_1">
        <inputEntry id="InputEntry_deformidadeFlexivel_1">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_ulceracao_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_orteseTentada_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_duracaoSintomas_1">
          <text>&lt; 6</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Deformidade flexível requer uso de órtese por 6 meses"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: deformidades flexíveis devem ter tratamento conservador com órtese"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_2">
        <inputEntry id="InputEntry_deformidadeFlexivel_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_ulceracao_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_orteseTentada_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_duracaoSintomas_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Deformidade rígida ou ulceração - indicação cirúrgica"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"AAOS: deformidades rígidas ou com ulceração têm indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_deformidadeFlexivel_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_ulceracao_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_orteseTentada_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_duracaoSintomas_3">
          <text>&gt;= 12</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Falha conservadora - artrodese ou artroplastia indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"AAOS: após falha de órtese por 12 meses, cirurgia pode ser considerada"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_deformidadeFlexivel_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_ulceracao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_orteseTentada_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_duracaoSintomas_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AAOS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_CONS_018">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
