<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_DEV_023" name="ORT_DEV_023" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_DEV_023" name="Biológicos ortopedia - PRP e células-tronco">
    <decisionTable id="DecisionTable_ORT_DEV_023" hitPolicy="FIRST">
      <input id="Input_condicao" label="Condição (tendinopatia/artrose/lesão-cartilagem)">
        <inputExpression id="InputExpression_condicao" typeRef="string">
          <text>condicao</text>
        </inputExpression>
      </input>
      <input id="Input_tratamentoConservadorFalhou" label="Falha Conservador">
        <inputExpression id="InputExpression_tratamentoConservadorFalhou" typeRef="boolean">
          <text>tratamentoConservadorFalhou</text>
        </inputExpression>
      </input>
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <input id="Input_evidenciaCientifica" label="Evidência Nível I/II">
        <inputExpression id="InputExpression_evidenciaCientifica" typeRef="boolean">
          <text>evidenciaCientifica</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Reprovado_1">
        <inputEntry id="InputEntry_condicao_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservadorFalhou_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_evidenciaCientifica_1">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Biológicos sem evidência científica de nível I/II não são cobertos"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: uso de biológicos deve ser baseado em evidência científica robusta"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_condicao_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservadorFalhou_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_evidenciaCientifica_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Biológicos não são tratamento de primeira linha - completar conservador"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"AAOS: biológicos devem ser considerados após falha de tratamento conservador"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Pendente_3">
        <inputEntry id="InputEntry_condicao_3">
          <text>"tendinopatia"</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservadorFalhou_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_3">
          <text>&lt; 60</text>
        </inputEntry>
        <inputEntry id="InputEntry_evidenciaCientifica_3">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Tendinopatia refratária - PRP pode ser considerado em casos selecionados"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"AAOS: PRP tem evidência moderada para tendinopatias crônicas (recomendação fraca)"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_condicao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservadorFalhou_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_evidenciaCientifica_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AAOS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_DEV_023">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
