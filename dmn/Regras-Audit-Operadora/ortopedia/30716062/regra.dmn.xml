<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_DEV_017" name="ORT_DEV_017" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_DEV_017" name="Dispositivos restauração cartilagem">
    <decisionTable id="DecisionTable_ORT_DEV_017" hitPolicy="FIRST">
      <input id="Input_tamanhoLesao" label="Tamanho Lesão (cm²)">
        <inputExpression id="InputExpression_tamanhoLesao" typeRef="double">
          <text>tamanhoLesao</text>
        </inputExpression>
      </input>
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <input id="Input_lesaoOsso" label="Lesão Óssea Subcondral">
        <inputExpression id="InputExpression_lesaoOsso" typeRef="boolean">
          <text>lesaoOsso</text>
        </inputExpression>
      </input>
      <input id="Input_alinhamentoNormal" label="Alinhamento Normal">
        <inputExpression id="InputExpression_alinhamentoNormal" typeRef="boolean">
          <text>alinhamentoNormal</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Reprovado_1">
        <inputEntry id="InputEntry_tamanhoLesao_1">
          <text>&lt; 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_1">
          <text>&lt; 40</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoOsso_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_alinhamentoNormal_1">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Lesões &amp;lt;2cm² - microfraturas são primeira linha"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: lesões pequenas têm boa resposta a microfraturas sem necessidade de implantes"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_tamanhoLesao_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoOsso_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_alinhamentoNormal_2">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Malalinhamento deve ser corrigido antes de implante de cartilagem"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"ICRS: restauração cartilagem falha em joelho desalinhado"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_tamanhoLesao_3">
          <text>&gt; 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_3">
          <text>&lt; 45</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoOsso_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_alinhamentoNormal_3">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Lesão grande em jovem - ACI ou matriz de colágeno indicados"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"ICRS: lesões &amp;gt;2cm² em jovens se beneficiam de implante de condrócitos ou matriz"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_4">
        <inputEntry id="InputEntry_tamanhoLesao_4">
          <text>&gt;= 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_4">
          <text>&lt; 50</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoOsso_4">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_alinhamentoNormal_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_4">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_4">
          <text>"Lesão osteocondral - autoenxerto osteocondral ou aloenxerto indicado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_4">
          <text>"ICRS: lesões osteocondrais requerem enxerto ósseo associado"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_tamanhoLesao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoOsso_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_alinhamentoNormal_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AAOS e ICRS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_DEV_017">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
