<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DD/20100524/DC/"
             id="Definitions_30715402"
             name="ORT-CONS-002 Fisioterapia Pre-Operatoria Quadril"
             namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 30715402 - ORT-CONS-002 Fisioterapia Pre-Operatoria Quadril
    Versao: 3.0.0 (2026-02-07)
    Especialidade: Ortopedia - Tratamento Conservador

    ============================================================
    INDICACOES CLINICAS (AAOS 2023, SBO 2022):
    ============================================================
    - Coxartrose com indicacao de artroplastia total de quadril
    - Minimo 8 semanas de fisioterapia pre-operatoria para otimizacao
    - Harris Hip Score documentado pre-tratamento
    - Fortalecimento muscular periarticular comprovado

    ============================================================
    CONTRAINDICACOES:
    ============================================================
    - Fratura de colo femoral aguda
    - Necrose avascular com colapso da cabeca femoral
    - Displasia grave com luxacao articular
    - Indicacao cirurgica urgente

    ============================================================
    REFERENCIAS NORMATIVAS:
    ============================================================
    - AAOS Clinical Practice Guideline: Management of Hip OA 2023
    - SBO Diretrizes Artroplastia de Quadril 2022
    - DUT ANS 2024
  -->

  <decision id="Decision_30715402" name="Criterios Fisioterapia Pre-Operatoria Quadril">
    <decisionTable id="DecisionTable_30715402" hitPolicy="FIRST">

      <input id="Input_diagnostico" label="Diagnostico CID-10">
        <inputExpression id="InputExpr_diagnostico" typeRef="string">
          <text>diagnosticoCid10</text>
        </inputExpression>
        <inputValues id="InputValues_diagnostico">
          <text>"M16.0","M16.1","M16.2","M16.3","M16.4","M16.5","M16.9","M87.0","M87.1"</text>
        </inputValues>
      </input>

      <input id="Input_harrisHipScore" label="Harris Hip Score">
        <inputExpression id="InputExpr_harrisHipScore" typeRef="number">
          <text>harrisHipScore</text>
        </inputExpression>
      </input>

      <input id="Input_semanasFisioterapia" label="Semanas de Fisioterapia">
        <inputExpression id="InputExpr_semanasFisioterapia" typeRef="number">
          <text>semanasFisioterapiaPrevia</text>
        </inputExpression>
      </input>

      <input id="Input_urgenciaCirurgica" label="Urgencia Cirurgica">
        <inputExpression id="InputExpr_urgenciaCirurgica" typeRef="boolean">
          <text>urgenciaCirurgica</text>
        </inputExpression>
      </input>

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string"/>

      <output id="Output_fundamentacao" label="Fundamentacao" name="fundamentacao" typeRef="string"/>

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- REGRAS DE REPROVACAO -->
      <rule id="Rule_30715402_Reprovado_Urgencia">
        <description>Reprovado - Urgencia cirurgica dispensa pre-habilitacao</description>
        <inputEntry id="IE_R1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_R1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R1_2"><text>"Urgencia cirurgica indicada - pre-habilitacao nao se aplica. Prosseguir diretamente para procedimento cirurgico."</text></outputEntry>
        <outputEntry id="OE_R1_3"><text>"AAOS 2023 - Emergency Surgical Indication"</text></outputEntry>
      </rule>

      <rule id="Rule_30715402_Reprovado_NecroseAvascular">
        <description>Reprovado - Necrose avascular com colapso</description>
        <inputEntry id="IE_R2_1"><text>"M87.0","M87.1"</text></inputEntry>
        <inputEntry id="IE_R2_2"><text>&lt; 50</text></inputEntry>
        <inputEntry id="IE_R2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_4"><text>-</text></inputEntry>
        <outputEntry id="OE_R2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R2_2"><text>"Necrose avascular com Harris Hip Score abaixo de 50 - indicacao cirurgica direta. Pre-habilitacao contraindicada pelo risco de progressao."</text></outputEntry>
        <outputEntry id="OE_R2_3"><text>"AAOS 2023 - AVN Management Guidelines"</text></outputEntry>
      </rule>

      <!-- REGRAS DE APROVACAO -->
      <rule id="Rule_30715402_Aprovado_Coxartrose">
        <description>Aprovado - Coxartrose com fisioterapia adequada</description>
        <inputEntry id="IE_A1_1"><text>"M16.0","M16.1","M16.2","M16.9"</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>&gt;= 40</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>&gt;= 8</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>false</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Fisioterapia pre-operatoria aprovada. Coxartrose com 8+ semanas de tratamento e Harris Hip Score documentado. Paciente otimizado para cirurgia."</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"AAOS 2023 Section 5.1 - Prehabilitation for THA"</text></outputEntry>
      </rule>

      <!-- REGRA DE PENDENCIA -->
      <rule id="Rule_30715402_Pendente_FisioInsuficiente">
        <description>Pendente - Fisioterapia insuficiente</description>
        <inputEntry id="IE_P1_1"><text>"M16.0","M16.1","M16.2","M16.9"</text></inputEntry>
        <inputEntry id="IE_P1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_P1_3"><text>&lt; 8</text></inputEntry>
        <inputEntry id="IE_P1_4"><text>false</text></inputEntry>
        <outputEntry id="OE_P1_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_P1_2"><text>"Periodo de fisioterapia pre-operatoria insuficiente. Recomendado minimo de 8 semanas para otimizacao muscular antes de artroplastia de quadril."</text></outputEntry>
        <outputEntry id="OE_P1_3"><text>"SBO 2022 - Protocolo Pre-Habilitacao Quadril"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_30715402">
        <description>Fallback - Requer analise manual</description>
        <inputEntry id="IE_F_1"><text>-</text></inputEntry>
        <inputEntry id="IE_F_2"><text>-</text></inputEntry>
        <inputEntry id="IE_F_3"><text>-</text></inputEntry>
        <inputEntry id="IE_F_4"><text>-</text></inputEntry>
        <outputEntry id="OE_F_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_F_2"><text>"Caso requer analise manual. Verificar: diagnostico, Harris Hip Score, semanas de fisioterapia, indicacao de urgencia."</text></outputEntry>
        <outputEntry id="OE_F_3"><text>"Auditoria Medica Especializada - RN 428/2017"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
