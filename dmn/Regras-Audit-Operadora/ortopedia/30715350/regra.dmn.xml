<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_013" name="ORT_SPI_013" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_013" name="Discectomia endoscópica">
    <decisionTable id="DecisionTable_ORT_SPI_013" hitPolicy="FIRST">
      <input id="Input_tipoHernia" label="Tipo Hérnia (contida/extrusa/sequestrada)">
        <inputExpression id="InputExpression_tipoHernia" typeRef="string">
          <text>tipoHernia</text>
        </inputExpression>
      </input>
      <input id="Input_tamanhoMm" label="Tamanho Fragmento (mm)">
        <inputExpression id="InputExpression_tamanhoMm" typeRef="integer">
          <text>tamanhoMm</text>
        </inputExpression>
      </input>
      <input id="Input_localizacao" label="Localização (central/foraminal/extraforaminal)">
        <inputExpression id="InputExpression_localizacao" typeRef="string">
          <text>localizacao</text>
        </inputExpression>
      </input>
      <input id="Input_experienciaCirurgiao" label="Experiência MIS">
        <inputExpression id="InputExpression_experienciaCirurgiao" typeRef="boolean">
          <text>experienciaCirurgiao</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_tipoHernia_1">
          <text>"contida"</text>
        </inputEntry>
        <inputEntry id="InputEntry_tamanhoMm_1">
          <text>&lt; 8</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_1">
          <text>"foraminal"</text>
        </inputEntry>
        <inputEntry id="InputEntry_experienciaCirurgiao_1">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Hérnia foraminal contida - endoscopia indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"NASS: hérnias foraminais são ideais para acesso endoscópico"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_tipoHernia_2">
          <text>"sequestrada"</text>
        </inputEntry>
        <inputEntry id="InputEntry_tamanhoMm_2">
          <text>&gt; 15</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_2">
          <text>"central"</text>
        </inputEntry>
        <inputEntry id="InputEntry_experienciaCirurgiao_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Sequestro central grande - microdiscectomia aberta preferível"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"NASS: sequestros grandes centrais têm dificuldade técnica com endoscopia"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Pendente_3">
        <inputEntry id="InputEntry_tipoHernia_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_tamanhoMm_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_experienciaCirurgiao_3">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Endoscopia tem curva de aprendizado - experiência é crítica"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"NASS: endoscopia requer treinamento específico"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_tipoHernia_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_tamanhoMm_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_experienciaCirurgiao_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes NASS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_013">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
