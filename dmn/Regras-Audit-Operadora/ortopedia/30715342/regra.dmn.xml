<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_012" name="ORT_SPI_012" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_012" name="Cirurgia minimamente invasiva coluna">
    <decisionTable id="DecisionTable_ORT_SPI_012" hitPolicy="FIRST">
      <input id="Input_patologia" label="Patologia (hérnia/estenose/listese)">
        <inputExpression id="InputExpression_patologia" typeRef="string">
          <text>patologia</text>
        </inputExpression>
      </input>
      <input id="Input_niveis" label="Número de Níveis">
        <inputExpression id="InputExpression_niveis" typeRef="integer">
          <text>niveis</text>
        </inputExpression>
      </input>
      <input id="Input_deformidade" label="Deformidade Significativa">
        <inputExpression id="InputExpression_deformidade" typeRef="boolean">
          <text>deformidade</text>
        </inputExpression>
      </input>
      <input id="Input_revisao" label="Cirurgia de Revisão">
        <inputExpression id="InputExpression_revisao" typeRef="boolean">
          <text>revisao</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_patologia_1">
          <text>"hérnia"</text>
        </inputEntry>
        <inputEntry id="InputEntry_niveis_1">
          <text>1</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_revisao_1">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Hérnia discal único nível - MIS apropriada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"NASS: discectomia MIS tem resultados equivalentes à aberta"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_patologia_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_niveis_2">
          <text>&gt; 3</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_revisao_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Deformidade multinível - cirurgia aberta preferível"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"NASS: correções complexas requerem acesso amplo"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Pendente_3">
        <inputEntry id="InputEntry_patologia_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_niveis_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_revisao_3">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Revisão - avaliar aderências e anatomia antes de MIS"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"Revisões podem ter dificuldade técnica aumentada com MIS"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_patologia_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_niveis_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_revisao_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes NASS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_012">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
