<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_008" name="ORT_SPI_008" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_008" name="Cirurgia torácica - indicações">
    <decisionTable id="DecisionTable_ORT_SPI_008" hitPolicy="FIRST">
      <input id="Input_mielopatia" label="Mielopatia Torácica">
        <inputExpression id="InputExpression_mielopatia" typeRef="boolean">
          <text>mielopatia</text>
        </inputExpression>
      </input>
      <input id="Input_dorIncapacitante" label="Dor Incapacitante">
        <inputExpression id="InputExpression_dorIncapacitante" typeRef="boolean">
          <text>dorIncapacitante</text>
        </inputExpression>
      </input>
      <input id="Input_deformidade" label="Deformidade Progressiva">
        <inputExpression id="InputExpression_deformidade" typeRef="boolean">
          <text>deformidade</text>
        </inputExpression>
      </input>
      <input id="Input_conservadorFalhou" label="Falha Conservador 6+ meses">
        <inputExpression id="InputExpression_conservadorFalhou" typeRef="boolean">
          <text>conservadorFalhou</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_mielopatia_1">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorIncapacitante_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_1">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Mielopatia torácica - descompressão indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"NASS: mielopatia torácica progressiva requer cirurgia"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_mielopatia_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorIncapacitante_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_2">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Dor torácica mecânica requer tratamento conservador prolongado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"NASS: dor torácica sem déficit neurológico deve ter tratamento conservador"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_mielopatia_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorIncapacitante_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_3">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Deformidade progressiva coluna torácica - correção indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"NASS: deformidade progressiva tem indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_mielopatia_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorIncapacitante_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_deformidade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes NASS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_008">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
