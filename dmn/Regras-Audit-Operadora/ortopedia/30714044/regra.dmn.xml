<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_CONS_006" name="ORT_CONS_006" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_CONS_006" name="Timing reconstrução LCA">
    <decisionTable id="DecisionTable_ORT_CONS_006" hitPolicy="FIRST">
      <input id="Input_lesaoCompleta" label="Lesão Completa LCA">
        <inputExpression id="InputExpression_lesaoCompleta" typeRef="boolean">
          <text>lesaoCompleta</text>
        </inputExpression>
      </input>
      <input id="Input_lesaoMultipla" label="Lesões Múltiplas">
        <inputExpression id="InputExpression_lesaoMultipla" typeRef="boolean">
          <text>lesaoMultipla</text>
        </inputExpression>
      </input>
      <input id="Input_instabilidadeGrau" label="Grau Instabilidade (1-3)">
        <inputExpression id="InputExpression_instabilidadeGrau" typeRef="integer">
          <text>instabilidadeGrau</text>
        </inputExpression>
      </input>
      <input id="Input_fisioterapiaMeses" label="Fisioterapia (meses)">
        <inputExpression id="InputExpression_fisioterapiaMeses" typeRef="integer">
          <text>fisioterapiaMeses</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_lesaoCompleta_1">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoMultipla_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidadeGrau_1">
          <text>&gt;= 3</text>
        </inputEntry>
        <inputEntry id="InputEntry_fisioterapiaMeses_1">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Lesão completa do LCA com instabilidade grau III - indicação cirúrgica"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: reconstrução LCA indicada em lesões completas com instabilidade significativa"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_lesaoCompleta_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoMultipla_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidadeGrau_2">
          <text>&lt;= 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_fisioterapiaMeses_2">
          <text>&lt; 3</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Necessário protocolo fisioterápico de pelo menos 3-6 meses antes de cirurgia"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"AAOS: lesões parciais requerem tentativa conservadora de 3-6 meses"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_lesaoCompleta_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoMultipla_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidadeGrau_3">
          <text>&gt;= 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_fisioterapiaMeses_3">
          <text>&gt;= 6</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Falha tratamento conservador após 6 meses - indicação cirúrgica"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"SBO: reconstrução indicada após falha conservadora de 6 meses com instabilidade persistente"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_lesaoCompleta_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_lesaoMultipla_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidadeGrau_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_fisioterapiaMeses_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AAOS e SBO"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_CONS_006">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
