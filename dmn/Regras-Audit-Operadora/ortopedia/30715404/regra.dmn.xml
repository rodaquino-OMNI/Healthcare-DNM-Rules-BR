<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DD/20100524/DC/"
             id="Definitions_30715404"
             name="ORT-CONS-004 Tratamento Conservador Coluna Lombar"
             namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 30715404 - ORT-CONS-004 Tratamento Conservador Coluna Lombar
    Versao: 3.0.0 (2026-02-07)
    Especialidade: Ortopedia - Tratamento Conservador

    ============================================================
    INDICACOES CLINICAS (NASS 2023, SBC Coluna 2022):
    ============================================================
    - Hernia discal lombar sem deficit neurologico progressivo
    - Estenose de canal sem claudicacao neurogencia grave
    - Lombalgia cronica inespecifica
    - Minimo 6-12 semanas de tratamento conservador

    ============================================================
    CONTRAINDICACOES:
    ============================================================
    - Sindrome da cauda equina
    - Deficit neurologico progressivo
    - Fratura vertebral instavel
    - Tumor ou infeccao vertebral

    ============================================================
    REFERENCIAS NORMATIVAS:
    ============================================================
    - NASS Clinical Guidelines Lumbar Disc Herniation 2023
    - SBC Coluna Diretrizes 2022
    - DUT ANS 2024
  -->

  <decision id="Decision_30715404" name="Criterios Tratamento Conservador Coluna Lombar">
    <decisionTable id="DecisionTable_30715404" hitPolicy="FIRST">

      <input id="Input_diagnostico" label="Diagnostico CID-10">
        <inputExpression id="InputExpr_diagnostico" typeRef="string">
          <text>diagnosticoCid10</text>
        </inputExpression>
        <inputValues id="InputValues_diagnostico">
          <text>"M51.1","M51.2","M54.4","M54.5","M48.0","M47.8","G55.1"</text>
        </inputValues>
      </input>

      <input id="Input_deficitNeurologico" label="Deficit Neurologico">
        <inputExpression id="InputExpr_deficitNeurologico" typeRef="string">
          <text>deficitNeurologico</text>
        </inputExpression>
        <inputValues id="InputValues_deficitNeurologico">
          <text>"Ausente","Estavel","Progressivo","Cauda_Equina"</text>
        </inputValues>
      </input>

      <input id="Input_semanasTratamento" label="Semanas de Tratamento Conservador">
        <inputExpression id="InputExpr_semanasTratamento" typeRef="number">
          <text>semanasTratamentoConservador</text>
        </inputExpression>
      </input>

      <input id="Input_escalaOswestry" label="Oswestry Disability Index Documentado">
        <inputExpression id="InputExpr_escalaOswestry" typeRef="boolean">
          <text>oswestryDocumentado</text>
        </inputExpression>
      </input>

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string"/>

      <output id="Output_fundamentacao" label="Fundamentacao" name="fundamentacao" typeRef="string"/>

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- REGRAS DE REPROVACAO -->
      <rule id="Rule_30715404_Reprovado_CaudaEquina">
        <description>Reprovado - Sindrome da cauda equina e emergencia</description>
        <inputEntry id="IE_R1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_2"><text>"Cauda_Equina"</text></inputEntry>
        <inputEntry id="IE_R1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_4"><text>-</text></inputEntry>
        <outputEntry id="OE_R1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R1_2"><text>"EMERGENCIA CIRURGICA: Sindrome da cauda equina. Tratamento conservador contraindicado. Encaminhar para descompressao cirurgica imediata (menos de 48h)."</text></outputEntry>
        <outputEntry id="OE_R1_3"><text>"NASS 2023 - Cauda Equina Emergency Protocol"</text></outputEntry>
      </rule>

      <rule id="Rule_30715404_Reprovado_DeficitProgressivo">
        <description>Reprovado - Deficit neurologico progressivo</description>
        <inputEntry id="IE_R2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_2"><text>"Progressivo"</text></inputEntry>
        <inputEntry id="IE_R2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_4"><text>-</text></inputEntry>
        <outputEntry id="OE_R2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R2_2"><text>"Deficit neurologico progressivo documentado. Tratamento conservador contraindicado. Indicacao de avaliacao cirurgica urgente."</text></outputEntry>
        <outputEntry id="OE_R2_3"><text>"NASS 2023 - Progressive Neurological Deficit Surgical Indication"</text></outputEntry>
      </rule>

      <!-- REGRAS DE APROVACAO -->
      <rule id="Rule_30715404_Aprovado_HerniaDiscal">
        <description>Aprovado - Hernia discal com tratamento conservador adequado</description>
        <inputEntry id="IE_A1_1"><text>"M51.1","M51.2"</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>"Ausente","Estavel"</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Tratamento conservador aprovado para hernia discal. 6+ semanas de fisioterapia sem deficit progressivo. Pode reavaliar indicacao cirurgica se sem melhora."</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"NASS 2023 Section 3.2 - Conservative Treatment Lumbar Disc Herniation"</text></outputEntry>
      </rule>

      <rule id="Rule_30715404_Aprovado_LombalgiaCronica">
        <description>Aprovado - Lombalgia cronica com programa de reabilitacao</description>
        <inputEntry id="IE_A2_1"><text>"M54.4","M54.5"</text></inputEntry>
        <inputEntry id="IE_A2_2"><text>"Ausente"</text></inputEntry>
        <inputEntry id="IE_A2_3"><text>&gt;= 12</text></inputEntry>
        <inputEntry id="IE_A2_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A2_2"><text>"Tratamento conservador aprovado para lombalgia cronica. 12+ semanas de programa de reabilitacao multidisciplinar documentado."</text></outputEntry>
        <outputEntry id="OE_A2_3"><text>"SBC Coluna 2022 - Chronic Low Back Pain Management"</text></outputEntry>
      </rule>

      <!-- REGRA DE PENDENCIA -->
      <rule id="Rule_30715404_Pendente_TratamentoInsuficiente">
        <description>Pendente - Periodo de tratamento insuficiente</description>
        <inputEntry id="IE_P1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_P1_2"><text>"Ausente","Estavel"</text></inputEntry>
        <inputEntry id="IE_P1_3"><text>&lt; 6</text></inputEntry>
        <inputEntry id="IE_P1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_P1_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_P1_2"><text>"Periodo de tratamento conservador insuficiente. Minimo recomendado: 6 semanas para hernia, 12 semanas para lombalgia cronica. Continuar programa de reabilitacao."</text></outputEntry>
        <outputEntry id="OE_P1_3"><text>"NASS 2023 - Minimum Conservative Trial Duration"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_30715404">
        <description>Fallback - Requer analise manual</description>
        <inputEntry id="IE_F_1"><text>-</text></inputEntry>
        <inputEntry id="IE_F_2"><text>-</text></inputEntry>
        <inputEntry id="IE_F_3"><text>-</text></inputEntry>
        <inputEntry id="IE_F_4"><text>-</text></inputEntry>
        <outputEntry id="OE_F_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_F_2"><text>"Caso requer analise manual por neurocirurgiao ou ortopedista de coluna. Verificar: diagnostico, status neurologico, semanas de tratamento, Oswestry Index."</text></outputEntry>
        <outputEntry id="OE_F_3"><text>"Auditoria Medica Especializada - RN 428/2017"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
