<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_006" name="ORT_SPI_006" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_006" name="ACDF vs artroplastia disco cervical">
    <decisionTable id="DecisionTable_ORT_SPI_006" hitPolicy="FIRST">
      <input id="Input_niveis" label="Número de Níveis">
        <inputExpression id="InputExpression_niveis" typeRef="integer">
          <text>niveis</text>
        </inputExpression>
      </input>
      <input id="Input_facetasDegeneradas" label="Facetas Degeneradas">
        <inputExpression id="InputExpression_facetasDegeneradas" typeRef="boolean">
          <text>facetasDegeneradas</text>
        </inputExpression>
      </input>
      <input id="Input_ossificacaoLLP" label="Ossificação LLP">
        <inputExpression id="InputExpression_ossificacaoLLP" typeRef="boolean">
          <text>ossificacaoLLP</text>
        </inputExpression>
      </input>
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Reprovado_1">
        <inputEntry id="InputEntry_niveis_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_facetasDegeneradas_1">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_ossificacaoLLP_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_1">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Facetas degeneradas contraindicam artroplastia - ACDF indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"NASS: artrodese indicada quando há doença facetária"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_niveis_2">
          <text>&gt; 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_facetasDegeneradas_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_ossificacaoLLP_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Artroplastia multinível (&amp;gt;2 níveis) tem evidência limitada - ACDF preferível"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"NASS: artroplastia é para 1-2 níveis adjacentes"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_3">
        <inputEntry id="InputEntry_niveis_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_facetasDegeneradas_3">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_ossificacaoLLP_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_3">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Ossificação do ligamento longitudinal posterior contraindica artroplastia"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"NASS: ossificação LLP é contraindicação para disco artificial"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_4">
        <inputEntry id="InputEntry_niveis_4">
          <text>[1..2]</text>
        </inputEntry>
        <inputEntry id="InputEntry_facetasDegeneradas_4">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_ossificacaoLLP_4">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_4">
          <text>&lt; 60</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_4">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_4">
          <text>"1-2 níveis, facetas preservadas - ambas técnicas aceitáveis"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_4">
          <text>"NASS: artroplastia e ACDF têm resultados equivalentes em casos selecionados"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_niveis_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_facetasDegeneradas_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_ossificacaoLLP_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes NASS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_006">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
