<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_CONS_016" name="ORT_CONS_016" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_CONS_016" name="Lesão osteocondral conservador">
    <decisionTable id="DecisionTable_ORT_CONS_016" hitPolicy="FIRST">
      <input id="Input_tamanhoLesao" label="Tamanho Lesão (cm²)">
        <inputExpression id="InputExpression_tamanhoLesao" typeRef="double">
          <text>tamanhoLesao</text>
        </inputExpression>
      </input>
      <input id="Input_localizacao" label="Localização Carga">
        <inputExpression id="InputExpression_localizacao" typeRef="boolean">
          <text>localizacao</text>
        </inputExpression>
      </input>
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <input id="Input_tratamentoConservador" label="Tratamento Conservador (meses)">
        <inputExpression id="InputExpression_tratamentoConservador" typeRef="integer">
          <text>tratamentoConservador</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Reprovado_1">
        <inputEntry id="InputEntry_tamanhoLesao_1">
          <text>&lt; 1</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_1">
          <text>&lt; 40</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservador_1">
          <text>&lt; 3</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Lesões osteocondrais pequenas requerem tratamento conservador inicial"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: lesões &amp;lt;1cm² fora de área de carga devem ter tratamento conservador por 3-6 meses"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_2">
        <inputEntry id="InputEntry_tamanhoLesao_2">
          <text>&gt; 2</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_2">
          <text>&lt; 45</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservador_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Lesão grande em área de carga - indicação cirúrgica"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"AAOS: lesões &amp;gt;2cm² em área de carga têm indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_tamanhoLesao_3">
          <text>[1..2]</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_3">
          <text>&lt; 50</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservador_3">
          <text>&gt;= 6</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Falha tratamento conservador - microfraturas ou autoenxerto indicado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"AAOS: lesões sintomáticas 1-2cm² após falha conservadora têm indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_tamanhoLesao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_localizacao_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_tratamentoConservador_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AAOS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_CONS_016">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
