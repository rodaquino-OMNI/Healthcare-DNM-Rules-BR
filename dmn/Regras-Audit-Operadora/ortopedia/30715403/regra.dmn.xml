<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DD/20100524/DC/"
             id="Definitions_30715403"
             name="ORT-CONS-003 Tratamento Conservador Ombro"
             namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 30715403 - ORT-CONS-003 Tratamento Conservador Ombro
    Versao: 3.0.0 (2026-02-07)
    Especialidade: Ortopedia - Tratamento Conservador

    ============================================================
    INDICACOES CLINICAS (AAOS 2023, SBO 2022):
    ============================================================
    - Sindrome do impacto subacromial
    - Tendinopatia do manguito rotador sem ruptura completa
    - Capsulite adesiva (ombro congelado)
    - Minimo 12 semanas de fisioterapia antes de indicacao cirurgica

    ============================================================
    CONTRAINDICACOES:
    ============================================================
    - Ruptura completa do manguito rotador
    - Luxacao recorrente com lesao de Bankart
    - Fratura do umero proximal
    - Artrose glenoumeral avancada

    ============================================================
    REFERENCIAS NORMATIVAS:
    ============================================================
    - AAOS Rotator Cuff Guidelines 2023
    - SBO Protocolo Ombro 2022
    - DUT ANS 2024
  -->

  <decision id="Decision_30715403" name="Criterios Tratamento Conservador Ombro">
    <decisionTable id="DecisionTable_30715403" hitPolicy="FIRST">

      <input id="Input_diagnostico" label="Diagnostico CID-10">
        <inputExpression id="InputExpr_diagnostico" typeRef="string">
          <text>diagnosticoCid10</text>
        </inputExpression>
        <inputValues id="InputValues_diagnostico">
          <text>"M75.0","M75.1","M75.2","M75.3","M75.4","M75.5","M75.8","M75.9"</text>
        </inputValues>
      </input>

      <input id="Input_tipoLesao" label="Tipo de Lesao">
        <inputExpression id="InputExpr_tipoLesao" typeRef="string">
          <text>tipoLesaoManguito</text>
        </inputExpression>
        <inputValues id="InputValues_tipoLesao">
          <text>"Sem_Ruptura","Ruptura_Parcial","Ruptura_Completa","Tendinopatia","Calcificacao"</text>
        </inputValues>
      </input>

      <input id="Input_semanasFisioterapia" label="Semanas de Fisioterapia">
        <inputExpression id="InputExpr_semanasFisioterapia" typeRef="number">
          <text>semanasFisioterapiaPrevia</text>
        </inputExpression>
      </input>

      <input id="Input_constantScore" label="Constant Score Documentado">
        <inputExpression id="InputExpr_constantScore" typeRef="boolean">
          <text>constantScoreDocumentado</text>
        </inputExpression>
      </input>

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string"/>

      <output id="Output_fundamentacao" label="Fundamentacao" name="fundamentacao" typeRef="string"/>

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- REGRAS DE REPROVACAO -->
      <rule id="Rule_30715403_Reprovado_RupturaCompleta">
        <description>Reprovado - Ruptura completa requer cirurgia</description>
        <inputEntry id="IE_R1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_2"><text>"Ruptura_Completa"</text></inputEntry>
        <inputEntry id="IE_R1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_4"><text>-</text></inputEntry>
        <outputEntry id="OE_R1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R1_2"><text>"Ruptura completa do manguito rotador - indicacao cirurgica direta. Tratamento conservador isolado nao recomendado para rupturas completas."</text></outputEntry>
        <outputEntry id="OE_R1_3"><text>"AAOS 2023 - Complete Rotator Cuff Tear Surgical Indication"</text></outputEntry>
      </rule>

      <rule id="Rule_30715403_Reprovado_SemScore">
        <description>Reprovado - Escore funcional obrigatorio</description>
        <inputEntry id="IE_R2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_4"><text>false</text></inputEntry>
        <outputEntry id="OE_R2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R2_2"><text>"Constant Score ou UCLA Score nao documentado. Escore funcional obrigatorio para monitoramento de resposta ao tratamento conservador."</text></outputEntry>
        <outputEntry id="OE_R2_3"><text>"SBO 2022 - Documentacao Funcional Ombro"</text></outputEntry>
      </rule>

      <!-- REGRAS DE APROVACAO -->
      <rule id="Rule_30715403_Aprovado_SindromeImpacto">
        <description>Aprovado - Sindrome do impacto com fisioterapia adequada</description>
        <inputEntry id="IE_A1_1"><text>"M75.4"</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>"Sem_Ruptura","Tendinopatia"</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>&gt;= 12</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Tratamento conservador aprovado. Sindrome do impacto com 12+ semanas de fisioterapia. Pode prosseguir para avaliacao de resposta ou indicacao cirurgica."</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"AAOS 2023 - Impingement Conservative Management"</text></outputEntry>
      </rule>

      <rule id="Rule_30715403_Aprovado_Tendinopatia">
        <description>Aprovado - Tendinopatia com tratamento conservador</description>
        <inputEntry id="IE_A2_1"><text>"M75.1","M75.2","M75.3"</text></inputEntry>
        <inputEntry id="IE_A2_2"><text>"Tendinopatia","Ruptura_Parcial","Calcificacao"</text></inputEntry>
        <inputEntry id="IE_A2_3"><text>&gt;= 8</text></inputEntry>
        <inputEntry id="IE_A2_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A2_2"><text>"Tratamento conservador aprovado para tendinopatia/lesao parcial. Minimo de 8 semanas de fisioterapia cumprido."</text></outputEntry>
        <outputEntry id="OE_A2_3"><text>"SBO 2022 - Protocolo Tendinopatia Manguito"</text></outputEntry>
      </rule>

      <!-- REGRA DE PENDENCIA -->
      <rule id="Rule_30715403_Pendente_FisioInsuficiente">
        <description>Pendente - Fisioterapia insuficiente</description>
        <inputEntry id="IE_P1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_P1_2"><text>"Sem_Ruptura","Tendinopatia","Ruptura_Parcial"</text></inputEntry>
        <inputEntry id="IE_P1_3"><text>&lt; 8</text></inputEntry>
        <inputEntry id="IE_P1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_P1_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_P1_2"><text>"Periodo de fisioterapia insuficiente. Minimo recomendado: 12 semanas para sindrome do impacto, 8 semanas para tendinopatia. Continuar tratamento conservador."</text></outputEntry>
        <outputEntry id="OE_P1_3"><text>"AAOS 2023 - Minimum Conservative Trial Period"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_30715403">
        <description>Fallback - Requer analise manual</description>
        <inputEntry id="IE_F_1"><text>-</text></inputEntry>
        <inputEntry id="IE_F_2"><text>-</text></inputEntry>
        <inputEntry id="IE_F_3"><text>-</text></inputEntry>
        <inputEntry id="IE_F_4"><text>-</text></inputEntry>
        <outputEntry id="OE_F_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_F_2"><text>"Caso requer analise manual. Verificar: diagnostico CID-10, tipo de lesao, semanas de fisioterapia, escore funcional."</text></outputEntry>
        <outputEntry id="OE_F_3"><text>"Auditoria Medica Especializada - RN 428/2017"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
