<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DD/20100524/DC/"
             id="Definitions_30715401"
             name="ORT-CONS-001 Fisioterapia Pre-Operatoria Joelho"
             namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 30715401 - ORT-CONS-001 Fisioterapia Pre-Operatoria Joelho
    Versao: 3.0.0 (2026-02-07)
    Especialidade: Ortopedia - Tratamento Conservador

    ============================================================
    INDICACOES CLINICAS (AAOS 2023, SBO 2022):
    ============================================================
    - Gonartrose grau I-III Kellgren-Lawrence com indicacao cirurgica
    - Minimo 6 semanas de fisioterapia pre-operatoria documentada
    - Falha de tratamento conservador com medicamentos por 3+ meses
    - Escore funcional WOMAC ou KOOS documentado pre e pos fisioterapia

    ============================================================
    CONTRAINDICACOES:
    ============================================================
    - Artrose grau IV com indicacao cirurgica urgente
    - Instabilidade articular grave com risco de queda
    - Infeccao articular ativa
    - Cirurgia programada em menos de 2 semanas

    ============================================================
    DOCUMENTACAO OBRIGATORIA:
    ============================================================
    - Laudo ortopedico com indicacao de fisioterapia pre-op
    - Radiografia com classificacao Kellgren-Lawrence
    - Registro de sessoes de fisioterapia realizadas
    - Escore funcional pre e pos tratamento

    ============================================================
    REFERENCIAS NORMATIVAS:
    ============================================================
    - AAOS Clinical Practice Guideline: Treatment of Osteoarthritis of the Knee 2023
    - SBO Diretrizes Tratamento Conservador 2022
    - DUT ANS 2024 - Procedimentos de Reabilitacao
    - RN 465/2021 ANS
  -->

  <decision id="Decision_30715401" name="Criterios Fisioterapia Pre-Operatoria Joelho">
    <decisionTable id="DecisionTable_30715401" hitPolicy="FIRST">

      <input id="Input_diagnostico" label="Diagnostico CID-10">
        <inputExpression id="InputExpr_diagnostico" typeRef="string">
          <text>diagnosticoCid10</text>
        </inputExpression>
        <inputValues id="InputValues_diagnostico">
          <text>"M17.0","M17.1","M17.2","M17.3","M17.4","M17.5","M17.9"</text>
        </inputValues>
      </input>

      <input id="Input_grauKellgren" label="Grau Kellgren-Lawrence">
        <inputExpression id="InputExpr_grauKellgren" typeRef="string">
          <text>grauKellgrenLawrence</text>
        </inputExpression>
        <inputValues id="InputValues_grauKellgren">
          <text>"Grau_I","Grau_II","Grau_III","Grau_IV"</text>
        </inputValues>
      </input>

      <input id="Input_semanasFisioterapia" label="Semanas de Fisioterapia Previas">
        <inputExpression id="InputExpr_semanasFisioterapia" typeRef="number">
          <text>semanasFisioterapiaPrevia</text>
        </inputExpression>
      </input>

      <input id="Input_escoreFuncional" label="Escore Funcional Documentado">
        <inputExpression id="InputExpr_escoreFuncional" typeRef="boolean">
          <text>escoreFuncionalDocumentado</text>
        </inputExpression>
      </input>

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string"/>

      <output id="Output_fundamentacao" label="Fundamentacao" name="fundamentacao" typeRef="string"/>

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- REGRAS DE REPROVACAO -->
      <rule id="Rule_30715401_Reprovado_GrauIV">
        <description>Reprovado - Grau IV requer cirurgia direta sem pre-habilitacao obrigatoria</description>
        <inputEntry id="IE_R1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_2"><text>"Grau_IV"</text></inputEntry>
        <inputEntry id="IE_R1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_4"><text>-</text></inputEntry>
        <outputEntry id="OE_R1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R1_2"><text>"Artrose grau IV Kellgren-Lawrence - indicacao direta para artroplastia sem obrigatoriedade de pre-habilitacao. Fisioterapia pre-operatoria opcional."</text></outputEntry>
        <outputEntry id="OE_R1_3"><text>"AAOS 2023 - Severe OA Grade IV Direct Surgical Indication"</text></outputEntry>
      </rule>

      <rule id="Rule_30715401_Reprovado_SemEscore">
        <description>Reprovado - Escore funcional obrigatorio para acompanhamento</description>
        <inputEntry id="IE_R2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_4"><text>false</text></inputEntry>
        <outputEntry id="OE_R2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R2_2"><text>"Escore funcional (WOMAC ou KOOS) nao documentado. Obrigatorio para avaliacao de eficacia do tratamento conservador pre-operatorio."</text></outputEntry>
        <outputEntry id="OE_R2_3"><text>"SBO 2022 - Documentacao Funcional Obrigatoria"</text></outputEntry>
      </rule>

      <!-- REGRAS DE APROVACAO -->
      <rule id="Rule_30715401_Aprovado_GrauI_II">
        <description>Aprovado - Graus I-II com fisioterapia minima de 6 semanas</description>
        <inputEntry id="IE_A1_1"><text>"M17.0","M17.1","M17.2","M17.9"</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>"Grau_I","Grau_II"</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Fisioterapia pre-operatoria aprovada. Artrose grau I-II com 6+ semanas de tratamento conservador documentado e escore funcional presente."</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"AAOS 2023 Section 4.2 - Conservative Treatment Before Surgery"</text></outputEntry>
      </rule>

      <rule id="Rule_30715401_Aprovado_GrauIII">
        <description>Aprovado - Grau III com fisioterapia documentada</description>
        <inputEntry id="IE_A2_1"><text>"M17.0","M17.1","M17.3","M17.9"</text></inputEntry>
        <inputEntry id="IE_A2_2"><text>"Grau_III"</text></inputEntry>
        <inputEntry id="IE_A2_3"><text>&gt;= 4</text></inputEntry>
        <inputEntry id="IE_A2_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A2_2"><text>"Fisioterapia pre-operatoria aprovada. Artrose grau III com tratamento conservador minimo de 4 semanas. Pode prosseguir para avaliacao cirurgica."</text></outputEntry>
        <outputEntry id="OE_A2_3"><text>"AAOS 2023 - Moderate OA Conservative Trial"</text></outputEntry>
      </rule>

      <!-- REGRA DE PENDENCIA -->
      <rule id="Rule_30715401_Pendente_FisioterapiaInsuficiente">
        <description>Pendente - Tempo de fisioterapia insuficiente</description>
        <inputEntry id="IE_P1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_P1_2"><text>"Grau_I","Grau_II","Grau_III"</text></inputEntry>
        <inputEntry id="IE_P1_3"><text>&lt; 4</text></inputEntry>
        <inputEntry id="IE_P1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_P1_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_P1_2"><text>"Periodo de fisioterapia pre-operatoria insuficiente. Minimo recomendado: 6 semanas para graus I-II, 4 semanas para grau III. Continuar tratamento conservador."</text></outputEntry>
        <outputEntry id="OE_P1_3"><text>"SBO 2022 - Tempo Minimo Tratamento Conservador"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_30715401">
        <description>Fallback - Requer analise manual</description>
        <inputEntry id="IE_F_1"><text>-</text></inputEntry>
        <inputEntry id="IE_F_2"><text>-</text></inputEntry>
        <inputEntry id="IE_F_3"><text>-</text></inputEntry>
        <inputEntry id="IE_F_4"><text>-</text></inputEntry>
        <outputEntry id="OE_F_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_F_2"><text>"Caso requer analise manual por auditor medico ortopedista. Verificar: diagnostico CID-10, classificacao radiografica, tempo de fisioterapia, escore funcional."</text></outputEntry>
        <outputEntry id="OE_F_3"><text>"Auditoria Medica Especializada - RN 428/2017"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
