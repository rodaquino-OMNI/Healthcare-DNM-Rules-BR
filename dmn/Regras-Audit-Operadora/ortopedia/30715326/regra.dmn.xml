<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_010" name="ORT_SPI_010" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_010" name="Cifose - correção cirúrgica">
    <decisionTable id="DecisionTable_ORT_SPI_010" hitPolicy="FIRST">
      <input id="Input_anguloGraus" label="Ângulo Cifose (graus)">
        <inputExpression id="InputExpression_anguloGraus" typeRef="integer">
          <text>anguloGraus</text>
        </inputExpression>
      </input>
      <input id="Input_mielopatia" label="Mielopatia">
        <inputExpression id="InputExpression_mielopatia" typeRef="boolean">
          <text>mielopatia</text>
        </inputExpression>
      </input>
      <input id="Input_dorRefrataria" label="Dor Refratária">
        <inputExpression id="InputExpression_dorRefrataria" typeRef="boolean">
          <text>dorRefrataria</text>
        </inputExpression>
      </input>
      <input id="Input_progressao" label="Progressão Documentada">
        <inputExpression id="InputExpression_progressao" typeRef="boolean">
          <text>progressao</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_anguloGraus_1">
          <text>&gt; 75</text>
        </inputEntry>
        <inputEntry id="InputEntry_mielopatia_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorRefrataria_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_1">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Cifose &amp;gt;75° - indicação cirúrgica por deformidade"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"SRS: cifose &amp;gt;75° tem indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_2">
        <inputEntry id="InputEntry_anguloGraus_2">
          <text>&gt; 50</text>
        </inputEntry>
        <inputEntry id="InputEntry_mielopatia_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorRefrataria_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Cifose com mielopatia - descompressão e correção indicadas"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"SRS: mielopatia associada é indicação cirúrgica absoluta"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_3">
        <inputEntry id="InputEntry_anguloGraus_3">
          <text>&lt; 60</text>
        </inputEntry>
        <inputEntry id="InputEntry_mielopatia_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorRefrataria_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_3">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Cifose moderada assintomática - tratamento conservador"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"SRS: cifose &amp;lt;60° sem sintomas não requer cirurgia"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_anguloGraus_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_mielopatia_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_dorRefrataria_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_progressao_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes SRS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_010">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
