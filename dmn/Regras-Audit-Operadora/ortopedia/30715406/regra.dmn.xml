<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/"
             xmlns:dc="http://www.omg.org/spec/DD/20100524/DC/"
             id="Definitions_30715406"
             name="ORT-CONS-006 Tratamento Conservador Tornozelo e Pe"
             namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS 30715406 - ORT-CONS-006 Tratamento Conservador Tornozelo e Pe
    Versao: 3.0.0 (2026-02-07)
    Especialidade: Ortopedia - Tratamento Conservador

    ============================================================
    INDICACOES CLINICAS (AOFAS 2023, SBO 2022):
    ============================================================
    - Fasciite plantar cronica
    - Tendinopatia de Aquiles
    - Entorse de tornozelo recorrente
    - Minimo 8 semanas de tratamento conservador

    ============================================================
    REFERENCIAS NORMATIVAS:
    ============================================================
    - AOFAS Clinical Consensus Foot and Ankle 2023
    - SBO Diretrizes Pe e Tornozelo 2022
    - DUT ANS 2024
  -->

  <decision id="Decision_30715406" name="Criterios Tratamento Conservador Tornozelo e Pe">
    <decisionTable id="DecisionTable_30715406" hitPolicy="FIRST">

      <input id="Input_diagnostico" label="Diagnostico CID-10">
        <inputExpression id="InputExpr_diagnostico" typeRef="string">
          <text>diagnosticoCid10</text>
        </inputExpression>
        <inputValues id="InputValues_diagnostico">
          <text>"M72.2","M76.6","S93.4","M77.3","M77.5","M21.4"</text>
        </inputValues>
      </input>

      <input id="Input_tipoLesao" label="Tipo de Lesao">
        <inputExpression id="InputExpr_tipoLesao" typeRef="string">
          <text>tipoLesao</text>
        </inputExpression>
        <inputValues id="InputValues_tipoLesao">
          <text>"Fasciite_Plantar","Tendinopatia_Aquiles","Entorse_Recorrente","Ruptura_Tendao","Halux_Valgus"</text>
        </inputValues>
      </input>

      <input id="Input_semanasTratamento" label="Semanas de Tratamento">
        <inputExpression id="InputExpr_semanasTratamento" typeRef="number">
          <text>semanasTratamentoConservador</text>
        </inputExpression>
      </input>

      <input id="Input_aofasScore" label="AOFAS Score Documentado">
        <inputExpression id="InputExpr_aofasScore" typeRef="boolean">
          <text>aofasScoreDocumentado</text>
        </inputExpression>
      </input>

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string"/>

      <output id="Output_fundamentacao" label="Fundamentacao" name="fundamentacao" typeRef="string"/>

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- REGRAS DE REPROVACAO -->
      <rule id="Rule_30715406_Reprovado_RupturaTendao">
        <description>Reprovado - Ruptura de tendao requer cirurgia</description>
        <inputEntry id="IE_R1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_2"><text>"Ruptura_Tendao"</text></inputEntry>
        <inputEntry id="IE_R1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R1_4"><text>-</text></inputEntry>
        <outputEntry id="OE_R1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R1_2"><text>"Ruptura de tendao de Aquiles documentada. Tratamento conservador nao recomendado como primeira linha. Indicacao cirurgica para pacientes ativos."</text></outputEntry>
        <outputEntry id="OE_R1_3"><text>"AOFAS 2023 - Achilles Tendon Rupture Surgical Indication"</text></outputEntry>
      </rule>

      <rule id="Rule_30715406_Reprovado_SemScore">
        <description>Reprovado - Escore funcional obrigatorio</description>
        <inputEntry id="IE_R2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_R2_4"><text>false</text></inputEntry>
        <outputEntry id="OE_R2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_R2_2"><text>"AOFAS Score nao documentado. Escore funcional obrigatorio para avaliacao de resposta ao tratamento conservador."</text></outputEntry>
        <outputEntry id="OE_R2_3"><text>"AOFAS 2023 - Functional Assessment Required"</text></outputEntry>
      </rule>

      <!-- REGRAS DE APROVACAO -->
      <rule id="Rule_30715406_Aprovado_FasciitePlantar">
        <description>Aprovado - Fasciite plantar com tratamento adequado</description>
        <inputEntry id="IE_A1_1"><text>"M72.2"</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>"Fasciite_Plantar"</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>&gt;= 8</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Tratamento conservador aprovado para fasciite plantar. 8+ semanas incluindo fisioterapia, palmilhas e alongamento documentadas."</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"AOFAS 2023 - Plantar Fasciitis Conservative Protocol"</text></outputEntry>
      </rule>

      <rule id="Rule_30715406_Aprovado_Tendinopatia">
        <description>Aprovado - Tendinopatia de Aquiles</description>
        <inputEntry id="IE_A2_1"><text>"M76.6"</text></inputEntry>
        <inputEntry id="IE_A2_2"><text>"Tendinopatia_Aquiles"</text></inputEntry>
        <inputEntry id="IE_A2_3"><text>&gt;= 12</text></inputEntry>
        <inputEntry id="IE_A2_4"><text>true</text></inputEntry>
        <outputEntry id="OE_A2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A2_2"><text>"Tratamento conservador aprovado para tendinopatia de Aquiles. 12+ semanas de protocolo excentrico documentado."</text></outputEntry>
        <outputEntry id="OE_A2_3"><text>"AOFAS 2023 - Achilles Tendinopathy Eccentric Protocol"</text></outputEntry>
      </rule>

      <!-- REGRA DE PENDENCIA -->
      <rule id="Rule_30715406_Pendente_TratamentoInsuficiente">
        <description>Pendente - Tratamento insuficiente</description>
        <inputEntry id="IE_P1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_P1_2"><text>"Fasciite_Plantar","Tendinopatia_Aquiles","Entorse_Recorrente"</text></inputEntry>
        <inputEntry id="IE_P1_3"><text>&lt; 8</text></inputEntry>
        <inputEntry id="IE_P1_4"><text>true</text></inputEntry>
        <outputEntry id="OE_P1_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_P1_2"><text>"Periodo de tratamento conservador insuficiente. Continuar protocolo de reabilitacao. Minimo 8 semanas para fasciite, 12 semanas para tendinopatia."</text></outputEntry>
        <outputEntry id="OE_P1_3"><text>"AOFAS 2023 - Conservative Trial Duration"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_30715406">
        <description>Fallback - Requer analise manual</description>
        <inputEntry id="IE_F_1"><text>-</text></inputEntry>
        <inputEntry id="IE_F_2"><text>-</text></inputEntry>
        <inputEntry id="IE_F_3"><text>-</text></inputEntry>
        <inputEntry id="IE_F_4"><text>-</text></inputEntry>
        <outputEntry id="OE_F_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_F_2"><text>"Caso requer analise manual. Verificar: diagnostico CID-10, tipo de lesao, semanas de tratamento, AOFAS Score."</text></outputEntry>
        <outputEntry id="OE_F_3"><text>"Auditoria Medica Especializada - RN 428/2017"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
