<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_TRAUMA_001" name="ORT_TRAUMA_001" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_TRAUMA_001" name="Fratura quadril - timing cirúrgico">
    <decisionTable id="DecisionTable_ORT_TRAUMA_001" hitPolicy="FIRST">
      <input id="Input_tipoFratura" label="Tipo (colo/transtrocanteriana/subtrocanteriana)">
        <inputExpression id="InputExpression_tipoFratura" typeRef="string">
          <text>tipoFratura</text>
        </inputExpression>
      </input>
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <input id="Input_deslocada" label="Fratura Deslocada">
        <inputExpression id="InputExpression_deslocada" typeRef="boolean">
          <text>deslocada</text>
        </inputExpression>
      </input>
      <input id="Input_horasAposFratura" label="Horas Desde Fratura">
        <inputExpression id="InputExpression_horasAposFratura" typeRef="integer">
          <text>horasAposFratura</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_tipoFratura_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_1">
          <text>&gt; 65</text>
        </inputEntry>
        <inputEntry id="InputEntry_deslocada_1">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_horasAposFratura_1">
          <text>&lt; 48</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Fratura quadril idoso - cirurgia em &amp;lt;48h reduz mortalidade"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: fraturas quadril devem ser operadas em 24-48h quando possível"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Pendente_2">
        <inputEntry id="InputEntry_tipoFratura_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_2">
          <text>&gt; 65</text>
        </inputEntry>
        <inputEntry id="InputEntry_deslocada_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_horasAposFratura_2">
          <text>&gt; 72</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Retardo &amp;gt;72h aumenta morbimortalidade - justificar motivo do atraso"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"AO: cada dia de atraso aumenta complicações em 30%"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_tipoFratura_3">
          <text>"colo"</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_3">
          <text>&lt; 65</text>
        </inputEntry>
        <inputEntry id="InputEntry_deslocada_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_horasAposFratura_3">
          <text>&lt; 12</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Fratura colo femoral deslocada jovem - cirurgia urgente &amp;lt;12h"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"AAOS: redução em &amp;lt;12h minimiza necrose avascular"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_tipoFratura_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_deslocada_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_horasAposFratura_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AO Trauma e AAOS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_TRAUMA_001">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
