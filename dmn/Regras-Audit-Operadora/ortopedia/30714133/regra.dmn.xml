<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_DEV_015" name="ORT_DEV_015" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_DEV_015" name="Seleção enxerto LCA">
    <decisionTable id="DecisionTable_ORT_DEV_015" hitPolicy="FIRST">
      <input id="Input_idade" label="Idade">
        <inputExpression id="InputExpression_idade" typeRef="integer">
          <text>idade</text>
        </inputExpression>
      </input>
      <input id="Input_atividadeEsportiva" label="Nível Atividade (baixo/médio/alto)">
        <inputExpression id="InputExpression_atividadeEsportiva" typeRef="string">
          <text>atividadeEsportiva</text>
        </inputExpression>
      </input>
      <input id="Input_cirurgiaPrevia" label="Reconstrução Prévia">
        <inputExpression id="InputExpression_cirurgiaPrevia" typeRef="boolean">
          <text>cirurgiaPrevia</text>
        </inputExpression>
      </input>
      <input id="Input_frouxidaoLigamentar" label="Frouxidão Ligamentar">
        <inputExpression id="InputExpression_frouxidaoLigamentar" typeRef="boolean">
          <text>frouxidaoLigamentar</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_idade_1">
          <text>&lt; 25</text>
        </inputEntry>
        <inputEntry id="InputEntry_atividadeEsportiva_1">
          <text>"alto"</text>
        </inputEntry>
        <inputEntry id="InputEntry_cirurgiaPrevia_1">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_frouxidaoLigamentar_1">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Jovem atleta - patelar ou isquiotibiais são apropriados (decisão individualizada)"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"AAOS: tanto tendão patelar quanto isquiotibiais têm bons resultados em atletas jovens"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_2">
        <inputEntry id="InputEntry_idade_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_atividadeEsportiva_2">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_cirurgiaPrevia_2">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_frouxidaoLigamentar_2">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Revisão - considerar aloenxerto ou enxerto contralateral"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"AAOS: revisões podem requerer aloenxerto para preservar estruturas locais"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_idade_3">
          <text>&gt; 50</text>
        </inputEntry>
        <inputEntry id="InputEntry_atividadeEsportiva_3">
          <text>"baixo"</text>
        </inputEntry>
        <inputEntry id="InputEntry_cirurgiaPrevia_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_frouxidaoLigamentar_3">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Baixa demanda - qualquer tipo de autoenxerto é aceitável"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"AAOS: em baixa demanda, escolha do enxerto baseada em preferência e morbidade doadora"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_idade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_atividadeEsportiva_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_cirurgiaPrevia_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_frouxidaoLigamentar_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes AAOS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_DEV_015">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
