<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:biodi="http://bpmn.io/schema/dmn/biodi/2.0" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" id="Definitions_ORT_SPI_011" name="ORT_SPI_011" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="Decision_ORT_SPI_011" name="Espondilolistese - fusão">
    <decisionTable id="DecisionTable_ORT_SPI_011" hitPolicy="FIRST">
      <input id="Input_grauMeyerding" label="Grau Meyerding (I-V)">
        <inputExpression id="InputExpression_grauMeyerding" typeRef="integer">
          <text>grauMeyerding</text>
        </inputExpression>
      </input>
      <input id="Input_instabilidade" label="Instabilidade Dinâmica">
        <inputExpression id="InputExpression_instabilidade" typeRef="boolean">
          <text>instabilidade</text>
        </inputExpression>
      </input>
      <input id="Input_radiculopatia" label="Radiculopatia">
        <inputExpression id="InputExpression_radiculopatia" typeRef="boolean">
          <text>radiculopatia</text>
        </inputExpression>
      </input>
      <input id="Input_conservadorFalhou" label="Falha Conservador">
        <inputExpression id="InputExpression_conservadorFalhou" typeRef="boolean">
          <text>conservadorFalhou</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <rule id="DecisionRule_Aprovado_1">
        <inputEntry id="InputEntry_grauMeyerding_1">
          <text>&gt;= 3</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidade_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_radiculopatia_1">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_1">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_1">
          <text>"Espondilolistese grau III-V - fusão indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_1">
          <text>"NASS: alto grau de listese tem indicação cirúrgica"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Reprovado_2">
        <inputEntry id="InputEntry_grauMeyerding_2">
          <text>1</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidade_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_radiculopatia_2">
          <text>false</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_2">
          <text>false</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_2">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_2">
          <text>"Espondilolistese grau I assintomática - tratamento conservador"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_2">
          <text>"NASS: grau I sem sintomas não requer cirurgia"</text>
        </outputEntry>
      </rule>
      <rule id="DecisionRule_Aprovado_3">
        <inputEntry id="InputEntry_grauMeyerding_3">
          <text>[1..2]</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidade_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_radiculopatia_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_3">
          <text>true</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_3">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_3">
          <text>"Instabilidade dinâmica com radiculopatia - fusão indicada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_3">
          <text>"NASS: instabilidade &amp;gt;3mm em flexo-extensão com sintomas indica fusão"</text>
        </outputEntry>
      </rule>
      <!-- Regra de fallback -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="InputEntry_grauMeyerding_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_instabilidade_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_radiculopatia_fallback">
          <text>-</text>
        </inputEntry>
        <inputEntry id="InputEntry_conservadorFalhou_fallback">
          <text>-</text>
        </inputEntry>
        <outputEntry id="OutputEntry_resultado_fallback">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_observacao_fallback">
          <text>"Caso não enquadrado nas regras padrão - requer análise individualizada"</text>
        </outputEntry>
        <outputEntry id="OutputEntry_fundamentacao_fallback">
          <text>"Avaliação caso a caso conforme diretrizes NASS"</text>
        </outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_ORT_SPI_011">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
