<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/DMN/20151101/dmn.xsd"
  id="Definitions_20104081"
  name="Curativos em geral com anestesia exceto queimados"
  namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS: 20104081
    Procedimento: Curativos em geral com anestesia exceto queimados
    Versão: 3.0.0 (2026-02-07)

    Indicações Clínicas (DUT/ANS):
    - Feridas complexas que requerem anestesia para desbridamento
    - Úlceras de pressão grau III-IV
    - Feridas traumáticas extensas
    - Queimaduras excluídas (código específico)

    Contraindicações:
    - Queimaduras (usar código 30101220)
    - Curativos simples sem anestesia
    - Procedimento já incluso em cirurgia

    Referências:
    - Sociedade Brasileira de Cirurgia Plástica - Protocolo Curativos 2025
    - ANS Resolução Normativa 465/2021
    - Rol de Procedimentos ANS 2024
  -->

  <decision id="Decision_20104081" name="Decisão de Autorização - Curativo com Anestesia">
    <decisionTable id="DecisionTable_20104081" hitPolicy="FIRST">

      <!-- INPUTS -->
      <input id="Input_1" label="Diagnóstico Principal (CID-10)">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>diagnosticoPrincipal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Tipo de Ferida">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoFerida</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Área da Lesão (cm²)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>areaLesao</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Necessita Desbridamento">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>necessitaDesbridamento</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Tipo de Anestesia">
        <inputExpression id="InputExpression_5" typeRef="string">
          <text>tipoAnestesia</text>
        </inputExpression>
      </input>

      <!-- OUTPUTS -->
      <output id="Output_1" label="Resultado" typeRef="string" name="resultado">
        <outputValues>
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_2" label="Observação" typeRef="string" name="observacao" />

      <output id="Output_3" label="Fundamentação Legal" typeRef="string" name="fundamentacao" />
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_4" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_5" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- CONTRAINDICATIONS -->
      <rule id="Rule_Contraind_20104081_1">
        <description>Reprovação: Queimaduras devem usar código específico</description>
        <inputEntry id="IE_C1_1"><text>matches(diagnosticoPrincipal, "T20|T21|T22|T23|T24|T25|T29|T30|T31")</text></inputEntry>
        <inputEntry id="IE_C1_2"><text>"Queimadura"</text></inputEntry>
        <inputEntry id="IE_C1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_C1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_C1_5"><text>-</text></inputEntry>
        <outputEntry id="OE_C1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_C1_2"><text>"Curativos de queimaduras devem utilizar código TUSS 30101220 específico"</text></outputEntry>
        <outputEntry id="OE_C1_3"><text>"TUSS: código 20104081 exclui queimaduras explicitamente"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_20104081_1_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_20104081_1_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_20104081_2">
        <description>Reprovação: Feridas pequenas sem necessidade de anestesia</description>
        <inputEntry id="IE_C2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_C2_2"><text>"Ferida superficial","Abrasão","Escoriação"</text></inputEntry>
        <inputEntry id="IE_C2_3"><text>&lt; 10</text></inputEntry>
        <inputEntry id="IE_C2_4"><text>false</text></inputEntry>
        <inputEntry id="IE_C2_5"><text>-</text></inputEntry>
        <outputEntry id="OE_C2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_C2_2"><text>"Ferida de pequena extensão sem necessidade de desbridamento - utilizar código de curativo simples sem anestesia"</text></outputEntry>
        <outputEntry id="OE_C2_3"><text>"ANS: procedimentos devem ser proporcionais à complexidade clínica"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_20104081_2_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_20104081_2_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APPROVALS -->
      <rule id="Rule_Approve_20104081_1">
        <description>Aprovação: Úlceras de pressão grau III-IV</description>
        <inputEntry id="IE_A1_1"><text>matches(diagnosticoPrincipal, "L89")</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>"Úlcera de pressão grau III","Úlcera de pressão grau IV"</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>&gt;= 25</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>true</text></inputEntry>
        <inputEntry id="IE_A1_5"><text>"Local","Bloqueio","Sedação"</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Úlcera de pressão grau III/IV com desbridamento - curativo com anestesia autorizado"</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"ANS Rol 2024: tratamento de úlceras complexas. Desbridamento necessário para cicatrização"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_1_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_20104081_2">
        <description>Aprovação: Feridas traumáticas extensas</description>
        <inputEntry id="IE_A2_1"><text>matches(diagnosticoPrincipal, "S01|S11|S21|S31|S41|S51|S61|S71|S81|S91|T01")</text></inputEntry>
        <inputEntry id="IE_A2_2"><text>"Ferida traumática","Laceração profunda","Ferimento complexo"</text></inputEntry>
        <inputEntry id="IE_A2_3"><text>&gt;= 50</text></inputEntry>
        <inputEntry id="IE_A2_4"><text>true</text></inputEntry>
        <inputEntry id="IE_A2_5"><text>"Local","Bloqueio","Sedação"</text></inputEntry>
        <outputEntry id="OE_A2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A2_2"><text>"Ferida traumática extensa requerendo desbridamento sob anestesia - procedimento autorizado"</text></outputEntry>
        <outputEntry id="OE_A2_3"><text>"ANS: cobertura obrigatória para tratamento de trauma. SBD: desbridamento reduz risco infeccioso"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_2_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_20104081_3">
        <description>Aprovação: Úlceras vasculares infectadas</description>
        <inputEntry id="IE_A3_1"><text>matches(diagnosticoPrincipal, "I83|I70|E11.5|E10.5")</text></inputEntry>
        <inputEntry id="IE_A3_2"><text>"Úlcera venosa","Úlcera arterial","Úlcera diabética"</text></inputEntry>
        <inputEntry id="IE_A3_3"><text>&gt;= 20</text></inputEntry>
        <inputEntry id="IE_A3_4"><text>true</text></inputEntry>
        <inputEntry id="IE_A3_5"><text>"Local","Bloqueio"</text></inputEntry>
        <outputEntry id="OE_A3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A3_2"><text>"Úlcera vascular com necessidade de desbridamento anestésico - procedimento autorizado"</text></outputEntry>
        <outputEntry id="OE_A3_3"><text>"SBD Diretriz: desbridamento de feridas vasculares melhora cicatrização e previne amputação"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_3_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_3_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_20104081_4">
        <description>Aprovação: Feridas infectadas com necrose</description>
        <inputEntry id="IE_A4_1"><text>matches(diagnosticoPrincipal, "L08|L02|L03|M72")</text></inputEntry>
        <inputEntry id="IE_A4_2"><text>"Celulite","Fasceíte necrosante","Gangrena","Abscesso"</text></inputEntry>
        <inputEntry id="IE_A4_3"><text>&gt;= 30</text></inputEntry>
        <inputEntry id="IE_A4_4"><text>true</text></inputEntry>
        <inputEntry id="IE_A4_5"><text>"Local","Bloqueio","Sedação"</text></inputEntry>
        <outputEntry id="OE_A4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A4_2"><text>"Infecção de partes moles com tecido necrótico - desbridamento sob anestesia urgente autorizado"</text></outputEntry>
        <outputEntry id="OE_A4_3"><text>"ANS: tratamento de infecções graves. Desbridamento é medida salvadora de membro"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_4_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_4_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_20104081_5">
        <description>Aprovação: Feridas pós-operatórias com deiscência</description>
        <inputEntry id="IE_A5_1"><text>matches(diagnosticoPrincipal, "T81.3")</text></inputEntry>
        <inputEntry id="IE_A5_2"><text>"Deiscência de ferida operatória"</text></inputEntry>
        <inputEntry id="IE_A5_3"><text>&gt;= 15</text></inputEntry>
        <inputEntry id="IE_A5_4"><text>true</text></inputEntry>
        <inputEntry id="IE_A5_5"><text>"Local","Bloqueio"</text></inputEntry>
        <outputEntry id="OE_A5_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A5_2"><text>"Deiscência de ferida operatória requerendo limpeza e desbridamento anestésico - autorizado"</text></outputEntry>
        <outputEntry id="OE_A5_3"><text>"ANS Rol 2024: tratamento de complicações pós-operatórias"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_5_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_20104081_5_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_20104081">
        <description>Regra padrão: casos não especificados requerem análise de auditoria</description>
        <inputEntry id="IE_FB_1"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_2"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_3"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_4"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_5"><text>-</text></inputEntry>
        <outputEntry id="OE_FB_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_FB_2"><text>"Caso não contemplado pelas regras automáticas - encaminhado para análise de auditoria médica com documentação completa"</text></outputEntry>
        <outputEntry id="OE_FB_3"><text>"ANS RN 465/2021 Art. 18: análise técnica em 48h úteis"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_20104081_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_20104081_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
