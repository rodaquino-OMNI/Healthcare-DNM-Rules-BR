<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/DMN/20151101/dmn.xsd"
  id="Definitions_30101077"
  name="Biópsia de pele, tumores superficiais, tecido celular subcutâneo, linfonodo superficial"
  namespace="http://camunda.org/schema/1.0/dmn">
  <!--
    TUSS: 30101077
    Procedimento: Biópsia de pele, tumores superficiais, tecido celular subcutâneo, linfonodo superficial
    Versão: 3.0.0 (2026-02-07)

    Indicações Clínicas (DUT/ANS):
    - Investigação diagnóstica de lesões cutâneas suspeitas (melanoma, carcinomas)
    - Avaliação histopatológica de tumores superficiais
    - Diagnóstico diferencial de dermatoses
    - Estadiamento de linfadenopatias superficiais

    Contraindicações:
    - Diagnóstico clínico já estabelecido sem necessidade histológica
    - Lesões com indicação de excisão completa primária
    - Biópsias de fragmentos obtidos em outro procedimento

    Referências:
    - Sociedade Brasileira de Dermatologia (SBD) - Diretrizes 2025
    - ANS Resolução Normativa 465/2021
    - Rol de Procedimentos ANS 2024
  -->

  <decision id="Decision_30101077" name="Decisão de Autorização - Biópsia de Pele">
    <decisionTable id="DecisionTable_30101077" hitPolicy="FIRST">

      <!-- INPUTS -->
      <input id="Input_1" label="Diagnóstico Principal (CID-10)">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>diagnosticoPrincipal</text>
        </inputExpression>
      </input>

      <input id="Input_2" label="Tipo de Lesão">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>tipoLesao</text>
        </inputExpression>
      </input>

      <input id="Input_3" label="Tamanho da Lesão (cm)">
        <inputExpression id="InputExpression_3" typeRef="number">
          <text>tamanhoLesao</text>
        </inputExpression>
      </input>

      <input id="Input_4" label="Dermatoscopia Prévia Realizada">
        <inputExpression id="InputExpression_4" typeRef="boolean">
          <text>dermatoscopiaRealizada</text>
        </inputExpression>
      </input>

      <input id="Input_5" label="Tipo de Biópsia Solicitada">
        <inputExpression id="InputExpression_5" typeRef="string">
          <text>tipoBiopsia</text>
        </inputExpression>
      </input>

      <!-- OUTPUTS -->
      <output id="Output_1" label="Resultado" typeRef="string" name="resultado">
        <outputValues>
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_2" label="Observação" typeRef="string" name="observacao" />

      <output id="Output_3" label="Fundamentação Legal" typeRef="string" name="fundamentacao" />
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_4" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_5" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- CONTRAINDICATIONS -->
      <rule id="Rule_Contraind_30101077_1">
        <description>Reprovação: Biópsia excisional deve ser codificada como excisão de lesão</description>
        <inputEntry id="IE_C1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_C1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_C1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_C1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_C1_5"><text>"Excisional"</text></inputEntry>
        <outputEntry id="OE_C1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_C1_2"><text>"Biópsia excisional não autorizada neste código - utilize código de excisão cirúrgica apropriado"</text></outputEntry>
        <outputEntry id="OE_C1_3"><text>"TUSS: procedimento específico para biópsias incisionais/punch. ANS RN 465/2021 Art. 17"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_30101077_1_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_30101077_1_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_30101077_2">
        <description>Reprovação: Lesões muito pequenas sem suspeita grave podem ter seguimento clínico</description>
        <inputEntry id="IE_C2_1"><text>not(matches(diagnosticoPrincipal, "C43|C44|D03|D04"))</text></inputEntry>
        <inputEntry id="IE_C2_2"><text>"Nevus benigno","Ceratose seborreica","Lesão inespecífica"</text></inputEntry>
        <inputEntry id="IE_C2_3"><text>&lt; 0.3</text></inputEntry>
        <inputEntry id="IE_C2_4"><text>false</text></inputEntry>
        <inputEntry id="IE_C2_5"><text>-</text></inputEntry>
        <outputEntry id="OE_C2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_C2_2"><text>"Lesão de baixo risco sem dermatoscopia prévia - recomenda-se avaliação clínica inicial com dermatoscopia"</text></outputEntry>
        <outputEntry id="OE_C2_3"><text>"SBD Diretriz: investigação diagnóstica escalonada. Dermatoscopia como método não invasivo inicial"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_30101077_2_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Rule_Contraind_30101077_2_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APPROVALS - CANCER SUSPECTS -->
      <rule id="Rule_Approve_30101077_1">
        <description>Aprovação: Suspeita de melanoma (CID C43, D03)</description>
        <inputEntry id="IE_A1_1"><text>matches(diagnosticoPrincipal, "C43|D03")</text></inputEntry>
        <inputEntry id="IE_A1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_A1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_A1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_A1_5"><text>"Incisional","Punch","Shave"</text></inputEntry>
        <outputEntry id="OE_A1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A1_2"><text>"Suspeita de melanoma - biópsia autorizada para diagnóstico histopatológico urgente"</text></outputEntry>
        <outputEntry id="OE_A1_3"><text>"ANS Rol 2024: cobertura obrigatória. SBD: diagnóstico precoce de melanoma prioridade nacional"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_1_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_1_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_30101077_2">
        <description>Aprovação: Suspeita de carcinoma basocelular ou espinocelular (CID C44, D04)</description>
        <inputEntry id="IE_A2_1"><text>matches(diagnosticoPrincipal, "C44|D04")</text></inputEntry>
        <inputEntry id="IE_A2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_A2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_A2_4"><text>-</text></inputEntry>
        <inputEntry id="IE_A2_5"><text>"Incisional","Punch","Shave"</text></inputEntry>
        <outputEntry id="OE_A2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A2_2"><text>"Suspeita de carcinoma cutâneo - biópsia autorizada para confirmação diagnóstica e planejamento terapêutico"</text></outputEntry>
        <outputEntry id="OE_A2_3"><text>"ANS RN 465/2021: cobertura obrigatória para procedimentos diagnósticos oncológicos"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_2_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_2_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_30101077_3">
        <description>Aprovação: Lesões com dermatoscopia sugestiva de malignidade</description>
        <inputEntry id="IE_A3_1"><text>matches(diagnosticoPrincipal, "L57|L82|D22|D23")</text></inputEntry>
        <inputEntry id="IE_A3_2"><text>"Lesão pigmentada atípica","Ceratose actínica","Nevus displásico"</text></inputEntry>
        <inputEntry id="IE_A3_3"><text>&gt;= 0.5</text></inputEntry>
        <inputEntry id="IE_A3_4"><text>true</text></inputEntry>
        <inputEntry id="IE_A3_5"><text>"Incisional","Punch"</text></inputEntry>
        <outputEntry id="OE_A3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A3_2"><text>"Lesão com critérios dermatoscópicos sugestivos de atipia - biópsia autorizada para diagnóstico definitivo"</text></outputEntry>
        <outputEntry id="OE_A3_3"><text>"SBD Consenso: dermatoscopia com critérios ABCDE alterados indica investigação histológica"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_3_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_3_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_30101077_4">
        <description>Aprovação: Tumores superficiais de tecido celular subcutâneo</description>
        <inputEntry id="IE_A4_1"><text>matches(diagnosticoPrincipal, "D17|D21|D23|C49")</text></inputEntry>
        <inputEntry id="IE_A4_2"><text>"Lipoma","Fibroma","Tumor de partes moles"</text></inputEntry>
        <inputEntry id="IE_A4_3"><text>&gt; 1.0</text></inputEntry>
        <inputEntry id="IE_A4_4"><text>-</text></inputEntry>
        <inputEntry id="IE_A4_5"><text>"Incisional","Core biopsy"</text></inputEntry>
        <outputEntry id="OE_A4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A4_2"><text>"Tumor de partes moles com indicação de investigação histológica antes de ressecção definitiva"</text></outputEntry>
        <outputEntry id="OE_A4_3"><text>"ANS Rol 2024: biópsia de tecidos subcutâneos coberta. Estadiamento pré-operatório necessário"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_4_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_4_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_30101077_5">
        <description>Aprovação: Linfonodo superficial com suspeita de linfoma ou metástase</description>
        <inputEntry id="IE_A5_1"><text>matches(diagnosticoPrincipal, "C81|C82|C83|C84|C85|R59|C77")</text></inputEntry>
        <inputEntry id="IE_A5_2"><text>"Linfadenopatia","Adenomegalia"</text></inputEntry>
        <inputEntry id="IE_A5_3"><text>&gt; 1.5</text></inputEntry>
        <inputEntry id="IE_A5_4"><text>-</text></inputEntry>
        <inputEntry id="IE_A5_5"><text>"Incisional","Core biopsy","PAAF com biópsia"</text></inputEntry>
        <outputEntry id="OE_A5_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A5_2"><text>"Linfadenopatia com indicação de biópsia para diagnóstico de linfoma ou metástase linfonodal"</text></outputEntry>
        <outputEntry id="OE_A5_3"><text>"ANS RN 465/2021: investigação diagnóstica oncológica prioritária"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_5_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_5_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Approve_30101077_6">
        <description>Aprovação: Dermatoses com necessidade de diagnóstico histopatológico</description>
        <inputEntry id="IE_A6_1"><text>matches(diagnosticoPrincipal, "L10|L12|L13|L40|L43|L51|L93|L94")</text></inputEntry>
        <inputEntry id="IE_A6_2"><text>"Dermatose bolhosa","Líquen plano","Lúpus cutâneo","Psoríase atípica"</text></inputEntry>
        <inputEntry id="IE_A6_3"><text>-</text></inputEntry>
        <inputEntry id="IE_A6_4"><text>-</text></inputEntry>
        <inputEntry id="IE_A6_5"><text>"Punch","Incisional"</text></inputEntry>
        <outputEntry id="OE_A6_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_A6_2"><text>"Dermatose de diagnóstico complexo - biópsia necessária para confirmação e escolha terapêutica"</text></outputEntry>
        <outputEntry id="OE_A6_3"><text>"SBD Diretriz: diagnóstico histopatológico obrigatório em dermatoses bolhosas e colagenoses"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_6_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Rule_Approve_30101077_6_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_30101077">
        <description>Regra padrão: casos não especificados requerem análise de auditoria</description>
        <inputEntry id="IE_FB_1"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_2"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_3"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_4"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_5"><text>-</text></inputEntry>
        <outputEntry id="OE_FB_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_FB_2"><text>"Caso não contemplado pelas regras automáticas - encaminhado para análise de auditoria médica com documentação completa"</text></outputEntry>
        <outputEntry id="OE_FB_3"><text>"ANS RN 465/2021 Art. 18: análise técnica em 48h úteis"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_30101077_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_Rule_Fallback_30101077_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
