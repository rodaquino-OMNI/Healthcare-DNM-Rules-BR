<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_40101020"
             name="Holter 24h"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: 40101020
    Procedimento: Holter 24h (Monitorizacao Eletrocardiografica Ambulatorial)
    Versao: 1.0.0-LEAN-TIER2
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (DUT/ANS + ACC/AHA 2024):
    - Sincope inexplicada
    - Palpitacoes frequentes (diarias/quase diarias)
    - Avaliacao de resposta a antiarritmico
    - Estratificacao de risco pos-IAM
    - Avaliacao de intervalo QT

    INDICACOES MENOS APROPRIADAS:
    - Palpitacoes esporadicas (monitor de eventos preferido)
    - Sincope rara (loop recorder implantavel preferido)
    - Screening em assintomaticos

    REFERENCIAS TECNICAS:
    ACC/AHA Ambulatory ECG 2024, HRS 2024, SBC 2023

    ALERTAS DE DESPERDICIO (LEAN TIER-2):
    - DUP: Duplicidade - Holter repetido em menos de 6 meses sem mudanca clinica
    - FREQ: Frequencia excessiva - Mais de 2 Holter/ano sem indicacao
    - ESC: Escalonamento inadequado - Holter sem ECG previo ou para sintomas esporadicos
    - DOC: Documentacao insuficiente - Falta justificativa clinica
    - PROT: Protocolo nao seguido - Desvio de diretriz clinica

    ===============================================================================
  -->

  <decision id="Decision_40101020" name="Regra Clinica - Holter 24h">
    <decisionTable id="DecisionTable_40101020" hitPolicy="FIRST">

      <!-- ========== INPUTS (6 - Padrao LEAN TIER-2) ========== -->

      <input id="Input_indicacaoClinica" label="Indicacao Clinica" camunda:inputVariable="indicacaoClinica">
        <inputExpression id="InputExpression_indicacaoClinica" typeRef="string">
          <text>indicacaoClinica</text>
        </inputExpression>
        <inputValues id="InputValues_indicacaoClinica">
          <text>"SincopeInexplicada","PalpitacoesFrequentes","PalpitacoesEsporadicas","AvaliacaoAntiarritmico","EstratificacaoRisco","AvaliacaoQT","ScreeningAssintomatico","FollowUpRotina"</text>
        </inputValues>
      </input>

      <input id="Input_frequenciaSintomas" label="Frequencia dos Sintomas" camunda:inputVariable="frequenciaSintomas">
        <inputExpression id="InputExpression_frequenciaSintomas" typeRef="string">
          <text>frequenciaSintomas</text>
        </inputExpression>
        <inputValues id="InputValues_frequenciaSintomas">
          <text>"DiarioOuQuaseDiario","Semanal","Mensal","Esporadico","Assintomatico"</text>
        </inputValues>
      </input>

      <input id="Input_ecgPrevio" label="ECG Previo Realizado" camunda:inputVariable="ecgPrevio">
        <inputExpression id="InputExpression_ecgPrevio" typeRef="boolean">
          <text>ecgPrevio</text>
        </inputExpression>
      </input>

      <input id="Input_cardiopatiaEstrutural" label="Cardiopatia Estrutural Conhecida" camunda:inputVariable="cardiopatiaEstrutural">
        <inputExpression id="InputExpression_cardiopatiaEstrutural" typeRef="boolean">
          <text>cardiopatiaEstrutural</text>
        </inputExpression>
      </input>

      <input id="Input_mudancaTratamento" label="Mudanca de Tratamento Antiarritmico" camunda:inputVariable="mudancaTratamento">
        <inputExpression id="InputExpression_mudancaTratamento" typeRef="boolean">
          <text>mudancaTratamento</text>
        </inputExpression>
      </input>

      <input id="Input_ultimoProcedimentoDias" label="Dias desde ultimo Holter" camunda:inputVariable="ultimoProcedimentoDias">
        <inputExpression id="InputExpression_ultimoProcedimentoDias" typeRef="integer">
          <text>ultimoProcedimentoDias</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (5 - Padrao LEAN TIER-2) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES - REPROVACOES (Waste Detection First) ========== -->

      <!-- RULE 1: Screening em assintomaticos -->
      <rule id="Rule_Reprovado_Screening">
        <description>Reprovado: Screening em assintomaticos - nao indicado</description>
        <inputEntry id="InputEntry_R1_1"><text>"ScreeningAssintomatico"</text></inputEntry>
        <inputEntry id="InputEntry_R1_2"><text>"Assintomatico"</text></inputEntry>
        <inputEntry id="InputEntry_R1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_R1_5"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_R1_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R1_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R1_observacao"><text>"Holter nao indicado para screening em assintomaticos sem cardiopatia estrutural"</text></outputEntry>
        <outputEntry id="OutputEntry_R1_fundamentacao"><text>"ACC/AHA 2024: Monitorizacao ambulatorial nao indicada para rastreamento em assintomaticos de baixo risco"</text></outputEntry>
        <outputEntry id="OutputEntry_R1_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_R1_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- RULE 2: DUP - Holter recente sem mudanca clinica -->
      <rule id="Rule_Reprovado_DUP_Recente">
        <description>Reprovado: Holter duplicado em menos de 180 dias sem mudanca</description>
        <inputEntry id="InputEntry_R2_1"><text>"FollowUpRotina"</text></inputEntry>
        <inputEntry id="InputEntry_R2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R2_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R2_5"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_R2_6"><text>&lt; 180</text></inputEntry>
        <outputEntry id="OutputEntry_R2_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R2_observacao"><text>"Holter realizado ha menos de 6 meses sem mudanca de tratamento ou sintomas"</text></outputEntry>
        <outputEntry id="OutputEntry_R2_fundamentacao"><text>"ACC/AHA 2024: Repeticao de Holter sem mudanca clinica ou terapeutica nao e apropriada"</text></outputEntry>
        <outputEntry id="OutputEntry_R2_alertasDesperdicio"><text>"DUP"</text></outputEntry>
        <outputEntry id="OutputEntry_R2_acaoRecomendada"><text>"AGUARDAR_PRAZO"</text></outputEntry>
      </rule>

      <!-- RULE 3: ESC - Palpitacoes esporadicas sem ECG -->
      <rule id="Rule_Pendente_ESC_SemECG">
        <description>Pendente: ECG nao documentado - step therapy</description>
        <inputEntry id="InputEntry_R3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R3_3"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_R3_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R3_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R3_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R3_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_R3_observacao"><text>"ECG de repouso deve ser realizado antes do Holter - step therapy obrigatorio"</text></outputEntry>
        <outputEntry id="OutputEntry_R3_fundamentacao"><text>"ACC/AHA 2024: ECG basal e primeira linha antes de monitorizacao prolongada"</text></outputEntry>
        <outputEntry id="OutputEntry_R3_alertasDesperdicio"><text>"ESC"</text></outputEntry>
        <outputEntry id="OutputEntry_R3_acaoRecomendada"><text>"SUGERIR_ALTERNATIVA"</text></outputEntry>
      </rule>

      <!-- RULE 4: ESC - Palpitacoes esporadicas -->
      <rule id="Rule_Pendente_PalpitacoesEsporadicas">
        <description>Pendente: Palpitacoes esporadicas - monitor de eventos preferido</description>
        <inputEntry id="InputEntry_R4_1"><text>"PalpitacoesEsporadicas"</text></inputEntry>
        <inputEntry id="InputEntry_R4_2"><text>"Semanal","Mensal","Esporadico"</text></inputEntry>
        <inputEntry id="InputEntry_R4_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R4_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_R4_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R4_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R4_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_R4_observacao"><text>"Palpitacoes esporadicas - monitor de eventos por 7-14 dias e mais efetivo que Holter 24h"</text></outputEntry>
        <outputEntry id="OutputEntry_R4_fundamentacao"><text>"ACC/AHA 2024: Para sintomas menos frequentes que diarios, monitor de eventos tem maior yield diagnostico"</text></outputEntry>
        <outputEntry id="OutputEntry_R4_alertasDesperdicio"><text>"ESC"</text></outputEntry>
        <outputEntry id="OutputEntry_R4_acaoRecomendada"><text>"SUGERIR_ALTERNATIVA"</text></outputEntry>
      </rule>

      <!-- ========== RULES - APROVACOES ========== -->

      <!-- RULE 5: Aprovado - Sincope de alto risco -->
      <rule id="Rule_Aprovado_SincopeAltoRisco">
        <description>Aprovado: Sincope de alto risco com cardiopatia</description>
        <inputEntry id="InputEntry_R5_1"><text>"SincopeInexplicada"</text></inputEntry>
        <inputEntry id="InputEntry_R5_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R5_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R5_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R5_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R5_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R5_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R5_observacao"><text>"Sincope de alto risco com cardiopatia estrutural - Holter urgente indicado"</text></outputEntry>
        <outputEntry id="OutputEntry_R5_fundamentacao"><text>"ESC Syncope 2024, ACC/AHA 2024: Monitorizacao urgente em sincope com cardiopatia estrutural"</text></outputEntry>
        <outputEntry id="OutputEntry_R5_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_R5_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- RULE 6: Aprovado - Palpitacoes frequentes -->
      <rule id="Rule_Aprovado_PalpitacoesFrequentes">
        <description>Aprovado: Palpitacoes diarias ou quase diarias</description>
        <inputEntry id="InputEntry_R6_1"><text>"PalpitacoesFrequentes"</text></inputEntry>
        <inputEntry id="InputEntry_R6_2"><text>"DiarioOuQuaseDiario"</text></inputEntry>
        <inputEntry id="InputEntry_R6_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R6_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R6_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R6_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R6_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R6_observacao"><text>"Palpitacoes frequentes (diarias) - Holter 24h indicado como exame de escolha"</text></outputEntry>
        <outputEntry id="OutputEntry_R6_fundamentacao"><text>"ACC/AHA 2024: Holter 24h apropriado quando sintomas diarios ou quase diarios"</text></outputEntry>
        <outputEntry id="OutputEntry_R6_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_R6_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- RULE 7: Aprovado - Avaliacao antiarritmico -->
      <rule id="Rule_Aprovado_AvaliacaoAntiarritmico">
        <description>Aprovado: Avaliacao de resposta a antiarritmico</description>
        <inputEntry id="InputEntry_R7_1"><text>"AvaliacaoAntiarritmico"</text></inputEntry>
        <inputEntry id="InputEntry_R7_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R7_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R7_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R7_5"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R7_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R7_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R7_observacao"><text>"Mudanca de tratamento antiarritmico - Holter para avaliacao de resposta"</text></outputEntry>
        <outputEntry id="OutputEntry_R7_fundamentacao"><text>"ACC/AHA 2024: Holter indicado para monitorar resposta a antiarritmicos"</text></outputEntry>
        <outputEntry id="OutputEntry_R7_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_R7_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- RULE 8: Aprovado - Avaliacao QT -->
      <rule id="Rule_Aprovado_AvaliacaoQT">
        <description>Aprovado: Avaliacao de intervalo QT</description>
        <inputEntry id="InputEntry_R8_1"><text>"AvaliacaoQT"</text></inputEntry>
        <inputEntry id="InputEntry_R8_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R8_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R8_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R8_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R8_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R8_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R8_observacao"><text>"Avaliacao de intervalo QT - Holter indicado para QTc variavel"</text></outputEntry>
        <outputEntry id="OutputEntry_R8_fundamentacao"><text>"HRS 2024: Holter util para avaliacao de QTc variavel ao longo do dia"</text></outputEntry>
        <outputEntry id="OutputEntry_R8_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_R8_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- RULE 9: Aprovado - Estratificacao risco pos-IAM -->
      <rule id="Rule_Aprovado_EstratificacaoRisco">
        <description>Aprovado: Estratificacao de risco pos-IAM</description>
        <inputEntry id="InputEntry_R9_1"><text>"EstratificacaoRisco"</text></inputEntry>
        <inputEntry id="InputEntry_R9_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R9_3"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R9_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_R9_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R9_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_R9_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R9_observacao"><text>"Estratificacao de risco pos-IAM com cardiopatia - Holter indicado"</text></outputEntry>
        <outputEntry id="OutputEntry_R9_fundamentacao"><text>"ACC/AHA 2024: Holter indicado para estratificacao arritmias ventriculares pos-IAM"</text></outputEntry>
        <outputEntry id="OutputEntry_R9_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_R9_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ========== FALLBACK RULE ========== -->

      <rule id="Rule_Fallback_40101020">
        <description>Regra padrao - analise clinica adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_6"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Caso requer analise clinica adicional - criterios nao totalmente atendidos"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"Avaliacao individualizada necessaria conforme diretrizes ACC/AHA 2024"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
