<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:modeler="http://camunda.org/schema/modeler/1.0" id="Definitions_HCLV003" name="DRD" namespace="http://camunda.org/schema/1.0/dmn" exporter="Camunda Modeler" exporterVersion="5.0.0" modeler:executionPlatform="Camunda Cloud" modeler:executionPlatformVersion="8.0.0">
  <decision id="Decision_HCLV003" name="HCLV-003: Justificativa para Medicamento de Marca">
    <decisionTable id="DecisionTable_HCLV003" hitPolicy="FIRST">
      <input id="Input_medicamentoMarca" label="Medicamento de Marca Solicitado">
        <inputExpression id="InputExpression_medicamentoMarca" typeRef="string">
          <text>medicamentoMarca</text>
        </inputExpression>
      </input>
      <input id="Input_justificativaApresentada" label="Justificativa Médica Apresentada">
        <inputExpression id="InputExpression_justificativaApresentada" typeRef="boolean">
          <text>justificativaApresentada</text>
        </inputExpression>
      </input>
      <input id="Input_diferencaCusto" label="Diferença de Custo (%)">
        <inputExpression id="InputExpression_diferencaCusto" typeRef="number">
          <text>diferencaCusto</text>
        </inputExpression>
      </input>
      <input id="Input_genericoOuSimilar" label="Genérico/Similar Testado Previamente">
        <inputExpression id="InputExpression_genericoOuSimilar" typeRef="boolean">
          <text>genericoOuSimilarTestado</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="UnaryTests_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <rule id="DecisionRule_R001">
        <inputEntry id="UnaryTests_R001_marca"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_R001_justificativa"><text>false</text></inputEntry>
        <inputEntry id="UnaryTests_R001_custo"><text>&gt; 30</text></inputEntry>
        <inputEntry id="UnaryTests_R001_testado"><text>false</text></inputEntry>
        <outputEntry id="LiteralExpression_R001_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="LiteralExpression_R001_observacao"><text>"Medicamento de marca >30% mais caro sem justificativa ou tentativa prévia com genérico"</text></outputEntry>
        <outputEntry id="LiteralExpression_R001_fundamentacao"><text>"ANS: Genéricos/similares devem ser primeira escolha. Marca requer justificativa técnica quando custo >30% superior"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R001_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R001_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="DecisionRule_R002">
        <inputEntry id="UnaryTests_R002_marca"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_R002_justificativa"><text>true</text></inputEntry>
        <inputEntry id="UnaryTests_R002_custo"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_R002_testado"><text>true</text></inputEntry>
        <outputEntry id="LiteralExpression_R002_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="LiteralExpression_R002_observacao"><text>"Justificativa apresentada com falha documentada com genérico/similar"</text></outputEntry>
        <outputEntry id="LiteralExpression_R002_fundamentacao"><text>"Falha terapêutica ou intolerância a genérico/similar documentada justifica uso de marca"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R002_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R002_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="DecisionRule_R003">
        <inputEntry id="UnaryTests_R003_marca"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_R003_justificativa"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_R003_custo"><text>&lt;= 20</text></inputEntry>
        <inputEntry id="UnaryTests_R003_testado"><text>-</text></inputEntry>
        <outputEntry id="LiteralExpression_R003_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="LiteralExpression_R003_observacao"><text>"Diferença de custo ≤20%: impacto financeiro baixo, aprovação liberada"</text></outputEntry>
        <outputEntry id="LiteralExpression_R003_fundamentacao"><text>"Diferenças de custo mínimas (<20%) não justificam recusa, especialmente se preferência médica fundamentada"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R003_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R003_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="DecisionRule_R004">
        <inputEntry id="UnaryTests_R004_marca"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_R004_justificativa"><text>false</text></inputEntry>
        <inputEntry id="UnaryTests_R004_custo"><text>[20..50]</text></inputEntry>
        <inputEntry id="UnaryTests_R004_testado"><text>false</text></inputEntry>
        <outputEntry id="LiteralExpression_R004_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="LiteralExpression_R004_observacao"><text>"Diferença moderada de custo (20-50%). Solicitar justificativa médica ou tentativa com genérico"</text></outputEntry>
        <outputEntry id="LiteralExpression_R004_fundamentacao"><text>"Custo intermediário requer avaliação de custo-benefício e documentação de tentativa prévia com alternativa de menor custo"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R004_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R004_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <rule id="DecisionRule_Fallback">
        <inputEntry id="UnaryTests_Fallback_marca"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_Fallback_justificativa"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_Fallback_custo"><text>-</text></inputEntry>
        <inputEntry id="UnaryTests_Fallback_testado"><text>-</text></inputEntry>
        <outputEntry id="LiteralExpression_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="LiteralExpression_Fallback_observacao"><text>"Análise manual necessária: dados de custo comparativo não disponíveis"</text></outputEntry>
        <outputEntry id="LiteralExpression_Fallback_fundamentacao"><text>"Consultar base de preços CMED/ANVISA para comparação"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_Fallback_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_Fallback_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_HCLV003">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
