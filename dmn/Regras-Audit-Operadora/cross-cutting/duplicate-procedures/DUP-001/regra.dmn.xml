<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:camunda="http://camunda.org/schema/1.0/dmn" id="regra-DUP-001" name="Controle de Intervalo de Repetição de Exames de Imagem" namespace="http://camunda.org/schema/1.0/dmn">
  <decision id="DUP-001" name="Controle de Intervalo de Repetição de Exames de Imagem">
    <decisionTable id="decisionTable_DUP001" hitPolicy="FIRST">
      <input id="input_tipoExame" label="Tipo de Exame" camunda:inputVariable="tipoExame">
        <inputExpression id="inputExpression_tipoExame" typeRef="string">
          <text>tipoExame</text>
        </inputExpression>
        <inputValues id="inputValues_tipoExame">
          <text>"RX","USG","TC","RM","PET-CT","Cintilografia","Mamografia","Densitometria"</text>
        </inputValues>
      </input>
      <input id="input_diasDesdeUltimoExame" label="Dias Desde Último Exame" camunda:inputVariable="diasDesdeUltimoExame">
        <inputExpression id="inputExpression_diasDesdeUltimoExame" typeRef="integer">
          <text>diasDesdeUltimoExame</text>
        </inputExpression>
      </input>
      <input id="input_mudancaClinica" label="Mudança Clínica Documentada" camunda:inputVariable="mudancaClinica">
        <inputExpression id="inputExpression_mudancaClinica" typeRef="boolean">
          <text>mudancaClinica</text>
        </inputExpression>
      </input>
      <input id="input_urgencia" label="Urgência Documentada" camunda:inputVariable="urgencia">
        <inputExpression id="inputExpression_urgencia" typeRef="boolean">
          <text>urgencia</text>
        </inputExpression>
      </input>
      <output id="output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="outputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="output_fundamentacao" label="Fundamentação Legal" name="fundamentacao" typeRef="string" />
      
      <output id="output_4" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="outputValues_4">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>
      

      <output id="output_5" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="outputValues_5">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <rule id="rule_001">
        <inputEntry id="input_001_1">
          <text>"RX","USG"</text>
        </inputEntry>
        <inputEntry id="input_001_2">
          <text>&lt; 30</text>
        </inputEntry>
        <inputEntry id="input_001_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="input_001_4">
          <text>false</text>
        </inputEntry>
        <outputEntry id="output_001_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="output_001_2">
          <text>"Repetição de RX/USG antes de 30 dias sem mudança clínica. Economia estimada: R$ 180-450 por exame evitado. Exposição radiológica desnecessária."</text>
        </outputEntry>
        <outputEntry id="output_001_3">
          <text>"CBR 2023 - Diretrizes de Uso Racional de Imagem; ANS RN 465/2021 Art. 18 - Controle de Duplicidade"</text>
        </outputEntry>
        <outputEntry id="OE_rule_001_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_rule_001_5"><text>"NEGAR"</text></outputEntry>

      </rule>

      <rule id="rule_002">
        <inputEntry id="input_002_1">
          <text>"TC","RM"</text>
        </inputEntry>
        <inputEntry id="input_002_2">
          <text>&lt; 60</text>
        </inputEntry>
        <inputEntry id="input_002_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="input_002_4">
          <text>false</text>
        </inputEntry>
        <outputEntry id="output_002_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="output_002_2">
          <text>"Repetição de TC/RM antes de 60 dias sem mudança clínica. Economia estimada: R$ 800-2.500 por exame evitado. Alto custo operacional e radiológico."</text>
        </outputEntry>
        <outputEntry id="output_002_3">
          <text>"CBR 2023 - Protocolo Uso Racional TC/RM; ANS RN 465/2021; Choosing Wisely Brasil - Medicina Nuclear"</text>
        </outputEntry>
        <outputEntry id="OE_rule_002_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_rule_002_5"><text>"NEGAR"</text></outputEntry>

      </rule>

      <rule id="rule_003">
        <inputEntry id="input_003_1">
          <text>"PET-CT"</text>
        </inputEntry>
        <inputEntry id="input_003_2">
          <text>&lt; 90</text>
        </inputEntry>
        <inputEntry id="input_003_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="input_003_4">
          <text>false</text>
        </inputEntry>
        <outputEntry id="output_003_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="output_003_2">
          <text>"Repetição de PET-CT antes de 90 dias sem justificativa oncológica. Economia estimada: R$ 4.500-6.000 por exame evitado. Altíssimo custo e exposição radiológica."</text>
        </outputEntry>
        <outputEntry id="output_003_3">
          <text>"SBMN 2023 - Diretrizes PET-CT Oncológico; ANS RN 465/2021 Anexo II; INCA - Protocolos Oncologia"</text>
        </outputEntry>
        <outputEntry id="OE_rule_003_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_rule_003_5"><text>"NEGAR"</text></outputEntry>

      </rule>

      <rule id="rule_004">
        <inputEntry id="input_004_1">
          <text>"Mamografia"</text>
        </inputEntry>
        <inputEntry id="input_004_2">
          <text>&lt; 365</text>
        </inputEntry>
        <inputEntry id="input_004_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="input_004_4">
          <text>false</text>
        </inputEntry>
        <outputEntry id="output_004_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="output_004_2">
          <text>"Mamografia de rastreamento repetida antes de 12 meses. Economia estimada: R$ 250-400 por exame evitado. Protocolo INCA prevê intervalo anual."</text>
        </outputEntry>
        <outputEntry id="output_004_3">
          <text>"INCA 2023 - Rastreamento Mamográfico; SBM - Diretrizes Detecção Precoce Câncer de Mama; ANS RN 465/2021"</text>
        </outputEntry>
        <outputEntry id="OE_rule_004_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_rule_004_5"><text>"NEGAR"</text></outputEntry>

      </rule>

      <rule id="rule_005">
        <inputEntry id="input_005_1">
          <text></text>
        </inputEntry>
        <inputEntry id="input_005_2">
          <text></text>
        </inputEntry>
        <inputEntry id="input_005_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="input_005_4">
          <text></text>
        </inputEntry>
        <outputEntry id="output_005_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="output_005_2">
          <text>"Mudança clínica documentada justifica repetição do exame independente do intervalo. Controle evolutivo necessário."</text>
        </outputEntry>
        <outputEntry id="output_005_3">
          <text>"CBR 2023 - Exceções Clínicas; CFM Resolução 2.218/2018 - Autonomia Médica; ANS RN 465/2021 Art. 19"</text>
        </outputEntry>
        <outputEntry id="OE_rule_005_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_rule_005_5"><text>"APROVAR"</text></outputEntry>

      </rule>

      <rule id="rule_006">
        <inputEntry id="input_006_1">
          <text></text>
        </inputEntry>
        <inputEntry id="input_006_2">
          <text></text>
        </inputEntry>
        <inputEntry id="input_006_3">
          <text></text>
        </inputEntry>
        <inputEntry id="input_006_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="output_006_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="output_006_2">
          <text>"Urgência médica documentada autoriza repetição do exame. Situação de emergência prevalece sobre intervalo padrão."</text>
        </outputEntry>
        <outputEntry id="output_006_3">
          <text>"CFM Resolução 2.271/2020 - Urgência/Emergência; ANS RN 465/2021 Art. 20; Lei 12.653/2012 - Atendimento Emergencial"</text>
        </outputEntry>
        <outputEntry id="OE_rule_006_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_rule_006_5"><text>"APROVAR"</text></outputEntry>

      </rule>

      <rule id="rule_007">
        <inputEntry id="input_007_1">
          <text>"RX","USG"</text>
        </inputEntry>
        <inputEntry id="input_007_2">
          <text>&gt;= 30</text>
        </inputEntry>
        <inputEntry id="input_007_3">
          <text></text>
        </inputEntry>
        <inputEntry id="input_007_4">
          <text></text>
        </inputEntry>
        <outputEntry id="output_007_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="output_007_2">
          <text>"Intervalo adequado cumprido para RX/USG (≥30 dias). Repetição dentro do protocolo de uso racional."</text>
        </outputEntry>
        <outputEntry id="output_007_3">
          <text>"CBR 2023 - Intervalos Mínimos Imagem; ANS RN 465/2021; Choosing Wisely Brasil"</text>
        </outputEntry>
        <outputEntry id="OE_rule_007_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_rule_007_5"><text>"APROVAR"</text></outputEntry>

      </rule>

      <rule id="rule_008">
        <inputEntry id="input_008_1">
          <text>"TC","RM"</text>
        </inputEntry>
        <inputEntry id="input_008_2">
          <text>&gt;= 60</text>
        </inputEntry>
        <inputEntry id="input_008_3">
          <text></text>
        </inputEntry>
        <inputEntry id="input_008_4">
          <text></text>
        </inputEntry>
        <outputEntry id="output_008_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="output_008_2">
          <text>"Intervalo adequado cumprido para TC/RM (≥60 dias). Repetição dentro do protocolo de controle evolutivo."</text>
        </outputEntry>
        <outputEntry id="output_008_3">
          <text>"CBR 2023 - Protocolo TC/RM; ANS RN 465/2021 Art. 18; SBMN - Intervalos Seguros"</text>
        </outputEntry>
        <outputEntry id="OE_rule_008_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_rule_008_5"><text>"APROVAR"</text></outputEntry>

      </rule>

      <rule id="Rule_Default_Fallback">
        <inputEntry id="input_fallback_1">
          <text></text>
        </inputEntry>
        <inputEntry id="input_fallback_2">
          <text></text>
        </inputEntry>
        <inputEntry id="input_fallback_3">
          <text></text>
        </inputEntry>
        <inputEntry id="input_fallback_4">
          <text></text>
        </inputEntry>
        <outputEntry id="output_fallback_1">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="output_fallback_2">
          <text>"Caso não coberto pelas regras padrão. Análise manual necessária considerando indicação clínica, custo-benefício e protocolos institucionais."</text>
        </outputEntry>
        <outputEntry id="output_fallback_3">
          <text>"ANS RN 465/2021 Art. 22 - Revisão Humana Casos Complexos; CFM Resolução 2.218/2018"</text>
        </outputEntry>
        <outputEntry id="OE_Rule_Default_Fallback_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_Rule_Default_Fallback_5"><text>"SOLICITAR_INFO"</text></outputEntry>

      </rule>
    </decisionTable>
  </decision>
</definitions>
