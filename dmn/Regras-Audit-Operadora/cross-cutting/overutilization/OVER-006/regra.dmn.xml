<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:modeler="http://camunda.org/schema/modeler/1.0" id="Definitions_OVER006" name="DRD" namespace="http://camunda.org/schema/1.0/dmn" exporter="Camunda Modeler" exporterVersion="5.0.0" modeler:executionPlatform="Camunda Cloud" modeler:executionPlatformVersion="8.0.0">
  <decision id="Decision_OVER006" name="OVER-006: Limites de Duração de Antibioticoterapia">
    <decisionTable id="DecisionTable_OVER006" hitPolicy="FIRST">
      <input id="Input_diagnostico" label="Diagnóstico Infeccioso">
        <inputExpression id="InputExpression_diagnostico" typeRef="string">
          <text>diagnostico</text>
        </inputExpression>
      </input>
      <input id="Input_diasTratamento" label="Dias de Tratamento">
        <inputExpression id="InputExpression_diasTratamento" typeRef="number">
          <text>diasTratamento</text>
        </inputExpression>
      </input>
      <input id="Input_evolucaoClinica" label="Evolução Clínica Favorável">
        <inputExpression id="InputExpression_evolucaoClinica" typeRef="boolean">
          <text>evolucaoClinica</text>
        </inputExpression>
      </input>
      <input id="Input_culturaPositiva" label="Cultura Positiva Documentada">
        <inputExpression id="InputExpression_culturaPositiva" typeRef="boolean">
          <text>culturaPositiva</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="UnaryTests_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- REPROVADO: Pneumonia comunitária >7 dias com boa evolução -->
      <rule id="DecisionRule_R001">
        <inputEntry id="UnaryTests_R001_diagnostico">
          <text>"Pneumonia Comunitária"</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R001_dias">
          <text>&gt; 7</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R001_evolucao">
          <text>true</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R001_cultura">
          <text>false</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R001_resultado">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R001_observacao">
          <text>"Pneumonia comunitária não complicada: 5-7 dias de ATB suficientes com boa evolução"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R001_fundamentacao">
          <text>"Diretrizes IDSA/ATS 2019: Pneumonia comunitária não complicada 5-7 dias. Duração prolongada aumenta resistência sem benefício"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R001_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R001_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- REPROVADO: ITU não complicada >5 dias -->
      <rule id="DecisionRule_R002">
        <inputEntry id="UnaryTests_R002_diagnostico">
          <text>"Infecção Urinária Não Complicada","Cistite"</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R002_dias">
          <text>&gt; 5</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R002_evolucao">
          <text>true</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R002_cultura">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R002_resultado">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R002_observacao">
          <text>"ITU não complicada em mulheres: 3-5 dias de ATB suficientes"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R002_fundamentacao">
          <text>"Diretrizes SBU/IDSA: Cistite não complicada 3-5 dias (nitrofurantoína 5d, fosfomicina dose única). Cursos longos aumentam efeitos adversos"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R002_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R002_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- REPROVADO: Celulite >10 dias sem complicações -->
      <rule id="DecisionRule_R003">
        <inputEntry id="UnaryTests_R003_diagnostico">
          <text>"Celulite","Erisipela"</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R003_dias">
          <text>&gt; 10</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R003_evolucao">
          <text>true</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R003_cultura">
          <text>false</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R003_resultado">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R003_observacao">
          <text>"Celulite/erisipela não complicada: 5-10 dias de ATB suficientes"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R003_fundamentacao">
          <text>"IDSA Skin and Soft Tissue Infections 2014: 5-10 dias para celulite não complicada com boa resposta clínica"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R003_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R003_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Endocardite infecciosa (4-6 semanas) -->
      <rule id="DecisionRule_R004">
        <inputEntry id="UnaryTests_R004_diagnostico">
          <text>"Endocardite Infecciosa"</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R004_dias">
          <text>&lt;= 42</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R004_evolucao">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R004_cultura">
          <text>true</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R004_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R004_observacao">
          <text>"Endocardite infecciosa: 4-6 semanas de ATB intravenoso conforme diretrizes AHA"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R004_fundamentacao">
          <text>"AHA Guidelines: Endocardite requer 4-6 semanas de ATB IV para penetração valvar e erradicação de biofilme"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R004_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R004_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Osteomielite (4-6 semanas) -->
      <rule id="DecisionRule_R005">
        <inputEntry id="UnaryTests_R005_diagnostico">
          <text>"Osteomielite"</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R005_dias">
          <text>&lt;= 42</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R005_evolucao">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R005_cultura">
          <text>true</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R005_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R005_observacao">
          <text>"Osteomielite aguda: 4-6 semanas de ATB para penetração óssea adequada"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R005_fundamentacao">
          <text>"IDSA Osteomyelitis Guidelines: 4-6 semanas necessárias para penetração em tecido ósseo e erradicação bacteriana"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R005_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R005_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Tuberculose (6 meses) -->
      <rule id="DecisionRule_R006">
        <inputEntry id="UnaryTests_R006_diagnostico">
          <text>"Tuberculose Pulmonar","Tuberculose Extrapulmonar"</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R006_dias">
          <text>&lt;= 180</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R006_evolucao">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R006_cultura">
          <text>true</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R006_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R006_observacao">
          <text>"Tuberculose: esquema padrão 6 meses (RHZE 2 meses + RH 4 meses)"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R006_fundamentacao">
          <text>"MS Brasil/WHO: Tuberculose pulmonar esquema básico 6 meses. Abandono precoce causa resistência"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R006_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R006_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- PENDENTE: Duração no limite superior, requer justificativa -->
      <rule id="DecisionRule_R007">
        <inputEntry id="UnaryTests_R007_diagnostico">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R007_dias">
          <text>&gt; 14</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R007_evolucao">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R007_cultura">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R007_resultado">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R007_observacao">
          <text>"Tratamento >14 dias sem melhora clínica. Necessária reavaliação de diagnóstico e sensibilidade"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R007_fundamentacao">
          <text>"Ausência de resposta em 72-96h sugere resistência, diagnóstico incorreto ou fonte não controlada. Reavaliar ATB e foco infeccioso"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R007_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R007_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="UnaryTests_Fallback_diagnostico">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_Fallback_dias">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_Fallback_evolucao">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_Fallback_cultura">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_Fallback_resultado">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_Fallback_observacao">
          <text>"Análise manual necessária: diagnóstico ou dados clínicos insuficientes"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_Fallback_fundamentacao">
          <text>"Avaliação por infectologista requerida"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_Fallback_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_Fallback_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_OVER006">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
