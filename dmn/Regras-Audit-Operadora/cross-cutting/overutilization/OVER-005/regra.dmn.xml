<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:modeler="http://camunda.org/schema/modeler/1.0" id="Definitions_OVER005" name="DRD" namespace="http://camunda.org/schema/1.0/dmn" exporter="Camunda Modeler" exporterVersion="5.0.0" modeler:executionPlatform="Camunda Cloud" modeler:executionPlatformVersion="8.0.0">
  <decision id="Decision_OVER005" name="OVER-005: Gatilhos para Transfusão Sanguínea">
    <decisionTable id="DecisionTable_OVER005" hitPolicy="FIRST">
      <input id="Input_hemoglobinaAtual" label="Hemoglobina Atual (g/dL)">
        <inputExpression id="InputExpression_hemoglobinaAtual" typeRef="number">
          <text>hemoglobinaAtual</text>
        </inputExpression>
      </input>
      <input id="Input_sangramentoAtivo" label="Sangramento Ativo">
        <inputExpression id="InputExpression_sangramentoAtivo" typeRef="boolean">
          <text>sangramentoAtivo</text>
        </inputExpression>
      </input>
      <input id="Input_sintomasAnemia" label="Sintomas de Anemia (taquicardia, hipotensão)">
        <inputExpression id="InputExpression_sintomasAnemia" typeRef="boolean">
          <text>sintomasAnemia</text>
        </inputExpression>
      </input>
      <input id="Input_condicaoCardiovascular" label="Doença Cardiovascular Conhecida">
        <inputExpression id="InputExpression_condicaoCardiovascular" typeRef="boolean">
          <text>condicaoCardiovascular</text>
        </inputExpression>
      </input>
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="UnaryTests_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="Output_observacao" label="Observação" name="observacao" typeRef="string" />
      <output id="Output_fundamentacao" label="Fundamentação" name="fundamentacao" typeRef="string" />
      <!-- Output 4: Alertas de Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- APROVADO: Hb <7 g/dL (limiar restritivo padrão) -->
      <rule id="DecisionRule_R001">
        <inputEntry id="UnaryTests_R001_hb">
          <text>&lt; 7</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R001_sangramento">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R001_sintomas">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R001_cardiovascular">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R001_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R001_observacao">
          <text>"Hb <7 g/dL: transfusão indicada conforme estratégia restritiva (TRICC trial)"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R001_fundamentacao">
          <text>"Diretrizes AABB 2016: Estratégia restritiva (Hb <7 g/dL) reduz transfusões desnecessárias sem aumentar mortalidade"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R001_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R001_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Sangramento ativo com Hb <8 g/dL -->
      <rule id="DecisionRule_R002">
        <inputEntry id="UnaryTests_R002_hb">
          <text>[7..8)</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R002_sangramento">
          <text>true</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R002_sintomas">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R002_cardiovascular">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R002_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R002_observacao">
          <text>"Sangramento ativo com Hb 7-8 g/dL: transfusão indicada para prevenir choque hipovolêmico"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R002_fundamentacao">
          <text>"Sangramento ativo é indicação absoluta para transfusão com Hb <8 g/dL (ATLS guidelines)"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R002_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R002_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Doença cardiovascular com Hb <8 g/dL -->
      <rule id="DecisionRule_R003">
        <inputEntry id="UnaryTests_R003_hb">
          <text>[7..8)</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R003_sangramento">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R003_sintomas">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R003_cardiovascular">
          <text>true</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R003_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R003_observacao">
          <text>"Doença cardiovascular conhecida: limiar de Hb <8 g/dL é apropriado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R003_fundamentacao">
          <text>"AABB 2016: Pacientes com DAC/ICC podem se beneficiar de limiar <8 g/dL (estratégia menos restritiva)"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R003_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R003_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Sintomas de anemia com Hb <8 g/dL -->
      <rule id="DecisionRule_R004">
        <inputEntry id="UnaryTests_R004_hb">
          <text>[7..8)</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R004_sangramento">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R004_sintomas">
          <text>true</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R004_cardiovascular">
          <text>false</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R004_resultado">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R004_observacao">
          <text>"Sintomas de anemia (taquicardia, hipotensão) com Hb 7-8 g/dL: transfusão indicada"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R004_fundamentacao">
          <text>"Sintomas hemodinâmicos (FC >100 bpm, PA <90 mmHg) indicam má tolerância à anemia e necessidade de transfusão"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R004_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R004_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVADO: Hb ≥10 g/dL sem critérios especiais -->
      <rule id="DecisionRule_R005">
        <inputEntry id="UnaryTests_R005_hb">
          <text>&gt;= 10</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R005_sangramento">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R005_sintomas">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R005_cardiovascular">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R005_resultado">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R005_observacao">
          <text>"Hb ≥10 g/dL sem sintomas: transfusão não indicada (uso excessivo)"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R005_fundamentacao">
          <text>"Choosing Wisely: Não transfundir com Hb ≥10 g/dL em pacientes estáveis. Aumenta riscos (TRALI, TACO, infecção) sem benefício"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R005_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R005_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- REPROVADO: Hb 8-10 g/dL sem sintomas ou sangramento -->
      <rule id="DecisionRule_R006">
        <inputEntry id="UnaryTests_R006_hb">
          <text>[8..10)</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R006_sangramento">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R006_sintomas">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R006_cardiovascular">
          <text>false</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R006_resultado">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R006_observacao">
          <text>"Hb 8-10 g/dL sem sintomas em paciente estável: transfusão não indicada"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R006_fundamentacao">
          <text>"TRICC trial: Estratégia restritiva (Hb 7-9 g/dL) é segura em pacientes críticos estáveis, reduzindo transfusões em 50%"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R006_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R006_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- PENDENTE: Hb 7-8 g/dL em zona cinzenta -->
      <rule id="DecisionRule_R007">
        <inputEntry id="UnaryTests_R007_hb">
          <text>[7..8)</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R007_sangramento">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R007_sintomas">
          <text>false</text>
        </inputEntry>
        <inputEntry id="UnaryTests_R007_cardiovascular">
          <text>false</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_R007_resultado">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R007_observacao">
          <text>"Hb 7-8 g/dL sem sintomas: decisão individualizada conforme contexto clínico"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_R007_fundamentacao">
          <text>"Zona cinzenta: considerar reserva fisiológica, comorbidades, expectativa de sangramento adicional"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_R007_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_R007_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="DecisionRule_Fallback">
        <inputEntry id="UnaryTests_Fallback_hb">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_Fallback_sangramento">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_Fallback_sintomas">
          <text>-</text>
        </inputEntry>
        <inputEntry id="UnaryTests_Fallback_cardiovascular">
          <text>-</text>
        </inputEntry>
        <outputEntry id="LiteralExpression_Fallback_resultado">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_Fallback_observacao">
          <text>"Análise manual necessária: dados laboratoriais ou clínicos insuficientes"</text>
        </outputEntry>
        <outputEntry id="LiteralExpression_Fallback_fundamentacao">
          <text>"Avaliação por hematologista/intensivista requerida"</text>
        </outputEntry>
        <outputEntry id="OE_DecisionRule_Fallback_4"><text>"DOC"</text></outputEntry>
        <outputEntry id="OE_DecisionRule_Fallback_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>

  <dmndi:DMNDI>
    <dmndi:DMNDiagram>
      <dmndi:DMNShape dmnElementRef="Decision_OVER005">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
