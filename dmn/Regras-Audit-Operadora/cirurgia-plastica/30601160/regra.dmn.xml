  <!--
    TUSS 30601160 - Dermolipectomia pos-bariatrica (cirurgia plastica pos-perda ponderal massiva)
    Versao: 3.0.0 (2026-02-07)
    Especialidade: Cirurgia Plastica Reconstrutiva
    Categoria: Cirurgia Pos-Bariatrica

    Indicacoes Clinicas (ASPS 2024 / SBCP 2024 / ASMBS 2023):
    - Excesso cutaneo apos perda ponderal massiva (maior que 50% do excesso de peso)
    - Dermatolipodistrofia pos-bariatrica com impacto funcional
    - Intertigo cronico refratario a tratamento conservador
    - Limitacao funcional documentada (mobilidade, higiene, atividades)
    - Disturbio psicologico significativo relacionado ao excesso cutaneo

    Criterios de Estabilidade Ponderal:
    - Peso estavel por minimo 6-12 meses
    - IMC menor que 35 (idealmente menor que 30)
    - Sem deficiencias nutricionais significativas
    - Acompanhamento multidisciplinar documentado

    Areas de Dermolipectomia:
    - Abdominal (abdominoplastia)
    - Braquial (braquioplastia)
    - Crural (lifting de coxas)
    - Dorsal/tronco (bodylift)
    - Mamaria

    Contraindicacoes:
    - Peso instavel (oscilando)
    - IMC maior que 35 (maior risco de complicacoes)
    - Deficiencias nutricionais nao corrigidas
    - Tabagismo ativo
    - Indicacao puramente estetica sem impacto funcional

    Documentacao Obrigatoria:
    - Comprovacao de cirurgia bariatrica previa ou perda ponderal significativa
    - Curva de peso (estabilidade por 6-12 meses)
    - IMC atual
    - Fotografias clinicas
    - Laudo do cirurgiao descrevendo impacto funcional

    Referencias Normativas:
    - ASPS Evidence-Based Guidelines: Body Contouring After MWL (2024)
    - ASMBS Clinical Practice Guidelines (2023)
    - RN 465/2021 ANS - DUT Dermolipectomia Pos-bariatrica
    - SBCP 2024 - Cirurgia Plastica Pos-Bariatrica
  -->

  <decision id="Decision_30601160" name="Criterios de Autorizacao - Dermolipectomia Pos-Bariatrica">
    <decisionTable id="DecisionTable_30601160" hitPolicy="FIRST">

      <!-- Input 1: Condicao do Paciente -->
      <input id="Input_condicaoPaciente" label="Excesso Cutaneo e Impacto Funcional">
        <inputExpression id="InputExpr_condicaoPaciente" typeRef="string">
          <text>condicaoPaciente</text>
        </inputExpression>
        <inputValues id="InputValues_condicaoPaciente">
          <text>"excesso_cutaneo_severo","excesso_cutaneo_moderado","intertigo_cronico","limitacao_funcional","excesso_leve_estetico","peso_instavel","imc_maior_35","deficiencia_nutricional"</text>
        </inputValues>
      </input>

      <!-- Input 2: Historico Clinico -->
      <input id="Input_historicoClinico" label="Contexto Pos-Bariatrico">
        <inputExpression id="InputExpr_historicoClinico" typeRef="string">
          <text>historicoClinico</text>
        </inputExpression>
        <inputValues id="InputValues_historicoClinico">
          <text>"pos_bariatrica_peso_estavel_12m","pos_bariatrica_peso_estavel_6m","perda_ponderal_dieta","peso_oscilando","imc_menor_30","imc_30_35","acompanhamento_multidisciplinar","tabagismo_ativo","nutricao_adequada"</text>
        </inputValues>
      </input>

      <!-- Input 3: Classe de Indicacao -->
      <input id="Input_classeIndicacao" label="Classe de Indicacao Cirurgica">
        <inputExpression id="InputExpr_classeIndicacao" typeRef="string">
          <text>classeIndicacao</text>
        </inputExpression>
        <inputValues id="InputValues_classeIndicacao">
          <text>"classe_I_indicacao_absoluta","classe_II_indicacao_relativa","classe_III_beneficio_incerto","classe_IV_contraindicado"</text>
        </inputValues>
      </input>

      <!-- Input 4: Exames Comprobatorios -->
      <input id="Input_examesComprobatorios" label="Documentacao Clinica Completa">
        <inputExpression id="InputExpr_examesComprobatorios" typeRef="boolean">
          <text>examesComprobatorios</text>
        </inputExpression>
      </input>

      <!-- Input 5: Expectativa de Vida Superior a 1 Ano -->
      <input id="Input_expectativaVida" label="Expectativa de Vida Superior a 1 Ano">
        <inputExpression id="InputExpr_expectativaVida" typeRef="boolean">
          <text>expectativaVidaSuperior1Ano</text>
        </inputExpression>
      </input>

      <!-- Output 1: Resultado -->
      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <!-- Output 2: Observacao -->
      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <!-- Output 3: Fundamentacao -->
      <output id="Output_fundamentacao" label="Fundamentacao Legal/Tecnica" name="fundamentacao" typeRef="string" />

      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues>
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string">
        <outputValues>
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ============================================== -->
      <!-- REGRAS DE REPROVACAO (PRIORIDADE MAXIMA)      -->
      <!-- ============================================== -->

      <rule id="Rule_30601160_Reprovacao_ExcessoEstetico">
        <description>Reprovacao - Excesso leve com indicacao puramente estetica</description>
        <inputEntry id="IE_Rep1_1"><text>"excesso_leve_estetico"</text></inputEntry>
        <inputEntry id="IE_Rep1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep1_2"><text>"Excesso cutaneo leve sem impacto funcional documentado. Indicacao puramente estetica nao coberta. DUT ANS exige comprometimento funcional ou intertigo cronico."</text></outputEntry>
        <outputEntry id="OE_Rep1_3"><text>"RN 465/2021 - DUT Dermolipectomia: Criterios Funcionais Obrigatorios"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Reprovacao_PesoInstavel">
        <description>Reprovacao - Peso instavel (oscilando)</description>
        <inputEntry id="IE_Rep2_1"><text>"peso_instavel"</text></inputEntry>
        <inputEntry id="IE_Rep2_2"><text>"peso_oscilando"</text></inputEntry>
        <inputEntry id="IE_Rep2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep2_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep2_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep2_2"><text>"Peso instavel (oscilando). Estabilidade ponderal por minimo 6-12 meses obrigatoria. Flutuacao de peso compromete resultado e aumenta complicacoes. Reavaliar apos estabilizacao."</text></outputEntry>
        <outputEntry id="OE_Rep2_3"><text>"ASPS 2024 - Weight Stability Criteria; ASMBS 2023"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Reprovacao_IMCAlto">
        <description>Reprovacao - IMC maior que 35</description>
        <inputEntry id="IE_Rep3_1"><text>"imc_maior_35"</text></inputEntry>
        <inputEntry id="IE_Rep3_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep3_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep3_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep3_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep3_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep3_2"><text>"IMC maior que 35. Risco cirurgico significativamente elevado (TVP, embolia, infeccao de ferida). Continuar perda ponderal ate IMC menor que 35. Idealmente menor que 30."</text></outputEntry>
        <outputEntry id="OE_Rep3_3"><text>"ASPS 2024 - BMI Cutoffs for Safety; Complicacoes em IMC Alto"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Reprovacao_DeficienciaNutricional">
        <description>Reprovacao - Deficiencia nutricional nao corrigida</description>
        <inputEntry id="IE_Rep4_1"><text>"deficiencia_nutricional"</text></inputEntry>
        <inputEntry id="IE_Rep4_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep4_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep4_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep4_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep4_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep4_2"><text>"Deficiencia nutricional nao corrigida (proteinas, ferro, B12, outros). Correcao obrigatoria antes de cirurgia eletiva de grande porte. Risco de complicacoes cicatriciais e infecciosas."</text></outputEntry>
        <outputEntry id="OE_Rep4_3"><text>"ASMBS 2023 - Nutritional Requirements; Pre-operative Optimization"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Reprovacao_Tabagismo">
        <description>Reprovacao - Tabagismo ativo</description>
        <inputEntry id="IE_Rep5_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep5_2"><text>"tabagismo_ativo"</text></inputEntry>
        <inputEntry id="IE_Rep5_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep5_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep5_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep5_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep5_2"><text>"Tabagismo ativo. Risco de necrose de retalhos e complicacoes cicatriciais muito elevado em cirurgias de contorno corporal. Cessacao minima de 6 semanas obrigatoria."</text></outputEntry>
        <outputEntry id="OE_Rep5_3"><text>"ASPS 2024 - Smoking and Body Contouring Complications"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Reprovacao_ExpectativaVida">
        <description>Reprovacao - Expectativa de vida inferior a 1 ano</description>
        <inputEntry id="IE_Rep6_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep6_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep6_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep6_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep6_5"><text>false</text></inputEntry>
        <outputEntry id="OE_Rep6_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep6_2"><text>"Expectativa de vida inferior a 12 meses. Cirurgia eletiva de contorno corporal nao prioritaria."</text></outputEntry>
        <outputEntry id="OE_Rep6_3"><text>"Principios de Proporcionalidade"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- REGRAS DE APROVACAO                           -->
      <!-- ============================================== -->

      <rule id="Rule_30601160_Aprovacao_ExcessoSeveroFuncional">
        <description>Aprovacao - Excesso cutaneo severo com impacto funcional</description>
        <inputEntry id="IE_Aprov1_1"><text>"excesso_cutaneo_severo","limitacao_funcional"</text></inputEntry>
        <inputEntry id="IE_Aprov1_2"><text>"pos_bariatrica_peso_estavel_12m","imc_menor_30","nutricao_adequada","acompanhamento_multidisciplinar"</text></inputEntry>
        <inputEntry id="IE_Aprov1_3"><text>"classe_I_indicacao_absoluta"</text></inputEntry>
        <inputEntry id="IE_Aprov1_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Aprov1_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Aprov1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov1_2"><text>"Dermolipectomia pos-bariatrica aprovada. Excesso cutaneo severo com impacto funcional documentado. Peso estavel 12+ meses, IMC adequado, nutricao corrigida. Pode ser realizada em etapas."</text></outputEntry>
        <outputEntry id="OE_Aprov1_3"><text>"RN 465/2021 - DUT Dermolipectomia; ASPS 2024; ASMBS 2023"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Aprovacao_IntertrigoCronico">
        <description>Aprovacao - Intertigo cronico refratario</description>
        <inputEntry id="IE_Aprov2_1"><text>"intertigo_cronico"</text></inputEntry>
        <inputEntry id="IE_Aprov2_2"><text>"pos_bariatrica_peso_estavel_6m","pos_bariatrica_peso_estavel_12m","nutricao_adequada"</text></inputEntry>
        <inputEntry id="IE_Aprov2_3"><text>"classe_I_indicacao_absoluta"</text></inputEntry>
        <inputEntry id="IE_Aprov2_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Aprov2_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Aprov2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov2_2"><text>"Dermolipectomia aprovada para intertigo cronico refratario. Documentado tratamento conservador sem sucesso. Infeccoes de repeticao em pregas cutaneas. Indicacao clara."</text></outputEntry>
        <outputEntry id="OE_Aprov2_3"><text>"RN 465/2021 - DUT: Intertigo Cronico como Indicacao"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Aprovacao_IMC30_35Funcional">
        <description>Aprovacao - IMC 30-35 com impacto funcional significativo</description>
        <inputEntry id="IE_Aprov3_1"><text>"excesso_cutaneo_severo","limitacao_funcional"</text></inputEntry>
        <inputEntry id="IE_Aprov3_2"><text>"pos_bariatrica_peso_estavel_12m","imc_30_35","nutricao_adequada"</text></inputEntry>
        <inputEntry id="IE_Aprov3_3"><text>"classe_II_indicacao_relativa"</text></inputEntry>
        <inputEntry id="IE_Aprov3_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Aprov3_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Aprov3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov3_2"><text>"Dermolipectomia aprovada com IMC 30-35 devido a impacto funcional significativo. Risco cirurgico moderadamente elevado - informar paciente. Considerar procedimentos por etapas."</text></outputEntry>
        <outputEntry id="OE_Aprov3_3"><text>"ASPS 2024 - Individualized Risk Assessment; Shared Decision Making"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Aprovacao_ExcessoModerado">
        <description>Aprovacao - Excesso moderado com documentacao adequada</description>
        <inputEntry id="IE_Aprov4_1"><text>"excesso_cutaneo_moderado","limitacao_funcional"</text></inputEntry>
        <inputEntry id="IE_Aprov4_2"><text>"pos_bariatrica_peso_estavel_12m","imc_menor_30","acompanhamento_multidisciplinar"</text></inputEntry>
        <inputEntry id="IE_Aprov4_3"><text>"classe_I_indicacao_absoluta","classe_II_indicacao_relativa"</text></inputEntry>
        <inputEntry id="IE_Aprov4_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Aprov4_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Aprov4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Aprov4_2"><text>"Dermolipectomia aprovada. Excesso moderado com impacto funcional documentado. Criterios de DUT atendidos. Acompanhamento multidisciplinar pos-operatorio recomendado."</text></outputEntry>
        <outputEntry id="OE_Aprov4_3"><text>"RN 465/2021 - DUT; SBCP 2024"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- REGRAS DE PENDENCIA                           -->
      <!-- ============================================== -->

      <rule id="Rule_30601160_Pendente_Peso6Meses">
        <description>Pendente - Estabilidade de apenas 6 meses</description>
        <inputEntry id="IE_Pend1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend1_2"><text>"pos_bariatrica_peso_estavel_6m"</text></inputEntry>
        <inputEntry id="IE_Pend1_3"><text>"classe_II_indicacao_relativa"</text></inputEntry>
        <inputEntry id="IE_Pend1_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Pend1_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Pend1_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_Pend1_2"><text>"Estabilidade ponderal de apenas 6 meses. Recomendado aguardar completar 12 meses para melhor resultado e menor risco. Pode ser aprovado antecipadamente se impacto funcional muito significativo."</text></outputEntry>
        <outputEntry id="OE_Pend1_3"><text>"ASPS 2024 - 12-Month Weight Stability Preferred"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Pendente_PerdaDieta">
        <description>Pendente - Perda por dieta sem cirurgia bariatrica</description>
        <inputEntry id="IE_Pend2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend2_2"><text>"perda_ponderal_dieta"</text></inputEntry>
        <inputEntry id="IE_Pend2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend2_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Pend2_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Pend2_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_Pend2_2"><text>"Perda ponderal por dieta sem cirurgia bariatrica. Documentar perda maior que 50% do excesso de peso, estabilidade e acompanhamento. Criterios de DUT aplicam-se igualmente."</text></outputEntry>
        <outputEntry id="OE_Pend2_3"><text>"RN 465/2021 - Perda Massiva de Peso Nao-cirurgica"</text></outputEntry>
      </rule>

      <rule id="Rule_30601160_Pendente_SemDocumentacao">
        <description>Pendente - Documentacao incompleta</description>
        <inputEntry id="IE_Pend3_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend3_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend3_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Pend3_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Pend3_5"><text>true</text></inputEntry>
        <outputEntry id="OE_Pend3_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_Pend3_2"><text>"Documentacao incompleta. Anexar: comprovante de bariatrica previa, curva de peso (6-12 meses), IMC atual, fotografias, laboratorios nutricionais, laudo descrevendo impacto funcional."</text></outputEntry>
        <outputEntry id="OE_Pend3_3"><text>"RN 465/2021 Art. 5 - Documentacao"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- REGRA FALLBACK                                -->
      <!-- ============================================== -->

      <rule id="Rule_Fallback_30601160">
        <description>Regra padrao - Casos nao cobertos</description>
        <inputEntry id="IE_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Fallback_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_Fallback_2"><text>"Caso nao enquadrado nos criterios automaticos. Encaminhar para auditoria especializada em cirurgia plastica pos-bariatrica."</text></outputEntry>
        <outputEntry id="OE_Fallback_3"><text>"RN 428/2017 - Auditoria Especializada"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
