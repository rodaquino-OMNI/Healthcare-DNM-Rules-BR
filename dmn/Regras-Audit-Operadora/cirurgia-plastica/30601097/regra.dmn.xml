        <outputEntry id="OE_Aprov2_3"><text>"ASPS 2024 - Eyelid Reconstruction; Oculoplastica Guidelines"</text></outputEntry>
      </rule>

      <rule id="Rule_30601097_Aprovacao_DefeitoNasal">
