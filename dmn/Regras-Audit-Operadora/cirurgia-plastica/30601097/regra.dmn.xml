        <inputEntry id="IE_Rep3_1"><text>"defeito_extenso"</text></inputEntry>
        <inputEntry id="IE_Rep3_2"><text>"area_doadora_limitada"</text></inputEntry>
        <inputEntry id="IE_Rep3_3"><text>-</text></inputEntry>
