        <inputEntry id="IE_Aprov4_1"><text>"defeito_polpa_digital"</text></inputEntry>
        <inputEntry id="IE_Aprov4_2"><text>"trauma_facial","area_doadora_disponivel"</text></inputEntry>
        <inputEntry id="IE_Aprov4_3"><text>"classe_I_indicacao_absoluta"</text></inputEntry>
