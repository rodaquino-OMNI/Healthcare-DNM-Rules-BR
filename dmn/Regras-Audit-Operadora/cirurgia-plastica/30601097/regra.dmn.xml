        <outputEntry id="OE_Rep4_2"><text>"Expectativa de vida inferior a 12 meses. Procedimento eletivo reconstrutivo nao indicado. Priorizar qualidade de vida e cuidados de suporte."</text></outputEntry>
        <outputEntry id="OE_Rep4_3"><text>"Principios de Proporcionalidade Terapeutica"</text></outputEntry>
      </rule>

      <!-- ============================================== -->
      <!-- REGRAS DE APROVACAO                           -->
      <!-- ============================================== -->

      <rule id="Rule_30601097_Aprovacao_DefeitoFacial">
        <description>Aprovacao - Defeito facial requer enxerto total</description>
        <inputEntry id="IE_Aprov1_1"><text>"defeito_facial"</text></inputEntry>
        <inputEntry id="IE_Aprov1_2"><text>"resseccao_tumoral_face","trauma_facial","area_doadora_disponivel"</text></inputEntry>
