        <outputEntry id="OE_Aprov1_3"><text>"ASPS 2024 - Facial Reconstruction; SBCP 2024; RN 465/2021"</text></outputEntry>
      </rule>

      <rule id="Rule_30601097_Aprovacao_DefeitoPalpebral">
        <description>Aprovacao - Reconstrucao palpebral</description>
        <inputEntry id="IE_Aprov2_1"><text>"defeito_palpebral"</text></inputEntry>
