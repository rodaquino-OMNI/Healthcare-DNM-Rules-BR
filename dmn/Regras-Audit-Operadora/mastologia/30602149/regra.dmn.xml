<?xml version='1.0' encoding='UTF-8'?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" id="Definitions_30602149" name="Mastectomia Radical ou Radical Modificada" targetNamespace="http://camunda.org/schema/1.0/dmn">
  
  <decision id="Decision_30602149" name="Autorizacao para Mastectomia Radical">
    <decisionTable id="DecisionTable_30602149" hitPolicy="FIRST">
      
      <input id="Input_1" label="Diagnostico Oncologico (CID-10)">
        <inputExpression id="InputExpression_1" typeRef="string">
          <text>diagnosticoOncologico</text>
        </inputExpression>
        <inputValues id="InputValues_1">
          <text>"C50.x", "D05.x", "AUSENTE"</text>
        </inputValues>
      </input>
      
      <input id="Input_2" label="Classificacao BIRADS">
        <inputExpression id="InputExpression_2" typeRef="string">
          <text>classificacaoBIRADS</text>
        </inputExpression>
        <inputValues id="InputValues_2">
          <text>"BIRADS_4", "BIRADS_5", "BIRADS_6", "NAO_APLICAVEL"</text>
        </inputValues>
      </input>
      
      <input id="Input_3" label="Mutacao BRCA">
        <inputExpression id="InputExpression_3" typeRef="string">
          <text>mutacaoBRCA</text>
        </inputExpression>
        <inputValues id="InputValues_3">
          <text>"BRCA1_POSITIVO", "BRCA2_POSITIVO", "NEGATIVO", "NAO_TESTADO"</text>
        </inputValues>
      </input>
      
      <input id="Input_4" label="Estadiamento TNM">
        <inputExpression id="InputExpression_4" typeRef="string">
          <text>estadiamentoTNM</text>
        </inputExpression>
        <inputValues id="InputValues_4">
          <text>"T0", "T1", "T2", "T3", "T4", "Tis", "M0", "M1"</text>
        </inputValues>
      </input>
      
      <input id="Input_5" label="Laudo Mastologico + Histopatologia Confirmando Malignidade">
        <inputExpression id="InputExpression_5" typeRef="boolean">
          <text>laudoMastologico</text>
        </inputExpression>
      </input>
      
      <output id="Output_1" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_1">
          <text>"Aprovado", "Reprovado", "Pendente"</text>
        </outputValues>
      </output>
      
      <output id="Output_2" label="Observacao" name="observacao" typeRef="string" />
      
      <output id="Output_3" label="Fundamentacao" name="fundamentacao" typeRef="string" />

      
      <output id="Output_alertasDesperdicio" name="alertasDesperdicio" typeRef="string"><outputValues><text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text></outputValues></output><output id="Output_acaoRecomendada" name="acaoRecomendada" typeRef="string"><outputValues><text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text></outputValues></output><rule id="Rule_Contraindicacao_Metastatica">
        <description>Doenca metastatica (M1) geralmente contraindica cirurgia de grande porte</description>
        <inputEntry id="InputEntry_1_1"><text>"C50.x"</text></inputEntry>
        <inputEntry id="InputEntry_2_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_3_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_1"><text>"M1"</text></inputEntry>
        <inputEntry id="InputEntry_5_1"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_1"><text>"Doenca metastatica (M1). Mastectomia radical nao indicada - priorizar tratamento sistemico. Considerar mastectomia paliativa apenas em casos selecionados (sangramento/ulceracao)."</text></outputEntry>
        <outputEntry id="OutputEntry_3_1"><text>"NCCN 2023: M1 contraindica cirurgia radical exceto em situacoes paliativas especificas"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"PROT"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"NEGAR"</text></outputEntry></rule>

      
      <rule id="Rule_Contraindicacao_SemHistopatologia">
        <description>Mastectomia radical sem confirmacao histopatologica e inadmissivel</description>
        <inputEntry id="InputEntry_1_2"><text>"AUSENTE"</text></inputEntry>
        <inputEntry id="InputEntry_2_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_3_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_5_2"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_1_2"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_2"><text>"Ausencia de diagnostico oncologico confirmado. Mastectomia radical JAMAIS deve ser realizada sem confirmacao histopatologica de malignidade."</text></outputEntry>
        <outputEntry id="OutputEntry_3_2"><text>"SBM 2023: Confirmacao histologica obrigatoria antes de qualquer cirurgia oncologica"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"PROT"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"NEGAR"</text></outputEntry></rule>

      
      <rule id="Rule_Pendente_SemLaudo">
        <description>Laudo histopatologico obrigatorio para mastectomia radical</description>
        <inputEntry id="InputEntry_1_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_2_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_3_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_5_3"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_1_3"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_2_3"><text>"Pendente - Anexar laudo histopatologico (core biopsy ou biopsia excisional) confirmando malignidade (tipo histologico, grau, receptores hormonais, HER2)."</text></outputEntry>
        <outputEntry id="OutputEntry_3_3"><text>"NCCN 2023: Histopatologia completa obrigatoria para planejamento cirurgico oncologico"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"DOC"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"SOLICITAR_INFO"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_TumorAvancado">
        <description>Tumor localmente avancado tem indicacao de mastectomia radical</description>
        <inputEntry id="InputEntry_1_4"><text>"C50.x"</text></inputEntry>
        <inputEntry id="InputEntry_2_4"><text>"BIRADS_5", "BIRADS_6"</text></inputEntry>
        <inputEntry id="InputEntry_3_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_4"><text>"T3", "T4"</text></inputEntry>
        <inputEntry id="InputEntry_5_4"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_1_4"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_4"><text>"Aprovado - Tumor localmente avancado (T3-T4). Mastectomia radical com linfadenectomia axilar indicada. Avaliar neoadjuvancia se nao realizada."</text></outputEntry>
        <outputEntry id="OutputEntry_3_4"><text>"NCCN 2023: T3-T4 tem indicacao de mastectomia radical, idealmente apos neoadjuvancia"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_Multicentralidade">
        <description>Tumores multicentricos contraindicam cirurgia conservadora</description>
        <inputEntry id="InputEntry_1_5"><text>"C50.x"</text></inputEntry>
        <inputEntry id="InputEntry_2_5"><text>"BIRADS_5", "BIRADS_6"</text></inputEntry>
        <inputEntry id="InputEntry_3_5"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_5"><text>"T1", "T2"</text></inputEntry>
        <inputEntry id="InputEntry_5_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_1_5"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_5"><text>"Aprovado - Cancer de mama multicentrico ou recidiva local. Mastectomia radical indicada (cirurgia conservadora contraindicada)."</text></outputEntry>
        <outputEntry id="OutputEntry_3_5"><text>"SBM 2023: Multicentralidade contraindica cirurgia conservadora, indicando mastectomia"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_DCISExtenso">
        <description>DCIS extenso ou multicentrico pode indicar mastectomia</description>
        <inputEntry id="InputEntry_1_6"><text>"D05.x"</text></inputEntry>
        <inputEntry id="InputEntry_2_6"><text>"BIRADS_4", "BIRADS_5"</text></inputEntry>
        <inputEntry id="InputEntry_3_6"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_6"><text>"Tis"</text></inputEntry>
        <inputEntry id="InputEntry_5_6"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_1_6"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_6"><text>"Aprovado - Carcinoma in situ (DCIS) extenso ou multicentrico. Mastectomia indicada quando extensao/localizacao impede margens livres com cirurgia conservadora."</text></outputEntry>
        <outputEntry id="OutputEntry_3_6"><text>"NCCN 2023: DCIS extenso (&amp;gt;4cm) ou multicentrico pode indicar mastectomia"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      
      <rule id="Rule_Aprovado_OpcaoPaciente">
        <description>Paciente pode optar por mastectomia mesmo em T1-T2</description>
        <inputEntry id="InputEntry_1_7"><text>"C50.x"</text></inputEntry>
        <inputEntry id="InputEntry_2_7"><text>"BIRADS_5", "BIRADS_6"</text></inputEntry>
        <inputEntry id="InputEntry_3_7"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_7"><text>"T1", "T2", "M0"</text></inputEntry>
        <inputEntry id="InputEntry_5_7"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_1_7"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_2_7"><text>"Aprovado - Cancer de mama T1-T2. Mastectomia aprovada (opcao cirurgica valida mesmo quando cirurgia conservadora seria possivel, desde que paciente adequadamente informada)."</text></outputEntry>
        <outputEntry id="OutputEntry_3_7"><text>"NCCN 2023: Mastectomia e opcao valida em T1-T2 se preferencia informada da paciente"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"NENHUM"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"APROVAR"</text></outputEntry></rule>

      
      <rule id="Rule_Fallback_30602149">
        <description>Dados incompletos</description>
        <inputEntry id="InputEntry_1_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_2_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_3_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_4_8"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_5_8"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_1_8"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_2_8"><text>"Dados incompletos. Necessario: (1) CID C50.x confirmado, (2) Laudo histopatologico (tipo, grau, RE/RP/HER2), (3) Estadiamento TNM completo, (4) BIRADS se pre-operatorio."</text></outputEntry>
        <outputEntry id="OutputEntry_3_8"><text>"NCCN 2023: Documentacao oncologica completa obrigatoria para mastectomia radical"</text></outputEntry>
      <outputEntry id="OutputEntry_Added_4"><text>"DOC"</text></outputEntry><outputEntry id="OutputEntry_Added_5"><text>"SOLICITAR_INFO"</text></outputEntry></rule>
    </decisionTable>
  </decision>
</definitions>