<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/" xmlns:dmndi="https://www.omg.org/spec/DMN/20191111/DMNDI/" xmlns:dc="http://www.omg.org/spec/DMN/20180521/DC/" xmlns:di="http://www.omg.org/spec/DMN/20180521/DI/" xmlns:camunda="http://camunda.org/schema/1.0/dmn" id="definitions_car_dev_005" name="Marcapasso Leadless - Micra/Nanostim" namespace="http://camunda.org/schema/1.0/dmn" exporter="Camunda Modeler" exporterVersion="5.27.0">
  <decision id="CAR-DEV-005" name="Marcapasso Leadless - Indicação Clínica">
    <decisionTable id="decisionTable_car_dev_005" hitPolicy="FIRST">
      <input id="input_idade_car_dev_005" label="Idade do Paciente" camunda:inputVariable="idadePaciente">
        <inputExpression id="inputExpression_idade_car_dev_005" typeRef="integer">
          <text>idadePaciente</text>
        </inputExpression>
      </input>
      <input id="input_indicacao_car_dev_005" label="Indicação de MP" camunda:inputVariable="indicacaoMarcapasso">
        <inputExpression id="inputExpression_indicacao_car_dev_005" typeRef="string">
          <text>indicacaoMarcapasso</text>
        </inputExpression>
      </input>
      <input id="input_contraindicacao_car_dev_005" label="Contraindicação Transvenoso" camunda:inputVariable="contraindicacaoTransvenoso">
        <inputExpression id="inputExpression_contraindicacao_car_dev_005" typeRef="boolean">
          <text>contraindicacaoTransvenoso</text>
        </inputExpression>
      </input>
      <input id="input_infeccao_car_dev_005" label="História Infecção Dispositivo" camunda:inputVariable="historiaInfeccaoDispositivo">
        <inputExpression id="inputExpression_infeccao_car_dev_005" typeRef="boolean">
          <text>historiaInfeccaoDispositivo</text>
        </inputExpression>
      </input>
      <output id="output_resultado_car_dev_005" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="outputValues_resultado_car_dev_005">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>
      <output id="output_observacao_car_dev_005" label="Observação" name="observacao" typeRef="string" />
      <output id="output_fundamentacao_car_dev_005" label="Fundamentação" name="fundamentacao" typeRef="string" />
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdício" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" label="Ação Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- REPROVADO: Idade inadequada -->
      <rule id="rule_car_dev_005_r1">
        <inputEntry id="inputEntry_car_dev_005_r1_1">
          <text>&lt; 18</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r1_2">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r1_3">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r1_4">
          <text></text>
        </inputEntry>
        <outputEntry id="outputEntry_car_dev_005_r1_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r1_2">
          <text>"Marcapasso leadless não aprovado para menores de 18 anos"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r1_3">
          <text>"Ausência de estudos em pediatria. Considerar MP convencional (SBC Diretrizes 2023)"</text>
        </outputEntry>        <outputEntry id="OutputEntry_rule_car_dev_005_r1_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_rule_car_dev_005_r1_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- REPROVADO: Sem indicação para MP -->
      <rule id="rule_car_dev_005_r2">
        <inputEntry id="inputEntry_car_dev_005_r2_1">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r2_2">
          <text>"nenhuma"</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r2_3">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r2_4">
          <text></text>
        </inputEntry>
        <outputEntry id="outputEntry_car_dev_005_r2_1">
          <text>"Reprovado"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r2_2">
          <text>"Ausência de indicação clínica para marcapasso"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r2_3">
          <text>"Necessário diagnóstico de bradiarritmia sintomática (HRS 2023)"</text>
        </outputEntry>        <outputEntry id="OutputEntry_rule_car_dev_005_r2_alertasDesperdicio"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_rule_car_dev_005_r2_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: Indicação + contraindicação para transvenoso -->
      <rule id="rule_car_dev_005_r3">
        <inputEntry id="inputEntry_car_dev_005_r3_1">
          <text>&gt;= 18</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r3_2">
          <text>"BAV_avancado","BAV_total","doenca_no_sinusal"</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r3_3">
          <text>true</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r3_4">
          <text></text>
        </inputEntry>
        <outputEntry id="outputEntry_car_dev_005_r3_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r3_2">
          <text>"Aprovado Micra/Nanostim por contraindicação ao sistema transvenoso"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r3_3">
          <text>"Indicação Classe I para acesso vascular inadequado, infecção prévia ou necessidade de hemodiálise (HRS Expert Consensus 2023)"</text>
        </outputEntry>        <outputEntry id="OutputEntry_rule_car_dev_005_r3_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_rule_car_dev_005_r3_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVADO: História infecção dispositivo -->
      <rule id="rule_car_dev_005_r4">
        <inputEntry id="inputEntry_car_dev_005_r4_1">
          <text>&gt;= 18</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r4_2">
          <text>"BAV_avancado","BAV_total","doenca_no_sinusal"</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r4_3">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r4_4">
          <text>true</text>
        </inputEntry>
        <outputEntry id="outputEntry_car_dev_005_r4_1">
          <text>"Aprovado"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r4_2">
          <text>"Aprovado Micra/Nanostim por histórico de infecção de dispositivo"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r4_3">
          <text>"Redução de 70% risco infecção vs MP convencional. Indicação Classe IIa (SBC/HRS 2023)"</text>
        </outputEntry>        <outputEntry id="OutputEntry_rule_car_dev_005_r4_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_rule_car_dev_005_r4_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- PENDENTE: Avaliação adicional necessária -->
      <rule id="rule_car_dev_005_r5">
        <inputEntry id="inputEntry_car_dev_005_r5_1">
          <text>&gt;= 18</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r5_2">
          <text>"BAV_avancado","BAV_total","doenca_no_sinusal"</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r5_3">
          <text>false</text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_r5_4">
          <text>false</text>
        </inputEntry>
        <outputEntry id="outputEntry_car_dev_005_r5_1">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r5_2">
          <text>"Avaliar custo-benefício Micra vs MP convencional"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_r5_3">
          <text>"Na ausência de contraindicação específica, considerar MP transvenoso como padrão (custo 3-4x menor). Leadless reservado para casos selecionados (HRS 2023)"</text>
        </outputEntry>        <outputEntry id="OutputEntry_rule_car_dev_005_r5_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_rule_car_dev_005_r5_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="rule_car_dev_005_fallback">
        <inputEntry id="inputEntry_car_dev_005_fb_1">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_fb_2">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_fb_3">
          <text></text>
        </inputEntry>
        <inputEntry id="inputEntry_car_dev_005_fb_4">
          <text></text>
        </inputEntry>
        <outputEntry id="outputEntry_car_dev_005_fb_1">
          <text>"Pendente"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_fb_2">
          <text>"Caso requer avaliação adicional por cardiologista/eletrofisiologista"</text>
        </outputEntry>
        <outputEntry id="outputEntry_car_dev_005_fb_3">
          <text>"Documentação insuficiente para decisão automatizada"</text>
        </outputEntry>        <outputEntry id="OutputEntry_rule_car_dev_005_fallback_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_rule_car_dev_005_fallback_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>
    </decisionTable>
  </decision>
  <dmndi:DMNDI>
    <dmndi:DMNDiagram id="DMNDiagram_car_dev_005">
      <dmndi:DMNShape id="DMNShape_car_dev_005" dmnElementRef="CAR-DEV-005">
        <dc:Bounds height="80" width="180" x="160" y="100" />
      </dmndi:DMNShape>
    </dmndi:DMNDiagram>
  </dmndi:DMNDI>
</definitions>
