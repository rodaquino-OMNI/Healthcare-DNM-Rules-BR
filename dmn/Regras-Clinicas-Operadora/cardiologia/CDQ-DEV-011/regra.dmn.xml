<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_CDQ_DEV_011"
             name="Implante de LVAD (Dispositivo de Assistencia Ventricular Esquerda)"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    REGRA: CDQ-DEV-011
    Procedimento: Implante de LVAD
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS:
    IC avancada refrataria (INTERMACS 1-4), ponte para transplante,
    terapia de destino em contraindicacao a transplante

    CONTRAINDICACOES:
    Disfuncao VD severa isolada, comorbidades proibitivas, falta suporte social

    REFERENCIAS TECNICAS:
    ISHLT MCS Guidelines 2024, SBC IC Avancada 2023

    ===============================================================================
  -->

  <decision id="Decision_CDQ_DEV_011" name="Regra Clinica - LVAD">
    <decisionTable id="DecisionTable_CDQ_DEV_011" hitPolicy="FIRST">

      <input id="Input_condicaoPaciente_011" label="Condicao do Paciente" camunda:inputVariable="condicaoPaciente">
        <inputExpression id="InputExpression_condicaoPaciente_011" typeRef="string">
          <text>condicaoPaciente</text>
        </inputExpression>
        <inputValues id="InputValues_condicaoPaciente_011">
          <text>"ICAvancadaRefrataria","ChoqueCardiogenico","DependenteInoTropico","INTERMACS1","INTERMACS2","INTERMACS3","INTERMACS4"</text>
        </inputValues>
      </input>

      <input id="Input_historicoClinico_011" label="Historico Clinico" camunda:inputVariable="historicoClinico">
        <inputExpression id="InputExpression_historicoClinico_011" typeRef="string">
          <text>historicoClinico</text>
        </inputExpression>
        <inputValues id="InputValues_historicoClinico_011">
          <text>"Adequado","Incompleto","NaoDocumentado"</text>
        </inputValues>
      </input>

      <input id="Input_classeIndicacao_011" label="Classe de Indicacao" camunda:inputVariable="classeIndicacao">
        <inputExpression id="InputExpression_classeIndicacao_011" typeRef="string">
          <text>classeIndicacao</text>
        </inputExpression>
        <inputValues id="InputValues_classeIndicacao_011">
          <text>"Classe I","Classe IIa","Classe IIb","Classe III"</text>
        </inputValues>
      </input>

      <input id="Input_estrategiaLVAD_011" label="Estrategia LVAD" camunda:inputVariable="estrategiaLVAD">
        <inputExpression id="InputExpression_estrategiaLVAD_011" typeRef="string">
          <text>estrategiaLVAD</text>
        </inputExpression>
        <inputValues id="InputValues_estrategiaLVAD_011">
          <text>"PonteTransplante","TerapiaDestino","PonteDecisao","PonteRecuperacao"</text>
        </inputValues>
      </input>

      <input id="Input_expectativaVidaSuperior1Ano_011" label="Expectativa de Vida maior 1 Ano" camunda:inputVariable="expectativaVidaSuperior1Ano">
        <inputExpression id="InputExpression_expectativaVidaSuperior1Ano_011" typeRef="boolean">
          <text>expectativaVidaSuperior1Ano</text>
        </inputExpression>
      </input>

      <output id="Output_resultado_011" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado_011">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao_011" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao_011" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdício" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" label="Ação Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- CONTRAINDICACOES -->
      <rule id="Rule_Contraind_ClasseIII_011">
        <description>Contraindicacao: Classe III</description>
        <inputEntry id="InputEntry_Contraind_ClasseIII_011_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_011_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_011_3"><text>"Classe III"</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_011_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_011_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_011_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_011_observacao"><text>"LVAD nao indicado - Classe III"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_011_fundamentacao"><text>"ISHLT MCS 2024 - Contraindicacoes absolutas presentes"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ClasseIII_011_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ClasseIII_011_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_ExpVida_011">
        <description>Contraindicacao: Expectativa vida muito limitada</description>
        <inputEntry id="InputEntry_Contraind_ExpVida_011_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_011_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_011_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_011_4"><text>"TerapiaDestino"</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_011_5"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_011_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_011_observacao"><text>"Expectativa vida insuficiente para terapia destino"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_011_fundamentacao"><text>"ISHLT 2024 - DT requer expectativa vida maior 2 anos por comorbidades"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ExpVida_011_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ExpVida_011_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES Classe I -->
      <rule id="Rule_Aprovado_ClasseI_BTT_011">
        <description>Aprovado: Ponte para transplante Classe I</description>
        <inputEntry id="InputEntry_Aprovado_CI_BTT_011_1"><text>"ICAvancadaRefrataria","INTERMACS1","INTERMACS2","INTERMACS3"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BTT_011_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BTT_011_3"><text>"Classe I"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BTT_011_4"><text>"PonteTransplante"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BTT_011_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_BTT_011_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_BTT_011_observacao"><text>"LVAD como ponte para transplante - Classe I"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_BTT_011_fundamentacao"><text>"ISHLT MCS 2024, SBC IC 2023 - BTT indicado em candidatos a Tx com deterioracao"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_BTT_011_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_BTT_011_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseI_DT_011">
        <description>Aprovado: Terapia de destino Classe I</description>
        <inputEntry id="InputEntry_Aprovado_CI_DT_011_1"><text>"ICAvancadaRefrataria","DependenteInoTropico"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DT_011_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DT_011_3"><text>"Classe I"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DT_011_4"><text>"TerapiaDestino"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DT_011_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_DT_011_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_DT_011_observacao"><text>"LVAD como terapia destino - Classe I"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_DT_011_fundamentacao"><text>"ISHLT 2024, MOMENTUM 3 Trial - DT indicado se contraindicacao a transplante"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_DT_011_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_DT_011_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseIIa_011">
        <description>Aprovado: Classe IIa</description>
        <inputEntry id="InputEntry_Aprovado_CIIa_011_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_011_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_011_3"><text>"Classe IIa"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_011_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_011_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_011_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_011_observacao"><text>"Classe IIa - LVAD provavelmente util"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_011_fundamentacao"><text>"ISHLT 2024"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIa_011_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIa_011_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseIIb_011">
        <description>Aprovado: Classe IIb</description>
        <inputEntry id="InputEntry_Aprovado_CIIb_011_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_011_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_011_3"><text>"Classe IIb"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_011_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_011_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_011_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_011_observacao"><text>"Classe IIb - pode ser considerado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_011_fundamentacao"><text>"SBC IC 2023"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIb_011_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIb_011_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACAO -->
      <rule id="Rule_Reprovado_Hist_011">
        <description>Reprovado: Documentacao inadequada</description>
        <inputEntry id="InputEntry_Reprovado_Hist_011_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_011_2"><text>"Incompleto","NaoDocumentado"</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_011_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_011_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_011_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_011_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_011_observacao"><text>"Documentacao insuficiente para LVAD"</text></outputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_011_fundamentacao"><text>"ANS RN 465/2021 - Procedimento alta complexidade requer documentacao completa"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Reprovado_Hist_011_alertasDesperdicio"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Reprovado_Hist_011_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_CDQ_DEV_011">
        <description>Regra padrao</description>
        <inputEntry id="InputEntry_Fallback_011_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_011_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_011_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_011_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_011_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_011_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_011_observacao"><text>"Caso requer avaliacao por equipe MCS especializada"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_011_fundamentacao"><text>"ISHLT 2024 - Decisao multidisciplinar obrigatoria"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Fallback_CDQ_DEV_011_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Fallback_CDQ_DEV_011_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
