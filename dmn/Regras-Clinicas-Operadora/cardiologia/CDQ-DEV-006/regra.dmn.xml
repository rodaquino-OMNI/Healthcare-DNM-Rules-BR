<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_CDQ_DEV_006"
             name="Implante de Marcapasso Bicameral (DDD)"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    REGRA: CDQ-DEV-006
    Procedimento: Implante de Marcapasso Bicameral (DDD)
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (DUT/ANS):
    Bradicardia sintomatica com necessidade de sincronia AV, bloqueio AV avancado,
    doenca do no sinusal com incompetencia cronotropica

    CONTRAINDICACOES:
    FA permanente (sem beneficio AV), expectativa de vida menor que 1 ano,
    infeccao ativa sistemica

    REFERENCIAS TECNICAS:
    SBC/DECA Estimulacao Cardiaca 2023, HRS/EHRA Pacing Guidelines 2024

    SISTEMA DE CLASSIFICACAO SBC/DECA/ACC/AHA:
    - Classe I: Procedimento indicado e essencial (Nivel de Evidencia A/B)
    - Classe IIa: Procedimento provavelmente util e razoavel (Evidencia B)
    - Classe IIb: Procedimento pode ser considerado (Evidencia C)
    - Classe III: Procedimento nao indicado ou potencialmente prejudicial

    ===============================================================================
  -->

  <decision id="Decision_CDQ_DEV_006" name="Regra Clinica - Marcapasso DDD">
    <decisionTable id="DecisionTable_CDQ_DEV_006" hitPolicy="FIRST">

      <!-- ========== INPUTS (5 - Padrao Cardiologia com CLASS) ========== -->

      <input id="Input_condicaoPaciente_006" label="Condicao do Paciente" camunda:inputVariable="condicaoPaciente">
        <inputExpression id="InputExpression_condicaoPaciente_006" typeRef="string">
          <text>condicaoPaciente</text>
        </inputExpression>
        <inputValues id="InputValues_condicaoPaciente_006">
          <text>"BloqueioAVTotal","BloqueioAV2Grau","DoencaNoSinusal","BradicardiaSintomatica","SincopeBradiarritmia"</text>
        </inputValues>
      </input>

      <input id="Input_historicoClinico_006" label="Historico Clinico" camunda:inputVariable="historicoClinico">
        <inputExpression id="InputExpression_historicoClinico_006" typeRef="string">
          <text>historicoClinico</text>
        </inputExpression>
        <inputValues id="InputValues_historicoClinico_006">
          <text>"Adequado","Incompleto","NaoDocumentado"</text>
        </inputValues>
      </input>

      <input id="Input_classeIndicacao_006" label="Classe de Indicacao (SBC/ACC/AHA)" camunda:inputVariable="classeIndicacao">
        <inputExpression id="InputExpression_classeIndicacao_006" typeRef="string">
          <text>classeIndicacao</text>
        </inputExpression>
        <inputValues id="InputValues_classeIndicacao_006">
          <text>"Classe I","Classe IIa","Classe IIb","Classe III"</text>
        </inputValues>
      </input>

      <input id="Input_ritmoCardiaco_006" label="Ritmo Cardiaco Predominante" camunda:inputVariable="ritmoCardiaco">
        <inputExpression id="InputExpression_ritmoCardiaco_006" typeRef="string">
          <text>ritmoCardiaco</text>
        </inputExpression>
        <inputValues id="InputValues_ritmoCardiaco_006">
          <text>"RitmoSinusal","FAPermanente","FAParoxistica","FlutterAtrial"</text>
        </inputValues>
      </input>

      <input id="Input_expectativaVidaSuperior1Ano_006" label="Expectativa de Vida maior 1 Ano" camunda:inputVariable="expectativaVidaSuperior1Ano">
        <inputExpression id="InputExpression_expectativaVidaSuperior1Ano_006" typeRef="boolean">
          <text>expectativaVidaSuperior1Ano</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado_006" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado_006">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao_006" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao_006" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdício" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" label="Ação Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- ========== RULES ========== -->

      <!-- CONTRAINDICACOES (Classe III) -->
      <rule id="Rule_Contraind_ClasseIII_006">
        <description>Contraindicacao: Procedimento Classe III (nao indicado)</description>
        <inputEntry id="InputEntry_Contraind_ClasseIII_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_006_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_006_3"><text>"Classe III"</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_006_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_006_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_006_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_006_observacao"><text>"Procedimento nao indicado conforme classificacao Classe III"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_006_fundamentacao"><text>"SBC/DECA Estimulacao 2023, HRS/EHRA 2024 - Classe III: Marcapasso DDD nao indicado ou potencialmente prejudicial"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ClasseIII_006_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ClasseIII_006_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_ExpectativaVida_006">
        <description>Contraindicacao: Expectativa de vida menor que 1 ano</description>
        <inputEntry id="InputEntry_Contraind_ExpVida_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_006_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_006_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_006_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_006_5"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_006_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_006_observacao"><text>"Expectativa de vida insuficiente para beneficio do procedimento"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_006_fundamentacao"><text>"SBC/DECA 2023 - Implante de dispositivos requer expectativa de vida compativel com beneficio clinico esperado"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ExpectativaVida_006_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ExpectativaVida_006_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_FAPermanente_006">
        <description>Contraindicacao: FA permanente - DDD nao oferece beneficio AV</description>
        <inputEntry id="InputEntry_Contraind_FA_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_FA_006_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_FA_006_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_FA_006_4"><text>"FAPermanente"</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_FA_006_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_FA_006_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_FA_006_observacao"><text>"FA permanente: indicar marcapasso VVI/VVIR em vez de DDD"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_FA_006_fundamentacao"><text>"SBC/DECA 2023, HRS 2024 - Em FA permanente, estimulacao bicameral nao oferece beneficio adicional"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_FAPermanente_006_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_FAPermanente_006_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES Classe I (Indicacao Forte) -->
      <rule id="Rule_Aprovado_ClasseI_BloqueioAV_006">
        <description>Aprovado: Bloqueio AV com Classe I</description>
        <inputEntry id="InputEntry_Aprovado_CI_BAV_006_1"><text>"BloqueioAVTotal","BloqueioAV2Grau"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BAV_006_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BAV_006_3"><text>"Classe I"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BAV_006_4"><text>"RitmoSinusal","FAParoxistica"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_BAV_006_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_BAV_006_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_BAV_006_observacao"><text>"Bloqueio AV avancado com indicacao Classe I - Procedimento essencial"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_BAV_006_fundamentacao"><text>"SBC/DECA 2023, HRS/EHRA 2024 - Classe I: Bloqueio AV sintomatico, sincronia AV preservada com DDD (Nivel Evidencia A)"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_BloqueioAV_006_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_BloqueioAV_006_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseI_DNS_006">
        <description>Aprovado: Doenca do No Sinusal com Classe I</description>
        <inputEntry id="InputEntry_Aprovado_CI_DNS_006_1"><text>"DoencaNoSinusal","BradicardiaSintomatica"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DNS_006_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DNS_006_3"><text>"Classe I"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DNS_006_4"><text>"RitmoSinusal"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_DNS_006_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_DNS_006_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_DNS_006_observacao"><text>"Doenca do No Sinusal sintomatica - DDD indicado para preservar sincronia AV"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_DNS_006_fundamentacao"><text>"SBC/DECA 2023 - DNS com bradicardia sintomatica: DDD superior a VVI para prevenir FA e sindrome do marcapasso"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_DNS_006_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_DNS_006_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES Classe IIa -->
      <rule id="Rule_Aprovado_ClasseIIa_006">
        <description>Aprovado: Indicacao Classe IIa - Procedimento provavelmente util</description>
        <inputEntry id="InputEntry_Aprovado_CIIa_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_006_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_006_3"><text>"Classe IIa"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_006_4"><text>"RitmoSinusal","FAParoxistica"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_006_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_006_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_006_observacao"><text>"Indicacao Classe IIa - Procedimento razoavel e provavelmente util"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_006_fundamentacao"><text>"SBC/DECA 2023, HRS/EHRA 2024 - Classe IIa: Beneficio maior Risco, marcapasso DDD e razoavel"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIa_006_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIa_006_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES Classe IIb -->
      <rule id="Rule_Aprovado_ClasseIIb_006">
        <description>Aprovado: Indicacao Classe IIb - Procedimento pode ser considerado</description>
        <inputEntry id="InputEntry_Aprovado_CIIb_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_006_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_006_3"><text>"Classe IIb"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_006_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_006_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_006_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_006_observacao"><text>"Indicacao Classe IIb - Procedimento pode ser considerado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_006_fundamentacao"><text>"SBC/DECA 2023, HRS/EHRA 2024 - Classe IIb: Beneficio maior ou igual Risco, procedimento pode ser util"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIb_006_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIb_006_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACOES - Documentacao Inadequada -->
      <rule id="Rule_Reprovado_HistoricoInsuficiente_006">
        <description>Reprovado: Historico clinico insuficiente ou nao documentado</description>
        <inputEntry id="InputEntry_Reprovado_Hist_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_006_2"><text>"Incompleto","NaoDocumentado"</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_006_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_006_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_006_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_006_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_006_observacao"><text>"Documentacao clinica insuficiente para justificar o procedimento"</text></outputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_006_fundamentacao"><text>"ANS RN 465/2021: Necessaria documentacao clinica adequada para autorizacao de procedimentos"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Reprovado_HistoricoInsuficiente_006_alertasDesperdicio"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Reprovado_HistoricoInsuficiente_006_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_CDQ_DEV_006">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_006_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_006_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_006_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_006_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_006_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_006_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_006_observacao"><text>"Caso requer analise clinica adicional - criterios nao totalmente atendidos"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_006_fundamentacao"><text>"Avaliacao individualizada necessaria conforme complexidade clinica e diretrizes SBC/DECA"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Fallback_CDQ_DEV_006_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Fallback_CDQ_DEV_006_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
