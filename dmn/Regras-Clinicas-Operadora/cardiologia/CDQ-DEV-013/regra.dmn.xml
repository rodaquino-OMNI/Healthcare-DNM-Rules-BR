<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_CDQ_DEV_013"
             name="Implante de Monitor de Eventos Implantavel (ILR)"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    REGRA: CDQ-DEV-013
    Procedimento: Implante de Loop Recorder (ILR/ICM)
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS:
    Sincope recorrente inexplicada, AVC criptogenico (pesquisa FA),
    palpitacoes recorrentes sem diagnostico

    CONTRAINDICACOES:
    Diagnostico ja estabelecido, indicacao clara de marcapasso/CDI

    REFERENCIAS TECNICAS:
    ESC Syncope 2024, SBC/DECA 2023, AHA/ASA Stroke 2024

    ===============================================================================
  -->

  <decision id="Decision_CDQ_DEV_013" name="Regra Clinica - ILR">
    <decisionTable id="DecisionTable_CDQ_DEV_013" hitPolicy="FIRST">

      <input id="Input_condicaoPaciente_013" label="Condicao do Paciente" camunda:inputVariable="condicaoPaciente">
        <inputExpression id="InputExpression_condicaoPaciente_013" typeRef="string">
          <text>condicaoPaciente</text>
        </inputExpression>
        <inputValues id="InputValues_condicaoPaciente_013">
          <text>"SincopeInexplicada","AVCCriptogenico","PalpitacoesRecorrentes","PreSincopeRecorrente","BradicardiaIntermitente"</text>
        </inputValues>
      </input>

      <input id="Input_historicoClinico_013" label="Historico Clinico" camunda:inputVariable="historicoClinico">
        <inputExpression id="InputExpression_historicoClinico_013" typeRef="string">
          <text>historicoClinico</text>
        </inputExpression>
        <inputValues id="InputValues_historicoClinico_013">
          <text>"Adequado","Incompleto","NaoDocumentado"</text>
        </inputValues>
      </input>

      <input id="Input_classeIndicacao_013" label="Classe de Indicacao" camunda:inputVariable="classeIndicacao">
        <inputExpression id="InputExpression_classeIndicacao_013" typeRef="string">
          <text>classeIndicacao</text>
        </inputExpression>
        <inputValues id="InputValues_classeIndicacao_013">
          <text>"Classe I","Classe IIa","Classe IIb","Classe III"</text>
        </inputValues>
      </input>

      <input id="Input_investigacaoPreviaCompleta_013" label="Investigacao Previa Completa" camunda:inputVariable="investigacaoPreviaCompleta">
        <inputExpression id="InputExpression_investigacaoPreviaCompleta_013" typeRef="boolean">
          <text>investigacaoPreviaCompleta</text>
        </inputExpression>
      </input>

      <input id="Input_expectativaVidaSuperior1Ano_013" label="Expectativa de Vida maior 1 Ano" camunda:inputVariable="expectativaVidaSuperior1Ano">
        <inputExpression id="InputExpression_expectativaVidaSuperior1Ano_013" typeRef="boolean">
          <text>expectativaVidaSuperior1Ano</text>
        </inputExpression>
      </input>

      <output id="Output_resultado_013" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado_013">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao_013" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao_013" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdício" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <output id="Output_acaoRecomendada" label="Ação Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>


      <!-- CONTRAINDICACOES -->
      <rule id="Rule_Contraind_ClasseIII_013">
        <description>Contraindicacao: Classe III</description>
        <inputEntry id="InputEntry_Contraind_ClasseIII_013_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_013_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_013_3"><text>"Classe III"</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_013_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ClasseIII_013_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_013_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_013_observacao"><text>"ILR nao indicado - Classe III"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ClasseIII_013_fundamentacao"><text>"ESC Syncope 2024"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ClasseIII_013_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ClasseIII_013_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_ExpVida_013">
        <description>Contraindicacao: Expectativa vida menor 1 ano</description>
        <inputEntry id="InputEntry_Contraind_ExpVida_013_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_013_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_013_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_013_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_ExpVida_013_5"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_013_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_013_observacao"><text>"Expectativa vida insuficiente"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_ExpVida_013_fundamentacao"><text>"ILR diagnostico requer seguimento prolongado"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ExpVida_013_alertasDesperdicio"><text>"PROT"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_ExpVida_013_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_InvestigacaoIncompleta_013">
        <description>Avaliar: Investigacao previa incompleta</description>
        <inputEntry id="InputEntry_Contraind_Inv_013_1"><text>"SincopeInexplicada"</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Inv_013_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Inv_013_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Inv_013_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_Contraind_Inv_013_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Contraind_Inv_013_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_Inv_013_observacao"><text>"Completar investigacao basica antes de ILR"</text></outputEntry>
        <outputEntry id="OutputEntry_Contraind_Inv_013_fundamentacao"><text>"ESC 2024 - Realizar ECG, Holter, Tilt antes de ILR"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_InvestigacaoIncompleta_013_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Contraind_InvestigacaoIncompleta_013_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- APROVACOES Classe I -->
      <rule id="Rule_Aprovado_ClasseI_Sincope_013">
        <description>Aprovado: Sincope recorrente inexplicada</description>
        <inputEntry id="InputEntry_Aprovado_CI_Sinc_013_1"><text>"SincopeInexplicada"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_Sinc_013_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_Sinc_013_3"><text>"Classe I"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_Sinc_013_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_Sinc_013_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_Sinc_013_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_Sinc_013_observacao"><text>"ILR indicado - sincope recorrente apos investigacao completa"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_Sinc_013_fundamentacao"><text>"ESC Syncope 2024 - ILR Classe I para sincope inexplicada recorrente"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_Sincope_013_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_Sincope_013_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseI_AVC_013">
        <description>Aprovado: AVC criptogenico</description>
        <inputEntry id="InputEntry_Aprovado_CI_AVC_013_1"><text>"AVCCriptogenico"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_AVC_013_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_AVC_013_3"><text>"Classe I","Classe IIa"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_AVC_013_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CI_AVC_013_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_AVC_013_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_AVC_013_observacao"><text>"ILR indicado - pesquisa FA em AVC criptogenico"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CI_AVC_013_fundamentacao"><text>"AHA/ASA 2024, CRYSTAL-AF Trial - Deteccao FA em 30% dos casos"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_AVC_013_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseI_AVC_013_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseIIa_013">
        <description>Aprovado: Classe IIa</description>
        <inputEntry id="InputEntry_Aprovado_CIIa_013_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_013_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_013_3"><text>"Classe IIa"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_013_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIa_013_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_013_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_013_observacao"><text>"Classe IIa - ILR provavelmente util"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIa_013_fundamentacao"><text>"ESC 2024"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIa_013_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIa_013_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ClasseIIb_013">
        <description>Aprovado: Classe IIb</description>
        <inputEntry id="InputEntry_Aprovado_CIIb_013_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_013_2"><text>"Adequado"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_013_3"><text>"Classe IIb"</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_013_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Aprovado_CIIb_013_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_013_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_013_observacao"><text>"Classe IIb - pode ser considerado"</text></outputEntry>
        <outputEntry id="OutputEntry_Aprovado_CIIb_013_fundamentacao"><text>"SBC/DECA 2023"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIb_013_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Aprovado_ClasseIIb_013_acaoRecomendada"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACAO -->
      <rule id="Rule_Reprovado_Hist_013">
        <description>Reprovado: Documentacao inadequada</description>
        <inputEntry id="InputEntry_Reprovado_Hist_013_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_013_2"><text>"Incompleto","NaoDocumentado"</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_013_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_013_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Reprovado_Hist_013_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_013_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_013_observacao"><text>"Documentacao insuficiente"</text></outputEntry>
        <outputEntry id="OutputEntry_Reprovado_Hist_013_fundamentacao"><text>"ANS RN 465/2021"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Reprovado_Hist_013_alertasDesperdicio"><text>"DOC"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Reprovado_Hist_013_acaoRecomendada"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK -->
      <rule id="Rule_Fallback_CDQ_DEV_013">
        <description>Regra padrao</description>
        <inputEntry id="InputEntry_Fallback_013_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_013_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_013_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_013_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_013_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_013_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_013_observacao"><text>"Analise adicional necessaria"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_013_fundamentacao"><text>"Avaliacao especializada"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Fallback_CDQ_DEV_013_alertasDesperdicio"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OutputEntry_Rule_Fallback_CDQ_DEV_013_acaoRecomendada"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
