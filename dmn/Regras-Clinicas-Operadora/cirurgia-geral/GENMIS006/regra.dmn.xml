<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_GEN_MIS_006"
             name="Port-a-Cath - Indicacoes de Implante"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    CODIGO: GEN-MIS-006
    Procedimento: Port-a-Cath (Cateter Totalmente Implantavel) - Indicacoes
    Especialidade: Cirurgia Geral - Procedimentos Diversos
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES:
    - Quimioterapia prolongada (> 6 meses)
    - Nutricao parenteral prolongada
    - Acesso venoso dificil + necessidade frequente
    - Antibioticoterapia prolongada
    - Transfusoes frequentes

    CONTRAINDICACOES:
    - Infeccao ativa sistemica ou local
    - Coagulopatia nao corrigida
    - Bacteremia recente (< 48h de hemoculturas negativas)
    - Trombose de veia cava superior

    REFERENCIAS TECNICAS:
    - INS Standards 2021 (Infusion Nursing Society)
    - ESPEN Guidelines Access 2021
    - INCA Protocolos 2022

    ===============================================================================
  -->

  <decision id="Decision_GEN_MIS_006" name="Regra Clinica - Port-a-Cath">
    <decisionTable id="DecisionTable_GEN_MIS_006" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_indicacaoPrincipal" label="Indicacao Principal" camunda:inputVariable="indicacaoPrincipal">
        <inputExpression id="InputExpression_indicacaoPrincipal" typeRef="string">
          <text>indicacaoPrincipal</text>
        </inputExpression>
        <inputValues id="InputValues_indicacaoPrincipal">
          <text>"Quimioterapia","NutricaoParenteral","Antibioticoterapia","Transfusoes","AcessoDificil","Outros"</text>
        </inputValues>
      </input>

      <input id="Input_duracaoPrevistaUso" label="Duracao Prevista de Uso (meses)" camunda:inputVariable="duracaoPrevistaUso">
        <inputExpression id="InputExpression_duracaoPrevistaUso" typeRef="number">
          <text>duracaoPrevistaUso</text>
        </inputExpression>
      </input>

      <input id="Input_infeccaoAtiva" label="Infeccao Ativa" camunda:inputVariable="infeccaoAtiva">
        <inputExpression id="InputExpression_infeccaoAtiva" typeRef="string">
          <text>infeccaoAtiva</text>
        </inputExpression>
        <inputValues id="InputValues_infeccaoAtiva">
          <text>"Ausente","LocalControlada","Sistemica","Bacteremia"</text>
        </inputValues>
      </input>

      <input id="Input_coagulopatia" label="Coagulopatia" camunda:inputVariable="coagulopatia">
        <inputExpression id="InputExpression_coagulopatia" typeRef="string">
          <text>coagulopatia</text>
        </inputExpression>
        <inputValues id="InputValues_coagulopatia">
          <text>"Normal","LeveCorrigida","ModeradaCorrigida","Grave"</text>
        </inputValues>
      </input>

      <input id="Input_tromboseVenosa" label="Trombose Venosa Central" camunda:inputVariable="tromboseVenosa">
        <inputExpression id="InputExpression_tromboseVenosa" typeRef="string">
          <text>tromboseVenosa</text>
        </inputExpression>
        <inputValues id="InputValues_tromboseVenosa">
          <text>"Ausente","JugularUnilateral","SubclaviaUnilateral","VCS","Bilateral"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== REGRAS DE REPROVACAO ========== -->

      <rule id="Rule_Reprovado_Bacteremia">
        <description>Reprovado: Bacteremia ativa</description>
        <inputEntry id="IE_Rep1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_3"><text>"Bacteremia","Sistemica"</text></inputEntry>
        <inputEntry id="IE_Rep1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep1_2"><text>"Infeccao sistemica ou bacteremia - tratar primeiro, aguardar 48-72h de hemoculturas negativas"</text></outputEntry>
        <outputEntry id="OE_Rep1_3"><text>"INS 2021 - Implante de cateter contraindicado durante infeccao ativa"</text></outputEntry>
      <outputEntry id="OE_Reprovado_Bacteremia_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_Bacteremia_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Reprovado_TromboseVCS">
        <description>Reprovado: Trombose de veia cava superior</description>
        <inputEntry id="IE_Rep2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep2_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep2_5"><text>"VCS","Bilateral"</text></inputEntry>
        <outputEntry id="OE_Rep2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep2_2"><text>"Trombose de VCS ou bilateral - anticoagulacao primeiro, considerar acesso femoral"</text></outputEntry>
        <outputEntry id="OE_Rep2_3"><text>"ESPEN 2021 - Trombose central contraindica acesso cervicotoracico"</text></outputEntry>
      <outputEntry id="OE_Reprovado_TromboseVCS_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_TromboseVCS_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Reprovado_CoagulopatiaGrave">
        <description>Reprovado: Coagulopatia grave nao corrigida</description>
        <inputEntry id="IE_Rep3_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep3_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep3_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep3_4"><text>"Grave"</text></inputEntry>
        <inputEntry id="IE_Rep3_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep3_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep3_2"><text>"Coagulopatia grave - corrigir antes do procedimento (plaquetas &gt; 50k, INR &lt; 1.5)"</text></outputEntry>
        <outputEntry id="OE_Rep3_3"><text>"INS 2021 - Correcao de coagulopatia obrigatoria antes de puncao central"</text></outputEntry>
      <outputEntry id="OE_Reprovado_CoagulopatiaGrave_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_CoagulopatiaGrave_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Reprovado_UsoCurto">
        <description>Reprovado: Duracao prevista muito curta</description>
        <inputEntry id="IE_Rep4_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep4_2"><text>&lt; 3</text></inputEntry>
        <inputEntry id="IE_Rep4_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep4_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep4_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep4_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep4_2"><text>"Uso previsto &lt; 3 meses - preferir PICC ou cateter semi-implantavel"</text></outputEntry>
        <outputEntry id="OE_Rep4_3"><text>"ESPEN 2021 - Port indicado para uso &gt; 3 meses ou intermitente prolongado"</text></outputEntry>
      <outputEntry id="OE_Reprovado_UsoCurto_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_UsoCurto_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- ========== REGRAS DE APROVACAO ========== -->

      <rule id="Rule_Aprovado_QuimioLonga">
        <description>Aprovado: Quimioterapia prolongada</description>
        <inputEntry id="IE_Apr1_1"><text>"Quimioterapia"</text></inputEntry>
        <inputEntry id="IE_Apr1_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_Apr1_3"><text>"Ausente","LocalControlada"</text></inputEntry>
        <inputEntry id="IE_Apr1_4"><text>"Normal","LeveCorrigida","ModeradaCorrigida"</text></inputEntry>
        <inputEntry id="IE_Apr1_5"><text>"Ausente","JugularUnilateral","SubclaviaUnilateral"</text></inputEntry>
        <outputEntry id="OE_Apr1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr1_2"><text>"Quimioterapia prolongada - port-a-cath indicado para preservar veias perifericas"</text></outputEntry>
        <outputEntry id="OE_Apr1_3"><text>"INCA 2022 - Port e dispositivo padrao para QT &gt; 6 meses"</text></outputEntry>
      <outputEntry id="OE_Aprovado_QuimioLonga_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_QuimioLonga_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_NPT">
        <description>Aprovado: Nutricao parenteral prolongada</description>
        <inputEntry id="IE_Apr2_1"><text>"NutricaoParenteral"</text></inputEntry>
        <inputEntry id="IE_Apr2_2"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="IE_Apr2_3"><text>"Ausente"</text></inputEntry>
        <inputEntry id="IE_Apr2_4"><text>"Normal","LeveCorrigida","ModeradaCorrigida"</text></inputEntry>
        <inputEntry id="IE_Apr2_5"><text>"Ausente","JugularUnilateral","SubclaviaUnilateral"</text></inputEntry>
        <outputEntry id="OE_Apr2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr2_2"><text>"NPT prolongada - port-a-cath ou cateter tunelizado indicado"</text></outputEntry>
        <outputEntry id="OE_Apr2_3"><text>"ESPEN 2021 - NPT domiciliar requer cateter de longa permanencia"</text></outputEntry>
      <outputEntry id="OE_Aprovado_NPT_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_NPT_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_AcessoDificil">
        <description>Aprovado: Acesso venoso dificil + uso frequente</description>
        <inputEntry id="IE_Apr3_1"><text>"AcessoDificil"</text></inputEntry>
        <inputEntry id="IE_Apr3_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_Apr3_3"><text>"Ausente","LocalControlada"</text></inputEntry>
        <inputEntry id="IE_Apr3_4"><text>"Normal","LeveCorrigida","ModeradaCorrigida"</text></inputEntry>
        <inputEntry id="IE_Apr3_5"><text>"Ausente"</text></inputEntry>
        <outputEntry id="OE_Apr3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr3_2"><text>"Acesso venoso dificil com necessidade frequente - port-a-cath melhora qualidade de vida"</text></outputEntry>
        <outputEntry id="OE_Apr3_3"><text>"INS 2021 - Acesso dificil e indicacao para dispositivo de longa permanencia"</text></outputEntry>
      <outputEntry id="OE_Aprovado_AcessoDificil_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_AcessoDificil_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Transfusoes">
        <description>Aprovado: Transfusoes frequentes</description>
        <inputEntry id="IE_Apr4_1"><text>"Transfusoes"</text></inputEntry>
        <inputEntry id="IE_Apr4_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="IE_Apr4_3"><text>"Ausente"</text></inputEntry>
        <inputEntry id="IE_Apr4_4"><text>"Normal","LeveCorrigida"</text></inputEntry>
        <inputEntry id="IE_Apr4_5"><text>"Ausente"</text></inputEntry>
        <outputEntry id="OE_Apr4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr4_2"><text>"Necessidade transfusional cronica - port-a-cath para preservar capital venoso"</text></outputEntry>
        <outputEntry id="OE_Apr4_3"><text>"INCA 2022 - Pacientes hemato-oncologicos se beneficiam de port"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Transfusoes_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Transfusoes_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ========== REGRA FALLBACK ========== -->

      <rule id="Rule_Fallback_GEN_MIS_006">
        <description>Pendente: Avaliar indicacao e condicoes clinicas</description>
        <inputEntry id="IE_FB_1"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_2"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_3"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_4"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_5"><text>-</text></inputEntry>
        <outputEntry id="OE_FB_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_FB_2"><text>"Avaliar duracao de uso, condicoes de coagulacao e patencia venosa"</text></outputEntry>
        <outputEntry id="OE_FB_3"><text>"INS 2021 - Escolha de dispositivo depende de duracao e tipo de terapia"</text></outputEntry>
      <outputEntry id="OE_Fallback_GEN_MIS_006_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_GEN_MIS_006_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
