<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_GEN_BRE_004"
             name="Cirurgia Oncoplastica - Criterios de Selecao"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    CODIGO: GEN-BRE-004
    Procedimento: Cirurgia Oncoplastica da Mama - Selecao de Pacientes
    Especialidade: Cirurgia Geral - Mastologia Oncoplastica
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES:
    - Tumor em localizacao desfavoravel (central, inferior)
    - Resseccao > 20% do volume mamario
    - Mamas ptosicas com desejo de simetrizacao
    - Margem oncologica adequada obtivel com tecnica oncoplastica
    - Paciente com expectativa de resultado estetico

    CONTRAINDICACOES:
    - Carcinoma inflamatorio
    - Doenca multicÃªntrica extensa
    - Comorbidades que contraindicam cirurgia maior
    - Tabagismo ativo (risco de necrose)

    REFERENCIAS TECNICAS:
    - Oncoplastic Breast Surgery Consensus 2019
    - SBM Guidelines 2023
    - NCCN Breast Cancer Guidelines 2024

    ===============================================================================
  -->

  <decision id="Decision_GEN_BRE_004" name="Regra Clinica - Cirurgia Oncoplastica">
    <decisionTable id="DecisionTable_GEN_BRE_004" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_localizacaoTumor" label="Localizacao do Tumor" camunda:inputVariable="localizacaoTumor">
        <inputExpression id="InputExpression_localizacaoTumor" typeRef="string">
          <text>localizacaoTumor</text>
        </inputExpression>
        <inputValues id="InputValues_localizacaoTumor">
          <text>"Central","QSE","QSI","QIE","QII","RetroAreolar"</text>
        </inputValues>
      </input>

      <input id="Input_volumeResseccao" label="Volume de Resseccao Estimado (%)" camunda:inputVariable="volumeResseccao">
        <inputExpression id="InputExpression_volumeResseccao" typeRef="number">
          <text>volumeResseccao</text>
        </inputExpression>
      </input>

      <input id="Input_ptoseMamaria" label="Grau de Ptose Mamaria" camunda:inputVariable="ptoseMamaria">
        <inputExpression id="InputExpression_ptoseMamaria" typeRef="string">
          <text>ptoseMamaria</text>
        </inputExpression>
        <inputValues id="InputValues_ptoseMamaria">
          <text>"Grau0","Grau1","Grau2","Grau3"</text>
        </inputValues>
      </input>

      <input id="Input_tabagismo" label="Tabagismo Ativo" camunda:inputVariable="tabagismo">
        <inputExpression id="InputExpression_tabagismo" typeRef="boolean">
          <text>tabagismo</text>
        </inputExpression>
      </input>

      <input id="Input_expectativaEstetica" label="Expectativa de Resultado Estetico" camunda:inputVariable="expectativaEstetica">
        <inputExpression id="InputExpression_expectativaEstetica" typeRef="string">
          <text>expectativaEstetica</text>
        </inputExpression>
        <inputValues id="InputValues_expectativaEstetica">
          <text>"Alta","Moderada","Baixa","NaoAvaliada"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== REGRAS DE REPROVACAO ========== -->

      <rule id="Rule_Reprovado_TabagismoAtivo">
        <description>Reprovado: Tabagismo ativo - alto risco de complicacoes</description>
        <inputEntry id="IE_Rep1_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Rep1_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Rep1_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep1_2"><text>"Tabagismo ativo - alto risco de necrose de retalhos. Cessar tabagismo por 4-6 semanas"</text></outputEntry>
        <outputEntry id="OE_Rep1_3"><text>"Oncoplastic Breast Surgery Consensus 2019 - Tabagismo e fator de risco modificavel"</text></outputEntry>
      <outputEntry id="OE_Reprovado_TabagismoAtivo_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_TabagismoAtivo_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Reprovado_ResseccaoPequena">
        <description>Reprovado: Resseccao pequena sem necessidade de oncoplastica</description>
        <inputEntry id="IE_Rep2_1"><text>"QSE"</text></inputEntry>
        <inputEntry id="IE_Rep2_2"><text>&lt; 15</text></inputEntry>
        <inputEntry id="IE_Rep2_3"><text>"Grau0","Grau1"</text></inputEntry>
        <inputEntry id="IE_Rep2_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Rep2_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Rep2_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep2_2"><text>"Resseccao pequena em localizacao favoravel - tumorectomia simples adequada"</text></outputEntry>
        <outputEntry id="OE_Rep2_3"><text>"SBM Guidelines 2023 - Oncoplastica reservada para resseccoes maiores"</text></outputEntry>
      <outputEntry id="OE_Reprovado_ResseccaoPequena_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_ResseccaoPequena_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- ========== REGRAS DE APROVACAO ========== -->

      <rule id="Rule_Aprovado_LocalizacaoCentral">
        <description>Aprovado: Tumor central com tecnicas centrais</description>
        <inputEntry id="IE_Apr1_1"><text>"Central","RetroAreolar"</text></inputEntry>
        <inputEntry id="IE_Apr1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr1_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Apr1_5"><text>"Alta","Moderada"</text></inputEntry>
        <outputEntry id="OE_Apr1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr1_2"><text>"Tumor central - tecnicas oncoplasticas centrais (Grisotti, round block) indicadas"</text></outputEntry>
        <outputEntry id="OE_Apr1_3"><text>"Oncoplastic Breast Surgery Consensus 2019 - Tumores centrais beneficiam de oncoplastica"</text></outputEntry>
      <outputEntry id="OE_Aprovado_LocalizacaoCentral_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_LocalizacaoCentral_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_GrandeResseccao">
        <description>Aprovado: Grande resseccao volumetrica</description>
        <inputEntry id="IE_Apr2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr2_2"><text>&gt;= 20</text></inputEntry>
        <inputEntry id="IE_Apr2_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr2_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Apr2_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Apr2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr2_2"><text>"Resseccao &gt;= 20% do volume - tecnica oncoplastica indicada para resultado estetico"</text></outputEntry>
        <outputEntry id="OE_Apr2_3"><text>"SBM Guidelines 2023 - Nivel 1 ou 2 de oncoplastica conforme volume"</text></outputEntry>
      <outputEntry id="OE_Aprovado_GrandeResseccao_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_GrandeResseccao_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_PtoseGrau23">
        <description>Aprovado: Ptose moderada a severa com oportunidade de simetrizacao</description>
        <inputEntry id="IE_Apr3_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr3_2"><text>&gt;= 15</text></inputEntry>
        <inputEntry id="IE_Apr3_3"><text>"Grau2","Grau3"</text></inputEntry>
        <inputEntry id="IE_Apr3_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Apr3_5"><text>"Alta","Moderada"</text></inputEntry>
        <outputEntry id="OE_Apr3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr3_2"><text>"Ptose significativa - mastoplastia oncoplastica com possibilidade de simetrizacao contralateral"</text></outputEntry>
        <outputEntry id="OE_Apr3_3"><text>"Oncoplastic Breast Surgery Consensus 2019 - Ptose e indicacao de mamoplastia terapeutica"</text></outputEntry>
      <outputEntry id="OE_Aprovado_PtoseGrau23_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_PtoseGrau23_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_QuadranteInferior">
        <description>Aprovado: Tumor em quadrante inferior</description>
        <inputEntry id="IE_Apr4_1"><text>"QIE","QII"</text></inputEntry>
        <inputEntry id="IE_Apr4_2"><text>&gt;= 15</text></inputEntry>
        <inputEntry id="IE_Apr4_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr4_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Apr4_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Apr4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr4_2"><text>"Quadrante inferior - tecnicas de rotacao inferior ou retalhos de rotacao indicados"</text></outputEntry>
        <outputEntry id="OE_Apr4_3"><text>"SBM Guidelines 2023 - Quadrantes inferiores requerem tecnicas especificas"</text></outputEntry>
      <outputEntry id="OE_Aprovado_QuadranteInferior_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_QuadranteInferior_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ========== REGRA FALLBACK ========== -->

      <rule id="Rule_Fallback_GEN_BRE_004">
        <description>Pendente: Avaliacao por cirurgiao oncoplastico</description>
        <inputEntry id="IE_FB_1"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_2"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_3"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_4"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_5"><text>-</text></inputEntry>
        <outputEntry id="OE_FB_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_FB_2"><text>"Avaliacao por cirurgiao com experiencia em oncoplastica para planejamento individualizado"</text></outputEntry>
        <outputEntry id="OE_FB_3"><text>"Oncoplastic Breast Surgery Consensus 2019 - Planejamento pre-operatorio e essencial"</text></outputEntry>
      <outputEntry id="OE_Fallback_GEN_BRE_004_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_GEN_BRE_004_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
