<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_GEN_MIS_005"
             name="Lipoma - Criterios de Excisao"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    CODIGO: GEN-MIS-005
    Procedimento: Lipoma - Criterios para Excisao Cirurgica
    Especialidade: Cirurgia Geral - Procedimentos Diversos
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES PARA EXCISAO:
    - Lipoma sintomatico (dor, desconforto, limitacao)
    - Lipoma > 5 cm (risco de lipossarcoma)
    - Crescimento rapido
    - Localizacao profunda (intramuscular)
    - Motivo estetico significativo

    SINAIS DE ALARME (Lipossarcoma):
    - Crescimento rapido
    - Dor espontanea
    - Tamanho > 5 cm
    - Localizacao profunda
    - Margens mal definidas na imagem

    REFERENCIAS TECNICAS:
    - SBCO Guidelines 2022
    - UpToDate - Lipomas 2023
    - ESMO Sarcoma Guidelines 2021

    ===============================================================================
  -->

  <decision id="Decision_GEN_MIS_005" name="Regra Clinica - Lipoma Excisao">
    <decisionTable id="DecisionTable_GEN_MIS_005" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_tamanhoLipoma" label="Tamanho do Lipoma (cm)" camunda:inputVariable="tamanhoLipoma">
        <inputExpression id="InputExpression_tamanhoLipoma" typeRef="number">
          <text>tamanhoLipoma</text>
        </inputExpression>
      </input>

      <input id="Input_sintomasPresentes" label="Sintomas Presentes" camunda:inputVariable="sintomasPresentes">
        <inputExpression id="InputExpression_sintomasPresentes" typeRef="string">
          <text>sintomasPresentes</text>
        </inputExpression>
        <inputValues id="InputValues_sintomasPresentes">
          <text>"Assintomatico","DorLocal","Desconforto","LimitacaoFuncional","Estetico"</text>
        </inputValues>
      </input>

      <input id="Input_localizacaoPlano" label="Plano de Localizacao" camunda:inputVariable="localizacaoPlano">
        <inputExpression id="InputExpression_localizacaoPlano" typeRef="string">
          <text>localizacaoPlano</text>
        </inputExpression>
        <inputValues id="InputValues_localizacaoPlano">
          <text>"Subcutaneo","Intramuscular","Intermuscular","Profundo"</text>
        </inputValues>
      </input>

      <input id="Input_crescimentoRapido" label="Crescimento Rapido (ultimos 6 meses)" camunda:inputVariable="crescimentoRapido">
        <inputExpression id="InputExpression_crescimentoRapido" typeRef="boolean">
          <text>crescimentoRapido</text>
        </inputExpression>
      </input>

      <input id="Input_caracteristicasImagem" label="Caracteristicas na Imagem" camunda:inputVariable="caracteristicasImagem">
        <inputExpression id="InputExpression_caracteristicasImagem" typeRef="string">
          <text>caracteristicasImagem</text>
        </inputExpression>
        <inputValues id="InputValues_caracteristicasImagem">
          <text>"LipomaSimples","Heterogeneo","SeptosEspessos","AreasNaoAdiposasNaoRealizado"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== REGRAS DE REPROVACAO ========== -->

      <rule id="Rule_Reprovado_PequenoAssintomatico">
        <description>Reprovado: Lipoma pequeno e assintomatico</description>
        <inputEntry id="IE_Rep1_1"><text>&lt; 3</text></inputEntry>
        <inputEntry id="IE_Rep1_2"><text>"Assintomatico"</text></inputEntry>
        <inputEntry id="IE_Rep1_3"><text>"Subcutaneo"</text></inputEntry>
        <inputEntry id="IE_Rep1_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Rep1_5"><text>"LipomaSimples"</text></inputEntry>
        <outputEntry id="OE_Rep1_1"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OE_Rep1_2"><text>"Lipoma pequeno, subcutaneo, assintomatico - seguimento clinico, sem indicacao cirurgica"</text></outputEntry>
        <outputEntry id="OE_Rep1_3"><text>"UpToDate 2023 - Lipomas tipicos assintomaticos nao requerem tratamento"</text></outputEntry>
      <outputEntry id="OE_Reprovado_PequenoAssintomatico_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_PequenoAssintomatico_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- ========== REGRAS DE APROVACAO ========== -->

      <rule id="Rule_Aprovado_Grande">
        <description>Aprovado: Lipoma > 5 cm - risco de lipossarcoma</description>
        <inputEntry id="IE_Apr1_1"><text>&gt; 5</text></inputEntry>
        <inputEntry id="IE_Apr1_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr1_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr1_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr1_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Apr1_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr1_2"><text>"Lipoma &gt; 5cm - excisao indicada para excluir lipossarcoma bem diferenciado"</text></outputEntry>
        <outputEntry id="OE_Apr1_3"><text>"ESMO 2021 - Tumores lipomatosos &gt; 5cm requerem investigacao histologica"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Grande_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Grande_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Profundo">
        <description>Aprovado: Lipoma profundo/intramuscular</description>
        <inputEntry id="IE_Apr2_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr2_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr2_3"><text>"Intramuscular","Intermuscular","Profundo"</text></inputEntry>
        <inputEntry id="IE_Apr2_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr2_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Apr2_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr2_2"><text>"Lipoma profundo - maior risco de lipossarcoma, excisao para diagnostico definitivo"</text></outputEntry>
        <outputEntry id="OE_Apr2_3"><text>"SBCO 2022 - Tumores profundos tem maior probabilidade de malignidade"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Profundo_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Profundo_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_CrescimentoRapido">
        <description>Aprovado: Crescimento rapido</description>
        <inputEntry id="IE_Apr3_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr3_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr3_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr3_4"><text>true</text></inputEntry>
        <inputEntry id="IE_Apr3_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Apr3_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr3_2"><text>"Crescimento rapido - sinal de alarme, excisao para excluir malignidade"</text></outputEntry>
        <outputEntry id="OE_Apr3_3"><text>"ESMO 2021 - Crescimento rapido sugere lipossarcoma desdiferenciado"</text></outputEntry>
      <outputEntry id="OE_Aprovado_CrescimentoRapido_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_CrescimentoRapido_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ImagemAtipica">
        <description>Aprovado: Caracteristicas atipicas na imagem</description>
        <inputEntry id="IE_Apr4_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr4_2"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr4_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr4_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr4_5"><text>"Heterogeneo","SeptosEspessos","AreasNaoAdiposas"</text></inputEntry>
        <outputEntry id="OE_Apr4_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr4_2"><text>"Imagem atipica (heterogeneidade, septos espessos) - excisao ou biopsia obrigatoria"</text></outputEntry>
        <outputEntry id="OE_Apr4_3"><text>"SBCO 2022 - Caracteristicas atipicas na RNM indicam lipoma atipico/lipossarcoma"</text></outputEntry>
      <outputEntry id="OE_Aprovado_ImagemAtipica_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_ImagemAtipica_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Sintomatico">
        <description>Aprovado: Lipoma sintomatico</description>
        <inputEntry id="IE_Apr5_1"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr5_2"><text>"DorLocal","Desconforto","LimitacaoFuncional"</text></inputEntry>
        <inputEntry id="IE_Apr5_3"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr5_4"><text>-</text></inputEntry>
        <inputEntry id="IE_Apr5_5"><text>-</text></inputEntry>
        <outputEntry id="OE_Apr5_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr5_2"><text>"Lipoma sintomatico - excisao indicada para alivio dos sintomas"</text></outputEntry>
        <outputEntry id="OE_Apr5_3"><text>"UpToDate 2023 - Lipomas sintomaticos tem indicacao de resseccao"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Sintomatico_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Sintomatico_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Estetico">
        <description>Aprovado: Motivo estetico significativo</description>
        <inputEntry id="IE_Apr6_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="IE_Apr6_2"><text>"Estetico"</text></inputEntry>
        <inputEntry id="IE_Apr6_3"><text>"Subcutaneo"</text></inputEntry>
        <inputEntry id="IE_Apr6_4"><text>false</text></inputEntry>
        <inputEntry id="IE_Apr6_5"><text>"LipomaSimples"</text></inputEntry>
        <outputEntry id="OE_Apr6_1"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OE_Apr6_2"><text>"Lipoma com impacto estetico significativo em area visivel - excisao aceitavel"</text></outputEntry>
        <outputEntry id="OE_Apr6_3"><text>"UpToDate 2023 - Indicacao estetica valida para lipomas visiveis"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Estetico_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Estetico_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- ========== REGRA FALLBACK ========== -->

      <rule id="Rule_Fallback_GEN_MIS_005">
        <description>Pendente: Realizar imagem para caracterizacao</description>
        <inputEntry id="IE_FB_1"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_2"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_3"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_4"><text>-</text></inputEntry>
        <inputEntry id="IE_FB_5"><text>-</text></inputEntry>
        <outputEntry id="OE_FB_1"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OE_FB_2"><text>"Realizar US ou RNM para caracterizacao e definir conduta"</text></outputEntry>
        <outputEntry id="OE_FB_3"><text>"SBCO 2022 - Imagem ajuda a diferenciar lipoma de lipossarcoma"</text></outputEntry>
      <outputEntry id="OE_Fallback_GEN_MIS_005_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_GEN_MIS_005_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
