<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_BAR009"
             name="Ulcera Marginal Pos-Bypass"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: BAR-009
    Procedimento: Tratamento Cirurgico de Ulcera Marginal Pos-Bypass
    Especialidade: Cirurgia Bariatrica
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (SBCBM 2022, ASMBS 2020):
    - Ulcera marginal refrataria ao tratamento clinico (>12 semanas IBP)
    - Perfuracao de ulcera marginal
    - Sangramento refratario ao tratamento endoscopico
    - Estenose da anastomose por ulcera cronica

    FATORES DE RISCO:
    - Tabagismo (principal)
    - AINEs
    - H. pylori
    - Tensao na anastomose
    - Fistula gastro-gastrica

    REFERENCIAS TECNICAS:
    - SBCBM 2022 - Complicacoes do Bypass
    - ASMBS Marginal Ulcer Consensus 2020
    - SAGES Guidelines 2019

    ===============================================================================
  -->

  <decision id="Decision_BAR009" name="Regra Clinica - Ulcera Marginal Pos-Bypass">
    <decisionTable id="DecisionTable_BAR009" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_apresentacaoUlcera" label="Apresentacao da Ulcera" camunda:inputVariable="apresentacaoUlcera">
        <inputExpression id="InputExpression_apresentacaoUlcera" typeRef="string">
          <text>apresentacaoUlcera</text>
        </inputExpression>
        <inputValues id="InputValues_apresentacaoUlcera">
          <text>"Perfuracao","SangramentoAtivo","SangramentoRecorrente","UlceraRefrataria","Estenose"</text>
        </inputValues>
      </input>

      <input id="Input_tratamentoClinicoIBP" label="Tratamento Clinico IBP (semanas)" camunda:inputVariable="tratamentoClinicoIBP">
        <inputExpression id="InputExpression_tratamentoClinicoIBP" typeRef="number">
          <text>tratamentoClinicoIBP</text>
        </inputExpression>
      </input>

      <input id="Input_tratamentoEndoscopico" label="Tratamento Endoscopico" camunda:inputVariable="tratamentoEndoscopico">
        <inputExpression id="InputExpression_tratamentoEndoscopico" typeRef="string">
          <text>tratamentoEndoscopico</text>
        </inputExpression>
        <inputValues id="InputValues_tratamentoEndoscopico">
          <text>"ControleSangramento","FalhaSangramento","DilatacaoSucesso","DilatacaoFalha","NaoAplicavel"</text>
        </inputValues>
      </input>

      <input id="Input_tabagismoAtivo" label="Tabagismo Ativo" camunda:inputVariable="tabagismoAtivo">
        <inputExpression id="InputExpression_tabagismoAtivo" typeRef="boolean">
          <text>tabagismoAtivo</text>
        </inputExpression>
      </input>

      <input id="Input_fistulaGastrogastrica" label="Fistula Gastro-Gastrica Associada" camunda:inputVariable="fistulaGastrogastrica">
        <inputExpression id="InputExpression_fistulaGastrogastrica" typeRef="boolean">
          <text>fistulaGastrogastrica</text>
        </inputExpression>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- APROVACOES EMERGENCIAIS -->
      <rule id="Rule_Aprovado_Perfuracao">
        <description>Aprovado Emergencial: Perfuracao de ulcera marginal</description>
        <inputEntry id="InputEntry_PF_1"><text>"Perfuracao"</text></inputEntry>
        <inputEntry id="InputEntry_PF_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_PF_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_PF_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_PF_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_PF_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_PF_observacao"><text>"EMERGENCIA - Perfuracao de ulcera marginal requer cirurgia imediata"</text></outputEntry>
        <outputEntry id="OutputEntry_PF_fundamentacao"><text>"SBCBM 2022, SAGES 2019 - Perfuracao de ulcera e emergencia cirurgica absoluta"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Perfuracao_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Perfuracao_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_SangramentoRefratario">
        <description>Aprovado Urgente: Sangramento refratario ao tratamento endoscopico</description>
        <inputEntry id="InputEntry_SR_1"><text>"SangramentoAtivo","SangramentoRecorrente"</text></inputEntry>
        <inputEntry id="InputEntry_SR_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SR_3"><text>"FalhaSangramento"</text></inputEntry>
        <inputEntry id="InputEntry_SR_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SR_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_SR_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SR_observacao"><text>"Sangramento refratario a hemostasia endoscopica - indicacao de revisao cirurgica"</text></outputEntry>
        <outputEntry id="OutputEntry_SR_fundamentacao"><text>"ASMBS 2020 - Falha de hemostasia endoscopica indica resseccao cirurgica da ulcera"</text></outputEntry>
      <outputEntry id="OE_Aprovado_SangramentoRefratario_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_SangramentoRefratario_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES ELETIVAS -->
      <rule id="Rule_Aprovado_Refrataria_ComFistula">
        <description>Aprovado: Ulcera refrataria com fistula gastro-gastrica</description>
        <inputEntry id="InputEntry_RF_1"><text>"UlceraRefrataria"</text></inputEntry>
        <inputEntry id="InputEntry_RF_2"><text>&gt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_RF_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RF_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RF_5"><text>true</text></inputEntry>
        <outputEntry id="OutputEntry_RF_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_RF_observacao"><text>"Ulcera refrataria com fistula gastro-gastrica - correcao cirurgica obrigatoria"</text></outputEntry>
        <outputEntry id="OutputEntry_RF_fundamentacao"><text>"SBCBM 2022 - Fistula GG perpetua ulcera marginal e requer fechamento cirurgico"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Refrataria_ComFistula_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Refrataria_ComFistula_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Refrataria_SemTabaco">
        <description>Aprovado: Ulcera refrataria em nao-tabagista</description>
        <inputEntry id="InputEntry_RST_1"><text>"UlceraRefrataria"</text></inputEntry>
        <inputEntry id="InputEntry_RST_2"><text>&gt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_RST_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RST_4"><text>false</text></inputEntry>
        <inputEntry id="InputEntry_RST_5"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_RST_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_RST_observacao"><text>"Ulcera marginal refrataria apos 12+ semanas IBP - indicacao de revisao cirurgica"</text></outputEntry>
        <outputEntry id="OutputEntry_RST_fundamentacao"><text>"ASMBS 2020 - Ulcera refrataria sem fatores modificaveis indica revisao da anastomose"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Refrataria_SemTabaco_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Refrataria_SemTabaco_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Estenose">
        <description>Aprovado: Estenose por ulcera refrataria a dilatacao</description>
        <inputEntry id="InputEntry_ES_1"><text>"Estenose"</text></inputEntry>
        <inputEntry id="InputEntry_ES_2"><text>&gt;= 8</text></inputEntry>
        <inputEntry id="InputEntry_ES_3"><text>"DilatacaoFalha"</text></inputEntry>
        <inputEntry id="InputEntry_ES_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_ES_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_ES_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_ES_observacao"><text>"Estenose anastomotica refrataria a dilatacao endoscopica - revisao cirurgica indicada"</text></outputEntry>
        <outputEntry id="OutputEntry_ES_fundamentacao"><text>"SBCBM 2022, SAGES 2019 - Estenose refrataria a 3+ dilatacoes requer resseccao e re-anastomose"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Estenose_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Estenose_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- CONTRAINDICACOES -->
      <rule id="Rule_Contraind_TabagismoAtivo">
        <description>Contraindicacao Relativa: Tabagismo ativo para cirurgia eletiva</description>
        <inputEntry id="InputEntry_TA_1"><text>"UlceraRefrataria","Estenose"</text></inputEntry>
        <inputEntry id="InputEntry_TA_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TA_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TA_4"><text>true</text></inputEntry>
        <inputEntry id="InputEntry_TA_5"><text>false</text></inputEntry>
        <outputEntry id="OutputEntry_TA_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_TA_observacao"><text>"Tabagismo e principal fator de ulcera marginal - cessacao por 3 meses pre-op obrigatoria"</text></outputEntry>
        <outputEntry id="OutputEntry_TA_fundamentacao"><text>"ASMBS 2020, SBCBM 2022 - Cirurgia eletiva contraindicada sem cessacao tabagica"</text></outputEntry>
      <outputEntry id="OE_Contraind_TabagismoAtivo_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_TabagismoAtivo_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_TratamentoInsuficiente">
        <description>Contraindicacao: Tratamento clinico insuficiente</description>
        <inputEntry id="InputEntry_TI_1"><text>"UlceraRefrataria"</text></inputEntry>
        <inputEntry id="InputEntry_TI_2"><text>&lt; 8</text></inputEntry>
        <inputEntry id="InputEntry_TI_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TI_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TI_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_TI_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_TI_observacao"><text>"Tratamento clinico minimo de 8-12 semanas necessario antes de considerar cirurgia"</text></outputEntry>
        <outputEntry id="OutputEntry_TI_fundamentacao"><text>"ASMBS 2020 - Maioria das ulceras marginal cicatriza com IBP adequado por 12 semanas"</text></outputEntry>
      <outputEntry id="OE_Contraind_TratamentoInsuficiente_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_TratamentoInsuficiente_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- PENDENTE -->
      <rule id="Rule_Pendente_EstenoseTentarDilatacao">
        <description>Pendente: Estenose - tentar dilatacao endoscopica primeiro</description>
        <inputEntry id="InputEntry_ED_1"><text>"Estenose"</text></inputEntry>
        <inputEntry id="InputEntry_ED_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_ED_3"><text>"NaoAplicavel"</text></inputEntry>
        <inputEntry id="InputEntry_ED_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_ED_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_ED_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_ED_observacao"><text>"Realizar tentativa de dilatacao endoscopica antes de indicar cirurgia"</text></outputEntry>
        <outputEntry id="OutputEntry_ED_fundamentacao"><text>"SBCBM 2022 - Dilatacao endoscopica e primeira linha para estenose anastomotica"</text></outputEntry>
      <outputEntry id="OE_Pendente_EstenoseTentarDilatacao_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Pendente_EstenoseTentarDilatacao_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_BAR009">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Caso complexo - avaliar com equipe de bariatrica e endoscopia"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"ASMBS 2020 - Decisao terapeutica multidisciplinar para ulcera marginal complexa"</text></outputEntry>
      <outputEntry id="OE_Fallback_BAR009_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_BAR009_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
