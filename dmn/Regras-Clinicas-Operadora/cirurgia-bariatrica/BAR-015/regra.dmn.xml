<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_BAR015"
             name="Acompanhamento Psicologico Pos-Bariatrica"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: BAR-015
    Procedimento: Acompanhamento Psicologico Especializado Pos-Bariatrica
    Especialidade: Cirurgia Bariatrica / Psicologia
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (CFM 2.131/2015, SBCBM 2022):
    - Seguimento psicologico obrigatorio pos-bariatrica
    - Transtorno alimentar em remissao (monitoramento)
    - Reganho de peso com componente comportamental
    - Adaptacao a nova imagem corporal
    - Quadros depressivos/ansiosos pos-cirurgicos

    FREQUENCIA RECOMENDADA:
    - Ano 1: Mensal a trimestral
    - Anos 2-5: Semestral
    - Apos 5 anos: Anual ou conforme necessidade

    REFERENCIAS TECNICAS:
    - CFM 2.131/2015 - Equipe Multidisciplinar Obrigatoria
    - SBCBM 2022 - Protocolo de Seguimento Psicologico
    - ASMBS Psychology Guidelines 2019

    ===============================================================================
  -->

  <decision id="Decision_BAR015" name="Regra Clinica - Acompanhamento Psicologico Pos-Bariatrica">
    <decisionTable id="DecisionTable_BAR015" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_tempoPosCirurgia" label="Tempo Pos-Cirurgia (meses)" camunda:inputVariable="tempoPosCirurgia">
        <inputExpression id="InputExpression_tempoPosCirurgia" typeRef="number">
          <text>tempoPosCirurgia</text>
        </inputExpression>
      </input>

      <input id="Input_indicacaoPsicologica" label="Indicacao Psicologica" camunda:inputVariable="indicacaoPsicologica">
        <inputExpression id="InputExpression_indicacaoPsicologica" typeRef="string">
          <text>indicacaoPsicologica</text>
        </inputExpression>
        <inputValues id="InputValues_indicacaoPsicologica">
          <text>"SegmentoRotina","TranstornoAlimentar","ReganhoPeso","ImagemCorporal","DepressaoAnsiedade","CriseFamiliar"</text>
        </inputValues>
      </input>

      <input id="Input_ultimaConsultaPsicologica" label="Ultima Consulta Psicologica (meses)" camunda:inputVariable="ultimaConsultaPsicologica">
        <inputExpression id="InputExpression_ultimaConsultaPsicologica" typeRef="number">
          <text>ultimaConsultaPsicologica</text>
        </inputExpression>
      </input>

      <input id="Input_historicoTranstornoAlimentar" label="Historico de Transtorno Alimentar" camunda:inputVariable="historicoTranstornoAlimentar">
        <inputExpression id="InputExpression_historicoTranstornoAlimentar" typeRef="string">
          <text>historicoTranstornoAlimentar</text>
        </inputExpression>
        <inputValues id="InputValues_historicoTranstornoAlimentar">
          <text>"Ativo","EmRemissao","Tratado","Negativo"</text>
        </inputValues>
      </input>

      <input id="Input_sinaisAlerta" label="Sinais de Alerta Psicologico" camunda:inputVariable="sinaisAlerta">
        <inputExpression id="InputExpression_sinaisAlerta" typeRef="string">
          <text>sinaisAlerta</text>
        </inputExpression>
        <inputValues id="InputValues_sinaisAlerta">
          <text>"IdeacaoSuicida","AutomutilacaoAtiva","DescompensacaoGrave","Leve","Ausente"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- APROVACOES PRIORITARIAS - URGENCIA PSIQUIATRICA -->
      <rule id="Rule_Aprovado_IdeacaoSuicida">
        <description>Aprovado Emergencial: Ideacao suicida</description>
        <inputEntry id="InputEntry_IS_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IS_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IS_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IS_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IS_5"><text>"IdeacaoSuicida"</text></inputEntry>
        <outputEntry id="OutputEntry_IS_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_IS_observacao"><text>"EMERGENCIA PSIQUIATRICA - Encaminhamento imediato para avaliacao psiquiatrica e psicologica intensiva"</text></outputEntry>
        <outputEntry id="OutputEntry_IS_fundamentacao"><text>"CFM 2.131/2015 - Risco aumentado de ideacao suicida pos-bariatrica requer atencao imediata"</text></outputEntry>
      <outputEntry id="OE_Aprovado_IdeacaoSuicida_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_IdeacaoSuicida_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Automutilacao">
        <description>Aprovado Urgente: Automutilacao ativa</description>
        <inputEntry id="InputEntry_AM_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AM_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AM_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AM_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AM_5"><text>"AutomutilacaoAtiva"</text></inputEntry>
        <outputEntry id="OutputEntry_AM_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_AM_observacao"><text>"Automutilacao ativa - acompanhamento psicologico intensivo obrigatorio"</text></outputEntry>
        <outputEntry id="OutputEntry_AM_fundamentacao"><text>"ASMBS 2019 - Comportamentos autolesivos pos-bariatrica requerem intervencao especializada"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Automutilacao_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Automutilacao_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_DescompensacaoGrave">
        <description>Aprovado Urgente: Descompensacao psiquica grave</description>
        <inputEntry id="InputEntry_DG_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DG_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DG_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DG_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DG_5"><text>"DescompensacaoGrave"</text></inputEntry>
        <outputEntry id="OutputEntry_DG_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_DG_observacao"><text>"Descompensacao psiquica grave - acompanhamento psicologico intensivo"</text></outputEntry>
        <outputEntry id="OutputEntry_DG_fundamentacao"><text>"SBCBM 2022 - Crises psiquicas pos-bariatrica requerem suporte especializado"</text></outputEntry>
      <outputEntry id="OE_Aprovado_DescompensacaoGrave_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_DescompensacaoGrave_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - TRANSTORNO ALIMENTAR -->
      <rule id="Rule_Aprovado_TranstornoAtivo">
        <description>Aprovado Prioritario: Transtorno alimentar ativo</description>
        <inputEntry id="InputEntry_TAA_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TAA_2"><text>"TranstornoAlimentar"</text></inputEntry>
        <inputEntry id="InputEntry_TAA_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TAA_4"><text>"Ativo"</text></inputEntry>
        <inputEntry id="InputEntry_TAA_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_TAA_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_TAA_observacao"><text>"Transtorno alimentar ativo - terapia intensiva semanal indicada"</text></outputEntry>
        <outputEntry id="OutputEntry_TAA_fundamentacao"><text>"SBCBM 2022, ASMBS 2019 - Transtornos alimentares comprometem resultado da cirurgia"</text></outputEntry>
      <outputEntry id="OE_Aprovado_TranstornoAtivo_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_TranstornoAtivo_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_TranstornoRemissao">
        <description>Aprovado: Transtorno alimentar em remissao (monitoramento)</description>
        <inputEntry id="InputEntry_TAR_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TAR_2"><text>"TranstornoAlimentar","SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_TAR_3"><text>&gt;= 1</text></inputEntry>
        <inputEntry id="InputEntry_TAR_4"><text>"EmRemissao"</text></inputEntry>
        <inputEntry id="InputEntry_TAR_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_TAR_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_TAR_observacao"><text>"Transtorno alimentar em remissao - monitoramento mensal indicado"</text></outputEntry>
        <outputEntry id="OutputEntry_TAR_fundamentacao"><text>"ASMBS 2019 - Pacientes com historico de TA requerem monitoramento mais frequente"</text></outputEntry>
      <outputEntry id="OE_Aprovado_TranstornoRemissao_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_TranstornoRemissao_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - ROTINA ANO 1 -->
      <rule id="Rule_Aprovado_Ano1_Mensal">
        <description>Aprovado: Seguimento ano 1 - mensal/trimestral</description>
        <inputEntry id="InputEntry_A1_1"><text>&lt;= 12</text></inputEntry>
        <inputEntry id="InputEntry_A1_2"><text>"SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_A1_3"><text>&gt;= 1</text></inputEntry>
        <inputEntry id="InputEntry_A1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_A1_5"><text>"Leve","Ausente"</text></inputEntry>
        <outputEntry id="OutputEntry_A1_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_observacao"><text>"Primeiro ano - acompanhamento psicologico mensal a trimestral conforme protocolo"</text></outputEntry>
        <outputEntry id="OutputEntry_A1_fundamentacao"><text>"CFM 2.131/2015, SBCBM 2022 - Seguimento psicologico intensivo no primeiro ano"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Ano1_Mensal_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Ano1_Mensal_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - ROTINA ANOS 2-5 -->
      <rule id="Rule_Aprovado_Anos2a5_Semestral">
        <description>Aprovado: Seguimento anos 2-5 - semestral</description>
        <inputEntry id="InputEntry_A25_1"><text>[13..60]</text></inputEntry>
        <inputEntry id="InputEntry_A25_2"><text>"SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_A25_3"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="InputEntry_A25_4"><text>"Tratado","Negativo"</text></inputEntry>
        <inputEntry id="InputEntry_A25_5"><text>"Ausente"</text></inputEntry>
        <outputEntry id="OutputEntry_A25_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_A25_observacao"><text>"Anos 2-5 - acompanhamento psicologico semestral conforme protocolo"</text></outputEntry>
        <outputEntry id="OutputEntry_A25_fundamentacao"><text>"CFM 2.131/2015, SBCBM 2022 - Seguimento semestral anos 2 a 5"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Anos2a5_Semestral_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Anos2a5_Semestral_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES ESPECIFICAS -->
      <rule id="Rule_Aprovado_ReganhoPeso">
        <description>Aprovado: Reganho de peso com componente comportamental</description>
        <inputEntry id="InputEntry_RP_1"><text>&gt;= 18</text></inputEntry>
        <inputEntry id="InputEntry_RP_2"><text>"ReganhoPeso"</text></inputEntry>
        <inputEntry id="InputEntry_RP_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RP_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RP_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_RP_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_RP_observacao"><text>"Reganho de peso - avaliar componente comportamental e emocional"</text></outputEntry>
        <outputEntry id="OutputEntry_RP_fundamentacao"><text>"SBCBM 2022, ASMBS 2019 - Abordagem psicologica e essencial no manejo do reganho"</text></outputEntry>
      <outputEntry id="OE_Aprovado_ReganhoPeso_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_ReganhoPeso_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_ImagemCorporal">
        <description>Aprovado: Dificuldade de adaptacao a nova imagem</description>
        <inputEntry id="InputEntry_IC_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IC_2"><text>"ImagemCorporal"</text></inputEntry>
        <inputEntry id="InputEntry_IC_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IC_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_IC_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_IC_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_IC_observacao"><text>"Dificuldade de adaptacao a nova imagem corporal - suporte psicologico indicado"</text></outputEntry>
        <outputEntry id="OutputEntry_IC_fundamentacao"><text>"ASMBS 2019 - Mudanca rapida de imagem corporal pode causar dismorfia e necessita acompanhamento"</text></outputEntry>
      <outputEntry id="OE_Aprovado_ImagemCorporal_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_ImagemCorporal_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_DepressaoAnsiedade">
        <description>Aprovado: Quadros depressivos/ansiosos pos-cirurgicos</description>
        <inputEntry id="InputEntry_DA_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DA_2"><text>"DepressaoAnsiedade"</text></inputEntry>
        <inputEntry id="InputEntry_DA_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DA_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DA_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_DA_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_DA_observacao"><text>"Sintomas depressivos/ansiosos - acompanhamento psicologico com possivel avaliacao psiquiatrica"</text></outputEntry>
        <outputEntry id="OutputEntry_DA_fundamentacao"><text>"SBCBM 2022 - Quadros ansioso-depressivos frequentes pos-bariatrica requerem tratamento"</text></outputEntry>
      <outputEntry id="OE_Aprovado_DepressaoAnsiedade_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_DepressaoAnsiedade_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACOES -->
      <rule id="Rule_Reprovado_Recente">
        <description>Reprovado: Consulta recente sem indicacao especial</description>
        <inputEntry id="InputEntry_CR_1"><text>&gt; 12</text></inputEntry>
        <inputEntry id="InputEntry_CR_2"><text>"SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_CR_3"><text>&lt; 3</text></inputEntry>
        <inputEntry id="InputEntry_CR_4"><text>"Tratado","Negativo"</text></inputEntry>
        <inputEntry id="InputEntry_CR_5"><text>"Ausente"</text></inputEntry>
        <outputEntry id="OutputEntry_CR_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_CR_observacao"><text>"Consulta psicologica recente - aguardar intervalo conforme protocolo"</text></outputEntry>
        <outputEntry id="OutputEntry_CR_fundamentacao"><text>"SBCBM 2022 - Frequencia semestral/anual para pacientes est√°veis sem historico de TA"</text></outputEntry>
      <outputEntry id="OE_Reprovado_Recente_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_Recente_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_BAR015">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Avaliar indicacao com equipe de psicologia bariatrica"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"CFM 2.131/2015 - Acompanhamento psicologico e parte obrigatoria do seguimento pos-bariatrica"</text></outputEntry>
      <outputEntry id="OE_Fallback_BAR015_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_BAR015_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
