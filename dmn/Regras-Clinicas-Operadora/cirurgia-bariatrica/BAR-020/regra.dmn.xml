<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_BAR020"
             name="Cirurgia Bariatrica Revisional Complexa"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: BAR-020
    Procedimento: Cirurgia Bariatrica Revisional Complexa (Terceira Cirurgia+)
    Especialidade: Cirurgia Bariatrica
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (SBCBM 2022, IFSO 2023):
    - Terceira ou mais cirurgia bariatrica
    - Anatomia complexa pos-multiplas revisoes
    - Complicacoes de cirurgias previas
    - Falha de multiplos procedimentos

    CONSIDERACOES ESPECIAIS:
    - Maior risco de complicacoes
    - Necessidade de centro de referencia
    - Avaliacao pre-operatoria extensa
    - Discussao multidisciplinar obrigatoria

    REFERENCIAS TECNICAS:
    - SBCBM 2022 - Cirurgias Revisionais Complexas
    - IFSO Guidelines Complex Revisions 2023
    - ASMBS 2021 - Tertiary Bariatric Surgery

    ===============================================================================
  -->

  <decision id="Decision_BAR020" name="Regra Clinica - Cirurgia Bariatrica Revisional Complexa">
    <decisionTable id="DecisionTable_BAR020" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_numeroCirurgiasPrevias" label="Numero de Cirurgias Bariatricas Previas" camunda:inputVariable="numeroCirurgiasPrevias">
        <inputExpression id="InputExpression_numeroCirurgiasPrevias" typeRef="number">
          <text>numeroCirurgiasPrevias</text>
        </inputExpression>
      </input>

      <input id="Input_indicacaoRevisao" label="Indicacao para Revisao" camunda:inputVariable="indicacaoRevisao">
        <inputExpression id="InputExpression_indicacaoRevisao" typeRef="string">
          <text>indicacaoRevisao</text>
        </inputExpression>
        <inputValues id="InputValues_indicacaoRevisao">
          <text>"ComplicacaoGrave","FalhaMetabolica","ReganhoPesoGrave","DeficienciaNutricionalGrave","AnatomiaProblematica"</text>
        </inputValues>
      </input>

      <input id="Input_discussaoMultidisciplinar" label="Discussao Multidisciplinar" camunda:inputVariable="discussaoMultidisciplinar">
        <inputExpression id="InputExpression_discussaoMultidisciplinar" typeRef="string">
          <text>discussaoMultidisciplinar</text>
        </inputExpression>
        <inputValues id="InputValues_discussaoMultidisciplinar">
          <text>"RealionadaIndicacaoAprovada","RealionadaComRessalvas","NaoRealizada"</text>
        </inputValues>
      </input>

      <input id="Input_centroReferencia" label="Centro de Referencia" camunda:inputVariable="centroReferencia">
        <inputExpression id="InputExpression_centroReferencia" typeRef="string">
          <text>centroReferencia</text>
        </inputExpression>
        <inputValues id="InputValues_centroReferencia">
          <text>"CentroAcreditado","ExperienciaComprovada","SemExperiencia"</text>
        </inputValues>
      </input>

      <input id="Input_avaliacaoPreOperatoria" label="Avaliacao Pre-Operatoria" camunda:inputVariable="avaliacaoPreOperatoria">
        <inputExpression id="InputExpression_avaliacaoPreOperatoria" typeRef="string">
          <text>avaliacaoPreOperatoria</text>
        </inputExpression>
        <inputValues id="InputValues_avaliacaoPreOperatoria">
          <text>"Completa","Parcial","Insuficiente"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- CONTRAINDICACOES -->
      <rule id="Rule_Contraind_SemCentroReferencia">
        <description>Contraindicacao: Centro sem experiencia em cirurgia revisional</description>
        <inputEntry id="InputEntry_SCR_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_SCR_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SCR_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SCR_4"><text>"SemExperiencia"</text></inputEntry>
        <inputEntry id="InputEntry_SCR_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_SCR_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SCR_observacao"><text>"Cirurgia complexa requer centro de referencia com experiencia comprovada"</text></outputEntry>
        <outputEntry id="OutputEntry_SCR_fundamentacao"><text>"SBCBM 2022, IFSO 2023 - Cirurgias revisionais complexas devem ser realizadas em centros especializados"</text></outputEntry>
      <outputEntry id="OE_Contraind_SemCentroReferencia_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_SemCentroReferencia_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_SemDiscussaoMultidisciplinar">
        <description>Contraindicacao: Sem discussao multidisciplinar</description>
        <inputEntry id="InputEntry_SDM_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_SDM_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SDM_3"><text>"NaoRealizada"</text></inputEntry>
        <inputEntry id="InputEntry_SDM_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SDM_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_SDM_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SDM_observacao"><text>"Discussao multidisciplinar obrigatoria para cirurgia revisional terciaria"</text></outputEntry>
        <outputEntry id="OutputEntry_SDM_fundamentacao"><text>"SBCBM 2022 - Terceira cirurgia requer consenso de equipe multidisciplinar"</text></outputEntry>
      <outputEntry id="OE_Contraind_SemDiscussaoMultidisciplinar_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_SemDiscussaoMultidisciplinar_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Contraind_AvaliacaoInsuficiente">
        <description>Contraindicacao: Avaliacao pre-operatoria insuficiente</description>
        <inputEntry id="InputEntry_AI_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_AI_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AI_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AI_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AI_5"><text>"Insuficiente"</text></inputEntry>
        <outputEntry id="OutputEntry_AI_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_AI_observacao"><text>"Avaliacao pre-operatoria extensa obrigatoria para cirurgia terciaria"</text></outputEntry>
        <outputEntry id="OutputEntry_AI_fundamentacao"><text>"IFSO 2023 - Avaliacao completa (imagem, funcional, nutricional, psicologica) mandatoria"</text></outputEntry>
      <outputEntry id="OE_Contraind_AvaliacaoInsuficiente_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Contraind_AvaliacaoInsuficiente_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - EMERGENCIAS -->
      <rule id="Rule_Aprovado_ComplicacaoGraveUrgente">
        <description>Aprovado Urgente: Complicacao grave de cirurgia previa</description>
        <inputEntry id="InputEntry_CGU_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_CGU_2"><text>"ComplicacaoGrave"</text></inputEntry>
        <inputEntry id="InputEntry_CGU_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_CGU_4"><text>"CentroAcreditado","ExperienciaComprovada"</text></inputEntry>
        <inputEntry id="InputEntry_CGU_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_CGU_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_CGU_observacao"><text>"Complicacao grave de cirurgia previa - revisao urgente indicada em centro especializado"</text></outputEntry>
        <outputEntry id="OutputEntry_CGU_fundamentacao"><text>"SBCBM 2022 - Complicacoes graves tem indicacao de intervencao mesmo em casos complexos"</text></outputEntry>
      <outputEntry id="OE_Aprovado_ComplicacaoGraveUrgente_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_ComplicacaoGraveUrgente_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - ELETIVAS -->
      <rule id="Rule_Aprovado_TerceiraOuMais_Completa">
        <description>Aprovado: Terceira cirurgia com todas as exigencias cumpridas</description>
        <inputEntry id="InputEntry_TOC_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_TOC_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TOC_3"><text>"RealionadaIndicacaoAprovada"</text></inputEntry>
        <inputEntry id="InputEntry_TOC_4"><text>"CentroAcreditado"</text></inputEntry>
        <inputEntry id="InputEntry_TOC_5"><text>"Completa"</text></inputEntry>
        <outputEntry id="OutputEntry_TOC_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_TOC_observacao"><text>"Cirurgia revisional terciaria aprovada - todas exigencias cumpridas, centro acreditado"</text></outputEntry>
        <outputEntry id="OutputEntry_TOC_fundamentacao"><text>"SBCBM 2022, IFSO 2023 - Cirurgia terciaria autorizada em centro de referencia com preparo adequado"</text></outputEntry>
      <outputEntry id="OE_Aprovado_TerceiraOuMais_Completa_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_TerceiraOuMais_Completa_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_TerceiraOuMais_ExperienciaComprovada">
        <description>Aprovado: Terceira cirurgia em centro com experiencia comprovada</description>
        <inputEntry id="InputEntry_TEC_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_TEC_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_TEC_3"><text>"RealionadaIndicacaoAprovada"</text></inputEntry>
        <inputEntry id="InputEntry_TEC_4"><text>"ExperienciaComprovada"</text></inputEntry>
        <inputEntry id="InputEntry_TEC_5"><text>"Completa"</text></inputEntry>
        <outputEntry id="OutputEntry_TEC_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_TEC_observacao"><text>"Cirurgia revisional terciaria aprovada - centro com experiencia, preparo adequado"</text></outputEntry>
        <outputEntry id="OutputEntry_TEC_fundamentacao"><text>"SBCBM 2022 - Experiencia comprovada do centro e cirurgiao e essencial para casos complexos"</text></outputEntry>
      <outputEntry id="OE_Aprovado_TerceiraOuMais_ExperienciaComprovada_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_TerceiraOuMais_ExperienciaComprovada_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_SegundaCirurgia_Completa">
        <description>Aprovado: Segunda cirurgia com preparo adequado</description>
        <inputEntry id="InputEntry_SC_1"><text>2</text></inputEntry>
        <inputEntry id="InputEntry_SC_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SC_3"><text>"RealionadaIndicacaoAprovada","RealionadaComRessalvas"</text></inputEntry>
        <inputEntry id="InputEntry_SC_4"><text>"CentroAcreditado","ExperienciaComprovada"</text></inputEntry>
        <inputEntry id="InputEntry_SC_5"><text>"Completa"</text></inputEntry>
        <outputEntry id="OutputEntry_SC_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SC_observacao"><text>"Segunda cirurgia revisional aprovada com preparo adequado"</text></outputEntry>
        <outputEntry id="OutputEntry_SC_fundamentacao"><text>"SBCBM 2022 - Cirurgia revisional secundaria com indicacao documentada"</text></outputEntry>
      <outputEntry id="OE_Aprovado_SegundaCirurgia_Completa_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_SegundaCirurgia_Completa_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- PENDENTES -->
      <rule id="Rule_Pendente_AvaliacaoParcial">
        <description>Pendente: Avaliacao pre-operatoria parcial</description>
        <inputEntry id="InputEntry_AP_1"><text>&gt;= 2</text></inputEntry>
        <inputEntry id="InputEntry_AP_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_AP_3"><text>"RealionadaIndicacaoAprovada","RealionadaComRessalvas"</text></inputEntry>
        <inputEntry id="InputEntry_AP_4"><text>"CentroAcreditado","ExperienciaComprovada"</text></inputEntry>
        <inputEntry id="InputEntry_AP_5"><text>"Parcial"</text></inputEntry>
        <outputEntry id="OutputEntry_AP_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_AP_observacao"><text>"Completar avaliacao pre-operatoria: exames de imagem, avaliacao nutricional e psicologica"</text></outputEntry>
        <outputEntry id="OutputEntry_AP_fundamentacao"><text>"IFSO 2023 - Avaliacao completa mandatoria para cirurgias revisionais"</text></outputEntry>
      <outputEntry id="OE_Pendente_AvaliacaoParcial_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Pendente_AvaliacaoParcial_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <rule id="Rule_Pendente_DiscussaoComRessalvas">
        <description>Pendente: Discussao multidisciplinar com ressalvas</description>
        <inputEntry id="InputEntry_DCR_1"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_DCR_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DCR_3"><text>"RealionadaComRessalvas"</text></inputEntry>
        <inputEntry id="InputEntry_DCR_4"><text>"CentroAcreditado","ExperienciaComprovada"</text></inputEntry>
        <inputEntry id="InputEntry_DCR_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_DCR_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_DCR_observacao"><text>"Resolver ressalvas apontadas pela equipe multidisciplinar antes de autorizar"</text></outputEntry>
        <outputEntry id="OutputEntry_DCR_fundamentacao"><text>"SBCBM 2022 - Ressalvas da equipe devem ser resolvidas antes de prosseguir"</text></outputEntry>
      <outputEntry id="OE_Pendente_DiscussaoComRessalvas_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Pendente_DiscussaoComRessalvas_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_BAR020">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Caso complexo - encaminhar para discussao em centro de referencia terciario"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"SBCBM 2022, IFSO 2023 - Cirurgias revisionais complexas requerem avaliacao especializada"</text></outputEntry>
      <outputEntry id="OE_Fallback_BAR020_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_BAR020_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
