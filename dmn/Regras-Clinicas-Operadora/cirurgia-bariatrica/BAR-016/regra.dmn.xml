<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_BAR016"
             name="Endoscopia Digestiva Pos-Bariatrica"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: BAR-016
    Procedimento: Endoscopia Digestiva Alta Pos-Cirurgia Bariatrica
    Especialidade: Cirurgia Bariatrica / Endoscopia
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (SBCBM 2022, ASGE 2021):
    - Seguimento pos-operatorio de rotina
    - Sintomas dispepticos persistentes
    - Suspeita de ulcera marginal
    - Disfagia/odinofagia
    - Vomitos persistentes
    - Sangramento digestivo
    - Avaliacao de estenose

    FREQUENCIA RECOMENDADA:
    - Rotina: 1-2 anos pos-op (controverso)
    - Sintomas: Sob demanda

    REFERENCIAS TECNICAS:
    - SBCBM 2022 - Seguimento Endoscopico
    - ASGE Guidelines Post-Bariatric 2021
    - SAGES Position Statement 2020

    ===============================================================================
  -->

  <decision id="Decision_BAR016" name="Regra Clinica - Endoscopia Pos-Bariatrica">
    <decisionTable id="DecisionTable_BAR016" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_indicacaoEndoscopia" label="Indicacao da Endoscopia" camunda:inputVariable="indicacaoEndoscopia">
        <inputExpression id="InputExpression_indicacaoEndoscopia" typeRef="string">
          <text>indicacaoEndoscopia</text>
        </inputExpression>
        <inputValues id="InputValues_indicacaoEndoscopia">
          <text>"SegmentoRotina","Dispepsia","SuspeitaUlcera","Disfagia","VomitosPersistentes","SangramentoDigestivo","AvaliacaoEstenose"</text>
        </inputValues>
      </input>

      <input id="Input_tempoPosCirurgia" label="Tempo Pos-Cirurgia (meses)" camunda:inputVariable="tempoPosCirurgia">
        <inputExpression id="InputExpression_tempoPosCirurgia" typeRef="number">
          <text>tempoPosCirurgia</text>
        </inputExpression>
      </input>

      <input id="Input_tipoCirurgiaRealizada" label="Tipo de Cirurgia Bariatrica" camunda:inputVariable="tipoCirurgiaRealizada">
        <inputExpression id="InputExpression_tipoCirurgiaRealizada" typeRef="string">
          <text>tipoCirurgiaRealizada</text>
        </inputExpression>
        <inputValues id="InputValues_tipoCirurgiaRealizada">
          <text>"Bypass","Sleeve","DS","SADI","BandaGastrica"</text>
        </inputValues>
      </input>

      <input id="Input_ultimaEndoscopia" label="Ultima Endoscopia (meses)" camunda:inputVariable="ultimaEndoscopia">
        <inputExpression id="InputExpression_ultimaEndoscopia" typeRef="number">
          <text>ultimaEndoscopia</text>
        </inputExpression>
      </input>

      <input id="Input_sinaisAlarme" label="Sinais de Alarme" camunda:inputVariable="sinaisAlarme">
        <inputExpression id="InputExpression_sinaisAlarme" typeRef="string">
          <text>sinaisAlarme</text>
        </inputExpression>
        <inputValues id="InputValues_sinaisAlarme">
          <text>"Hemorragia","PerdaPeso","DisfagiaProgressiva","Anemia","Nenhum"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- APROVACOES EMERGENCIAIS -->
      <rule id="Rule_Aprovado_Hemorragia">
        <description>Aprovado Emergencial: Sangramento digestivo</description>
        <inputEntry id="InputEntry_HE_1"><text>"SangramentoDigestivo"</text></inputEntry>
        <inputEntry id="InputEntry_HE_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_HE_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_HE_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_HE_5"><text>"Hemorragia"</text></inputEntry>
        <outputEntry id="OutputEntry_HE_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_HE_observacao"><text>"EMERGENCIA - Sangramento digestivo requer endoscopia diagnostica e terapeutica imediata"</text></outputEntry>
        <outputEntry id="OutputEntry_HE_fundamentacao"><text>"ASGE 2021 - Hemorragia digestiva e indicacao absoluta de EDA de emergencia"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Hemorragia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Hemorragia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES URGENTES -->
      <rule id="Rule_Aprovado_DisfagiaProgressiva">
        <description>Aprovado Urgente: Disfagia progressiva</description>
        <inputEntry id="InputEntry_DP_1"><text>"Disfagia"</text></inputEntry>
        <inputEntry id="InputEntry_DP_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DP_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DP_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DP_5"><text>"DisfagiaProgressiva"</text></inputEntry>
        <outputEntry id="OutputEntry_DP_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_DP_observacao"><text>"Disfagia progressiva pos-bariatrica - avaliar estenose ou complicacao"</text></outputEntry>
        <outputEntry id="OutputEntry_DP_fundamentacao"><text>"SBCBM 2022, ASGE 2021 - Disfagia progressiva requer exclusao de estenose/complicacao"</text></outputEntry>
      <outputEntry id="OE_Aprovado_DisfagiaProgressiva_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_DisfagiaProgressiva_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES ELETIVAS -->
      <rule id="Rule_Aprovado_SuspeitaUlcera">
        <description>Aprovado: Suspeita de ulcera marginal</description>
        <inputEntry id="InputEntry_SU_1"><text>"SuspeitaUlcera"</text></inputEntry>
        <inputEntry id="InputEntry_SU_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SU_3"><text>"Bypass"</text></inputEntry>
        <inputEntry id="InputEntry_SU_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SU_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_SU_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SU_observacao"><text>"Suspeita de ulcera marginal pos-bypass - EDA diagnostica indicada"</text></outputEntry>
        <outputEntry id="OutputEntry_SU_fundamentacao"><text>"SBCBM 2022 - Ulcera marginal ocorre em 5-15% dos bypass e requer diagnostico endoscopico"</text></outputEntry>
      <outputEntry id="OE_Aprovado_SuspeitaUlcera_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_SuspeitaUlcera_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Dispepsia">
        <description>Aprovado: Dispepsia persistente</description>
        <inputEntry id="InputEntry_DI_1"><text>"Dispepsia"</text></inputEntry>
        <inputEntry id="InputEntry_DI_2"><text>&gt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_DI_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DI_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DI_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_DI_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_DI_observacao"><text>"Sintomas dispepticos persistentes apos 3 meses - investigacao endoscopica indicada"</text></outputEntry>
        <outputEntry id="OutputEntry_DI_fundamentacao"><text>"ASGE 2021 - Dispepsia persistente pos-bariatrica justifica EDA diagnostica"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Dispepsia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Dispepsia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_VomitosPersistentes">
        <description>Aprovado: Vomitos persistentes</description>
        <inputEntry id="InputEntry_VP_1"><text>"VomitosPersistentes"</text></inputEntry>
        <inputEntry id="InputEntry_VP_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_VP_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_VP_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_VP_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_VP_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_VP_observacao"><text>"Vomitos persistentes - avaliar estenose, ulcera ou alteracao anatomica"</text></outputEntry>
        <outputEntry id="OutputEntry_VP_fundamentacao"><text>"SBCBM 2022, ASGE 2021 - Vomitos persistentes pos-bariatrica requerem investigacao endoscopica"</text></outputEntry>
      <outputEntry id="OE_Aprovado_VomitosPersistentes_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_VomitosPersistentes_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Estenose">
        <description>Aprovado: Avaliacao/tratamento de estenose</description>
        <inputEntry id="InputEntry_ES_1"><text>"AvaliacaoEstenose"</text></inputEntry>
        <inputEntry id="InputEntry_ES_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_ES_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_ES_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_ES_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_ES_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_ES_observacao"><text>"Suspeita de estenose - EDA diagnostica e terapeutica (dilatacao) indicada"</text></outputEntry>
        <outputEntry id="OutputEntry_ES_fundamentacao"><text>"ASGE 2021 - Estenose anastomotica ocorre em 3-10% e tratamento e endoscopico"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Estenose_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Estenose_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Disfagia">
        <description>Aprovado: Disfagia pos-bariatrica</description>
        <inputEntry id="InputEntry_DF_1"><text>"Disfagia"</text></inputEntry>
        <inputEntry id="InputEntry_DF_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DF_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DF_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_DF_5"><text>"Nenhum"</text></inputEntry>
        <outputEntry id="OutputEntry_DF_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_DF_observacao"><text>"Disfagia pos-bariatrica - investigar estenose, compressao ou alteracao motora"</text></outputEntry>
        <outputEntry id="OutputEntry_DF_fundamentacao"><text>"SBCBM 2022 - Disfagia e sintoma comum e requer avaliacao anatomica"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Disfagia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Disfagia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - ROTINA (CONTROVERSO) -->
      <rule id="Rule_Aprovado_Rotina_PrimeiroAno">
        <description>Aprovado: Seguimento rotina primeiro ano bypass</description>
        <inputEntry id="InputEntry_R1_1"><text>"SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_R1_2"><text>[6..18]</text></inputEntry>
        <inputEntry id="InputEntry_R1_3"><text>"Bypass"</text></inputEntry>
        <inputEntry id="InputEntry_R1_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_R1_5"><text>"Nenhum"</text></inputEntry>
        <outputEntry id="OutputEntry_R1_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_R1_observacao"><text>"EDA de rotina 6-18 meses pos-bypass - alguns protocolos recomendam rastreio de ulcera marginal"</text></outputEntry>
        <outputEntry id="OutputEntry_R1_fundamentacao"><text>"SBCBM 2022 - EDA de rotina pos-bypass e recomendada em alguns protocolos para deteccao precoce de ulcera"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Rotina_PrimeiroAno_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Rotina_PrimeiroAno_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACOES -->
      <rule id="Rule_Reprovado_Recente">
        <description>Reprovado: EDA recente sem nova indicacao</description>
        <inputEntry id="InputEntry_RC_1"><text>"SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_RC_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RC_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_RC_4"><text>&lt; 6</text></inputEntry>
        <inputEntry id="InputEntry_RC_5"><text>"Nenhum"</text></inputEntry>
        <outputEntry id="OutputEntry_RC_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_RC_observacao"><text>"EDA realizada ha menos de 6 meses sem nova indicacao clinica"</text></outputEntry>
        <outputEntry id="OutputEntry_RC_fundamentacao"><text>"ASGE 2021 - Repeticao de EDA de rotina requer intervalo minimo de 6-12 meses"</text></outputEntry>
      <outputEntry id="OE_Reprovado_Recente_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_Recente_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Reprovado_SleeveAssintomatico">
        <description>Reprovado: Sleeve assintomatico sem indicacao</description>
        <inputEntry id="InputEntry_SA_1"><text>"SegmentoRotina"</text></inputEntry>
        <inputEntry id="InputEntry_SA_2"><text>&gt; 24</text></inputEntry>
        <inputEntry id="InputEntry_SA_3"><text>"Sleeve"</text></inputEntry>
        <inputEntry id="InputEntry_SA_4"><text>&lt; 24</text></inputEntry>
        <inputEntry id="InputEntry_SA_5"><text>"Nenhum"</text></inputEntry>
        <outputEntry id="OutputEntry_SA_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SA_observacao"><text>"Sleeve assintomatico - EDA de rotina nao e consensualmente indicada"</text></outputEntry>
        <outputEntry id="OutputEntry_SA_fundamentacao"><text>"ASGE 2021 - Pos-sleeve assintomatico nao tem indicacao de EDA de rotina"</text></outputEntry>
      <outputEntry id="OE_Reprovado_SleeveAssintomatico_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_SleeveAssintomatico_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_BAR016">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Avaliar indicacao clinica com equipe de endoscopia bariatrica"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"ASGE 2021, SBCBM 2022 - Indicacao de EDA pos-bariatrica deve ser individualizada"</text></outputEntry>
      <outputEntry id="OE_Fallback_BAR016_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_BAR016_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
