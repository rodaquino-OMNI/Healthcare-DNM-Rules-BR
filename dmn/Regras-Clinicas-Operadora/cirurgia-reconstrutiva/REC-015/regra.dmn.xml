<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_REC015"
             name="Lipoenxertia Reconstrutiva"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: REC-015
    Procedimento: Lipoenxertia para Fins Reconstrutivos
    Especialidade: Cirurgia Reconstrutiva / Cirurgia Plastica
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (SBCP 2022, ASPS 2023):
    - Reconstrucao mamaria (complemento)
    - Correcao de contorno facial (Parry-Romberg, lipoatrofia)
    - Sequelas de radioterapia
    - Cicatrizes deprimidas
    - Lipodistrofia (HIV, congenita)
    - Reconstrucao de polpa digital

    TECNICA:
    - Coleman technique (padrao)
    - BRAVA + lipoenxertia (mama)
    - Nanofat (face)

    REFERENCIAS TECNICAS:
    - SBCP 2022 - Lipoenxertia
    - Coleman SR - Structural Fat Grafting
    - ASPS 2023 - Fat Grafting Guidelines
    - ISAPS 2022 - International Survey

    ===============================================================================
  -->

  <decision id="Decision_REC015" name="Regra Clinica - Lipoenxertia Reconstrutiva">
    <decisionTable id="DecisionTable_REC015" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_indicacaoLipoenxertia" label="Indicacao da Lipoenxertia" camunda:inputVariable="indicacaoLipoenxertia">
        <inputExpression id="InputExpression_indicacaoLipoenxertia" typeRef="string">
          <text>indicacaoLipoenxertia</text>
        </inputExpression>
        <inputValues id="InputValues_indicacaoLipoenxertia">
          <text>"ComplementoMamario","LipoatrofiaFacial","ParryRomberg","SequelasRadioterapia","CicatrizDeprimida","LipodistrofiaHIV","LipodistrofiaCongenita"</text>
        </inputValues>
      </input>

      <input id="Input_localEnxertia" label="Local da Enxertia" camunda:inputVariable="localEnxertia">
        <inputExpression id="InputExpression_localEnxertia" typeRef="string">
          <text>localEnxertia</text>
        </inputExpression>
        <inputValues id="InputValues_localEnxertia">
          <text>"Mama","Face","Mao","Gluteo","Membro","Tronco"</text>
        </inputValues>
      </input>

      <input id="Input_volumeEstimado" label="Volume Estimado por Sessao (ml)" camunda:inputVariable="volumeEstimado">
        <inputExpression id="InputExpression_volumeEstimado" typeRef="number">
          <text>volumeEstimado</text>
        </inputExpression>
      </input>

      <input id="Input_sessoesPrevias" label="Sessoes Previas" camunda:inputVariable="sessoesPrevias">
        <inputExpression id="InputExpression_sessoesPrevias" typeRef="number">
          <text>sessoesPrevias</text>
        </inputExpression>
      </input>

      <input id="Input_tecnicaProposta" label="Tecnica Proposta" camunda:inputVariable="tecnicaProposta">
        <inputExpression id="InputExpression_tecnicaProposta" typeRef="string">
          <text>tecnicaProposta</text>
        </inputExpression>
        <inputValues id="InputValues_tecnicaProposta">
          <text>"Coleman","BRAVALipoenxertia","Nanofat","SVFEnriquecido","Microfat"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- APROVACOES - RECONSTRUCAO MAMARIA -->
      <rule id="Rule_Aprovado_ComplementoMamario">
        <description>Aprovado: Lipoenxertia complementar pos-reconstrucao mamaria</description>
        <inputEntry id="InputEntry_CM_1"><text>"ComplementoMamario"</text></inputEntry>
        <inputEntry id="InputEntry_CM_2"><text>"Mama"</text></inputEntry>
        <inputEntry id="InputEntry_CM_3"><text>&lt;= 300</text></inputEntry>
        <inputEntry id="InputEntry_CM_4"><text>&lt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_CM_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_CM_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_CM_observacao"><text>"Lipoenxertia para refinamento de reconstrucao mamaria - ate 3 sessoes"</text></outputEntry>
        <outputEntry id="OutputEntry_CM_fundamentacao"><text>"Lei 12.802/2013, NCCN 2023 - Lipoenxertia e parte da reconstrucao mamaria"</text></outputEntry>
      <outputEntry id="OE_Aprovado_ComplementoMamario_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_ComplementoMamario_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_SequelasRadioterapia">
        <description>Aprovado: Tratamento de sequelas de radioterapia</description>
        <inputEntry id="InputEntry_SR_1"><text>"SequelasRadioterapia"</text></inputEntry>
        <inputEntry id="InputEntry_SR_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SR_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SR_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SR_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_SR_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SR_observacao"><text>"Lipoenxertia para melhorar qualidade de tecido radiado"</text></outputEntry>
        <outputEntry id="OutputEntry_SR_fundamentacao"><text>"ASPS 2023, SBCP 2022 - Gordura tem efeito regenerativo em tecido radiado"</text></outputEntry>
      <outputEntry id="OE_Aprovado_SequelasRadioterapia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_SequelasRadioterapia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - FACE -->
      <rule id="Rule_Aprovado_ParryRomberg">
        <description>Aprovado: Sindrome de Parry-Romberg</description>
        <inputEntry id="InputEntry_PR_1"><text>"ParryRomberg"</text></inputEntry>
        <inputEntry id="InputEntry_PR_2"><text>"Face"</text></inputEntry>
        <inputEntry id="InputEntry_PR_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_PR_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_PR_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_PR_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_PR_observacao"><text>"Lipoenxertia seriada para hemiatrofia facial progressiva"</text></outputEntry>
        <outputEntry id="OutputEntry_PR_fundamentacao"><text>"SBCP 2022 - Parry-Romberg requer multiplas sessoes durante fase ativa"</text></outputEntry>
      <outputEntry id="OE_Aprovado_ParryRomberg_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_ParryRomberg_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_LipoatrofiaFacial">
        <description>Aprovado: Lipoatrofia facial significativa</description>
        <inputEntry id="InputEntry_LF_1"><text>"LipoatrofiaFacial"</text></inputEntry>
        <inputEntry id="InputEntry_LF_2"><text>"Face"</text></inputEntry>
        <inputEntry id="InputEntry_LF_3"><text>&lt;= 100</text></inputEntry>
        <inputEntry id="InputEntry_LF_4"><text>&lt;= 3</text></inputEntry>
        <inputEntry id="InputEntry_LF_5"><text>"Coleman","Nanofat","Microfat"</text></inputEntry>
        <outputEntry id="OutputEntry_LF_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_LF_observacao"><text>"Lipoenxertia facial para correcao de lipoatrofia"</text></outputEntry>
        <outputEntry id="OutputEntry_LF_fundamentacao"><text>"ASPS 2023 - Coleman technique e padrao para lipoenxertia facial"</text></outputEntry>
      <outputEntry id="OE_Aprovado_LipoatrofiaFacial_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_LipoatrofiaFacial_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - LIPODISTROFIA -->
      <rule id="Rule_Aprovado_LipodistrofiaHIV">
        <description>Aprovado: Lipodistrofia facial por HIV</description>
        <inputEntry id="InputEntry_LHIV_1"><text>"LipodistrofiaHIV"</text></inputEntry>
        <inputEntry id="InputEntry_LHIV_2"><text>"Face"</text></inputEntry>
        <inputEntry id="InputEntry_LHIV_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_LHIV_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_LHIV_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_LHIV_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_LHIV_observacao"><text>"Lipodistrofia facial por TARV - impacto psicossocial significativo"</text></outputEntry>
        <outputEntry id="OutputEntry_LHIV_fundamentacao"><text>"SBCP 2022, MS Brasil - Lipodistrofia por HIV e indicacao de lipoenxertia"</text></outputEntry>
      <outputEntry id="OE_Aprovado_LipodistrofiaHIV_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_LipodistrofiaHIV_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_LipodistrofiaCongenita">
        <description>Aprovado: Lipodistrofia congenita</description>
        <inputEntry id="InputEntry_LC_1"><text>"LipodistrofiaCongenita"</text></inputEntry>
        <inputEntry id="InputEntry_LC_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_LC_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_LC_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_LC_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_LC_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_LC_observacao"><text>"Lipodistrofia congenita - avaliar disponibilidade de gordura doadora"</text></outputEntry>
        <outputEntry id="OutputEntry_LC_fundamentacao"><text>"SBCP 2022 - Lipodistrofia generalizada tem limitacao de gordura doadora"</text></outputEntry>
      <outputEntry id="OE_Aprovado_LipodistrofiaCongenita_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_LipodistrofiaCongenita_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - CICATRIZES -->
      <rule id="Rule_Aprovado_CicatrizDeprimida">
        <description>Aprovado: Cicatriz deprimida pos-trauma ou cirurgia</description>
        <inputEntry id="InputEntry_CD_1"><text>"CicatrizDeprimida"</text></inputEntry>
        <inputEntry id="InputEntry_CD_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_CD_3"><text>&lt;= 50</text></inputEntry>
        <inputEntry id="InputEntry_CD_4"><text>&lt;= 2</text></inputEntry>
        <inputEntry id="InputEntry_CD_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_CD_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_CD_observacao"><text>"Lipoenxertia para preenchimento de cicatriz deprimida"</text></outputEntry>
        <outputEntry id="OutputEntry_CD_fundamentacao"><text>"SBCP 2022 - Gordura melhora qualidade e aparencia de cicatrizes"</text></outputEntry>
      <outputEntry id="OE_Aprovado_CicatrizDeprimida_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_CicatrizDeprimida_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACOES -->
      <rule id="Rule_Reprovado_VolumeExcessivo">
        <description>Reprovado: Volume excessivo por sessao</description>
        <inputEntry id="InputEntry_VE_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_VE_2"><text>"Face"</text></inputEntry>
        <inputEntry id="InputEntry_VE_3"><text>&gt; 150</text></inputEntry>
        <inputEntry id="InputEntry_VE_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_VE_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_VE_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_VE_observacao"><text>"Volume excessivo para face - dividir em multiplas sessoes (max 100ml/sessao)"</text></outputEntry>
        <outputEntry id="OutputEntry_VE_fundamentacao"><text>"ASPS 2023 - Volumes excessivos reduzem viabilidade e aumentam complicacoes"</text></outputEntry>
      <outputEntry id="OE_Reprovado_VolumeExcessivo_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_VolumeExcessivo_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Reprovado_MuitasSessoes">
        <description>Reprovado: Excesso de sessoes sem justificativa</description>
        <inputEntry id="InputEntry_MS_1"><text>"ComplementoMamario"</text></inputEntry>
        <inputEntry id="InputEntry_MS_2"><text>"Mama"</text></inputEntry>
        <inputEntry id="InputEntry_MS_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_MS_4"><text>&gt; 4</text></inputEntry>
        <inputEntry id="InputEntry_MS_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_MS_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_MS_observacao"><text>"Mais de 4 sessoes de lipoenxertia mamaria - justificar necessidade adicional"</text></outputEntry>
        <outputEntry id="OutputEntry_MS_fundamentacao"><text>"SBCP 2022 - Resultado satisfatorio geralmente alcancado em 2-3 sessoes"</text></outputEntry>
      <outputEntry id="OE_Reprovado_MuitasSessoes_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_MuitasSessoes_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- PENDENTE -->
      <rule id="Rule_Pendente_BRAVAMama">
        <description>Pendente: BRAVA pre-expansao para lipoenxertia mamaria</description>
        <inputEntry id="InputEntry_BM_1"><text>"ComplementoMamario"</text></inputEntry>
        <inputEntry id="InputEntry_BM_2"><text>"Mama"</text></inputEntry>
        <inputEntry id="InputEntry_BM_3"><text>&gt; 300</text></inputEntry>
        <inputEntry id="InputEntry_BM_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_BM_5"><text>"BRAVALipoenxertia"</text></inputEntry>
        <outputEntry id="OutputEntry_BM_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_BM_observacao"><text>"Volume elevado requer pre-expansao com BRAVA por 4-6 semanas"</text></outputEntry>
        <outputEntry id="OutputEntry_BM_fundamentacao"><text>"ASPS 2023 - BRAVA aumenta capacidade de recepcao de gordura na mama"</text></outputEntry>
      <outputEntry id="OE_Pendente_BRAVAMama_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Pendente_BRAVAMama_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_REC015">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Avaliar indicacao de lipoenxertia com cirurgiao plastico"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"SBCP 2022, ASPS 2023 - Lipoenxertia requer indicacao e tecnica adequadas"</text></outputEntry>
      <outputEntry id="OE_Fallback_REC015_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_REC015_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
