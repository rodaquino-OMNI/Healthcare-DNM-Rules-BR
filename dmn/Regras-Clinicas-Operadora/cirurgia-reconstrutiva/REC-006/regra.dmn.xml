<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="https://www.omg.org/spec/DMN/20191111/MODEL/"
             xmlns:camunda="http://camunda.org/schema/1.0/dmn"
             id="Definitions_REC006"
             name="Reconstrucao Malformacoes Congenitas"
             namespace="http://camunda.org/schema/1.0/dmn">

  <!--
    ===============================================================================
    TUSS: REC-006
    Procedimento: Reconstrucao de Malformacoes Congenitas
    Especialidade: Cirurgia Reconstrutiva / Cirurgia Plastica Pediatrica
    Versao: 3.0.0-TIER1
    Data: 2026-02-07
    ===============================================================================

    INDICACOES CLINICAS (SBCP 2022, SBP 2021):
    - Fissura labiopalatina
    - Malformacoes craniofaciais
    - Sindactilia congenita
    - Polidactilia
    - Microtia/anotia
    - Malformacoes vasculares

    TIMING CIRURGICO:
    - Labio: 3-6 meses
    - Palato: 9-18 meses
    - Microtia: 6-8 anos

    REFERENCIAS TECNICAS:
    - SBCP 2022 - Malformacoes Congenitas
    - ACPA (American Cleft Palate-Craniofacial Association) 2023
    - SBP 2021 - Pediatria
    - ISSVA 2018 - Malformacoes Vasculares

    ===============================================================================
  -->

  <decision id="Decision_REC006" name="Regra Clinica - Reconstrucao Malformacoes Congenitas">
    <decisionTable id="DecisionTable_REC006" hitPolicy="FIRST">

      <!-- ========== INPUTS (5) ========== -->

      <input id="Input_tipoMalformacao" label="Tipo de Malformacao" camunda:inputVariable="tipoMalformacao">
        <inputExpression id="InputExpression_tipoMalformacao" typeRef="string">
          <text>tipoMalformacao</text>
        </inputExpression>
        <inputValues id="InputValues_tipoMalformacao">
          <text>"FissuraLabial","FissuraPalatina","FissuraLabiopalatina","Sindactilia","Polidactilia","Microtia","MalformacaoVascular","CraniosinostoseCirurgia"</text>
        </inputValues>
      </input>

      <input id="Input_idadePaciente" label="Idade do Paciente (meses)" camunda:inputVariable="idadePaciente">
        <inputExpression id="InputExpression_idadePaciente" typeRef="number">
          <text>idadePaciente</text>
        </inputExpression>
      </input>

      <input id="Input_faseTratamento" label="Fase do Tratamento" camunda:inputVariable="faseTratamento">
        <inputExpression id="InputExpression_faseTratamento" typeRef="string">
          <text>faseTratamento</text>
        </inputExpression>
        <inputValues id="InputValues_faseTratamento">
          <text>"Primaria","Secundaria","Revisao","Final"</text>
        </inputValues>
      </input>

      <input id="Input_impactoFuncional" label="Impacto Funcional" camunda:inputVariable="impactoFuncional">
        <inputExpression id="InputExpression_impactoFuncional" typeRef="string">
          <text>impactoFuncional</text>
        </inputExpression>
        <inputValues id="InputValues_impactoFuncional">
          <text>"Alimentacao","Fala","Audicao","Respiracao","Funcaomao","Multiplos","Estetico"</text>
        </inputValues>
      </input>

      <input id="Input_acompanhamentoMultidisciplinar" label="Acompanhamento Multidisciplinar" camunda:inputVariable="acompanhamentoMultidisciplinar">
        <inputExpression id="InputExpression_acompanhamentoMultidisciplinar" typeRef="string">
          <text>acompanhamentoMultidisciplinar</text>
        </inputExpression>
        <inputValues id="InputValues_acompanhamentoMultidisciplinar">
          <text>"EquipeCompleta","Parcial","NaoDisponivel"</text>
        </inputValues>
      </input>

      <!-- ========== OUTPUTS (3 - Padrao TIER-1) ========== -->

      <output id="Output_resultado" label="Resultado" name="resultado" typeRef="string">
        <outputValues id="OutputValues_resultado">
          <text>"Aprovado","Reprovado","Pendente"</text>
        </outputValues>
      </output>

      <output id="Output_observacao" label="Observacao Clinica" name="observacao" typeRef="string" />

      <output id="Output_fundamentacao" label="Fundamentacao Tecnica" name="fundamentacao" typeRef="string" />

      <!-- Output 4: Alertas Desperdicio -->
      <output id="Output_alertasDesperdicio" label="Alertas de Desperdicio" name="alertasDesperdicio" typeRef="string">
        <outputValues id="OutputValues_alertasDesperdicio">
          <text>"NENHUM","DUP","FREQ","ESC","DOC","PROT","MULTI"</text>
        </outputValues>
      </output>

      <!-- Output 5: Acao Recomendada -->
      <output id="Output_acaoRecomendada" label="Acao Recomendada" name="acaoRecomendada" typeRef="string">
        <outputValues id="OutputValues_acaoRecomendada">
          <text>"APROVAR","NEGAR","SOLICITAR_INFO","AGUARDAR_PRAZO","SUGERIR_ALTERNATIVA"</text>
        </outputValues>
      </output>

      <!-- ========== RULES ========== -->

      <!-- APROVACOES - FISSURAS LABIOPALATINAS -->
      <rule id="Rule_Aprovado_FissuraLabialIdadeIdeal">
        <description>Aprovado: Queiloplastia na idade ideal</description>
        <inputEntry id="InputEntry_FLI_1"><text>"FissuraLabial","FissuraLabiopalatina"</text></inputEntry>
        <inputEntry id="InputEntry_FLI_2"><text>[3..6]</text></inputEntry>
        <inputEntry id="InputEntry_FLI_3"><text>"Primaria"</text></inputEntry>
        <inputEntry id="InputEntry_FLI_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_FLI_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_FLI_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_FLI_observacao"><text>"Queiloplastia primaria na janela ideal (3-6 meses) - Regra dos 10s"</text></outputEntry>
        <outputEntry id="OutputEntry_FLI_fundamentacao"><text>"ACPA 2023, SBCP 2022 - Queiloplastia ideal: 10 semanas, 10 libras, Hb 10"</text></outputEntry>
      <outputEntry id="OE_Aprovado_FissuraLabialIdadeIdeal_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_FissuraLabialIdadeIdeal_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_FissuraPalatinaIdadeIdeal">
        <description>Aprovado: Palatoplastia na idade ideal</description>
        <inputEntry id="InputEntry_FPI_1"><text>"FissuraPalatina","FissuraLabiopalatina"</text></inputEntry>
        <inputEntry id="InputEntry_FPI_2"><text>[9..18]</text></inputEntry>
        <inputEntry id="InputEntry_FPI_3"><text>"Primaria"</text></inputEntry>
        <inputEntry id="InputEntry_FPI_4"><text>"Fala","Alimentacao"</text></inputEntry>
        <inputEntry id="InputEntry_FPI_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_FPI_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_FPI_observacao"><text>"Palatoplastia primaria na janela ideal (9-18 meses) para desenvolvimento da fala"</text></outputEntry>
        <outputEntry id="OutputEntry_FPI_fundamentacao"><text>"ACPA 2023 - Fechamento palatino antes de 18 meses otimiza desenvolvimento da fala"</text></outputEntry>
      <outputEntry id="OE_Aprovado_FissuraPalatinaIdadeIdeal_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_FissuraPalatinaIdadeIdeal_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_FissuraSecundaria">
        <description>Aprovado: Cirurgia secundaria de fissura</description>
        <inputEntry id="InputEntry_FS_1"><text>"FissuraLabiopalatina"</text></inputEntry>
        <inputEntry id="InputEntry_FS_2"><text>&gt; 18</text></inputEntry>
        <inputEntry id="InputEntry_FS_3"><text>"Secundaria","Revisao"</text></inputEntry>
        <inputEntry id="InputEntry_FS_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_FS_5"><text>"EquipeCompleta","Parcial"</text></inputEntry>
        <outputEntry id="OutputEntry_FS_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_FS_observacao"><text>"Cirurgia secundaria para refinamento ou correcao de insuficiencia velofaringea"</text></outputEntry>
        <outputEntry id="OutputEntry_FS_fundamentacao"><text>"SBCP 2022 - Tratamento de fissuras e multistagio ao longo do crescimento"</text></outputEntry>
      <outputEntry id="OE_Aprovado_FissuraSecundaria_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_FissuraSecundaria_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - MALFORMACOES DE MAO -->
      <rule id="Rule_Aprovado_Sindactilia">
        <description>Aprovado: Sindactilia congenita</description>
        <inputEntry id="InputEntry_SIN_1"><text>"Sindactilia"</text></inputEntry>
        <inputEntry id="InputEntry_SIN_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="InputEntry_SIN_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SIN_4"><text>"Funcaomao"</text></inputEntry>
        <inputEntry id="InputEntry_SIN_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_SIN_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_SIN_observacao"><text>"Separacao de sindactilia para desenvolvimento funcional normal da mao"</text></outputEntry>
        <outputEntry id="OutputEntry_SIN_fundamentacao"><text>"SBCP 2022 - Sindactilia entre dedos de tamanhos diferentes deve ser operada precocemente"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Sindactilia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Sindactilia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <rule id="Rule_Aprovado_Polidactilia">
        <description>Aprovado: Polidactilia</description>
        <inputEntry id="InputEntry_POL_1"><text>"Polidactilia"</text></inputEntry>
        <inputEntry id="InputEntry_POL_2"><text>&gt;= 6</text></inputEntry>
        <inputEntry id="InputEntry_POL_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_POL_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_POL_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_POL_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_POL_observacao"><text>"Resseccao de polidactilia para funcao e estetica da mao"</text></outputEntry>
        <outputEntry id="OutputEntry_POL_fundamentacao"><text>"SBCP 2022 - Polidactilia deve ser tratada apos 6 meses de idade"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Polidactilia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Polidactilia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - MICROTIA -->
      <rule id="Rule_Aprovado_Microtia">
        <description>Aprovado: Reconstrucao de microtia na idade ideal</description>
        <inputEntry id="InputEntry_MIC_1"><text>"Microtia"</text></inputEntry>
        <inputEntry id="InputEntry_MIC_2"><text>&gt;= 72</text></inputEntry>
        <inputEntry id="InputEntry_MIC_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_MIC_4"><text>"Audicao","Estetico"</text></inputEntry>
        <inputEntry id="InputEntry_MIC_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_MIC_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_MIC_observacao"><text>"Reconstrucao auricular na idade ideal (6-8 anos) com cartilagem costal"</text></outputEntry>
        <outputEntry id="OutputEntry_MIC_fundamentacao"><text>"SBCP 2022 - Cartilagem costal adequada para reconstrucao a partir de 6 anos"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Microtia_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Microtia_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - MALFORMACOES VASCULARES -->
      <rule id="Rule_Aprovado_MalformacaoVascular">
        <description>Aprovado: Malformacao vascular com indicacao</description>
        <inputEntry id="InputEntry_MV_1"><text>"MalformacaoVascular"</text></inputEntry>
        <inputEntry id="InputEntry_MV_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_MV_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_MV_4"><text>"Respiracao","Alimentacao","Funcaomao"</text></inputEntry>
        <inputEntry id="InputEntry_MV_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_MV_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_MV_observacao"><text>"Malformacao vascular com impacto funcional - tratamento indicado"</text></outputEntry>
        <outputEntry id="OutputEntry_MV_fundamentacao"><text>"ISSVA 2018, SBCP 2022 - Malformacoes com obstrucao de via aerea ou funcional sao urgencia"</text></outputEntry>
      <outputEntry id="OE_Aprovado_MalformacaoVascular_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_MalformacaoVascular_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- APROVACOES - CRANIOSINOSTOSE -->
      <rule id="Rule_Aprovado_Craniosinostose">
        <description>Aprovado: Craniosinostose</description>
        <inputEntry id="InputEntry_CRA_1"><text>"CraniosinostoseCirurgia"</text></inputEntry>
        <inputEntry id="InputEntry_CRA_2"><text>[3..12]</text></inputEntry>
        <inputEntry id="InputEntry_CRA_3"><text>"Primaria"</text></inputEntry>
        <inputEntry id="InputEntry_CRA_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_CRA_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_CRA_resultado"><text>"Aprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_CRA_observacao"><text>"Craniosinostose na janela ideal (3-12 meses) para expansao craniana"</text></outputEntry>
        <outputEntry id="OutputEntry_CRA_fundamentacao"><text>"ACPA 2023 - Correcao de craniosinostose ideal no primeiro ano de vida"</text></outputEntry>
      <outputEntry id="OE_Aprovado_Craniosinostose_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Aprovado_Craniosinostose_5"><text>"APROVAR"</text></outputEntry>
      </rule>

      <!-- REPROVACOES -->
      <rule id="Rule_Reprovado_IdadeInadequada">
        <description>Reprovado: Fora da janela ideal sem indicacao urgente</description>
        <inputEntry id="InputEntry_II_1"><text>"FissuraLabial"</text></inputEntry>
        <inputEntry id="InputEntry_II_2"><text>&lt; 3</text></inputEntry>
        <inputEntry id="InputEntry_II_3"><text>"Primaria"</text></inputEntry>
        <inputEntry id="InputEntry_II_4"><text>not("Respiracao","Alimentacao")</text></inputEntry>
        <inputEntry id="InputEntry_II_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_II_resultado"><text>"Reprovado"</text></outputEntry>
        <outputEntry id="OutputEntry_II_observacao"><text>"Idade abaixo do ideal para queiloplastia - aguardar 3 meses"</text></outputEntry>
        <outputEntry id="OutputEntry_II_fundamentacao"><text>"ACPA 2023 - Cirurgia antes de 3 meses aumenta risco anestesico"</text></outputEntry>
      <outputEntry id="OE_Reprovado_IdadeInadequada_4"><text>"PROT"</text></outputEntry>
        <outputEntry id="OE_Reprovado_IdadeInadequada_5"><text>"NEGAR"</text></outputEntry>
      </rule>

      <!-- PENDENTE -->
      <rule id="Rule_Pendente_SemEquipe">
        <description>Pendente: Sem equipe multidisciplinar</description>
        <inputEntry id="InputEntry_SE_1"><text>"FissuraLabiopalatina"</text></inputEntry>
        <inputEntry id="InputEntry_SE_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SE_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SE_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_SE_5"><text>"NaoDisponivel"</text></inputEntry>
        <outputEntry id="OutputEntry_SE_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_SE_observacao"><text>"Encaminhar para centro de referencia com equipe multidisciplinar"</text></outputEntry>
        <outputEntry id="OutputEntry_SE_fundamentacao"><text>"ACPA 2023 - Fissuras requerem acompanhamento por equipe especializada"</text></outputEntry>
      <outputEntry id="OE_Pendente_SemEquipe_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Pendente_SemEquipe_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

      <!-- FALLBACK RULE -->
      <rule id="Rule_Fallback_REC006">
        <description>Regra padrao - Analise adicional necessaria</description>
        <inputEntry id="InputEntry_Fallback_1"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_2"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_3"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_4"><text>-</text></inputEntry>
        <inputEntry id="InputEntry_Fallback_5"><text>-</text></inputEntry>
        <outputEntry id="OutputEntry_Fallback_resultado"><text>"Pendente"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_observacao"><text>"Avaliar com centro de referencia em malformacoes congenitas"</text></outputEntry>
        <outputEntry id="OutputEntry_Fallback_fundamentacao"><text>"SBCP 2022, ACPA 2023 - Malformacoes congenitas requerem avaliacao especializada"</text></outputEntry>
      <outputEntry id="OE_Fallback_REC006_4"><text>"NENHUM"</text></outputEntry>
        <outputEntry id="OE_Fallback_REC006_5"><text>"SOLICITAR_INFO"</text></outputEntry>
      </rule>

    </decisionTable>
  </decision>
</definitions>
